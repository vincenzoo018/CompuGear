@{
    ViewData["Title"] = "My Support Tickets";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .tickets-page {
        min-height: 100vh;
        font-family: 'Inter', -apple-system, sans-serif;
    }

    /* Page Header */
    .page-header {
        margin-bottom: 28px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header-text h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--foreground);
        margin: 0 0 6px 0;
        display: flex;
        align-items: center;
        gap: 10px;
        letter-spacing: -0.02em;
    }

    .page-header-text p {
        color: var(--muted-foreground);
        font-size: 0.925rem;
        margin: 0;
    }

    .btn-new-ticket {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 22px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius-sm);
        font-family: 'Inter', -apple-system, sans-serif;
        font-weight: 600;
        font-size: 0.875rem;
        text-decoration: none;
        transition: background-color 0.15s ease;
    }

    .btn-new-ticket:hover {
        background: var(--primary-hover, #006b6b);
        color: white;
    }

    /* Stats Row */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
        margin-bottom: 28px;
    }

    .stat-card {
        background: #FFFFFF;
        border-radius: var(--radius);
        border: 1px solid #E5E7EB;
        padding: 20px 22px;
        text-align: center;
        position: relative;
        overflow: hidden;
        transition: border-color 0.2s ease;
    }

    .stat-card:hover {
        border-color: #D1D5DB;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
    }

    .stat-card:nth-child(1)::before { background: var(--primary); }
    .stat-card:nth-child(2)::before { background: #3b82f6; }
    .stat-card:nth-child(3)::before { background: #f59e0b; }
    .stat-card:nth-child(4)::before { background: #10b981; }

    .stat-icon {
        font-size: 1.35rem;
        margin-bottom: 10px;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--foreground);
        line-height: 1;
        letter-spacing: -0.02em;
    }

    .stat-label {
        font-size: 0.825rem;
        color: var(--muted-foreground);
        margin-top: 4px;
        font-weight: 500;
    }

    /* Tickets Container */
    .tickets-container {
        background: #FFFFFF;
        border-radius: var(--radius);
        border: 1px solid #E5E7EB;
        overflow: hidden;
    }

    .tickets-header {
        padding: 12px 20px;
        border-bottom: 1px solid #E5E7EB;
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
        background: #F9FAFB;
    }

    .filter-tab {
        padding: 8px 16px;
        border: none;
        background: none;
        border-radius: var(--radius-sm);
        cursor: pointer;
        font-family: 'Inter', -apple-system, sans-serif;
        font-weight: 500;
        font-size: 0.875rem;
        color: var(--muted-foreground);
        transition: all 0.2s ease;
    }

    .filter-tab:hover {
        color: var(--foreground);
        background: #FFFFFF;
    }

    .filter-tab.active {
        background: var(--primary);
        color: white;
        font-weight: 600;
    }

    /* Ticket Cards */
    .ticket-card {
        display: block;
        padding: 20px 24px;
        border-bottom: 1px solid #F3F4F6;
        text-decoration: none;
        color: inherit;
        border-left: 3px solid transparent;
        transition: background-color 0.15s ease, border-color 0.15s ease;
    }

    .ticket-card:hover {
        background: #F9FAFB;
        border-left-color: var(--primary);
    }

    .ticket-card:last-child { border-bottom: none; }

    .ticket-card.status-Open { border-left-color: #3b82f6; }
    .ticket-card.status-InProgress { border-left-color: #f59e0b; }
    .ticket-card.status-Resolved { border-left-color: #10b981; }
    .ticket-card.status-Closed { border-left-color: #6b7280; }

    .ticket-card.status-Open:hover { border-left-color: #3b82f6; }
    .ticket-card.status-InProgress:hover { border-left-color: #f59e0b; }
    .ticket-card.status-Resolved:hover { border-left-color: #10b981; }
    .ticket-card.status-Closed:hover { border-left-color: #6b7280; }

    .ticket-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 10px;
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.725rem;
        font-weight: 600;
        letter-spacing: 0.01em;
    }

    .status-badge.Open { background: #dbeafe; color: #1d4ed8; }
    .status-badge.InProgress { background: #fef3cd; color: #856404; }
    .status-badge.Resolved { background: #d4edda; color: #155724; }
    .status-badge.Closed { background: #F3F4F6; color: var(--muted-foreground); }

    .priority-badge {
        font-size: 0.8rem;
        margin-left: 10px;
        font-weight: 500;
    }

    .priority-badge.High { color: #ef4444; }
    .priority-badge.Medium { color: #f59e0b; }
    .priority-badge.Low { color: #10b981; }

    .ticket-number {
        color: var(--muted-foreground);
        font-size: 0.825rem;
    }

    .ticket-title {
        font-weight: 600;
        color: var(--foreground);
        font-size: 1rem;
        margin-bottom: 8px;
    }

    .ticket-description {
        color: var(--muted-foreground);
        font-size: 0.875rem;
        line-height: 1.5;
        margin-bottom: 14px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .ticket-meta {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
        font-size: 0.8rem;
        color: var(--muted-foreground);
    }

    .ticket-meta span {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 56px 20px;
    }

    .empty-state-icon {
        font-size: 3rem;
        opacity: 0.4;
        margin-bottom: 14px;
    }

    .empty-state h3 {
        color: var(--foreground);
        margin-bottom: 8px;
        font-weight: 600;
    }

    .empty-state p {
        color: var(--muted-foreground);
        margin-bottom: 20px;
        font-size: 0.925rem;
    }

    /* Pagination */
    .pagination {
        display: flex;
        justify-content: center;
        gap: 8px;
        padding: 20px;
    }

    .page-btn {
        padding: 8px 14px;
        border: 1px solid #E5E7EB;
        background: #FFFFFF;
        border-radius: var(--radius-sm);
        cursor: pointer;
        font-family: 'Inter', -apple-system, sans-serif;
        font-size: 0.875rem;
        color: var(--foreground);
        transition: all 0.15s ease;
    }

    .page-btn:hover {
        border-color: var(--primary);
        color: var(--primary);
        background: #F9FAFB;
    }

    .page-btn.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .stats-row { grid-template-columns: repeat(2, 1fr); }
    }

    @@media (max-width: 768px) {
        .stats-row { grid-template-columns: repeat(2, 1fr); gap: 10px; }
        .stat-card { padding: 16px; }
        .stat-value { font-size: 1.5rem; }
        .page-header { flex-direction: column; align-items: flex-start; gap: 16px; }
        .tickets-header { padding: 10px 14px; }
        .filter-tab { padding: 7px 12px; font-size: 0.825rem; }
    }

    @@media (max-width: 576px) {
        .stats-row { grid-template-columns: 1fr 1fr; }
        .page-header-text h1 { font-size: 1.35rem; }
    }
</style>

<div class="tickets-page">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="page-header-text">
                <h1>My Support Tickets</h1>
                <p>Track and manage your support requests</p>
            </div>
            <a href="/CustomerPortal/SubmitTicket" class="btn-new-ticket">+ New Ticket</a>
        </div>

        <!-- Stats Cards -->
        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-icon">üìã</div>
                <div class="stat-value" id="totalTickets">0</div>
                <div class="stat-label">Total Tickets</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üîµ</div>
                <div class="stat-value" id="openTickets">0</div>
                <div class="stat-label">Open</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üü°</div>
                <div class="stat-value" id="progressTickets">0</div>
                <div class="stat-label">In Progress</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-value" id="resolvedTickets">0</div>
                <div class="stat-label">Resolved</div>
            </div>
        </div>

        <!-- Tickets List -->
        <div class="tickets-container">
            <div class="tickets-header">
                <button class="filter-tab active" data-status="">All</button>
                <button class="filter-tab" data-status="Open">Open</button>
                <button class="filter-tab" data-status="In Progress">In Progress</button>
                <button class="filter-tab" data-status="Resolved">Resolved</button>
                <button class="filter-tab" data-status="Closed">Closed</button>
            </div>

            <div id="ticketsContent">
                <div class="empty-state">
                    <div class="empty-state-icon">‚è≥</div>
                    <h3>Loading tickets...</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let allTickets = [];
    let currentFilter = '';

    document.addEventListener('DOMContentLoaded', function() {
        loadTickets();
        setupFilterTabs();
    });

    function setupFilterTabs() {
        document.querySelectorAll('.filter-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                currentFilter = this.dataset.status;
                filterTickets();
            });
        });
    }

    async function loadTickets() {
        try {
            const response = await fetch('/CustomerPortal/GetTickets');
            const result = await response.json();

            if (result.success) {
                allTickets = result.data;
                updateStats();
                renderTickets();
            } else {
                renderEmpty();
            }
        } catch (error) {
            console.error('Error loading tickets:', error);
            renderEmpty();
        }
    }

    function updateStats() {
        const total = allTickets.length;
        const open = allTickets.filter(t => t.status === 'Open').length;
        const progress = allTickets.filter(t => t.status === 'In Progress').length;
        const resolved = allTickets.filter(t => t.status === 'Resolved' || t.status === 'Closed').length;

        document.getElementById('totalTickets').textContent = total;
        document.getElementById('openTickets').textContent = open;
        document.getElementById('progressTickets').textContent = progress;
        document.getElementById('resolvedTickets').textContent = resolved;
    }

    function filterTickets() {
        renderTickets();
    }

    function renderTickets() {
        const container = document.getElementById('ticketsContent');
        let tickets = allTickets;

        if (currentFilter) {
            tickets = allTickets.filter(t => t.status === currentFilter);
        }

        if (!tickets || tickets.length === 0) {
            renderEmpty();
            return;
        }

        const priorityIcons = { 'High': 'üî¥', 'Medium': 'üü°', 'Low': 'üü¢' };

        container.innerHTML = tickets.map(ticket => `
            <a href="/CustomerPortal/TicketDetails/${ticket.ticketId}" class="ticket-card status-${ticket.status.replace(' ', '')}">
                <div class="ticket-header">
                    <div>
                        <span class="status-badge ${ticket.status.replace(' ', '')}">${ticket.status}</span>
                        <span class="priority-badge ${ticket.priority}">${priorityIcons[ticket.priority] || 'üü°'} ${ticket.priority}</span>
                    </div>
                    <span class="ticket-number">${ticket.ticketNumber}</span>
                </div>
                <h3 class="ticket-title">${ticket.subject}</h3>
                <p class="ticket-description">${ticket.description || ''}</p>
                <div class="ticket-meta">
                    <span>üìÖ ${new Date(ticket.createdAt).toLocaleDateString()}</span>
                    ${ticket.categoryName ? `<span>üìÅ ${ticket.categoryName}</span>` : ''}
                    ${ticket.agentName ? `<span>üë§ ${ticket.agentName}</span>` : '<span>‚è≥ Awaiting assignment</span>'}
                </div>
            </a>
        `).join('');
    }

    function renderEmpty() {
        document.getElementById('ticketsContent').innerHTML = `
            <div class="empty-state">
                <div class="empty-state-icon">üì≠</div>
                <h3>No tickets found</h3>
                <p>You haven't submitted any support tickets yet</p>
                <a href="/CustomerPortal/SubmitTicket" class="btn-new-ticket" style="display: inline-block;">‚ûï Create New Ticket</a>
            </div>
        `;
    }
</script>
}
