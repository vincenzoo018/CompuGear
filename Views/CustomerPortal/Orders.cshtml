<style>
    .order-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        margin-bottom: 20px;
        transition: all 0.3s;
    }

    .order-card:hover {
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }

    .order-status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-pending {
