@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        loadDashboard();
    });

    async function loadDashboard() {
        try {
            const [ordersRes, productsRes, profileRes, statsRes] = await Promise.all([
                fetch('/CustomerPortal/GetOrders?pageSize=50').catch(() => null),
                fetch('/CustomerPortal/GetProducts?pageSize=4').catch(() => null),
                fetch('/CustomerPortal/GetProfile').catch(() => null),
                fetch('/CustomerPortal/GetDashboardStats').catch(() => null)
            ]);

            // Orders Stats
            if (ordersRes && ordersRes.ok) {
                const ordersData = await ordersRes.json();
                const orders = Array.isArray(ordersData) ? ordersData : (ordersData.data || ordersData.orders || []);

                const total = orders.length;
                const inProgress = orders.filter(o => ['Processing', 'Pending', 'Confirmed', 'Shipped'].includes(o.orderStatus || o.status)).length;
                const delivered = orders.filter(o => (o.orderStatus || o.status) === 'Delivered' || (o.orderStatus || o.status) === 'Completed').length;
                const totalSpent = orders.reduce((sum, o) => sum + (o.totalAmount || 0), 0);

                document.getElementById('statTotalOrders').textContent = total;
                document.getElementById('statInProgress').textContent = inProgress;
                document.getElementById('statDelivered').textContent = delivered;
                document.getElementById('statTotalSpent').textContent = '₱' + totalSpent.toLocaleString('en-PH', { minimumFractionDigits: 2 });

                // Recent Orders
                renderRecentOrders(orders.slice(0, 5));
            }

            // Dashboard Stats (charts)
            if (statsRes && statsRes.ok) {
                const statsData = await statsRes.json();
                if (statsData.success) {
                    const stats = statsData.data;
                    // Render area chart from monthlyOrders
                    if (stats.monthlyOrders && stats.monthlyOrders.length > 0) {
                        renderAreaChart(stats.monthlyOrders);
                    }
                    // Render pie chart from categoryBreakdown
                    if (stats.categoryBreakdown && stats.categoryBreakdown.length > 0) {
                        renderPieChart(stats.categoryBreakdown, stats.totalOrders || 0);
                    }
                    // Update pie center value
                    const pieCenterVal = document.getElementById('pieCenterValue');
                    if (pieCenterVal) pieCenterVal.textContent = stats.totalOrders || 0;
                }
            }

            // Profile / Loyalty
            if (profileRes && profileRes.ok) {
                const profile = await profileRes.json();
                const data = profile.data || profile;
                const points = data.loyaltyPoints || 0;
                document.getElementById('loyaltyPoints').textContent = points.toLocaleString();
                // Update loyalty progress bar and next tier text
                const progressBar = document.querySelector('.loyalty-progress-bar');
                const nextTierText = document.querySelector('.loyalty-next');
                if (points >= 5000) {
                    if (progressBar) progressBar.style.width = '100%';
                    if (nextTierText) nextTierText.textContent = '✨ Platinum Member';
                } else if (points >= 2000) {
                    if (progressBar) progressBar.style.width = `${((points - 2000) / 3000) * 100}%`;
                    if (nextTierText) nextTierText.textContent = `${5000 - points} points to Platinum status`;
                } else if (points >= 500) {
                    if (progressBar) progressBar.style.width = `${((points - 500) / 1500) * 100}%`;
                    if (nextTierText) nextTierText.textContent = `${2000 - points} points to Gold status`;
                } else {
                    if (progressBar) progressBar.style.width = `${(points / 500) * 100}%`;
                    if (nextTierText) nextTierText.textContent = `${500 - points} points to Silver status`;
                }
            }

            // Featured Products
            if (productsRes && productsRes.ok) {
                const prodData = await productsRes.json();
                const products = Array.isArray(prodData) ? prodData : (prodData.data || prodData.products || []);
                renderFeaturedProducts(products.slice(0, 4));
            }
        } catch (err) {
            console.error('Dashboard load error:', err);
        }
    }

    function renderAreaChart(monthlyData) {
        const svg = document.getElementById('areaChartSvg');
        if (!svg || monthlyData.length === 0) return;
        const maxCount = Math.max(...monthlyData.map(m => m.count), 1);
        const w = 400, h = 200, pad = 10;
        const step = (w - pad) / Math.max(monthlyData.length - 1, 1);
        const points = monthlyData.map((m, i) => ({
            x: pad / 2 + i * step,
            y: h - pad - ((m.count / maxCount) * (h - 2 * pad))
        }));
        const pathLine = points.map((p, i) => `${i === 0 ? 'M' : 'L'}${p.x},${p.y}`).join(' ');
        const pathArea = pathLine + ` L${points[points.length - 1].x},${h} L${points[0].x},${h} Z`;
        // Clear existing paths
        const existing = svg.querySelectorAll('path:not(defs path), circle');
        existing.forEach(el => el.remove());
        // Add area fill
        const area = document.createElementNS('http://www.w3.org/2000/svg', 'path');
        area.setAttribute('d', pathArea);
        area.setAttribute('fill', 'url(#areaGrad)');
        svg.appendChild(area);
        // Add line
        const line = document.createElementNS('http://www.w3.org/2000/svg', 'path');
        line.setAttribute('d', pathLine);
        line.setAttribute('stroke', '#008080');
        line.setAttribute('stroke-width', '3');
        line.setAttribute('fill', 'none');
        line.setAttribute('stroke-linecap', 'round');
        line.setAttribute('stroke-linejoin', 'round');
        svg.appendChild(line);
        // Add dots
        points.forEach(p => {
            const c = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
            c.setAttribute('cx', p.x); c.setAttribute('cy', p.y);
            c.setAttribute('r', '5'); c.setAttribute('fill', '#008080');
            svg.appendChild(c);
        });
    }

    function renderPieChart(categories, totalOrders) {
        const svg = document.getElementById('pieChartSvg');
        const legend = document.getElementById('pieLegend');
        if (!svg || !legend) return;
        const colors = ['#008080', '#FF6B35', '#3B82F6', '#10B981', '#8B5CF6', '#F59E0B'];
        let offset = 25;
        // Clear existing circles except first background circle
        const circles = svg.querySelectorAll('circle:not(:first-child)');
        circles.forEach(c => c.remove());
        legend.innerHTML = '';
        const total = categories.reduce((s, c) => s + c.count, 0) || 1;
        categories.forEach((cat, i) => {
            const pct = (cat.count / total) * 100;
            const dash = (pct / 100) * 100.53; // circumference 2*pi*16 ≈ 100.53
            const circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
            circle.setAttribute('cx', '18'); circle.setAttribute('cy', '18');
            circle.setAttribute('r', '16'); circle.setAttribute('fill', 'none');
            circle.setAttribute('stroke', colors[i % colors.length]);
            circle.setAttribute('stroke-width', '3');
            circle.setAttribute('stroke-dasharray', `${dash} ${100.53 - dash}`);
            circle.setAttribute('stroke-dashoffset', `${offset}`);
            svg.appendChild(circle);
            offset -= dash;
            // Legend
            legend.innerHTML += `<div class="legend-item"><div class="legend-left"><span class="legend-color" style="background:${colors[i % colors.length]};"></span><span class="legend-label">${cat.category}</span></div><span class="legend-value">${Math.round(pct)}%</span></div>`;
        });
    }

    function renderRecentOrders(orders) {
        const container = document.getElementById('recentOrdersContainer');
        if (!container) return;
        if (orders.length === 0) {
            container.innerHTML = '<div class="text-center py-4" style="color: var(--muted-foreground);">No orders yet</div>';
            return;
        }
        container.innerHTML = orders.map(o => {
            const status = o.orderStatus || o.status || 'Pending';
            const badgeClass = status === 'Delivered' || status === 'Completed' ? 'badge-success'
                : status === 'Shipped' ? 'badge-info'
                : status === 'Cancelled' ? 'badge-danger' : 'badge-warning';
            const date = new Date(o.orderDate || o.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
            return `<div class="order-item">
                <div class="order-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>
                </div>
                <div class="order-info">
                    <div class="order-id">${o.orderNumber || 'ORD-' + o.orderId}</div>
                    <div class="order-date">${date}</div>
                </div>
                <div class="order-status">
                    <div class="order-amount">₱${(o.totalAmount || 0).toLocaleString('en-PH', { minimumFractionDigits: 2 })}</div>
                    <span class="${badgeClass}">${status.toUpperCase()}</span>
                </div>
            </div>`;
        }).join('');
    }

    function renderFeaturedProducts(products) {
        const grid = document.getElementById('featuredProductsGrid');
        if (!grid) return;
        if (products.length === 0) {
            grid.innerHTML = '<div class="text-center py-4" style="grid-column: 1/-1; color: var(--muted-foreground);">No products available</div>';
            return;
        }
        grid.innerHTML = products.map((p, i) => {
            const imgHtml = p.mainImageUrl
                ? `<img src="${p.mainImageUrl}" alt="${p.productName}" style="width:100%;height:100%;object-fit:cover;">`
                : `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>`;
            const hasDiscount = p.compareAtPrice && p.compareAtPrice > p.sellingPrice;
            const discountPct = hasDiscount ? Math.round((1 - p.sellingPrice / p.compareAtPrice) * 100) : 0;
            return `<div class="product-card animate-fade-in stagger-${i + 1}">
                <div class="product-image">
                    ${imgHtml}
                    ${hasDiscount ? `<span class="product-badge">-${discountPct}%</span>` : ''}
                    <button class="product-wishlist" onclick="toggleWishlist(this, ${p.productId})"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg></button>
                </div>
                <div class="product-info">
                    <div class="product-category">${p.categoryName || 'General'}</div>
                    <div class="product-name">${p.productName}</div>
                    <div class="product-price">
                        <span class="price-current">₱${(p.sellingPrice || 0).toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                        ${hasDiscount ? `<span class="price-original">₱${p.compareAtPrice.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>` : ''}
                    </div>
                    <button class="btn-add-cart" onclick="addToCart(${p.productId}, '${(p.productName || '').replace(/'/g, "\\'")}', ${p.sellingPrice || 0})">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
                        Add to Cart
                    </button>
                </div>
            </div>`;
        }).join('');
    }

    function toggleWishlist(btn, productId) {
        btn.classList.toggle('active');
        const isActive = btn.classList.contains('active');
        btn.querySelector('svg').style.fill = isActive ? 'currentColor' : 'none';
        let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
        if (isActive) { if (!wishlist.includes(productId)) wishlist.push(productId); }
        else { wishlist = wishlist.filter(id => id !== productId); }
        localStorage.setItem('wishlist', JSON.stringify(wishlist));
    }

    function addToCart(productId, productName, price) {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const idx = cart.findIndex(item => item.productId === productId);
        if (idx > -1) cart[idx].quantity += 1;
        else cart.push({ productId, name: productName, price, quantity: 1 });
        localStorage.setItem('cart', JSON.stringify(cart));
        const badge = document.querySelector('.header-btn .badge');
        if (badge) badge.textContent = cart.reduce((s, i) => s + i.quantity, 0);
    }
</script>
