@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    let spendingChart;
    const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå', 'üíª', 'üñ®Ô∏è'];
    const statusEmojis = { 'Pending': '‚è≥', 'Processing': 'üîÑ', 'Shipped': 'üöö', 'Delivered': '‚úÖ', 'Cancelled': '‚ùå' };

    document.addEventListener('DOMContentLoaded', function() {
        initSpendingChart();
        loadDashboardData();
        loadFeaturedProducts();
        loadActivePromotions();
        updateCartCount();
    });

    function initSpendingChart() {
        const ctx = document.getElementById('spendingChart').getContext('2d');
        const gradient = ctx.createLinearGradient(0, 0, 0, 200);
        gradient.addColorStop(0, 'rgba(0, 128, 128, 0.3)');
        gradient.addColorStop(1, 'rgba(0, 128, 128, 0.01)');

        spendingChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Spending',
                    data: [0, 0, 0, 0, 0, 0],
                    fill: true,
                    backgroundColor: gradient,
                    borderColor: '#008080',
                    borderWidth: 3,
                    tension: 0.4,
                    pointBackgroundColor: '#008080',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 5,
                    pointHoverRadius: 7
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#1F2937',
                        titleFont: { size: 12 },
                        bodyFont: { size: 14, weight: 'bold' },
                        padding: 12,
                        callbacks: { label: ctx => '‚Ç±' + ctx.raw.toLocaleString() }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: '#E5E7EB' },
                        ticks: { callback: val => '‚Ç±' + val.toLocaleString(), font: { size: 11 } }
                    },
                    x: { grid: { display: false }, ticks: { font: { size: 11 } } }
                }
            }
        });
    }

    async function loadDashboardData() {
        try {
            const profileRes = await fetch('/CustomerPortal/GetProfile');
            const profileData = await profileRes.json();
            
            if (profileData.success) {
                document.getElementById('customerName').textContent = profileData.data.firstName || 'Customer';
                const points = profileData.data.loyaltyPoints || 0;
                document.getElementById('statPoints').textContent = points.toLocaleString();
                document.getElementById('loyaltyPointsDisplay').textContent = points.toLocaleString();
                document.getElementById('statOrders').textContent = profileData.data.totalOrders || 0;
                
                let tier = 'Bronze', progress = (points % 500) / 500 * 100, nextPoints = 500 - (points % 500);
                if (points >= 2000) { tier = 'Platinum'; progress = 100; nextPoints = 0; }
                else if (points >= 1000) { tier = 'Gold'; nextPoints = 2000 - points; progress = (points - 1000) / 1000 * 100; }
                else if (points >= 500) { tier = 'Silver'; nextPoints = 1000 - points; progress = (points - 500) / 500 * 100; }
                
                document.getElementById('loyaltyTier').textContent = tier + ' Member';
                document.getElementById('loyaltyProgress').style.width = progress + '%';
                document.getElementById('loyaltyNext').textContent = nextPoints > 0 
                    ? `Earn ${nextPoints} more points to reach ${tier === 'Bronze' ? 'Silver' : tier === 'Silver' ? 'Gold' : 'Platinum'}!`
                    : 'üéâ You\'ve reached the highest tier!';
            }

            const ordersRes = await fetch('/CustomerPortal/GetOrders?pageSize=10');
            const ordersData = await ordersRes.json();
            
            if (ordersData.success) {
                const pending = ordersData.stats?.pending || 0;
                const delivered = ordersData.stats?.delivered || 0;
                const shipped = ordersData.stats?.shipped || 0;
                const total = ordersData.data?.length || 0;

                document.getElementById('statPending').textContent = pending;
                renderRecentOrders(ordersData.data?.slice(0, 5));
                updateDonutChart(delivered, shipped, pending, total);
                
                const totalSpent = ordersData.data?.reduce((sum, o) => sum + (o.totalAmount || 0), 0) || 0;
                updateSpendingChart(totalSpent);
            }
        } catch (error) {
            console.error('Error loading dashboard:', error);
            document.getElementById('recentOrdersContainer').innerHTML = `
                <div class="empty-state">
                    <div class="empty-state-icon">üì¶</div>
                    <p class="empty-state-text">No orders yet. <a href="/CustomerPortal/Products">Start shopping!</a></p>
                </div>`;
        }
    }

    function updateSpendingChart(totalSpent) {
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'];
        const base = totalSpent / 6;
        const data = months.map(() => Math.floor(base * (0.5 + Math.random())));
        spendingChart.data.datasets[0].data = data;
        spendingChart.update();
    }

    function updateDonutChart(delivered, shipped, pending, total) {
        const circumference = 2 * Math.PI * 60;
        const dPct = total > 0 ? delivered / total : 0;
        const sPct = total > 0 ? shipped / total : 0;
        const pPct = total > 0 ? pending / total : 0;

        document.getElementById('donutTotal').textContent = total;
        document.getElementById('legendDelivered').textContent = delivered;
        document.getElementById('legendShipped').textContent = shipped;
        document.getElementById('legendPending').textContent = pending;

        setTimeout(() => {
            document.getElementById('donutDelivered').style.strokeDasharray = `${dPct * circumference} ${circumference}`;
            document.getElementById('donutShipped').style.strokeDasharray = `${sPct * circumference} ${circumference}`;
            document.getElementById('donutShipped').style.strokeDashoffset = -dPct * circumference;
            document.getElementById('donutPending').style.strokeDasharray = `${pPct * circumference} ${circumference}`;
            document.getElementById('donutPending').style.strokeDashoffset = -(dPct + sPct) * circumference;
        }, 300);
    }

    function renderRecentOrders(orders) {
        const container = document.getElementById('recentOrdersContainer');
        
        if (!orders || orders.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <div class="empty-state-icon">üì¶</div>
                    <p class="empty-state-text">No orders yet. <a href="/CustomerPortal/Products">Start shopping!</a></p>
                </div>`;
            return;
        }

        const statusClasses = {
            'Pending': 'badge-warning', 'Processing': 'badge-info', 'Shipped': 'badge-info',
            'Delivered': 'badge-success', 'Cancelled': 'badge-error'
        };

        container.innerHTML = orders.map(order => `
            <a href="/CustomerPortal/OrderDetails/${order.orderId}" class="order-row" style="text-decoration: none;">
                <span class="order-emoji">${statusEmojis[order.orderStatus] || 'üì¶'}</span>
                <div class="order-info">
                    <div class="order-number">${order.orderNumber}</div>
                    <div class="order-date">${new Date(order.orderDate).toLocaleDateString('en-PH', { month: 'short', day: 'numeric', year: 'numeric' })}</div>
                </div>
                <div class="order-amount">‚Ç±${order.totalAmount.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</div>
                <span class="order-status ${statusClasses[order.orderStatus] || 'badge-info'}">${order.orderStatus}</span>
            </a>
        `).join('');
    }

    async function loadFeaturedProducts() {
        try {
            const response = await fetch('/CustomerPortal/GetFeaturedProducts?count=4');
            const result = await response.json();
            
            if (result.success && result.data.length > 0) {
                renderFeaturedProducts(result.data);
            } else {
                document.getElementById('featuredProductsGrid').innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <div class="empty-state-icon">üõçÔ∏è</div>
                        <p class="empty-state-text">No featured products available</p>
                    </div>`;
            }
        } catch (error) { console.error('Error loading products:', error); }
    }

    function renderFeaturedProducts(products) {
        const grid = document.getElementById('featuredProductsGrid');
        const wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');

        grid.innerHTML = products.map((product, index) => {
            const inWishlist = wishlist.some(w => w.productId === product.productId);
            const rating = Math.floor(3.5 + Math.random() * 1.5);
            return `
                <div class="product-card">
                    <div class="product-image">
                        ${productIcons[index % productIcons.length]}
                        ${product.isOnSale ? '<span class="product-badge">SALE</span>' : ''}
                        <button class="product-wishlist ${inWishlist ? 'active' : ''}" onclick="toggleWishlist(event, ${product.productId}, '${product.productName.replace(/'/g, "\\'")}', ${product.sellingPrice})">
                            ${inWishlist ? '‚ù§Ô∏è' : 'ü§ç'}
                        </button>
                    </div>
                    <div class="product-body">
                        <div class="product-category">${product.categoryName || 'Accessories'}</div>
                        <div class="product-title" title="${product.productName}">${product.productName}</div>
                        <div class="product-rating">
                            ${'<span class="star">‚òÖ</span>'.repeat(rating)}${'<span class="star empty">‚òÖ</span>'.repeat(5 - rating)}
                        </div>
                        <div class="product-pricing">
                            <span class="product-price">‚Ç±${product.sellingPrice.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                            ${product.compareAtPrice ? `<span class="product-original">‚Ç±${product.compareAtPrice.toLocaleString()}</span>` : ''}
                        </div>
                        <button class="btn-add-cart" id="addBtn-${product.productId}" onclick="addToCart(${product.productId}, '${product.productName.replace(/'/g, "\\'")}', ${product.sellingPrice}, '${product.sku || ''}')">
                            üõí Add to Cart
                        </button>
                    </div>
                </div>`;
        }).join('');
    }

    async function loadActivePromotions() {
        try {
            const response = await fetch('/CustomerPortal/GetPromotions');
            const result = await response.json();
            
            if (result.success && result.data.promotions && result.data.promotions.length > 0) {
                renderPromotions(result.data.promotions);
            } else {
                document.getElementById('activePromotionsContainer').innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üè∑Ô∏è</div>
                        <p class="empty-state-text">No active promotions</p>
                    </div>`;
            }
        } catch (error) { console.error('Error loading promotions:', error); }
    }

    function renderPromotions(promotions) {
        const container = document.getElementById('activePromotionsContainer');
        const colors = ['#FF6B35', '#10B981', '#8B5CF6', '#3B82F6'];
        
        container.innerHTML = promotions.slice(0, 3).map((promo, i) => `
            <div style="padding: 14px; border-radius: 10px; background: linear-gradient(135deg, ${colors[i % colors.length]}15, ${colors[i % colors.length]}05); border-left: 4px solid ${colors[i % colors.length]}; margin-bottom: 12px;">
                <div style="font-weight: 600; color: ${colors[i % colors.length]}; margin-bottom: 4px;">
                    ${promo.discountType === 'Percentage' ? promo.discountValue + '% OFF' : '‚Ç±' + promo.discountValue + ' OFF'}
                </div>
                <div style="font-size: 0.85rem; color: var(--muted-foreground); margin-bottom: 8px;">${promo.promotionName}</div>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <code style="background: var(--muted); padding: 4px 10px; border-radius: 6px; font-size: 0.8rem; font-weight: 600;">${promo.promotionCode}</code>
                    <button onclick="copyPromo('${promo.promotionCode}', this)" style="background: none; border: none; cursor: pointer; font-size: 0.8rem; color: var(--primary);">Copy</button>
                </div>
            </div>
        `).join('');
    }

    function copyPromo(code, btn) {
        navigator.clipboard.writeText(code);
        btn.textContent = '‚úì Copied!';
        btn.style.color = 'var(--success)';
        setTimeout(() => { btn.textContent = 'Copy'; btn.style.color = 'var(--primary)'; }, 2000);
    }

    function toggleWishlist(event, productId, productName, price) {
        event.stopPropagation();
        let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
        const index = wishlist.findIndex(w => w.productId === productId);
        const btn = event.currentTarget;

        if (index > -1) {
            wishlist.splice(index, 1);
            btn.classList.remove('active');
            btn.innerHTML = 'ü§ç';
            showToast('Removed from wishlist', 'info');
        } else {
            wishlist.push({ productId, name: productName, price });
            btn.classList.add('active');
            btn.innerHTML = '‚ù§Ô∏è';
            showToast('Added to wishlist!', 'success');
        }
        localStorage.setItem('wishlist', JSON.stringify(wishlist));
    }

    function addToCart(productId, productName, price, sku) {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const existingIndex = cart.findIndex(item => item.productId === productId);
        
        if (existingIndex > -1) { cart[existingIndex].quantity += 1; }
        else { cart.push({ productId, name: productName, price, sku, quantity: 1 }); }
        
        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartCount();
        
        const btn = document.getElementById(`addBtn-${productId}`);
        if (btn) {
            btn.classList.add('added');
            btn.innerHTML = '‚úì Added!';
            setTimeout(() => { btn.classList.remove('added'); btn.innerHTML = 'üõí Add to Cart'; }, 2000);
        }
        
        showToast('‚úì Added to cart!', 'success');
    }

    function updateCartCount() {
        const cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const count = cart.reduce((sum, item) => sum + item.quantity, 0);
        document.getElementById('statCart').textContent = count;
        
        const cartBadge = document.getElementById('cartBadge');
        if (cartBadge) { cartBadge.textContent = count; cartBadge.style.display = count > 0 ? 'flex' : 'none'; }
    }
</script>
}
