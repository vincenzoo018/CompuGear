<style>
    /* ========== HERO SECTION ========== */
    .hero-section {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
        margin-bottom: 40px;
    }
    .hero-main {
        background: linear-gradient(135deg, #008080 0%, #006666 60%, #004D4D 100%);
        border-radius: var(--radius-lg);
        padding: 56px 48px;
        color: #fff;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .hero-main::before {
        content: '';
        position: absolute;
        top: -120px;
        right: -80px;
        width: 400px;
        height: 400px;
        background: rgba(255,255,255,0.06);
        border-radius: 50%;
        pointer-events: none;
    }
    .hero-main::after {
        content: '';
        position: absolute;
        bottom: -60px;
        left: 30%;
        width: 250px;
        height: 250px;
        background: rgba(255,255,255,0.04);
        border-radius: 50%;
        pointer-events: none;
    }
    .hero-label {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255,255,255,0.15);
        padding: 8px 18px;
        border-radius: 24px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 20px;
        backdrop-filter: blur(4px);
        width: fit-content;
        letter-spacing: 0.02em;
    }
    .hero-title {
        font-size: 2.75rem;
        font-weight: 800;
        line-height: 1.15;
        margin-bottom: 16px;
        letter-spacing: -0.03em;
        position: relative;
    }
    .hero-title .highlight { color: #FFD700; }
    .hero-description {
        font-size: 1.1rem;
        opacity: 0.9;
        line-height: 1.6;
        margin-bottom: 28px;
        max-width: 480px;
    }
    .hero-actions { display: flex; gap: 14px; position: relative; }
    .hero-cta {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 32px;
        background: #fff;
        color: var(--primary);
        border-radius: var(--radius-sm);
        text-decoration: none;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.2s ease;
        box-shadow: 0 4px 14px rgba(0,0,0,0.15);
    }
    .hero-cta:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(0,0,0,0.2); color: var(--primary); }
    .hero-cta svg { width: 18px; height: 18px; }
    .hero-cta-outline {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 32px;
        background: transparent;
        color: #fff;
        border: 2px solid rgba(255,255,255,0.4);
        border-radius: var(--radius-sm);
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.2s ease;
    }
    .hero-cta-outline:hover { background: rgba(255,255,255,0.1); border-color: rgba(255,255,255,0.7); color: #fff; }

    /* Hero Side Cards */
    .hero-side { display: flex; flex-direction: column; gap: 20px; }
    .hero-side-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        padding: 28px;
        flex: 1;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.2s;
        text-decoration: none;
        color: var(--foreground);
    }
    .hero-side-card:hover { border-color: rgba(0,128,128,0.2); box-shadow: var(--shadow-md); transform: translateY(-2px); color: var(--foreground); }
    .hero-side-icon { font-size: 3rem; flex-shrink: 0; }
    .hero-side-label { font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.08em; color: var(--primary); margin-bottom: 4px; }
    .hero-side-title { font-size: 1.25rem; font-weight: 700; color: var(--foreground); margin-bottom: 2px; }
    .hero-side-link { font-size: 0.9rem; color: var(--muted-foreground); }

    /* ========== CATEGORY STRIP ========== */
    .category-strip {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        gap: 16px;
        margin-bottom: 40px;
        padding: 0;
    }
    .category-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        padding: 20px 10px;
        border-radius: var(--radius);
        background: var(--card);
        border: 1px solid var(--border);
        text-decoration: none;
        color: var(--foreground);
        transition: all 0.2s;
        cursor: pointer;
    }
    .category-item:hover { border-color: var(--primary); box-shadow: var(--shadow-md); transform: translateY(-3px); color: var(--primary); }
    .category-item-icon {
        width: 52px;
        height: 52px;
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
    }
    .category-item-icon.teal { background: rgba(0,128,128,0.08); }
    .category-item-icon.orange { background: rgba(249,115,22,0.08); }
    .category-item-icon.blue { background: rgba(59,130,246,0.08); }
    .category-item-icon.red { background: rgba(239,68,68,0.08); }
    .category-item-icon.purple { background: rgba(139,92,246,0.08); }
    .category-item-icon.green { background: rgba(16,185,129,0.08); }
    .category-item-icon.yellow { background: rgba(245,158,11,0.08); }
    .category-item-icon.cyan { background: rgba(6,182,212,0.08); }
    .category-item-name { font-size: 0.88rem; font-weight: 600; text-align: center; }
    .category-item-count { font-size: 0.78rem; color: var(--muted-foreground); }

    /* ========== STATS GRID ========== */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
        margin-bottom: 40px;
    }
    .stat-card {
        padding: 24px;
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        box-shadow: var(--shadow-sm);
        transition: all 0.2s ease;
    }
    .stat-card:hover { box-shadow: var(--shadow-md); transform: translateY(-2px); border-color: rgba(0,128,128,0.12); }
    .stat-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px; }
    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    .stat-icon svg { width: 24px; height: 24px; }
    .stat-icon.blue { background: var(--info-fg); color: #ffffff; }
    .stat-icon.orange { background: var(--warning-fg); color: #ffffff; }
    .stat-icon.green { background: var(--success-fg); color: #ffffff; }
    .stat-icon.teal { background: var(--primary); color: #ffffff; }
    .stat-trend { display: flex; align-items: center; gap: 4px; font-size: 0.75rem; font-weight: 600; padding: 3px 10px; border-radius: 20px; }
    .stat-trend.up { background: var(--success-light); color: var(--success-fg); }
    .stat-trend.down { background: var(--error-light); color: var(--error-fg); }
    .stat-trend svg { width: 12px; height: 12px; }
    .stat-value { font-size: 1.65rem; font-weight: 700; color: var(--foreground); line-height: 1.2; letter-spacing: -0.02em; }
    .stat-label { font-size: 0.8rem; font-weight: 500; text-transform: uppercase; letter-spacing: 0.04em; color: var(--muted-foreground); margin-top: 4px; }

    /* ========== CHARTS SECTION ========== */
    .charts-section { display: grid; grid-template-columns: 2fr 1fr; gap: 16px; margin-bottom: 40px; }
    .chart-card { padding: 28px; background: var(--card); border-radius: var(--radius); border: 1px solid var(--border); box-shadow: var(--shadow-sm); }
    .chart-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
    .chart-title { font-weight: 600; font-size: 1.05rem; color: var(--foreground); display: flex; align-items: center; gap: 8px; }
    .chart-title svg { width: 20px; height: 20px; color: var(--primary); }
    .chart-container { height: 220px; position: relative; }
    .area-chart-wrapper { width: 100%; height: 100%; position: relative; }
    .area-chart-svg { width: 100%; height: 100%; }
    .pie-wrapper { display: flex; align-items: center; gap: 20px; }
    .pie-chart { width: 130px; height: 130px; position: relative; flex-shrink: 0; }
    .pie-chart svg { transform: rotate(-90deg); }
    .pie-center { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; }
    .pie-center-value { font-size: 1.5rem; font-weight: 700; color: var(--foreground); letter-spacing: -0.02em; }
    .pie-center-label { font-size: 0.7rem; color: var(--muted-foreground); text-transform: uppercase; letter-spacing: 0.05em; }
    .pie-legend { flex: 1; }
    .legend-item { display: flex; align-items: center; justify-content: space-between; padding: 8px 0; border-bottom: 1px solid var(--border); }
    .legend-item:last-child { border-bottom: none; }
    .legend-left { display: flex; align-items: center; gap: 8px; }
    .legend-color { width: 10px; height: 10px; border-radius: 3px; }
    .legend-label { font-size: 0.88rem; color: var(--muted-foreground); }
    .legend-value { font-weight: 600; color: var(--foreground); font-size: 0.92rem; }

    /* ========== BOTTOM GRID ========== */
    .bottom-grid { display: grid; grid-template-columns: 1.5fr 1fr 1fr; gap: 16px; margin-bottom: 40px; }
    .orders-card { background: var(--card); border-radius: var(--radius); border: 1px solid var(--border); box-shadow: var(--shadow-sm); overflow: hidden; }
    .card-header { display: flex; justify-content: space-between; align-items: center; padding: 18px 22px; border-bottom: 1px solid var(--border); }
    .card-header h3 { font-weight: 600; font-size: 1.05rem; color: var(--foreground); display: flex; align-items: center; gap: 8px; }
    .card-header h3 svg { width: 20px; height: 20px; color: var(--primary); }
    .card-header a { font-size: 0.9rem; color: var(--primary); text-decoration: none; font-weight: 500; }
    .card-header a:hover { text-decoration: underline; }
    .order-item { display: flex; align-items: center; gap: 14px; padding: 14px 22px; border-bottom: 1px solid var(--border); transition: background 0.15s ease; }
    .order-item:last-child { border-bottom: none; }
    .order-item:hover { background: var(--muted); }
    .order-icon { width: 44px; height: 44px; border-radius: var(--radius-sm); background: var(--primary); color: #ffffff; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
    .order-icon svg { width: 20px; height: 20px; color: var(--primary); }
    .order-info { flex: 1; min-width: 0; }
    .order-id { font-weight: 600; font-size: 0.95rem; color: var(--foreground); }
    .order-date { font-size: 0.82rem; color: var(--muted-foreground); }
    .order-status { text-align: right; flex-shrink: 0; }
    .order-amount { font-weight: 600; color: var(--foreground); font-size: 0.95rem; margin-bottom: 2px; }

    /* Loyalty Card */
    .loyalty-card { background: var(--primary); border-radius: var(--radius); padding: 28px; color: white; position: relative; overflow: hidden; }
    .loyalty-card::before { content: ''; position: absolute; top: -20px; right: -20px; width: 100px; height: 100px; background: rgba(255,255,255,0.08); border-radius: 50%; }
    .loyalty-card::after { content: ''; position: absolute; bottom: -30px; left: -20px; width: 80px; height: 80px; background: rgba(255,255,255,0.05); border-radius: 50%; }
    .loyalty-header { display: flex; align-items: center; gap: 10px; margin-bottom: 20px; position: relative; }
    .loyalty-header svg { width: 24px; height: 24px; opacity: 0.9; }
    .loyalty-header span { font-weight: 600; font-size: 1.05rem; }
    .loyalty-points { font-size: 2.5rem; font-weight: 700; margin-bottom: 4px; letter-spacing: -0.02em; position: relative; }
    .loyalty-label { font-size: 0.9rem; opacity: 0.85; margin-bottom: 20px; position: relative; }
    .loyalty-progress { background: rgba(255,255,255,0.2); border-radius: 10px; height: 8px; margin-bottom: 10px; position: relative; }
    .loyalty-progress-bar { background: white; height: 100%; border-radius: 10px; width: 65%; transition: width 0.6s ease; }
    .loyalty-next { font-size: 0.82rem; opacity: 0.8; position: relative; }

    /* Quick Actions */
    .quick-actions-card { background: var(--card); border-radius: var(--radius); border: 1px solid var(--border); box-shadow: var(--shadow-sm); padding: 22px; }
    .quick-actions-title { font-weight: 600; font-size: 1.05rem; color: var(--foreground); margin-bottom: 16px; display: flex; align-items: center; gap: 8px; }
    .quick-actions-title svg { width: 20px; height: 20px; color: var(--primary); }
    .quick-action { display: flex; align-items: center; gap: 12px; padding: 14px 16px; background: var(--muted); border-radius: var(--radius-sm); margin-bottom: 10px; text-decoration: none; color: var(--foreground); font-size: 0.95rem; font-weight: 500; transition: all 0.2s ease; }
    .quick-action:last-child { margin-bottom: 0; }
    .quick-action:hover { background: var(--primary); color: white; transform: translateX(3px); }
    .quick-action svg { width: 20px; height: 20px; flex-shrink: 0; }

    /* ========== FEATURED PRODUCTS ========== */
    .products-section { margin-bottom: 40px; }
    .section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
    .section-title { font-size: 1.35rem; font-weight: 700; color: var(--foreground); display: flex; align-items: center; gap: 10px; letter-spacing: -0.01em; }
    .section-title svg { width: 24px; height: 24px; color: var(--primary); }
    .section-link { font-size: 0.95rem; color: var(--primary); text-decoration: none; font-weight: 500; display: flex; align-items: center; gap: 6px; }
    .section-link:hover { text-decoration: underline; }
    .section-link svg { width: 16px; height: 16px; }
    .products-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 18px; }
    .product-card { background: var(--card); border-radius: var(--radius); border: 1px solid var(--border); overflow: hidden; transition: all 0.2s ease; box-shadow: var(--shadow-sm); }
    .product-card:hover { border-color: rgba(0,128,128,0.15); box-shadow: var(--shadow-md); transform: translateY(-3px); }
    .product-image { height: 190px; background: var(--muted); display: flex; align-items: center; justify-content: center; position: relative; border-bottom: 1px solid var(--border); }
    .product-image svg { width: 56px; height: 56px; color: var(--muted-foreground); opacity: 0.35; }
    .product-badge { position: absolute; top: 12px; left: 12px; background: #EF4444; color: white; padding: 4px 12px; border-radius: 20px; font-size: 0.75rem; font-weight: 700; }
    .product-wishlist { position: absolute; top: 12px; right: 12px; width: 36px; height: 36px; border-radius: 50%; background: white; border: 1px solid var(--border); cursor: pointer; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-sm); transition: all 0.2s ease; opacity: 0; }
    .product-card:hover .product-wishlist { opacity: 1; }
    .product-wishlist:hover { background: var(--error-light); border-color: transparent; }
    .product-wishlist svg { width: 16px; height: 16px; color: var(--muted-foreground); }
    .product-wishlist:hover svg { color: var(--error); }
    .product-info { padding: 16px 18px; }
    .product-category { font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.08em; color: var(--primary); margin-bottom: 6px; }
    .product-name { font-weight: 600; color: var(--foreground); font-size: 1rem; margin-bottom: 8px; line-height: 1.35; }
    .product-rating { display: flex; align-items: center; gap: 4px; margin-bottom: 10px; }
    .product-rating svg { width: 14px; height: 14px; }
    .product-rating span { font-size: 0.82rem; color: var(--muted-foreground); }
    .product-price { display: flex; align-items: center; gap: 8px; margin-bottom: 6px; }
    .price-current { font-size: 1.2rem; font-weight: 700; color: var(--primary); letter-spacing: -0.01em; }
    .price-original { font-size: 0.88rem; color: var(--muted-foreground); text-decoration: line-through; }
    .product-sold { font-size: 0.8rem; color: var(--muted-foreground); margin-bottom: 12px; }
    .btn-add-cart { width: 100%; padding: 11px; background: var(--primary); color: white; border: none; border-radius: var(--radius-sm); font-weight: 600; font-size: 0.9rem; font-family: 'Inter', sans-serif; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 8px; transition: all 0.2s ease; }
    .btn-add-cart:hover { background: var(--primary-hover); transform: translateY(-1px); box-shadow: var(--shadow); }
    .btn-add-cart svg { width: 16px; height: 16px; }

    /* ========== RESPONSIVE ========== */
    @@media (max-width: 1200px) {
        .hero-section { grid-template-columns: 1fr; }
        .hero-side { flex-direction: row; }
        .stats-grid { grid-template-columns: repeat(2, 1fr); }
        .charts-section { grid-template-columns: 1fr; }
        .bottom-grid { grid-template-columns: 1fr; }
        .products-grid { grid-template-columns: repeat(2, 1fr); }
        .category-strip { grid-template-columns: repeat(4, 1fr); }
    }
    @@media (max-width: 768px) {
        .hero-main { padding: 36px 28px; }
        .hero-title { font-size: 2rem; }
        .hero-side { flex-direction: column; }
        .stats-grid { grid-template-columns: 1fr 1fr; gap: 10px; }
        .stat-card { padding: 18px; }
        .stat-value { font-size: 1.35rem; }
        .products-grid { grid-template-columns: 1fr 1fr; }
        .category-strip { grid-template-columns: repeat(4, 1fr); gap: 10px; }
        .pie-wrapper { flex-direction: column; }
    }
    @@media (max-width: 480px) {
        .category-strip { grid-template-columns: repeat(2, 1fr); }
        .products-grid { grid-template-columns: 1fr; }
        .hero-actions { flex-direction: column; }
    }
</style>

