@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        loadDashboardData();
        loadFeaturedProducts();
        loadActivePromotions();
        updateCartCount();
    });

    async function loadDashboardData() {
        try {
            // Load profile
            const profileRes = await fetch('/CustomerPortal/GetProfile');
            const profileData = await profileRes.json();
            
            if (profileData.success) {
                document.getElementById('customerName').textContent = profileData.data.firstName || 'Customer';
                document.getElementById('statPoints').textContent = (profileData.data.loyaltyPoints || 0).toLocaleString();
                document.getElementById('statOrders').textContent = profileData.data.totalOrders || 0;
            }

            // Load orders
            const ordersRes = await fetch('/CustomerPortal/GetOrders?pageSize=5');
            const ordersData = await ordersRes.json();
            
            if (ordersData.success) {
                document.getElementById('statPending').textContent = ordersData.stats?.pending || 0;
                renderRecentOrders(ordersData.data);
            }
        } catch (error) {
            console.error('Error loading dashboard:', error);
            document.getElementById('recentOrdersContainer').innerHTML = `
                <div class="empty-state">
                    <div class="empty-state-icon">üì¶</div>
                    <p>No orders yet. <a href="/CustomerPortal/Products">Start shopping!</a></p>
                </div>
            `;
        }
    }

    async function loadFeaturedProducts() {
        try {
            const response = await fetch('/CustomerPortal/GetFeaturedProducts?count=4');
            const result = await response.json();
            
            if (result.success && result.data.length > 0) {
                renderFeaturedProducts(result.data);
            } else {
                document.getElementById('featuredProductsGrid').innerHTML = `
                    <div class="col-12">
                        <div class="empty-state">
                            <div class="empty-state-icon">üõçÔ∏è</div>
                            <p>No featured products available</p>
                        </div>
                    </div>
                `;
            }
        } catch (error) {
            console.error('Error loading products:', error);
        }
    }

    async function loadActivePromotions() {
        try {
            const response = await fetch('/CustomerPortal/GetPromotions');
            const result = await response.json();
            
            if (result.success && result.data.promotions && result.data.promotions.length > 0) {
                renderPromotions(result.data.promotions);
            } else {
                document.getElementById('activePromotionsContainer').innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üè∑Ô∏è</div>
                        <p>No active promotions</p>
                    </div>
                `;
            }
        } catch (error) {
            console.error('Error loading promotions:', error);
        }
    }

    function renderRecentOrders(orders) {
        const container = document.getElementById('recentOrdersContainer');
        
        if (!orders || orders.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <div class="empty-state-icon">üì¶</div>
                    <p>No orders yet. <a href="/CustomerPortal/Products">Start shopping!</a></p>
                </div>
            `;
            return;
        }

        const statusColors = {
            'Pending': '#f59e0b',
            'Confirmed': '#3b82f6',
            'Processing': '#8b5cf6',
            'Shipped': '#06b6d4',
            'Delivered': '#10b981',
            'Cancelled': '#ef4444'
        };

        container.innerHTML = `
            <div class="table-responsive">
                <table class="table order-table">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${orders.map(order => `
                            <tr>
                                <td>
                                    <a href="/CustomerPortal/OrderDetails/${order.orderId}" class="order-number">${order.orderNumber}</a>
                                </td>
                                <td>${new Date(order.orderDate).toLocaleDateString()}</td>
                                <td style="font-weight: 600;">‚Ç±${order.totalAmount.toLocaleString('en-PH', {minimumFractionDigits: 2})}</td>
                                <td>
                                    <span class="status-badge" style="background: ${statusColors[order.orderStatus] || '#6b7280'}; color: white;">
                                        ${order.orderStatus}
                                    </span>
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        `;
    }

    function renderFeaturedProducts(products) {
        const grid = document.getElementById('featuredProductsGrid');
        const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå'];

        grid.innerHTML = products.map((product, index) => `
            <div class="col-6 col-md-6 col-lg-3">
                <div class="product-card">
                    <div class="product-image">
                        ${productIcons[index % productIcons.length]}
                        ${product.isOnSale ? '<span class="product-badge">SALE</span>' : ''}
                    </div>
                    <div class="product-body">
                        <div class="product-category">${product.categoryName || 'Accessories'}</div>
                        <div class="product-title" title="${product.productName}">${product.productName}</div>
                        <div class="d-flex align-items-center flex-wrap">
                            <span class="product-price">‚Ç±${product.sellingPrice.toLocaleString('en-PH', {minimumFractionDigits: 2})}</span>
                            ${product.compareAtPrice ? `<span class="product-old-price">‚Ç±${product.compareAtPrice.toLocaleString()}</span>` : ''}
                        </div>
                        <button class="btn-add-cart" onclick="addToCart(${product.productId}, '${product.productName.replace(/'/g, "\\'")}', ${product.sellingPrice}, '${product.sku || ''}')">
                            üõí Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        `).join('');
    }

    function renderPromotions(promotions) {
        const container = document.getElementById('activePromotionsContainer');
        
        if (!promotions || promotions.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <div class="empty-state-icon">üè∑Ô∏è</div>
                    <p>No active promotions</p>
                </div>
            `;
            return;
        }

        container.innerHTML = promotions.slice(0, 3).map(promo => `
            <div class="promo-item">
                <div class="promo-item-title">üî• ${promo.promotionName}</div>
                <div class="promo-item-desc">${promo.description || `${promo.discountValue}${promo.discountType === 'Percentage' ? '%' : '‚Ç±'} off`}</div>
                <div class="promo-item-code">Code: <strong>${promo.promotionCode}</strong></div>
            </div>
        `).join('');
    }

    function addToCart(productId, productName, price, sku) {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const existingIndex = cart.findIndex(item => item.productId === productId);
        
        if (existingIndex > -1) {
            cart[existingIndex].quantity += 1;
        } else {
            cart.push({ productId, name: productName, price, sku, quantity: 1 });
        }
        
        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartCount();
        
        // Show notification
        if (typeof showToast === 'function') {
            showToast('‚úì Added to cart!');
        } else {
            const toast = document.createElement('div');
            toast.style.cssText = 'position:fixed;bottom:100px;right:25px;background:#10b981;color:white;padding:12px 20px;border-radius:10px;box-shadow:0 5px 20px rgba(0,0,0,0.2);z-index:9999;animation:slideIn 0.3s ease;';
            toast.innerHTML = '‚úì Added to cart!';
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 2000);
        }
    }

    function updateCartCount() {
        const cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const count = cart.reduce((sum, item) => sum + item.quantity, 0);
        document.getElementById('statCart').textContent = count;
        
        // Update header cart badge
        const cartBadge = document.getElementById('cartBadge');
        if (cartBadge) {
            cartBadge.textContent = count;
            cartBadge.style.display = count > 0 ? 'flex' : 'none';
        }
    }
</script>
}
