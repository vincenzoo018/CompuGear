@{
    ViewData["Title"] = "My Dashboard";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .dashboard-container { padding: 10px 0; }

    .promo-banner {
        background: linear-gradient(135deg, #008080 0%, #006666 100%);
        border-radius: 20px;
        padding: 35px;
        color: white;
        margin-bottom: 25px;
        box-shadow: 0 10px 40px rgba(0, 128, 128, 0.3);
        position: relative;
        overflow: hidden;
    }

    .promo-banner::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 350px;
        height: 350px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .promo-banner::after {
        content: '';
        position: absolute;
        bottom: -30%;
        right: 5%;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
    }

    .promo-content { position: relative; z-index: 1; }

    .promo-banner h2 {
        font-weight: 700;
        margin-bottom: 10px;
        font-size: 1.8rem;
    }

    .promo-banner p {
        margin-bottom: 20px;
        opacity: 0.9;
        font-size: 1rem;
    }

    .promo-image {
        position: relative;
        z-index: 1;
        text-align: center;
    }

    .promo-image-display {
        font-size: 6rem;
        filter: drop-shadow(0 5px 15px rgba(0,0,0,0.2));
    }

    .btn-shop {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 28px;
        background: white;
        color: #008080;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .btn-shop:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        color: #006666;
    }

    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 22px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        transition: all 0.3s;
        height: 100%;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }

    .stat-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 800;
        color: #1f2937;
    }

    .stat-label {
        color: #6b7280;
        font-size: 0.9rem;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .portal-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        height: 100%;
    }

    .card-header-custom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .card-title {
        font-weight: 600;
        color: #1f2937;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .view-all {
        color: #008080;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .view-all:hover { text-decoration: underline; }

    .product-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        transition: all 0.3s;
        height: 100%;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }

    .product-image {
        height: 160px;
        background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        position: relative;
    }

    .product-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #ff6b35;
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
    }

    .product-body { padding: 15px; }

    .product-title {
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 5px;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-category {
        color: #008080;
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .product-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #ff6b35;
    }

    .product-old-price {
        color: #9ca3af;
        text-decoration: line-through;
        font-size: 0.85rem;
        margin-left: 8px;
    }

    .btn-add-cart {
        width: 100%;
        padding: 10px;
        background: linear-gradient(135deg, #008080, #006666);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 12px;
        transition: all 0.3s;
        font-size: 0.85rem;
    }

    .btn-add-cart:hover {
        background: linear-gradient(135deg, #006666, #004d4d);
    }

    .quick-action {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px 18px;
        background: linear-gradient(135deg, #008080, #006666);
        color: white;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s;
        font-weight: 500;
    }

    .quick-action:hover {
        transform: translateX(5px);
        color: white;
        box-shadow: 0 5px 20px rgba(0,128,128,0.3);
    }

    .quick-action.accent {
        background: linear-gradient(135deg, #ff6b35, #ff8c42);
    }

    .quick-action.success {
        background: linear-gradient(135deg, #10b981, #34d399);
    }

    .promo-item {
        padding: 15px;
        border-radius: 12px;
        background: linear-gradient(135deg, #fff5f0, #ffebe0);
        border-left: 4px solid #ff6b35;
        margin-bottom: 12px;
    }

    .promo-item:last-child { margin-bottom: 0; }

    .promo-item-title {
        font-weight: 600;
        color: #ff6b35;
        margin-bottom: 5px;
    }

    .promo-item-desc {
        font-size: 0.85rem;
        color: #6b7280;
        margin-bottom: 5px;
    }

    .promo-item-code {
        font-size: 0.75rem;
        color: #9ca3af;
    }

    .promo-item-code strong {
        color: #1f2937;
    }

    .order-table {
        margin: 0;
    }

    .order-table thead th {
        border: none;
        padding: 12px;
        color: #6b7280;
        font-weight: 500;
        background: #f8f9fa;
        font-size: 0.85rem;
    }

    .order-table tbody td {
        padding: 15px 12px;
        border-bottom: 1px solid #e5e7eb;
        vertical-align: middle;
        font-size: 0.9rem;
    }

    .order-number {
        color: #008080;
        font-weight: 600;
        text-decoration: none;
    }

    .order-number:hover { text-decoration: underline; }

    .status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    /* Responsive */
    @@media (max-width: 1200px) {
        .promo-banner h2 { font-size: 1.6rem; }
        .promo-image-display { font-size: 5rem; }
    }

    @@media (max-width: 992px) {
        .promo-banner { padding: 25px; }
        .promo-banner h2 { font-size: 1.4rem; }
        .promo-image { display: none; }
        .stat-value { font-size: 1.6rem; }
    }

    @@media (max-width: 768px) {
        .promo-banner {
            padding: 20px;
            border-radius: 16px;
        }
        
        .promo-banner h2 { font-size: 1.3rem; }
        
        .promo-banner p { font-size: 0.9rem; }
        
        .btn-shop {
            padding: 10px 20px;
            font-size: 0.9rem;
        }
        
        .stat-card { padding: 18px; }
        
        .stat-value { font-size: 1.4rem; }
        
        .stat-icon {
            width: 42px;
            height: 42px;
            font-size: 1.3rem;
        }
        
        .portal-card { padding: 20px; }
        
        .product-image { height: 140px; font-size: 3rem; }
    }

    @@media (max-width: 576px) {
        .promo-banner h2 { font-size: 1.1rem; }
        
        .stat-value { font-size: 1.2rem; }
        
        .stat-label { font-size: 0.8rem; }
        
        .stat-icon {
            width: 38px;
            height: 38px;
            font-size: 1.1rem;
        }
        
        .product-image { height: 120px; font-size: 2.5rem; }
        
        .product-title { font-size: 0.85rem; }
        
        .product-price { font-size: 1rem; }
        
        .btn-add-cart {
            padding: 8px;
            font-size: 0.8rem;
        }
        
        .quick-action {
            padding: 12px 15px;
            font-size: 0.9rem;
        }
    }

    .empty-state {
        text-align: center;
        padding: 30px 20px;
        color: #6b7280;
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 10px;
        opacity: 0.5;
    }
</style>

<div class="dashboard-container">
