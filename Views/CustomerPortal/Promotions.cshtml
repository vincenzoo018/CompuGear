@{
    ViewData["Title"] = "Promotions & Deals";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .deals-page { min-height: 100vh; }

    /* Hero Banner with Orange-Red Gradient */
    .hero-banner {
        background: linear-gradient(135deg, #FF6B35 0%, #EF4444 100%);
        border-radius: 20px;
        padding: 48px;
        color: white;
        margin-bottom: 32px;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

    .hero-banner::before {
        content: '';
        position: absolute;
        top: -80px;
        right: -80px;
        width: 300px;
        height: 300px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }

    .hero-banner::after {
        content: 'üî•';
        position: absolute;
        right: 60px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 6rem;
        opacity: 0.2;
    }

    .hero-content { position: relative; z-index: 1; }
    .hero-title { font-size: 2.5rem; font-weight: 800; margin-bottom: 8px; }
    .hero-subtitle { font-size: 1.2rem; opacity: 0.95; margin-bottom: 24px; }

    /* Flash Sale Countdown */
    .countdown-container {
        display: inline-flex;
        gap: 16px;
        background: rgba(0,0,0,0.2);
        padding: 16px 32px;
        border-radius: 16px;
    }

    .countdown-item {
        text-align: center;
        min-width: 70px;
    }

    .countdown-value {
        font-size: 2.5rem;
        font-weight: 800;
        line-height: 1;
    }

    .countdown-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        opacity: 0.9;
        margin-top: 4px;
    }

    .countdown-separator {
        font-size: 2rem;
        font-weight: 700;
        opacity: 0.7;
        line-height: 1;
    }

    /* Section */
    .section { margin-bottom: 40px; }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--foreground);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .view-all-link {
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .view-all-link:hover { text-decoration: underline; }

    /* Promo Code Cards Grid */
    .promo-codes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    .promo-code-card {
        background: var(--card);
        border-radius: var(--radius);
        border: 2px dashed var(--border);
        padding: 24px;
        position: relative;
        transition: all 0.3s;
        cursor: pointer;
        box-shadow: 0 2px 12px rgba(0,0,0,0.04);
    }

    .promo-code-card:hover {
        border-color: rgba(0,128,128,0.2);
        box-shadow: 0 12px 32px rgba(0,0,0,0.08);
        transform: translateY(-4px);
    }

    .promo-code-card.copied {
        border-color: var(--success);
        background: var(--success-light);
    }

    .promo-discount {
        font-size: 2rem;
        font-weight: 800;
        color: var(--accent);
        margin-bottom: 8px;
    }

    .promo-name {
        font-weight: 600;
        color: var(--foreground);
        margin-bottom: 4px;
    }

    .promo-desc {
        font-size: 0.85rem;
        color: var(--muted-foreground);
        margin-bottom: 16px;
    }

    .promo-code-display {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: var(--muted);
        padding: 12px 16px;
        border-radius: 8px;
    }

    .promo-code-text {
        font-family: monospace;
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--primary);
        letter-spacing: 2px;
    }

    .copy-indicator {
        font-size: 0.85rem;
        color: var(--muted-foreground);
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .promo-code-card.copied .copy-indicator { color: var(--success-fg); }

    .promo-validity {
        font-size: 0.75rem;
        color: var(--muted-foreground);
        margin-top: 12px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .promo-min-order {
        position: absolute;
        top: 12px;
        right: 12px;
        background: var(--info-light);
        color: var(--info-fg);
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
    }

    /* Deal Cards Grid */
    .deals-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
    }

    .deal-card {
        background: var(--card);
        border-radius: var(--radius);
        border: 1.5px solid var(--border);
        overflow: hidden;
        transition: all 0.3s;
        box-shadow: 0 2px 12px rgba(0,0,0,0.04);
    }

    .deal-card:hover {
        border-color: rgba(0,128,128,0.2);
        box-shadow: 0 12px 32px rgba(0,0,0,0.08);
        transform: translateY(-4px);
    }

    .deal-image {
        height: 180px;
        background: linear-gradient(135deg, var(--muted) 0%, var(--border) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        position: relative;
    }

    .deal-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: var(--accent);
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 700;
    }

    .deal-savings {
        position: absolute;
        bottom: 12px;
        right: 12px;
        background: var(--success);
        color: white;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .deal-body { padding: 20px; }

    .deal-category {
        color: var(--primary);
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 4px;
    }

    .deal-name {
        font-weight: 600;
        color: var(--foreground);
        margin-bottom: 8px;
        font-size: 1rem;
    }

    .deal-pricing {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 12px;
    }

    .deal-current-price {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--accent);
    }

    .deal-original-price {
        font-size: 0.9rem;
        color: var(--muted-foreground);
        text-decoration: line-through;
    }

    .deal-rating {
        display: flex;
        align-items: center;
        gap: 6px;
        margin-bottom: 12px;
    }

    .stars { color: #FCD34D; font-size: 0.9rem; }
    .rating-count { color: var(--muted-foreground); font-size: 0.8rem; }

    .btn-shop {
        width: 100%;
        padding: 12px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius-sm);
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-shop:hover { background: var(--primary-hover); transform: translateY(-2px); box-shadow: 0 4px 12px rgba(0,128,128,0.25); }

    /* Campaign Banner */
    .campaign-banner {
        background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
        border-radius: 20px;
        padding: 40px;
        color: white;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 40px;
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
    }

    .campaign-banner::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255,107,53,0.1);
        border-radius: 50%;
    }

    .campaign-content { position: relative; z-index: 1; flex: 1; }
    .campaign-label { font-size: 0.8rem; text-transform: uppercase; letter-spacing: 2px; opacity: 0.8; margin-bottom: 8px; }
    .campaign-title { font-size: 2rem; font-weight: 800; margin-bottom: 12px; }
    .campaign-desc { opacity: 0.9; margin-bottom: 20px; max-width: 500px; }

    .campaign-cta {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 28px;
        background: var(--primary);
        color: white;
        border-radius: var(--radius-sm);
        text-decoration: none;
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        transition: all 0.3s;
    }

    .campaign-cta:hover { background: var(--primary-hover); transform: translateY(-2px); box-shadow: 0 4px 12px rgba(0,128,128,0.25); color: white; }

    .campaign-image {
        font-size: 6rem;
        position: relative;
        z-index: 1;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--muted-foreground);
    }

    .empty-state-icon { font-size: 4rem; margin-bottom: 16px; opacity: 0.5; }
    .empty-state-text { font-size: 1.1rem; }

    /* Responsive */
    @@media (max-width: 992px) {
        .hero-banner { padding: 32px; }
        .hero-title { font-size: 2rem; }
        .campaign-banner { flex-direction: column; text-align: center; padding: 32px; }
        .campaign-image { font-size: 4rem; }
        .campaign-desc { max-width: none; }
    }

    @@media (max-width: 768px) {
        .hero-banner { padding: 24px; }
        .hero-title { font-size: 1.6rem; }
        .hero-subtitle { font-size: 1rem; }
        .countdown-container { padding: 12px 20px; gap: 12px; }
        .countdown-item { min-width: 50px; }
        .countdown-value { font-size: 1.8rem; }
        .hero-banner::after { display: none; }
        .promo-codes-grid { grid-template-columns: 1fr; }
        .deals-grid { grid-template-columns: repeat(2, 1fr); gap: 16px; }
        .deal-image { height: 140px; font-size: 2.5rem; }
    }

    @@media (max-width: 576px) {
        .countdown-container { flex-wrap: wrap; justify-content: center; }
        .countdown-separator { display: none; }
        .campaign-title { font-size: 1.5rem; }
        .section-title { font-size: 1.2rem; }
    }
</style>

