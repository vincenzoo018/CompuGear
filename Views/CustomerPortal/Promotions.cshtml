@section Scripts {
<script>
    const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå', 'üíª', 'üñ®Ô∏è'];

    document.addEventListener('DOMContentLoaded', function() {
        loadCampaignAndCountdown();
        loadPromotions();
        loadDeals();
    });

    let countdownEndDate = null;

    async function loadCampaignAndCountdown() {
        try {
            const res = await fetch('/CustomerPortal/GetActiveCampaigns');
            const result = await res.json();
            if (result.success && result.data && result.data.length > 0) {
                const campaign = result.data[0]; // Use the first active campaign
                document.getElementById('campaignTitle').textContent = campaign.campaignName || 'Special Offer';
                document.getElementById('campaignDesc').textContent = campaign.description || 'Great deals await!';
                document.getElementById('campaignLabel').textContent = campaign.campaignType || 'Limited Time Offer';
                if (campaign.endDate) {
                    countdownEndDate = new Date(campaign.endDate);
                }
            }
        } catch(e) { console.error('Error loading campaigns:', e); }

        // If no campaign endDate, fall back to 3 days from now
        if (!countdownEndDate) {
            countdownEndDate = new Date();
            countdownEndDate.setDate(countdownEndDate.getDate() + 3);
            countdownEndDate.setHours(23, 59, 59, 999);
        }
        initCountdown();
    }

    function initCountdown() {
        function updateCountdown() {
            const now = new Date().getTime();
            const distance = countdownEndDate.getTime() - now;

            if (distance < 0) {
                document.getElementById('countdownDays').textContent = '00';
                document.getElementById('countdownHours').textContent = '00';
                document.getElementById('countdownMinutes').textContent = '00';
                document.getElementById('countdownSeconds').textContent = '00';
                return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById('countdownDays').textContent = String(days).padStart(2, '0');
            document.getElementById('countdownHours').textContent = String(hours).padStart(2, '0');
            document.getElementById('countdownMinutes').textContent = String(minutes).padStart(2, '0');
            document.getElementById('countdownSeconds').textContent = String(seconds).padStart(2, '0');
        }

        updateCountdown();
        setInterval(updateCountdown, 1000);
    }

    async function loadPromotions() {
        try {
            const response = await fetch('/CustomerPortal/GetPromotions');
            const result = await response.json();

            if (result.success && result.data.promotions && result.data.promotions.length > 0) {
                renderPromoCodes(result.data.promotions);
            } else {
                document.getElementById('promoCodesGrid').innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <div class="empty-state-icon">üè∑Ô∏è</div>
                        <p class="empty-state-text">No active promo codes</p>
                    </div>`;
            }
        } catch (error) {
            console.error('Error loading promotions:', error);
        }
    }

    function renderPromoCodes(promotions) {
        const grid = document.getElementById('promoCodesGrid');

        grid.innerHTML = promotions.slice(0, 4).map((promo, i) => {
            const discountText = promo.discountType === 'Percentage' 
                ? `${promo.discountValue}% OFF` 
                : `‚Ç±${promo.discountValue} OFF`;

            const endDate = promo.endDate ? new Date(promo.endDate).toLocaleDateString('en-PH', { month: 'short', day: 'numeric' }) : 'Limited time';

            return `
                <div class="promo-code-card animate-fade-in" style="animation-delay: ${i * 0.1}s" onclick="copyPromoCode('${promo.promotionCode}', this)">
                    ${promo.minOrderAmount > 0 ? `<span class="promo-min-order">Min. ‚Ç±${promo.minOrderAmount.toLocaleString()}</span>` : ''}
                    <div class="promo-discount">${discountText}</div>
                    <div class="promo-name">${promo.promotionName}</div>
                    <div class="promo-desc">${promo.description || 'Apply this code at checkout'}</div>
                    <div class="promo-code-display">
                        <span class="promo-code-text">${promo.promotionCode}</span>
                        <span class="copy-indicator">
                            <span class="copy-icon">üìã</span>
                            <span class="copy-text">Click to copy</span>
                        </span>
                    </div>
                    <div class="promo-validity">
                        <span>‚è∞</span>
                        Valid until ${endDate}
                    </div>
                </div>`;
        }).join('');
    }

    function copyPromoCode(code, card) {
        navigator.clipboard.writeText(code).then(() => {
            card.classList.add('copied');
            const indicator = card.querySelector('.copy-indicator');
            indicator.innerHTML = '<span style="color: var(--success-fg);">‚úì Copied!</span>';

            setTimeout(() => {
                card.classList.remove('copied');
                indicator.innerHTML = '<span class="copy-icon">üìã</span><span class="copy-text">Click to copy</span>';
            }, 2000);

            showToast('‚úì Promo code copied!', 'success');
        });
    }

    async function loadDeals() {
        try {
            const response = await fetch('/CustomerPortal/GetProducts?onSale=true&pageSize=8');
            const result = await response.json();

            if (result.success && result.data.length > 0) {
                renderDeals(result.data);
            } else {
                document.getElementById('dealsGrid').innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <div class="empty-state-icon">üí•</div>
                        <p class="empty-state-text">No deals available right now</p>
                    </div>`;
            }
        } catch (error) {
            console.error('Error loading deals:', error);
        }
    }

    function renderDeals(products) {
        const grid = document.getElementById('dealsGrid');

        grid.innerHTML = products.map((product, index) => {
            const savings = product.compareAtPrice ? (product.compareAtPrice - product.sellingPrice) : 0;
            const rating = Math.floor(3.5 + Math.random() * 1.5);
            const reviewCount = Math.floor(20 + Math.random() * 150);

            return `
                <div class="deal-card animate-fade-in" style="animation-delay: ${index * 0.05}s">
                    <div class="deal-image">
                        ${productIcons[index % productIcons.length]}
                        ${product.discountPercent > 0 ? `<span class="deal-badge">-${product.discountPercent}%</span>` : '<span class="deal-badge">SALE</span>'}
                        ${savings > 0 ? `<span class="deal-savings">Save ‚Ç±${savings.toLocaleString()}</span>` : ''}
                    </div>
                    <div class="deal-body">
                        <div class="deal-category">${product.categoryName || 'Accessories'}</div>
                        <div class="deal-name">${product.productName}</div>
                        <div class="deal-rating">
                            <span class="stars">${'‚òÖ'.repeat(rating)}${'‚òÜ'.repeat(5 - rating)}</span>
                            <span class="rating-count">(${reviewCount} reviews)</span>
                        </div>
                        <div class="deal-pricing">
                            <span class="deal-current-price">‚Ç±${product.sellingPrice.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                            ${product.compareAtPrice ? `<span class="deal-original-price">‚Ç±${product.compareAtPrice.toLocaleString()}</span>` : ''}
                        </div>
                        <button class="btn-shop" onclick="addToCart(${product.productId}, '${product.productName.replace(/'/g, "\\'")}', ${product.sellingPrice}, '${product.sku || ''}')">
                            üõí Add to Cart
                        </button>
                    </div>
                </div>`;
        }).join('');
    }

    function addToCart(productId, productName, price, sku) {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const existingIndex = cart.findIndex(item => item.productId === productId);

        if (existingIndex > -1) { cart[existingIndex].quantity += 1; }
        else { cart.push({ productId, name: productName, price, sku, quantity: 1 }); }

        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartBadge();
        showToast('‚úì Added to cart!', 'success');
    }
</script>
}
