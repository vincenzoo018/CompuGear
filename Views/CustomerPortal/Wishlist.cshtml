@{
    ViewData["Title"] = "My Wishlist";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    /* ========== BASE ========== */
    .wishlist-page {
        min-height: 100vh;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    /* ========== PAGE HEADER ========== */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px;
        flex-wrap: wrap;
        gap: 16px;
    }

    .page-title-section {}

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--foreground);
        display: flex;
        align-items: center;
        gap: 10px;
        letter-spacing: -0.02em;
    }

    .page-title-icon {
        width: 40px;
        height: 40px;
        background: var(--error-light);
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .page-subtitle {
        color: var(--muted-foreground);
        margin-top: 4px;
        font-size: 0.875rem;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-clear {
        padding: 9px 18px;
        background: var(--error-light);
        color: var(--error-fg);
        border: 1px solid transparent;
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-weight: 500;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-clear:hover {
        background: var(--error);
        color: white;
        border-color: var(--error);
    }

    /* ========== WISHLIST GRID ========== */
    .wishlist-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(270px, 1fr));
        gap: 20px;
    }

    .wishlist-card {
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        overflow: hidden;
        transition: all 0.2s ease;
        position: relative;
    }

    .wishlist-card:hover {
        border-color: rgba(0, 128, 128, 0.25);
        box-shadow: var(--shadow-md);
        transform: translateY(-2px);
    }

    .wishlist-card.removing {
        animation: removeItem 0.3s ease forwards;
    }

    @@keyframes removeItem {
        0% { opacity: 1; transform: scale(1); }
        100% { opacity: 0; transform: scale(0.95); }
    }

    /* ========== OUT OF STOCK ========== */
    .out-of-stock-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;
        border-radius: var(--radius);
    }

    .out-of-stock-text {
        background: var(--error);
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.8rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    /* ========== CARD IMAGE ========== */
    .card-image {
        height: 180px;
        background: var(--muted);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        position: relative;
        border-bottom: 1px solid var(--border);
    }

    .remove-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 32px;
        height: 32px;
        border-radius: var(--radius-sm);
        background: white;
        border: 1px solid var(--border);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Inter', sans-serif;
        font-size: 0.85rem;
        color: var(--muted-foreground);
        transition: all 0.2s ease;
        z-index: 20;
        box-shadow: var(--shadow-sm);
    }

    .remove-btn:hover {
        background: var(--error-light);
        color: var(--error-fg);
        border-color: var(--error);
    }

    .discount-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: var(--accent);
        color: white;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.02em;
    }

    /* ========== CARD BODY ========== */
    .card-body {
        padding: 16px;
    }

    .product-category {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--primary);
        font-weight: 600;
        margin-bottom: 4px;
    }

    .product-name {
        font-weight: 600;
        color: var(--foreground);
        margin-bottom: 8px;
        font-size: 0.925rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        letter-spacing: -0.01em;
    }

    .product-rating {
        display: flex;
        align-items: center;
        gap: 6px;
        margin-bottom: 10px;
    }

    .stars {
        color: #F59E0B;
        font-size: 0.8rem;
        letter-spacing: 1px;
    }

    .rating-count {
        color: var(--muted-foreground);
        font-size: 0.75rem;
    }

    .product-pricing {
        display: flex;
        align-items: baseline;
        gap: 8px;
        margin-bottom: 12px;
    }

    .current-price {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--foreground);
        letter-spacing: -0.02em;
    }

    .original-price {
        font-size: 0.85rem;
        color: var(--muted-foreground);
        text-decoration: line-through;
    }

    .stock-status {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.8rem;
        margin-bottom: 14px;
        font-weight: 500;
    }

    .stock-dot {
        width: 7px;
        height: 7px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .stock-dot.in-stock { background: var(--success); }
    .stock-dot.low-stock { background: var(--warning); }
    .stock-dot.out-of-stock { background: var(--error); }

    /* ========== CARD ACTIONS ========== */
    .card-actions {
        display: flex;
        gap: 8px;
    }

    .btn-add-cart {
        flex: 1;
        padding: 10px 12px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.825rem;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

    .btn-add-cart:hover:not(:disabled) {
        background: var(--primary-hover);
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0, 128, 128, 0.2);
    }

    .btn-add-cart:disabled {
        background: var(--muted);
        color: var(--muted-foreground);
        cursor: not-allowed;
        border: 1px solid var(--border);
    }

    .btn-add-cart.added {
        background: var(--success);
    }

    .btn-view {
        width: 42px;
        height: 42px;
        background: var(--muted);
        border: 1px solid var(--border);
        border-radius: var(--radius-sm);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Inter', sans-serif;
        font-size: 1.1rem;
        color: var(--muted-foreground);
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .btn-view:hover {
        background: var(--border);
        color: var(--foreground);
    }

    /* ========== EMPTY STATE ========== */
    .empty-state {
        text-align: center;
        padding: 72px 24px;
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
    }

    .empty-icon {
        font-size: 3.5rem;
        margin-bottom: 20px;
        opacity: 0.6;
    }

    .empty-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 8px;
        letter-spacing: -0.02em;
    }

    .empty-text {
        color: var(--muted-foreground);
        margin-bottom: 24px;
        max-width: 360px;
        margin-left: auto;
        margin-right: auto;
        font-size: 0.875rem;
        line-height: 1.6;
    }

    .btn-browse {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 24px;
        background: var(--primary);
        color: white;
        text-decoration: none;
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.875rem;
        transition: all 0.2s ease;
    }

    .btn-browse:hover {
        color: white;
        background: var(--primary-hover);
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0, 128, 128, 0.2);
    }

    /* ========== SUMMARY BAR ========== */
    .summary-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 24px;
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        margin-top: 28px;
        box-shadow: var(--shadow-sm);
    }

    .summary-info {
        display: flex;
        gap: 40px;
    }

    .summary-item {
        text-align: center;
    }

    .summary-value {
        font-size: 1.35rem;
        font-weight: 700;
        color: var(--foreground);
        letter-spacing: -0.02em;
    }

    .summary-label {
        font-size: 0.75rem;
        color: var(--muted-foreground);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 500;
        margin-top: 2px;
    }

    .btn-add-all {
        padding: 10px 24px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-add-all:hover {
        background: var(--primary-hover);
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0, 128, 128, 0.2);
    }

    /* ========== LOADING SPINNER ========== */
    .loading-spinner {
        width: 32px;
        height: 32px;
        border: 3px solid var(--border);
        border-top: 3px solid var(--primary);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 16px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* ========== RESPONSIVE ========== */
    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .wishlist-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
        }

        .card-image {
            height: 140px;
            font-size: 2.5rem;
        }

        .card-body { padding: 12px; }
        .product-name { font-size: 0.85rem; }
        .current-price { font-size: 1rem; }
        .btn-add-cart { font-size: 0.75rem; padding: 8px 10px; }
        .btn-view { width: 36px; height: 36px; font-size: 0.95rem; }

        .summary-bar {
            flex-direction: column;
            gap: 16px;
        }

        .summary-info {
            width: 100%;
            justify-content: space-around;
        }

        .btn-add-all {
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 576px) {
        .page-title { font-size: 1.375rem; }
        .page-title-icon { width: 34px; height: 34px; font-size: 1rem; }
        .wishlist-grid { grid-template-columns: 1fr; }
    }
</style>

