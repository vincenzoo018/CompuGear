@{
    ViewData["Title"] = "My Wishlist";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .wishlist-page { min-height: 100vh; }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
        flex-wrap: wrap;
        gap: 16px;
    }

    .page-title-section {}
    .page-title {
        font-size: 2rem;
        font-weight: 800;
        color: var(--foreground);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-subtitle { color: var(--muted-foreground); margin-top: 4px; }

    .header-actions { display: flex; gap: 12px; }

    .btn-clear {
        padding: 10px 20px;
        background: var(--error-light);
        color: var(--error-fg);
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-clear:hover { background: var(--error); color: white; }

    /* Wishlist Grid */
    .wishlist-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
    }

    .wishlist-card {
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

    .wishlist-card:hover {
        box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        transform: translateY(-4px);
    }

    .wishlist-card.removing {
        animation: removeItem 0.3s ease forwards;
    }

    @@keyframes removeItem {
        0% { opacity: 1; transform: scale(1); }
        100% { opacity: 0; transform: scale(0.8); }
    }

    /* Out of Stock Overlay */
    .out-of-stock-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;
    }

    .out-of-stock-text {
        background: var(--error);
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 1rem;
    }

    .card-image {
        height: 200px;
        background: linear-gradient(135deg, var(--muted) 0%, var(--border) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        position: relative;
    }

    .remove-btn {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: white;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        transition: all 0.2s;
        z-index: 20;
    }

    .remove-btn:hover {
        background: var(--error);
        color: white;
        transform: scale(1.1);
    }

    .discount-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: var(--accent);
        color: white;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
    }

    .card-body { padding: 20px; }

    .product-category {
        font-size: 0.7rem;
        text-transform: uppercase;
        color: var(--primary);
        font-weight: 600;
        margin-bottom: 4px;
    }

    .product-name {
        font-weight: 600;
        color: var(--foreground);
        margin-bottom: 8px;
        font-size: 1rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-rating {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 12px;
    }

    .stars { color: #FCD34D; font-size: 0.9rem; }
    .rating-count { color: var(--muted-foreground); font-size: 0.8rem; }

    .product-pricing {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
    }

    .current-price {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--primary);
    }

    .original-price {
        font-size: 0.9rem;
        color: var(--muted-foreground);
        text-decoration: line-through;
    }

    .stock-status {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.85rem;
        margin-bottom: 16px;
    }

    .stock-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .stock-dot.in-stock { background: var(--success); }
    .stock-dot.low-stock { background: var(--warning); }
    .stock-dot.out-of-stock { background: var(--error); }

    .card-actions {
        display: flex;
        gap: 8px;
    }

    .btn-add-cart {
        flex: 1;
        padding: 12px;
        background: linear-gradient(135deg, var(--primary), var(--primary-hover));
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-add-cart:hover:not(:disabled) {
        transform: scale(1.02);
        box-shadow: 0 4px 12px rgba(0,128,128,0.3);
    }

    .btn-add-cart:disabled {
        background: var(--muted);
        color: var(--muted-foreground);
        cursor: not-allowed;
    }

    .btn-add-cart.added {
        background: var(--success);
    }

    .btn-view {
        width: 48px;
        height: 48px;
        background: var(--muted);
        border: none;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        transition: all 0.2s;
    }

    .btn-view:hover { background: var(--border); }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
    }

    .empty-icon { font-size: 5rem; margin-bottom: 24px; opacity: 0.5; }
    .empty-title { font-size: 1.5rem; font-weight: 700; color: var(--foreground); margin-bottom: 12px; }
    .empty-text { color: var(--muted-foreground); margin-bottom: 24px; max-width: 400px; margin-left: auto; margin-right: auto; }

    .btn-browse {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 28px;
        background: linear-gradient(135deg, var(--primary), var(--primary-hover));
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.2s;
    }

    .btn-browse:hover {
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,128,128,0.3);
    }

    /* Summary Bar */
    .summary-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 24px;
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        margin-top: 32px;
    }

    .summary-info {
        display: flex;
        gap: 32px;
    }

    .summary-item {
        text-align: center;
    }

    .summary-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--foreground);
    }

    .summary-label {
        font-size: 0.85rem;
        color: var(--muted-foreground);
    }

    .btn-add-all {
        padding: 14px 28px;
        background: linear-gradient(135deg, var(--primary), var(--primary-hover));
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-add-all:hover {
        transform: scale(1.02);
        box-shadow: 0 4px 12px rgba(0,128,128,0.3);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-header { flex-direction: column; align-items: flex-start; }
        .wishlist-grid { grid-template-columns: repeat(2, 1fr); gap: 16px; }
        .card-image { height: 150px; font-size: 2.5rem; }
        .card-body { padding: 16px; }
        .product-name { font-size: 0.9rem; }
        .current-price { font-size: 1.1rem; }
        .summary-bar { flex-direction: column; gap: 20px; }
        .summary-info { width: 100%; justify-content: space-around; }
        .btn-add-all { width: 100%; justify-content: center; }
    }

    @@media (max-width: 576px) {
        .page-title { font-size: 1.5rem; }
    }
</style>

<div class="wishlist-page">
    <!-- Page Header -->
    <div class="page-header animate-fade-in">
        <div class="page-title-section">
            <h1 class="page-title">‚ù§Ô∏è My Wishlist</h1>
            <p class="page-subtitle" id="itemCount">0 items saved</p>
        </div>
        <div class="header-actions" id="headerActions" style="display: none;">
            <button class="btn-clear" onclick="clearWishlist()">
                üóëÔ∏è Clear All
            </button>
        </div>
    </div>

    <!-- Wishlist Grid -->
    <div class="wishlist-grid" id="wishlistGrid">
        <div class="empty-state" style="grid-column: 1 / -1;">
            <div class="empty-icon">üîÑ</div>
            <p class="empty-title">Loading wishlist...</p>
        </div>
    </div>

    <!-- Summary Bar (shown when items exist) -->
    <div class="summary-bar animate-fade-in" id="summaryBar" style="display: none; animation-delay: 0.3s">
        <div class="summary-info">
            <div class="summary-item">
                <div class="summary-value" id="totalItems">0</div>
                <div class="summary-label">Items</div>
            </div>
            <div class="summary-item">
                <div class="summary-value" id="totalValue">‚Ç±0</div>
                <div class="summary-label">Total Value</div>
            </div>
            <div class="summary-item">
                <div class="summary-value" id="totalSavings">‚Ç±0</div>
                <div class="summary-label">Total Savings</div>
            </div>
        </div>
        <button class="btn-add-all" onclick="addAllToCart()">
            üõí Add All to Cart
        </button>
    </div>
</div>

@section Scripts {
<script>
    const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå', 'üíª', 'üñ®Ô∏è'];
    let wishlistItems = [];

    document.addEventListener('DOMContentLoaded', loadWishlist);

    function getWishlistIds() {
        // Normalize wishlist: support both [1, 2, 3] and [{productId: 1}, ...] formats
        const raw = JSON.parse(localStorage.getItem('wishlist') || '[]');
        return raw.map(item => typeof item === 'object' && item !== null ? item.productId : item).filter(id => id);
    }

    function loadWishlist() {
        const wishlistIds = getWishlistIds();

        if (wishlistIds.length === 0) {
            showEmptyState();
            return;
        }

        fetchWishlistProducts(wishlistIds);
    }

    async function fetchWishlistProducts(wishlistIds) {
        try {
            // Fetch actual product data from DB via the cart products endpoint
            const response = await fetch('/CustomerPortal/GetCartProducts', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(wishlistIds)
            });
            const result = await response.json();

            if (result.success && result.data.length > 0) {
                wishlistItems = result.data.map(p => ({
                    productId: p.productId,
                    productName: p.name,
                    sellingPrice: p.price,
                    compareAtPrice: p.compareAtPrice || null,
                    categoryName: p.categoryName || 'Accessories',
                    brandName: p.brandName || 'Generic',
                    sku: p.sku || '',
                    stockQuantity: p.stock || 0,
                    discountPercent: p.compareAtPrice ? Math.round((1 - p.price / p.compareAtPrice) * 100) : 0
                }));

                // Remove wishlist items that no longer exist in DB
                const validIds = wishlistItems.map(w => w.productId);
                const cleaned = wishlistIds.filter(id => validIds.includes(id));
                if (cleaned.length !== wishlistIds.length) {
                    localStorage.setItem('wishlist', JSON.stringify(cleaned));
                }

                renderWishlist();
            } else {
                // Fallback: fetch from products endpoint
                const fallback = await fetch('/CustomerPortal/GetProducts?pageSize=100');
                const fallbackResult = await fallback.json();
                if (fallbackResult.success) {
                    wishlistItems = fallbackResult.data.filter(p => wishlistIds.includes(p.productId));
                    renderWishlist();
                } else {
                    showEmptyState();
                }
            }
        } catch (error) {
            console.error('Error fetching wishlist:', error);
            showEmptyState();
        }
    }

    function renderWishlist() {
        const grid = document.getElementById('wishlistGrid');

        if (wishlistItems.length === 0) {
            showEmptyState();
            return;
        }

        // Show header actions and summary
        document.getElementById('headerActions').style.display = 'flex';
        document.getElementById('summaryBar').style.display = 'flex';
        document.getElementById('itemCount').textContent = `${wishlistItems.length} item${wishlistItems.length !== 1 ? 's' : ''} saved`;

        // Calculate totals
        let totalValue = 0;
        let totalSavings = 0;
        wishlistItems.forEach(item => {
            totalValue += item.sellingPrice;
            if (item.compareAtPrice) {
                totalSavings += (item.compareAtPrice - item.sellingPrice);
            }
        });

        document.getElementById('totalItems').textContent = wishlistItems.length;
        document.getElementById('totalValue').textContent = '‚Ç±' + totalValue.toLocaleString('en-PH', { minimumFractionDigits: 2 });
        document.getElementById('totalSavings').textContent = '‚Ç±' + totalSavings.toLocaleString('en-PH', { minimumFractionDigits: 2 });

        grid.innerHTML = wishlistItems.map((product, index) => {
            const isOutOfStock = product.stockQuantity <= 0;
            const isLowStock = product.stockQuantity > 0 && product.stockQuantity <= 5;
            const rating = Math.floor(3.5 + Math.random() * 1.5);
            const reviewCount = Math.floor(20 + Math.random() * 150);

            let stockClass = 'in-stock';
            let stockText = 'In Stock';
            if (isOutOfStock) { stockClass = 'out-of-stock'; stockText = 'Out of Stock'; }
            else if (isLowStock) { stockClass = 'low-stock'; stockText = `Only ${product.stockQuantity} left`; }

            return `
                <div class="wishlist-card animate-fade-in" style="animation-delay: ${index * 0.05}s" id="card-${product.productId}">
                    ${isOutOfStock ? `
                        <div class="out-of-stock-overlay">
                            <span class="out-of-stock-text">OUT OF STOCK</span>
                        </div>` : ''}
                    <div class="card-image">
                        ${productIcons[index % productIcons.length]}
                        <button class="remove-btn" onclick="removeFromWishlist(${product.productId})" title="Remove from wishlist">‚úï</button>
                        ${product.discountPercent > 0 ? `<span class="discount-badge">-${product.discountPercent}%</span>` : ''}
                    </div>
                    <div class="card-body">
                        <div class="product-category">${product.categoryName || 'Accessories'}</div>
                        <div class="product-name">${product.productName}</div>
                        <div class="product-rating">
                            <span class="stars">${'‚òÖ'.repeat(rating)}${'‚òÜ'.repeat(5 - rating)}</span>
                            <span class="rating-count">(${reviewCount})</span>
                        </div>
                        <div class="product-pricing">
                            <span class="current-price">‚Ç±${product.sellingPrice.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                            ${product.compareAtPrice ? `<span class="original-price">‚Ç±${product.compareAtPrice.toLocaleString()}</span>` : ''}
                        </div>
                        <div class="stock-status">
                            <span class="stock-dot ${stockClass}"></span>
                            <span style="color: ${isOutOfStock ? 'var(--error)' : isLowStock ? 'var(--warning)' : 'var(--success)'}">${stockText}</span>
                        </div>
                        <div class="card-actions">
                            <button class="btn-add-cart" id="cart-btn-${product.productId}" 
                                ${isOutOfStock ? 'disabled' : ''} 
                                onclick="addToCart(${product.productId}, '${product.productName.replace(/'/g, "\\'")}', ${product.sellingPrice}, '${product.sku || ''}')">
                                üõí ${isOutOfStock ? 'Unavailable' : 'Add to Cart'}
                            </button>
                            <button class="btn-view" onclick="viewProduct(${product.productId})" title="View Details">üëÅÔ∏è</button>
                        </div>
                    </div>
                </div>`;
        }).join('');
    }

    function showEmptyState() {
        document.getElementById('headerActions').style.display = 'none';
        document.getElementById('summaryBar').style.display = 'none';
        document.getElementById('itemCount').textContent = '0 items saved';

        document.getElementById('wishlistGrid').innerHTML = `
            <div class="empty-state" style="grid-column: 1 / -1;">
                <div class="empty-icon">üíî</div>
                <h2 class="empty-title">Your wishlist is empty</h2>
                <p class="empty-text">Start adding products you love by clicking the heart icon on any product!</p>
                <a href="/CustomerPortal/Products" class="btn-browse">
                    üõçÔ∏è Browse Products
                </a>
            </div>`;
    }

    function removeFromWishlist(productId) {
        const card = document.getElementById('card-' + productId);
        if (card) card.classList.add('removing');

        setTimeout(() => {
            // Remove from localStorage (handle both integer and object formats)
            let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            wishlist = wishlist.filter(item => {
                if (typeof item === 'object' && item !== null) return item.productId !== productId;
                return item !== productId;
            });
            localStorage.setItem('wishlist', JSON.stringify(wishlist));

            // Remove from array
            wishlistItems = wishlistItems.filter(item => item.productId !== productId);

            if (wishlistItems.length === 0) {
                showEmptyState();
            } else {
                renderWishlist();
            }

            showToast('Removed from wishlist', 'info');
        }, 300);
    }

    function clearWishlist() {
        if (!confirm('Are you sure you want to clear your entire wishlist?')) return;

        localStorage.setItem('wishlist', '[]');
        wishlistItems = [];
        showEmptyState();
        showToast('Wishlist cleared', 'info');
    }

    function addToCart(productId, productName, price, sku) {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const existingIndex = cart.findIndex(item => item.productId === productId);

        if (existingIndex > -1) {
            cart[existingIndex].quantity += 1;
        } else {
            cart.push({ productId, name: productName, price, sku: sku || '', quantity: 1 });
        }

        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartBadge();

        // Visual feedback
        const btn = document.getElementById('cart-btn-' + productId);
        if (btn) {
            btn.classList.add('added');
            btn.innerHTML = '‚úì Added!';
            setTimeout(() => {
                btn.classList.remove('added');
                btn.innerHTML = 'üõí Add to Cart';
            }, 1500);
        }

        showToast('‚úì Added to cart!', 'success');
    }

    function addAllToCart() {
        const availableItems = wishlistItems.filter(item => item.stockQuantity > 0);

        if (availableItems.length === 0) {
            showToast('No available items to add', 'warning');
            return;
        }

        let cart = JSON.parse(localStorage.getItem('cart') || '[]');

        availableItems.forEach(item => {
            const existingIndex = cart.findIndex(c => c.productId === item.productId);
            if (existingIndex > -1) {
                cart[existingIndex].quantity += 1;
            } else {
                cart.push({
                    productId: item.productId,
                    name: item.productName,
                    price: item.sellingPrice,
                    sku: item.sku || '',
                    quantity: 1
                });
            }
        });

        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartBadge();
        showToast(`‚úì Added ${availableItems.length} items to cart!`, 'success');
    }

    function viewProduct(productId) {
        window.location.href = '/CustomerPortal/Products?productId=' + productId;
    }
</script>
}
