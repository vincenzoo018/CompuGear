@section Scripts {
<script>
    const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå', 'üíª', 'üñ®Ô∏è'];
    let wishlistItems = [];

    document.addEventListener('DOMContentLoaded', loadWishlist);

    function getWishlistIds() {
        // Normalize wishlist: support both [1, 2, 3] and [{productId: 1}, ...] formats
        const raw = JSON.parse(localStorage.getItem('wishlist') || '[]');
        return raw.map(item => typeof item === 'object' && item !== null ? item.productId : item).filter(id => id);
    }

    function loadWishlist() {
        const wishlistIds = getWishlistIds();

        if (wishlistIds.length === 0) {
            showEmptyState();
            return;
        }

        fetchWishlistProducts(wishlistIds);
    }

    async function fetchWishlistProducts(wishlistIds) {
        try {
            // Fetch actual product data from DB via the cart products endpoint
            const response = await fetch('/CustomerPortal/GetCartProducts', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(wishlistIds)
            });
            const result = await response.json();

            if (result.success && result.data.length > 0) {
                wishlistItems = result.data.map(p => ({
                    productId: p.productId,
                    productName: p.name,
                    sellingPrice: p.price,
                    compareAtPrice: p.compareAtPrice || null,
                    categoryName: p.categoryName || 'Accessories',
                    brandName: p.brandName || 'Generic',
                    sku: p.sku || '',
                    stockQuantity: p.stock || 0,
                    discountPercent: p.compareAtPrice ? Math.round((1 - p.price / p.compareAtPrice) * 100) : 0
                }));

                // Remove wishlist items that no longer exist in DB
                const validIds = wishlistItems.map(w => w.productId);
                const cleaned = wishlistIds.filter(id => validIds.includes(id));
                if (cleaned.length !== wishlistIds.length) {
                    localStorage.setItem('wishlist', JSON.stringify(cleaned));
                }

                renderWishlist();
            } else {
                // Fallback: fetch from products endpoint
                const fallback = await fetch('/CustomerPortal/GetProducts?pageSize=100');
                const fallbackResult = await fallback.json();
                if (fallbackResult.success) {
                    wishlistItems = fallbackResult.data.filter(p => wishlistIds.includes(p.productId));
                    renderWishlist();
                } else {
                    showEmptyState();
                }
            }
        } catch (error) {
            console.error('Error fetching wishlist:', error);
            showEmptyState();
        }
    }

    function renderWishlist() {
        const grid = document.getElementById('wishlistGrid');

        if (wishlistItems.length === 0) {
            showEmptyState();
            return;
        }

        // Show header actions and summary
        document.getElementById('headerActions').style.display = 'flex';
        document.getElementById('summaryBar').style.display = 'flex';
        document.getElementById('itemCount').textContent = `${wishlistItems.length} item${wishlistItems.length !== 1 ? 's' : ''} saved`;

        // Calculate totals
        let totalValue = 0;
        let totalSavings = 0;
        wishlistItems.forEach(item => {
            totalValue += item.sellingPrice;
            if (item.compareAtPrice) {
                totalSavings += (item.compareAtPrice - item.sellingPrice);
            }
        });

        document.getElementById('totalItems').textContent = wishlistItems.length;
        document.getElementById('totalValue').textContent = '‚Ç±' + totalValue.toLocaleString('en-PH', { minimumFractionDigits: 2 });
        document.getElementById('totalSavings').textContent = '‚Ç±' + totalSavings.toLocaleString('en-PH', { minimumFractionDigits: 2 });

        grid.innerHTML = wishlistItems.map((product, index) => {
            const isOutOfStock = product.stockQuantity <= 0;
            const isLowStock = product.stockQuantity > 0 && product.stockQuantity <= 5;
            const rating = Math.floor(3.5 + Math.random() * 1.5);
            const reviewCount = Math.floor(20 + Math.random() * 150);

            let stockClass = 'in-stock';
            let stockText = 'In Stock';
            if (isOutOfStock) { stockClass = 'out-of-stock'; stockText = 'Out of Stock'; }
            else if (isLowStock) { stockClass = 'low-stock'; stockText = `Only ${product.stockQuantity} left`; }

            return `
                <div class="wishlist-card animate-fade-in" style="animation-delay: ${index * 0.05}s" id="card-${product.productId}">
                    ${isOutOfStock ? `
                        <div class="out-of-stock-overlay">
                            <span class="out-of-stock-text">OUT OF STOCK</span>
                        </div>` : ''}
                    <div class="card-image">
                        ${productIcons[index % productIcons.length]}
                        <button class="remove-btn" onclick="removeFromWishlist(${product.productId})" title="Remove from wishlist">‚úï</button>
                        ${product.discountPercent > 0 ? `<span class="discount-badge">-${product.discountPercent}%</span>` : ''}
                    </div>
                    <div class="card-body">
                        <div class="product-category">${product.categoryName || 'Accessories'}</div>
                        <div class="product-name">${product.productName}</div>
                        <div class="product-rating">
                            <span class="stars">${'‚òÖ'.repeat(rating)}${'‚òÜ'.repeat(5 - rating)}</span>
                            <span class="rating-count">(${reviewCount})</span>
                        </div>
                        <div class="product-pricing">
                            <span class="current-price">‚Ç±${product.sellingPrice.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                            ${product.compareAtPrice ? `<span class="original-price">‚Ç±${product.compareAtPrice.toLocaleString()}</span>` : ''}
                        </div>
                        <div class="stock-status">
                            <span class="stock-dot ${stockClass}"></span>
                            <span style="color: ${isOutOfStock ? 'var(--error)' : isLowStock ? 'var(--warning)' : 'var(--success)'}">${stockText}</span>
                        </div>
                        <div class="card-actions">
                            <button class="btn-add-cart" id="cart-btn-${product.productId}"
                                ${isOutOfStock ? 'disabled' : ''}
                                onclick="addToCart(${product.productId}, '${product.productName.replace(/'/g, "\\'")}', ${product.sellingPrice}, '${product.sku || ''}')">
                                üõí ${isOutOfStock ? 'Unavailable' : 'Add to Cart'}
                            </button>
                            <button class="btn-view" onclick="viewProduct(${product.productId})" title="View Details">üëÅÔ∏è</button>
                        </div>
                    </div>
                </div>`;
        }).join('');
    }

    function showEmptyState() {
        document.getElementById('headerActions').style.display = 'none';
        document.getElementById('summaryBar').style.display = 'none';
        document.getElementById('itemCount').textContent = '0 items saved';

        document.getElementById('wishlistGrid').innerHTML = `
            <div class="empty-state" style="grid-column: 1 / -1;">
                <div class="empty-icon">üíî</div>
                <h2 class="empty-title">Your wishlist is empty</h2>
                <p class="empty-text">Start adding products you love by clicking the heart icon on any product!</p>
                <a href="/CustomerPortal/Products" class="btn-browse">
                    üõçÔ∏è Browse Products
                </a>
            </div>`;
    }

    function removeFromWishlist(productId) {
        const card = document.getElementById('card-' + productId);
        if (card) card.classList.add('removing');

        setTimeout(() => {
            // Remove from localStorage (handle both integer and object formats)
            let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            wishlist = wishlist.filter(item => {
                if (typeof item === 'object' && item !== null) return item.productId !== productId;
                return item !== productId;
            });
            localStorage.setItem('wishlist', JSON.stringify(wishlist));

            // Remove from array
            wishlistItems = wishlistItems.filter(item => item.productId !== productId);

            if (wishlistItems.length === 0) {
                showEmptyState();
            } else {
                renderWishlist();
            }

            showToast('Removed from wishlist', 'info');
        }, 300);
    }

    function clearWishlist() {
        if (!confirm('Are you sure you want to clear your entire wishlist?')) return;

        localStorage.setItem('wishlist', '[]');
        wishlistItems = [];
        showEmptyState();
        showToast('Wishlist cleared', 'info');
    }

    function addToCart(productId, productName, price, sku) {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const existingIndex = cart.findIndex(item => item.productId === productId);

        if (existingIndex > -1) {
            cart[existingIndex].quantity += 1;
        } else {
            cart.push({ productId, name: productName, price, sku: sku || '', quantity: 1 });
        }

        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartBadge();

        // Visual feedback
        const btn = document.getElementById('cart-btn-' + productId);
        if (btn) {
            btn.classList.add('added');
            btn.innerHTML = '‚úì Added!';
            setTimeout(() => {
                btn.classList.remove('added');
                btn.innerHTML = 'üõí Add to Cart';
            }, 1500);
        }

        showToast('‚úì Added to cart!', 'success');
    }

    function addAllToCart() {
        const availableItems = wishlistItems.filter(item => item.stockQuantity > 0);

        if (availableItems.length === 0) {
            showToast('No available items to add', 'warning');
            return;
        }

        let cart = JSON.parse(localStorage.getItem('cart') || '[]');

        availableItems.forEach(item => {
            const existingIndex = cart.findIndex(c => c.productId === item.productId);
            if (existingIndex > -1) {
                cart[existingIndex].quantity += 1;
            } else {
                cart.push({
                    productId: item.productId,
                    name: item.productName,
                    price: item.sellingPrice,
                    sku: item.sku || '',
                    quantity: 1
                });
            }
        });

        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartBadge();
        showToast(`‚úì Added ${availableItems.length} items to cart!`, 'success');
    }

    function viewProduct(productId) {
        window.location.href = '/CustomerPortal/Products?productId=' + productId;
    }
</script>
