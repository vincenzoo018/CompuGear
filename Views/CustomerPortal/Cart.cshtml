@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .cart-page {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding: 40px 20px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .cart-container {
        width: 100%;
        max-width: 1200px;
    }
    
    .cart-header {
        text-align: center;
        margin-bottom: 40px;
    }
    
    .cart-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 10px;
    }
    
    .cart-header p {
        color: #6b7280;
        font-size: 1.1rem;
    }
    
    .cart-content {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 30px;
    }
    
    @@media (max-width: 992px) {
        .cart-content {
            grid-template-columns: 1fr;
        }
    }
    
    .cart-items-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    
    .cart-items-header {
        padding: 25px 30px;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .cart-items-header h3 {
        font-weight: 700;
        color: #1f2937;
        margin: 0;
    }
    
    .cart-item {
        padding: 25px 30px;
        border-bottom: 1px solid #f3f4f6;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: background 0.3s;
    }
    
    .cart-item:hover {
        background: #fafafa;
    }
    
    .cart-item:last-child {
        border-bottom: none;
    }
    
    .item-image {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        flex-shrink: 0;
    }
    
    .item-details {
        flex: 1;
    }
    
    .item-name {
        font-weight: 600;
        color: #1f2937;
        font-size: 1.1rem;
        margin-bottom: 5px;
    }
    
    .item-sku {
        color: #9ca3af;
        font-size: 0.85rem;
        margin-bottom: 10px;
    }
    
    .item-price {
        font-weight: 700;
        color: #008080;
        font-size: 1.2rem;
    }
    
    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 10px;
        background: #f3f4f6;
        border-radius: 12px;
        padding: 5px;
    }
    
    .qty-btn {
        width: 40px;
        height: 40px;
        border: none;
        background: white;
        border-radius: 10px;
        cursor: pointer;
        font-size: 1.2rem;
        color: #008080;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .qty-btn:hover {
        background: #008080;
        color: white;
    }
    
    .qty-value {
        min-width: 40px;
        text-align: center;
        font-weight: 600;
        color: #1f2937;
    }
    
    .remove-btn {
        width: 45px;
        height: 45px;
        border: none;
        background: #fef2f2;
        color: #ef4444;
        border-radius: 12px;
        cursor: pointer;
        font-size: 1.2rem;
        transition: all 0.3s;
    }
    
    .remove-btn:hover {
        background: #ef4444;
        color: white;
    }
    
    .cart-summary-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        padding: 30px;
        position: sticky;
        top: 100px;
    }
    
    .summary-header {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f3f4f6;
    }
    
    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
        font-size: 1rem;
    }
    
    .summary-label {
        color: #6b7280;
    }
    
    .summary-value {
        font-weight: 600;
        color: #1f2937;
    }
    
    .promo-input {
        display: flex;
        gap: 10px;
        margin: 20px 0;
    }
    
    .promo-input input {
        flex: 1;
        padding: 14px 18px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 0.95rem;
        transition: all 0.3s;
    }
    
    .promo-input input:focus {
        outline: none;
        border-color: #008080;
    }
    
    .promo-input button {
        padding: 14px 20px;
        background: linear-gradient(135deg, #008080, #006666);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }
    
    .promo-input button:hover {
        transform: translateY(-2px);
    }
    
    .promo-applied {
        background: #ecfdf5;
        color: #059669;
        padding: 12px 15px;
        border-radius: 10px;
        font-size: 0.9rem;
        margin-bottom: 15px;
        display: none;
    }
    
    .summary-total {
        display: flex;
        justify-content: space-between;
        padding-top: 20px;
        margin-top: 15px;
        border-top: 2px solid #008080;
    }
    
    .total-label {
        font-size: 1.2rem;
        font-weight: 700;
        color: #1f2937;
    }
    
    .total-value {
        font-size: 1.5rem;
        font-weight: 800;
        color: #008080;
    }
    
    .checkout-btn {
        width: 100%;
        padding: 18px;
        background: linear-gradient(135deg, #008080 0%, #006666 100%);
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        margin-top: 25px;
        transition: all 0.3s;
    }
    
    .checkout-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0, 128, 128, 0.3);
    }
    
    .checkout-btn:disabled {
        background: #9ca3af;
        cursor: not-allowed;
        transform: none;
    }
    
    .continue-shopping {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #008080;
        text-decoration: none;
        font-weight: 500;
    }
    
    .empty-cart {
        text-align: center;
        padding: 60px 30px;
    }
    
    .empty-cart-icon {
        font-size: 5rem;
        margin-bottom: 20px;
    }
    
    .empty-cart h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 10px;
    }
    
    .empty-cart p {
        color: #6b7280;
        margin-bottom: 25px;
    }
    
    .shop-now-btn {
        display: inline-block;
        padding: 15px 40px;
        background: linear-gradient(135deg, #008080, #006666);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .shop-now-btn:hover {
        transform: translateY(-3px);
        color: white;
        box-shadow: 0 10px 30px rgba(0, 128, 128, 0.3);
    }
    
    .clear-cart-btn {
        background: none;
        border: none;
        color: #ef4444;
        font-size: 0.9rem;
        cursor: pointer;
        padding: 5px 10px;
        border-radius: 8px;
        transition: all 0.3s;
    }
    
    .clear-cart-btn:hover {
        background: #fef2f2;
    }
    
    .secure-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-top: 15px;
        color: #6b7280;
        font-size: 0.85rem;
    }
</style>

<div class="cart-page">
    <div class="cart-container">
        <div class="cart-header">
            <h1>üõí Your Shopping Cart</h1>
            <p>Review your items before checkout</p>
        </div>
        
        <div id="cartContent"></div>
    </div>
</div>

@section Scripts {
<script>
    let cart = [];
    let promoDiscount = 0;
    let promoCode = '';
    let promoType = '';
    
    const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå'];

    document.addEventListener('DOMContentLoaded', function() {
        loadCart();
    });

    function loadCart() {
        cart = JSON.parse(localStorage.getItem('cart') || '[]');
        renderCart();
    }

    function renderCart() {
        const container = document.getElementById('cartContent');
        
        if (cart.length === 0) {
            container.innerHTML = `
                <div class="cart-items-card">
                    <div class="empty-cart">
                        <div class="empty-cart-icon">üõí</div>
                        <h3>Your cart is empty</h3>
                        <p>Looks like you haven't added any items yet</p>
                        <a href="/CustomerPortal/Products" class="shop-now-btn">üõçÔ∏è Start Shopping</a>
                    </div>
                </div>
            `;
            return;
        }

        const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
        const shipping = subtotal > 3000 ? 0 : 150;
        
        let discount = 0;
        if (promoDiscount > 0) {
            discount = promoType === 'Percentage' ? (subtotal * promoDiscount / 100) : promoDiscount;
        }
        
        const total = subtotal + shipping - discount;

        container.innerHTML = `
            <div class="cart-content">
                <div class="cart-items-card">
                    <div class="cart-items-header">
                        <h3>üì¶ Cart Items (${cart.length})</h3>
                        <button class="clear-cart-btn" onclick="clearCart()">üóëÔ∏è Clear All</button>
                    </div>
                    ${cart.map((item, index) => `
                        <div class="cart-item">
                            <div class="item-image">${productIcons[index % productIcons.length]}</div>
                            <div class="item-details">
                                <div class="item-name">${item.name}</div>
                                <div class="item-sku">SKU: ${item.sku || 'N/A'}</div>
                                <div class="item-price">‚Ç±${item.price.toLocaleString('en-PH', {minimumFractionDigits: 2})}</div>
                            </div>
                            <div class="quantity-controls">
                                <button class="qty-btn" onclick="updateQuantity(${item.productId}, -1)">‚àí</button>
                                <span class="qty-value">${item.quantity}</span>
                                <button class="qty-btn" onclick="updateQuantity(${item.productId}, 1)">+</button>
                            </div>
                            <button class="remove-btn" onclick="removeItem(${item.productId})">üóëÔ∏è</button>
                        </div>
                    `).join('')}
                </div>
                
                <div class="cart-summary-card">
                    <div class="summary-header">üìã Order Summary</div>
                    
                    <div class="summary-row">
                        <span class="summary-label">Subtotal (${cart.reduce((sum, item) => sum + item.quantity, 0)} items)</span>
                        <span class="summary-value">‚Ç±${subtotal.toLocaleString('en-PH', {minimumFractionDigits: 2})}</span>
                    </div>
                    
                    <div class="summary-row">
                        <span class="summary-label">Shipping</span>
                        <span class="summary-value" style="color: ${shipping === 0 ? '#10b981' : '#1f2937'}">
                            ${shipping === 0 ? 'FREE' : '‚Ç±' + shipping.toLocaleString('en-PH', {minimumFractionDigits: 2})}
                        </span>
                    </div>
                    
                    ${subtotal < 3000 ? `
                        <div style="background: #fef3cd; color: #856404; padding: 10px 15px; border-radius: 8px; font-size: 0.85rem; margin-bottom: 15px;">
                            üí° Add ‚Ç±${(3000 - subtotal).toLocaleString()} more for FREE shipping!
                        </div>
                    ` : ''}
                    
                    <div class="promo-input">
                        <input type="text" id="promoCodeInput" placeholder="Enter promo code" value="${promoCode}">
                        <button onclick="applyPromo()">Apply</button>
                    </div>
                    
                    <div class="promo-applied" id="promoApplied" ${promoDiscount > 0 ? 'style="display: block;"' : ''}>
                        ‚úì Promo code "${promoCode}" applied! -‚Ç±${discount.toLocaleString('en-PH', {minimumFractionDigits: 2})}
                        <button onclick="removePromo()" style="background: none; border: none; color: #ef4444; cursor: pointer; margin-left: 10px;">Remove</button>
                    </div>
                    
                    ${discount > 0 ? `
                        <div class="summary-row">
                            <span class="summary-label">Discount</span>
                            <span class="summary-value" style="color: #10b981;">-‚Ç±${discount.toLocaleString('en-PH', {minimumFractionDigits: 2})}</span>
                        </div>
                    ` : ''}
                    
                    <div class="summary-total">
                        <span class="total-label">Total</span>
                        <span class="total-value">‚Ç±${total.toLocaleString('en-PH', {minimumFractionDigits: 2})}</span>
                    </div>
                    
                    <button class="checkout-btn" onclick="proceedToCheckout()" id="checkoutBtn">
                        üîí Proceed to Checkout
                    </button>
                    
                    <a href="/CustomerPortal/Products" class="continue-shopping">‚Üê Continue Shopping</a>
                    
                    <div class="secure-badge">
                        üîê Secure checkout powered by PayMongo
                    </div>
                </div>
            </div>
        `;
    }

    function updateQuantity(productId, change) {
        const item = cart.find(i => i.productId === productId);
        if (item) {
            item.quantity += change;
            if (item.quantity <= 0) {
                cart = cart.filter(i => i.productId !== productId);
            }
            saveCart();
        }
    }

    function removeItem(productId) {
        cart = cart.filter(i => i.productId !== productId);
        saveCart();
        showToast('Item removed from cart', '#ef4444');
    }

    function clearCart() {
        if (confirm('Are you sure you want to clear your cart?')) {
            cart = [];
            promoDiscount = 0;
            promoCode = '';
            saveCart();
        }
    }

    function saveCart() {
        localStorage.setItem('cart', JSON.stringify(cart));
        renderCart();
        updateHeaderCart();
    }

    function updateHeaderCart() {
        const count = cart.reduce((sum, item) => sum + item.quantity, 0);
        const cartBadge = document.querySelector('.cart-count');
        if (cartBadge) cartBadge.textContent = count;
    }

    async function applyPromo() {
        const code = document.getElementById('promoCodeInput').value.trim();
        if (!code) {
            showToast('Please enter a promo code', '#ef4444');
            return;
        }

        try {
            const response = await fetch('/CustomerPortal/ValidatePromo', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ promoCode: code })
            });
            
            const result = await response.json();
            
            if (result.success) {
                promoCode = code;
                promoDiscount = result.data.discountValue;
                promoType = result.data.discountType;
                renderCart();
                showToast('Promo code applied!', '#10b981');
            } else {
                showToast(result.message || 'Invalid promo code', '#ef4444');
            }
        } catch (error) {
            showToast('Failed to validate promo code', '#ef4444');
        }
    }

    function removePromo() {
        promoCode = '';
        promoDiscount = 0;
        promoType = '';
        renderCart();
    }

    function proceedToCheckout() {
        // Store checkout data
        const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
        const shipping = subtotal > 3000 ? 0 : 150;
        let discount = 0;
        if (promoDiscount > 0) {
            discount = promoType === 'Percentage' ? (subtotal * promoDiscount / 100) : promoDiscount;
        }
        
        const checkoutData = {
            items: cart,
            subtotal: subtotal,
            shipping: shipping,
            discount: discount,
            promoCode: promoCode,
            total: subtotal + shipping - discount
        };
        
        localStorage.setItem('checkoutData', JSON.stringify(checkoutData));
        window.location.href = '/CustomerPortal/Checkout';
    }

    function showToast(message, color) {
        const toast = document.createElement('div');
        toast.innerHTML = `<div style="position: fixed; bottom: 20px; right: 20px; background: ${color}; color: white; padding: 15px 25px; border-radius: 10px; box-shadow: 0 5px 20px rgba(0,0,0,0.2); z-index: 9999;">${message}</div>`;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 3000);
    }
</script>
}
