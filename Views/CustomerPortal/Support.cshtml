@{
    ViewData["Title"] = "Customer Support";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .support-page { padding: 30px 0; background: #f8f9fa; min-height: 100vh; }
    
    .page-header {
        background: linear-gradient(135deg, #008080 0%, #20b2aa 100%);
        color: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        text-align: center;
    }
    
    .page-header h1 { font-weight: 800; margin-bottom: 10px; font-size: 2.2rem; }
    .page-header p { opacity: 0.9; margin: 0; }
    
    .support-grid {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 30px;
    }
    
    @@media (max-width: 992px) {
        .support-grid { grid-template-columns: 1fr; }
    }
    
    .support-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 25px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    
    .card-header {
        padding: 20px 25px;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .card-header h3 {
        font-weight: 700;
        color: #1f2937;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .status-indicator {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.85rem;
    }
    
    .status-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #10b981;
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    /* Chat Area */
    .chat-container {
        height: 500px;
        display: flex;
        flex-direction: column;
    }
    
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: #f9fafb;
    }
    
    .message {
        display: flex;
        gap: 12px;
        margin-bottom: 20px;
        animation: fadeIn 0.3s ease;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .message.user { flex-direction: row-reverse; }
    
    .message-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 1.2rem;
    }
    
    .message.bot .message-avatar { background: linear-gradient(135deg, #008080, #20b2aa); }
    .message.user .message-avatar { background: linear-gradient(135deg, #6366f1, #8b5cf6); }
    .message.agent .message-avatar { background: linear-gradient(135deg, #f59e0b, #fbbf24); }
    
    .message-content {
        max-width: 75%;
        padding: 15px 20px;
        border-radius: 18px;
        line-height: 1.5;
    }
    
    .message.bot .message-content { background: white; color: #1f2937; border-bottom-left-radius: 5px; }
    .message.user .message-content { background: linear-gradient(135deg, #008080, #006666); color: white; border-bottom-right-radius: 5px; }
    .message.agent .message-content { background: #fef3cd; color: #856404; border-bottom-left-radius: 5px; }
    
    .message-time {
        font-size: 0.75rem;
        color: #9ca3af;
        margin-top: 5px;
    }
    
    .message.user .message-time { text-align: right; }
    
    .typing-indicator {
        display: none;
        padding: 15px 20px;
        background: white;
        border-radius: 18px;
        border-bottom-left-radius: 5px;
        width: fit-content;
    }
    
    .typing-indicator.show { display: block; }
    
    .typing-dots {
        display: flex;
        gap: 5px;
    }
    
    .typing-dots span {
        width: 8px;
        height: 8px;
        background: #9ca3af;
        border-radius: 50%;
        animation: bounce 1.4s infinite;
    }
    
    .typing-dots span:nth-child(2) { animation-delay: 0.2s; }
    .typing-dots span:nth-child(3) { animation-delay: 0.4s; }
    
    @@keyframes bounce {
        0%, 60%, 100% { transform: translateY(0); }
        30% { transform: translateY(-5px); }
    }
    
    /* Quick Replies */
    .quick-replies {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        padding: 15px 20px;
        background: white;
        border-top: 1px solid #f3f4f6;
    }
    
    .quick-reply {
        padding: 8px 16px;
        background: #f3f4f6;
        border: none;
        border-radius: 20px;
        cursor: pointer;
        font-size: 0.85rem;
        color: #374151;
        transition: all 0.3s;
    }
    
    .quick-reply:hover {
        background: #008080;
        color: white;
    }
    
    /* Chat Input */
    .chat-input-area {
        padding: 20px;
        border-top: 1px solid #e5e7eb;
        display: flex;
        gap: 12px;
    }
    
    .chat-input {
        flex: 1;
        padding: 14px 20px;
        border: 2px solid #e5e7eb;
        border-radius: 25px;
        font-size: 1rem;
        transition: all 0.3s;
    }
    
    .chat-input:focus {
        outline: none;
        border-color: #008080;
    }
    
    .send-btn {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #008080, #006666);
        color: white;
        border: none;
        border-radius: 50%;
        cursor: pointer;
        font-size: 1.2rem;
        transition: all 0.3s;
    }
    
    .send-btn:hover { transform: scale(1.05); }
    .send-btn:disabled { background: #9ca3af; cursor: not-allowed; }
    
    /* Support Options */
    .support-options { display: flex; flex-direction: column; gap: 15px; padding: 25px; }
    
    .support-option {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px;
        background: #f9fafb;
        border-radius: 15px;
        cursor: pointer;
        transition: all 0.3s;
        border: 2px solid transparent;
    }
    
    .support-option:hover { border-color: #008080; background: #f0f9f9; }
    .support-option.active { border-color: #008080; background: #f0f9f9; }
    
    .option-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    
    .option-icon.ai { background: linear-gradient(135deg, #008080, #20b2aa); }
    .option-icon.agent { background: linear-gradient(135deg, #f59e0b, #fbbf24); }
    .option-icon.ticket { background: linear-gradient(135deg, #8b5cf6, #a78bfa); }
    .option-icon.faq { background: linear-gradient(135deg, #10b981, #34d399); }
    
    .option-info h4 { font-weight: 600; color: #1f2937; margin: 0 0 5px 0; }
    .option-info p { color: #6b7280; font-size: 0.85rem; margin: 0; }
    
    /* FAQ Section */
    .faq-section { padding: 25px; }
    
    .faq-item {
        border-bottom: 1px solid #e5e7eb;
        padding: 15px 0;
    }
    
    .faq-item:last-child { border-bottom: none; }
    
    .faq-question {
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        font-weight: 600;
        color: #1f2937;
    }
    
    .faq-toggle { font-size: 1.2rem; transition: transform 0.3s; }
    .faq-item.open .faq-toggle { transform: rotate(45deg); }
    
    .faq-answer {
        max-height: 0;
        overflow: hidden;
        transition: all 0.3s;
        color: #6b7280;
        line-height: 1.6;
    }
    
    .faq-item.open .faq-answer {
        max-height: 200px;
        padding-top: 15px;
    }
    
    /* Agent Chat Notice */
    .agent-notice {
        background: linear-gradient(135deg, #fef3cd, #fff8e1);
        border: 1px solid #f59e0b;
        border-radius: 12px;
        padding: 15px;
        margin: 15px 20px;
        display: none;
    }
    
    .agent-notice.show { display: block; }
    
    .agent-notice h4 { color: #92400e; margin: 0 0 5px 0; font-size: 0.9rem; }
    .agent-notice p { color: #b45309; font-size: 0.85rem; margin: 0; }
</style>

<div class="support-page">
    <div class="container">
        <div class="page-header">
            <h1>üí¨ Customer Support</h1>
            <p>We're here to help! Chat with our AI assistant or connect with a support agent</p>
        </div>
        
        <div class="support-grid">
            <!-- Main Chat Area -->
            <div class="support-card">
                <div class="card-header">
                    <h3 id="chatTitle">ü§ñ AI Assistant</h3>
                    <div class="status-indicator">
                        <span class="status-dot"></span>
                        <span id="statusText">Online</span>
                    </div>
                </div>
                
                <div class="agent-notice" id="agentNotice">
                    <h4>üë§ Connected to Support Agent</h4>
                    <p>You're now chatting with a live support agent. They'll assist you shortly.</p>
                </div>
                
                <div class="chat-container">
                    <div class="chat-messages" id="chatMessages">
                        <!-- Messages will be inserted here -->
                    </div>
                    
                    <div class="typing-indicator" id="typingIndicator">
                        <div class="typing-dots">
                            <span></span><span></span><span></span>
                        </div>
                    </div>
                    
                    <div class="quick-replies" id="quickReplies">
                        <button class="quick-reply" onclick="sendQuickReply('Track my order')">üì¶ Track Order</button>
                        <button class="quick-reply" onclick="sendQuickReply('Return or refund')">üîÑ Returns</button>
                        <button class="quick-reply" onclick="sendQuickReply('Product inquiry')">üõí Products</button>
                        <button class="quick-reply" onclick="sendQuickReply('Payment issues')">üí≥ Payments</button>
                        <button class="quick-reply" onclick="sendQuickReply('Talk to agent')">üë§ Live Agent</button>
                    </div>
                </div>
                
                <div class="chat-input-area">
                    <input type="text" class="chat-input" id="messageInput" placeholder="Type your message..." onkeypress="handleKeyPress(event)">
                    <button class="send-btn" id="sendBtn" onclick="sendMessage()">‚û§</button>
                </div>
            </div>
            
            <!-- Support Options Sidebar -->
            <div>
                <div class="support-card" style="margin-bottom: 20px;">
                    <div class="card-header">
                        <h3>üéØ Support Options</h3>
                    </div>
                    <div class="support-options">
                        <div class="support-option active" onclick="switchToAI()">
                            <div class="option-icon ai">ü§ñ</div>
                            <div class="option-info">
                                <h4>AI Assistant</h4>
                                <p>Get instant answers 24/7</p>
                            </div>
                        </div>
                        <div class="support-option" onclick="requestAgent()">
                            <div class="option-icon agent">üë§</div>
                            <div class="option-info">
                                <h4>Live Agent</h4>
                                <p>Chat with support staff</p>
                            </div>
                        </div>
                        <a href="/CustomerPortal/SubmitTicket" class="support-option" style="text-decoration: none;">
                            <div class="option-icon ticket">üìù</div>
                            <div class="option-info">
                                <h4>Submit Ticket</h4>
                                <p>Create a support ticket</p>
                            </div>
                        </a>
                        <a href="/CustomerPortal/MyTickets" class="support-option" style="text-decoration: none;">
                            <div class="option-icon faq">üìã</div>
                            <div class="option-info">
                                <h4>My Tickets</h4>
                                <p>View your support tickets</p>
                            </div>
                        </a>
                    </div>
                </div>
                
                <!-- FAQ Section -->
                <div class="support-card">
                    <div class="card-header">
                        <h3>‚ùì Quick FAQ</h3>
                    </div>
                    <div class="faq-section">
                        <div class="faq-item" onclick="toggleFaq(this)">
                            <div class="faq-question">
                                <span>How do I track my order?</span>
                                <span class="faq-toggle">+</span>
                            </div>
                            <div class="faq-answer">
                                Go to "My Orders" in your account dashboard. Click on any order to see its current status and tracking information.
                            </div>
                        </div>
                        <div class="faq-item" onclick="toggleFaq(this)">
                            <div class="faq-question">
                                <span>What is your return policy?</span>
                                <span class="faq-toggle">+</span>
                            </div>
                            <div class="faq-answer">
                                We accept returns within 7 days of delivery for unopened items. Contact our support team to initiate a return request.
                            </div>
                        </div>
                        <div class="faq-item" onclick="toggleFaq(this)">
                            <div class="faq-question">
                                <span>How can I use promo codes?</span>
                                <span class="faq-toggle">+</span>
                            </div>
                            <div class="faq-answer">
                                Enter your promo code in the cart page before checkout. The discount will be automatically applied to eligible items.
                            </div>
                        </div>
                        <div class="faq-item" onclick="toggleFaq(this)">
                            <div class="faq-question">
                                <span>Payment methods accepted?</span>
                                <span class="faq-toggle">+</span>
                            </div>
                            <div class="faq-answer">
                                We accept Credit/Debit Cards, GCash, GrabPay, and Maya through our secure PayMongo payment gateway.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let chatSessionId = null;
    let isAgentChat = false;
    let currentQuickReplies = [];

    document.addEventListener('DOMContentLoaded', function() {
        initChat();
    });

    function initChat() {
        // Add welcome message
        addMessage('bot', "üëã Hi there! I'm your AI assistant. I can help you with:\n\n‚Ä¢ Order tracking and status\n‚Ä¢ Returns and refunds\n‚Ä¢ Product information\n‚Ä¢ Payment inquiries\n‚Ä¢ Promotions and discounts\n\nHow can I assist you today?");
    }

    function handleKeyPress(event) {
        if (event.key === 'Enter') {
            sendMessage();
        }
    }

    async function sendMessage() {
        const input = document.getElementById('messageInput');
        const message = input.value.trim();
        
        if (!message) return;
        
        // Add user message
        addMessage('user', message);
        input.value = '';
        
        // Show typing indicator
        showTyping(true);
        
        try {
            const response = await fetch('/CustomerPortal/SendChatMessage', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    message: message,
                    sessionId: chatSessionId
                })
            });
            
            const result = await response.json();
            
            showTyping(false);
            
            if (result.success) {
                chatSessionId = result.sessionId;
                
                // Check if should transfer to agent
                if (result.shouldTransferToAgent) {
                    isAgentChat = true;
                    document.getElementById('chatTitle').innerHTML = 'üë§ Live Agent';
                    document.getElementById('agentNotice').classList.add('show');
                    document.querySelectorAll('.support-option')[1].classList.add('active');
                    document.querySelectorAll('.support-option')[0].classList.remove('active');
                }
                
                // Add bot/agent response
                const messageType = isAgentChat ? 'agent' : 'bot';
                addMessage(messageType, result.response);
                
                // Update quick replies
                if (result.quickReplies && result.quickReplies.length > 0) {
                    updateQuickReplies(result.quickReplies);
                }
            } else {
                addMessage('bot', "I apologize, but I'm having trouble processing your request. Please try again or contact a live agent.");
            }
        } catch (error) {
            showTyping(false);
            console.error('Error:', error);
            addMessage('bot', "Sorry, there was an error. Please try again later.");
        }
    }

    function sendQuickReply(text) {
        document.getElementById('messageInput').value = text;
        sendMessage();
    }

    function addMessage(type, content) {
        const container = document.getElementById('chatMessages');
        const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        
        const avatars = {
            'bot': 'ü§ñ',
            'user': 'üë§',
            'agent': 'üë®‚Äçüíº'
        };
        
        const message = document.createElement('div');
        message.className = `message ${type}`;
        message.innerHTML = `
            <div class="message-avatar">${avatars[type]}</div>
            <div>
                <div class="message-content">${content.replace(/\n/g, '<br>')}</div>
                <div class="message-time">${time}</div>
            </div>
        `;
        
        container.appendChild(message);
        container.scrollTop = container.scrollHeight;
    }

    function showTyping(show) {
        const indicator = document.getElementById('typingIndicator');
        indicator.classList.toggle('show', show);
        
        if (show) {
            document.getElementById('chatMessages').scrollTop = document.getElementById('chatMessages').scrollHeight;
        }
    }

    function updateQuickReplies(replies) {
        const container = document.getElementById('quickReplies');
        container.innerHTML = replies.map(reply => 
            `<button class="quick-reply" onclick="sendQuickReply('${reply}')">${reply}</button>`
        ).join('');
    }

    function switchToAI() {
        isAgentChat = false;
        document.getElementById('chatTitle').innerHTML = 'ü§ñ AI Assistant';
        document.getElementById('agentNotice').classList.remove('show');
        document.querySelectorAll('.support-option')[0].classList.add('active');
        document.querySelectorAll('.support-option')[1].classList.remove('active');
        
        // Reset quick replies
        document.getElementById('quickReplies').innerHTML = `
            <button class="quick-reply" onclick="sendQuickReply('Track my order')">üì¶ Track Order</button>
            <button class="quick-reply" onclick="sendQuickReply('Return or refund')">üîÑ Returns</button>
            <button class="quick-reply" onclick="sendQuickReply('Product inquiry')">üõí Products</button>
            <button class="quick-reply" onclick="sendQuickReply('Payment issues')">üí≥ Payments</button>
            <button class="quick-reply" onclick="sendQuickReply('Talk to agent')">üë§ Live Agent</button>
        `;
    }

    async function requestAgent() {
        showTyping(true);
        
        try {
            const response = await fetch('/CustomerPortal/TransferToAgent', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    sessionId: chatSessionId,
                    reason: 'Customer requested live agent'
                })
            });
            
            const result = await response.json();
            
            showTyping(false);
            
            if (result.success) {
                isAgentChat = true;
                chatSessionId = result.sessionId || chatSessionId;
                
                document.getElementById('chatTitle').innerHTML = 'üë§ Live Agent';
                document.getElementById('agentNotice').classList.add('show');
                document.querySelectorAll('.support-option')[1].classList.add('active');
                document.querySelectorAll('.support-option')[0].classList.remove('active');
                
                addMessage('agent', "üëã Hi! You're now connected to a support agent. Please wait a moment while an agent joins the chat. In the meantime, please describe your issue in detail.");
                
                // Update quick replies for agent chat
                document.getElementById('quickReplies').innerHTML = `
                    <button class="quick-reply" onclick="sendQuickReply('I need help with my order')">üì¶ Order Issue</button>
                    <button class="quick-reply" onclick="sendQuickReply('I have a complaint')">‚ö†Ô∏è Complaint</button>
                    <button class="quick-reply" onclick="sendQuickReply('Technical support needed')">üîß Technical</button>
                `;
            } else {
                addMessage('bot', "I apologize, but we couldn't connect you to an agent at this time. Please try again or submit a support ticket.");
            }
        } catch (error) {
            showTyping(false);
            console.error('Error:', error);
            addMessage('bot', "Sorry, there was an error connecting to an agent. Please try again.");
        }
    }

    function toggleFaq(element) {
        element.classList.toggle('open');
    }
</script>
}
