@section Scripts {
<script>
    let chatSessionId = null;
    let chatMode = 'ai'; // 'ai' or 'agent'
    let agentConnected = false;
    let waitingForAgent = false;
    let pollInterval = null;

    document.addEventListener('DOMContentLoaded', function() {
        initChat();
    });

    function initChat() {
        addMessage('bot', "👋 Hi there! I'm your AI assistant. I can help you with:\n\n• Order tracking and status\n• Returns and refunds\n• Product information\n• Payment inquiries\n• Promotions and discounts\n\nHow can I assist you today?");
    }

    function handleKeyPress(event) {
        if (event.key === 'Enter') {
            sendMessage();
        }
    }

    async function sendMessage() {
        const input = document.getElementById('messageInput');
        const message = input.value.trim();
        
        if (!message) return;
        
        addMessage('user', message);
        input.value = '';
        
        showTyping(true);
        
        try {
            let endpoint = '/CustomerPortal/SendChatMessage';
            let body = { message: message, sessionId: chatSessionId };
            
            if (agentConnected && chatSessionId) {
                endpoint = '/api/CustomerSendChatMessage';
                body = { sessionId: chatSessionId, message: message };
            }
            
            const response = await fetch(endpoint, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(body)
            });
            
            const result = await response.json();
            
            showTyping(false);
            
            if (result.success) {
                chatSessionId = result.sessionId || result.data?.sessionId || chatSessionId;
                
                if (!agentConnected && result.response) {
                    addMessage('bot', result.response);
                    
                    if (result.quickReplies && result.quickReplies.length > 0) {
                        updateQuickReplies(result.quickReplies);
                    }
                }
            } else {
                if (result.waitingForAgent) {
                    addMessage('system', result.message || 'Please wait for an agent to accept the chat.');
                    return;
                }
                if (!agentConnected) {
                    addMessage('bot', "I apologize, but I'm having trouble processing your request. Please try again or connect with a live agent.");
                }
            }
        } catch (error) {
            showTyping(false);
            console.error('Error:', error);
            addMessage('bot', "Sorry, there was an error connecting. Please try again.");
        }
    }

    function sendQuickReply(text) {
        document.getElementById('messageInput').value = text;
        sendMessage();
    }

    function addMessage(type, content) {
        const container = document.getElementById('chatMessages');
        const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        
        const avatars = {
            'bot': '🤖',
            'user': '👤',
            'agent': '👨‍💼',
            'system': '⚙️'
        };
        
        const message = document.createElement('div');
        message.className = `message ${type}`;
        message.innerHTML = `
            <div class="message-avatar">${avatars[type]}</div>
            <div>
                <div class="message-content">${content.replace(/\n/g, '<br>')}</div>
                <div class="message-time">${time}</div>
            </div>
        `;
        
        container.appendChild(message);
        container.scrollTop = container.scrollHeight;
    }

    function showTyping(show) {
        const indicator = document.getElementById('typingIndicator');
        indicator.classList.toggle('show', show);
        
        if (show) {
            document.getElementById('chatMessages').scrollTop = document.getElementById('chatMessages').scrollHeight;
        }
    }

    function updateQuickReplies(replies) {
        const container = document.getElementById('quickReplies');
        container.innerHTML = replies.map(reply => 
            `<button class="quick-reply" onclick="sendQuickReply('${reply}')">${reply}</button>`
        ).join('');
    }

    function switchToAI() {
        if (agentConnected) {
            if (!confirm('This will disconnect you from the live agent. Continue?')) return;
            endLiveChat();
        }
        
        chatMode = 'ai';
        waitingForAgent = false;
        
        document.getElementById('chatTitle').innerHTML = '🤖 AI Assistant';
        document.getElementById('statusText').textContent = 'Online';
        document.getElementById('statusDot').className = 'status-dot';
        document.getElementById('agentBanner').classList.remove('show', 'waiting', 'connected');
        document.getElementById('optionAI').classList.add('active');
        document.getElementById('optionAgent').classList.remove('active');
        
        document.getElementById('quickReplies').innerHTML = `
            <button class="quick-reply" onclick="sendQuickReply('Track my order')">📦 Track Order</button>
            <button class="quick-reply" onclick="sendQuickReply('Return or refund')">🔄 Returns</button>
            <button class="quick-reply" onclick="sendQuickReply('Product inquiry')">🛒 Products</button>
            <button class="quick-reply" onclick="sendQuickReply('Payment issues')">💳 Payments</button>
            <button class="quick-reply" onclick="requestAgent()">👤 Live Agent</button>
        `;
        
        if (pollInterval) {
            clearInterval(pollInterval);
            pollInterval = null;
        }
    }

    async function requestAgent() {
        if (waitingForAgent || agentConnected) return;
        
        showTyping(true);
        waitingForAgent = true;
        
        document.getElementById('chatTitle').innerHTML = '👤 Live Agent';
        document.getElementById('statusText').textContent = 'Requesting...';
        document.getElementById('statusDot').className = 'status-dot waiting';
        document.getElementById('optionAgent').classList.add('active');
        document.getElementById('optionAI').classList.remove('active');
        
        try {
            const response = await fetch('/api/RequestLiveAgent', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({})
            });
            
            const result = await response.json();
            
            showTyping(false);
            
            if (result.success) {
                chatSessionId = result.sessionId || chatSessionId;
                
                // Show waiting banner
                const banner = document.getElementById('agentBanner');
                banner.classList.add('show', 'waiting');
                banner.classList.remove('connected');
                document.getElementById('agentAvatar').textContent = '⏳';
                document.getElementById('agentName').textContent = 'Waiting for Agent...';
                document.getElementById('agentStatus').textContent = 'Please wait while we connect you to an available agent';
                document.getElementById('statusText').textContent = 'Waiting...';
                
                addMessage('system', '🔔 Your request for a live agent has been sent. Please wait while an agent accepts your chat.');
                
                document.getElementById('quickReplies').innerHTML = `
                    <button class="quick-reply" onclick="switchToAI()">🤖 Back to AI</button>
                `;
                
                // Start polling for agent connection
                startCustomerPolling();
            } else {
                waitingForAgent = false;
                addMessage('bot', result.message || "I apologize, but we couldn't connect you to an agent at this time. Please try again or submit a support ticket.");
                switchToAI();
            }
        } catch (error) {
            showTyping(false);
            waitingForAgent = false;
            console.error('Error:', error);
            addMessage('bot', "Sorry, there was an error connecting to an agent. Please try again.");
            switchToAI();
        }
    }

    function startCustomerPolling() {
        if (pollInterval) clearInterval(pollInterval);

        let lastMessageId = 0;

        pollInterval = setInterval(async () => {
            if (!chatSessionId) return;

            try {
                const response = await fetch(`/api/GetCustomerChatUpdates?sessionId=${chatSessionId}&lastMessageId=${lastMessageId}`);
                const result = await response.json();

                if (result.success && result.data) {
                    const status = result.data.status;
                    const agentName = result.data.agentName;
                    const messages = result.data.messages || [];

                    if (messages.length > 0) {
                        messages.forEach(msg => {
                            if (msg.senderType === 'Agent') {
                                addMessage('agent', msg.message);
                            } else if (msg.senderType === 'System') {
                                addMessage('system', msg.message);
                            }
                        });
                        lastMessageId = messages[messages.length - 1].messageId || lastMessageId;
                    }

                    if (status === 'Active' && !agentConnected) {
                        agentConnected = true;
                        waitingForAgent = false;

                        const banner = document.getElementById('agentBanner');
                        banner.classList.add('show', 'connected');
                        banner.classList.remove('waiting');
                        document.getElementById('agentAvatar').textContent = '👨‍💼';
                        document.getElementById('agentName').textContent = agentName || 'Support Agent';
                        document.getElementById('agentStatus').textContent = 'You are now connected';
                        document.getElementById('statusText').textContent = 'Connected';
                        document.getElementById('statusDot').className = 'status-dot connected';

                        addMessage('system', `✅ ${agentName || 'An agent'} has joined the chat. You can now start your conversation.`);

                        document.getElementById('quickReplies').innerHTML = `
                            <button class="quick-reply" onclick="sendQuickReply('I need help with my order')">📦 Order Issue</button>
                            <button class="quick-reply" onclick="sendQuickReply('I have a question')">❓ Question</button>
                            <button class="quick-reply" onclick="sendQuickReply('Technical support needed')">🔧 Technical</button>
                        `;
                    }

                    if (status === 'Ended') {
                        agentConnected = false;
                        waitingForAgent = false;
                        addMessage('system', 'This chat session has ended. Thank you for contacting us!');
                        clearInterval(pollInterval);
                        setTimeout(() => switchToAI(), 2000);
                    }
                }
            } catch (error) {
                console.error('Polling error:', error);
            }
        }, 2000);
    }

    async function endLiveChat() {
        if (!chatSessionId) {
            switchToAI();
            return;
        }
        
        try {
            await fetch('/api/CustomerEndChat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ sessionId: chatSessionId })
            });
        } catch (error) {
            console.error('Error ending chat:', error);
        }
        
        agentConnected = false;
        waitingForAgent = false;
        chatSessionId = null;
        
        if (pollInterval) {
            clearInterval(pollInterval);
            pollInterval = null;
        }
        
        addMessage('system', 'Chat session ended. Thank you for contacting us!');
        switchToAI();
    }

    function toggleFaq(element) {
        element.classList.toggle('open');
    }
</script>
