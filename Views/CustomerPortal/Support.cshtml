@section Scripts {
<script>
    // AI Chat Responses
    const aiResponses = {
        'track my order': {
            message: "To track your order, please provide your order number (e.g., ORD-2026-XXXX). You can also view all your orders in the 'My Orders' section.",
            quickReplies: ['Go to My Orders', 'Enter order number', 'Talk to human']
        },
        'product warranty': {
            message: "Most of our computer accessories come with manufacturer warranty:\n\n‚Ä¢ Keyboards & Mice: 1-2 years\n‚Ä¢ Headsets: 1 year\n‚Ä¢ Storage devices: 3-5 years\n‚Ä¢ Monitors: 3 years\n\nKeep your receipt and product packaging for warranty claims.",
            quickReplies: ['File warranty claim', 'Check my product', 'Talk to human']
        },
        'return policy': {
            message: "Our return policy:\n\n‚úÖ 7-day return for unopened items\n‚úÖ 15-day replacement for defective items\n‚úÖ Items must be in original packaging\n‚úÖ Receipt/proof of purchase required\n\n‚ùå No returns for opened software\n‚ùå No returns for items with physical damage",
            quickReplies: ['Start a return', 'Report defective item', 'Talk to human']
        },
        'talk to human': {
            message: "I'll connect you with a live support agent. Please wait a moment while I transfer your chat...",
            action: 'transfer'
        },
        'default': {
            message: "I understand you need help with that. Let me assist you. Could you please provide more details about your concern? Or you can choose from the options below:",
            quickReplies: ['Track my order', 'Product warranty', 'Return policy', 'Talk to human']
        }
    };

    function sendMessage() {
        const input = document.getElementById('chatInput');
        const message = input.value.trim();
        if (!message) return;

        // Add user message
        addMessage(message, 'user');
        input.value = '';

        // Show typing indicator
        showTyping();

        // Simulate AI response
        setTimeout(() => {
            hideTyping();
            processAIResponse(message);
        }, 1500);
    }

    function sendQuickReply(text) {
        document.getElementById('chatInput').value = text;
        sendMessage();
    }

    function addMessage(text, sender) {
        const chatMessages = document.getElementById('chatMessages');
        const time = new Date().toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });

        let avatar = sender === 'bot' ? 'ü§ñ' : 'üë§';
        let avatarBg = sender === 'bot' ? 'background: linear-gradient(135deg, #008080, #20b2aa);' : 'background: linear-gradient(135deg, #6b7280, #9ca3af);';

        const messageHtml = `
            <div class="message ${sender}">
                <div class="message-avatar" style="${avatarBg} color: white;">${avatar}</div>
                <div>
                    <div class="message-content">
                        <p style="margin: 0; white-space: pre-line;">${text}</p>
                    </div>
                    <div class="message-time">${time}</div>
                </div>
            </div>
        `;

        chatMessages.insertAdjacentHTML('beforeend', messageHtml);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function addMessageWithQuickReplies(text, quickReplies) {
        const chatMessages = document.getElementById('chatMessages');
        const time = new Date().toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });

        let quickReplyHtml = '';
        if (quickReplies && quickReplies.length > 0) {
            quickReplyHtml = '<div class="quick-replies">';
            quickReplies.forEach(reply => {
                quickReplyHtml += `<button class="quick-reply-btn" onclick="sendQuickReply('${reply}')">${reply}</button>`;
            });
            quickReplyHtml += '</div>';
        }

        const messageHtml = `
            <div class="message bot">
                <div class="message-avatar" style="background: linear-gradient(135deg, #008080, #20b2aa); color: white;">ü§ñ</div>
                <div>
                    <div class="message-content">
                        <p style="margin: 0; white-space: pre-line;">${text}</p>
                    </div>
                    ${quickReplyHtml}
                    <div class="message-time">${time}</div>
                </div>
            </div>
        `;

        chatMessages.insertAdjacentHTML('beforeend', messageHtml);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function showTyping() {
        const chatMessages = document.getElementById('chatMessages');
        const typingHtml = `
            <div class="message bot" id="typingIndicator">
                <div class="message-avatar" style="background: linear-gradient(135deg, #008080, #20b2aa); color: white;">ü§ñ</div>
                <div class="message-content">
                    <div class="typing-indicator">
                        <span></span><span></span><span></span>
                    </div>
                </div>
            </div>
        `;
        chatMessages.insertAdjacentHTML('beforeend', typingHtml);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function hideTyping() {
        const typing = document.getElementById('typingIndicator');
        if (typing) typing.remove();
    }

    function processAIResponse(userMessage) {
        const lowerMessage = userMessage.toLowerCase();
        let response = aiResponses['default'];

        // Check for matching responses
        for (let key in aiResponses) {
            if (lowerMessage.includes(key)) {
                response = aiResponses[key];
                break;
            }
        }

        // Handle special actions
        if (response.action === 'transfer') {
            addMessage(response.message, 'bot');
            setTimeout(() => {
                requestLiveAgent();
            }, 2000);
            return;
        }

        addMessageWithQuickReplies(response.message, response.quickReplies);
    }

    function handleKeyPress(event) {
        if (event.key === 'Enter') {
            sendMessage();
        }
    }

    function startAIChat() {
        document.getElementById('chatInput').focus();
    }

    function requestLiveAgent() {
        document.getElementById('chatStatus').textContent = 'Connecting to live agent...';
        document.getElementById('transferBtn').style.display = 'none';

        showTyping();
        setTimeout(() => {
            hideTyping();
            addMessage("You are now connected with a Customer Support Agent. How may I assist you today?", 'bot');

            // Update header to show live agent
            document.querySelector('.chat-avatar').textContent = 'üë®‚Äçüíº';
            document.querySelector('.chat-header h6').textContent = 'Live Support Agent';
            document.getElementById('chatStatus').innerHTML = '<span class="status-dot"></span> Mike Chen - Online';
        }, 3000);
    }
</script>
}
