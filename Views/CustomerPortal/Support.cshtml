                    <div class="status-indicator">
                        <span class="status-dot" id="statusDot"></span>
                        <span id="statusText">Online</span>
                    </div>
                </div>
                
                <!-- Agent Connection Banner -->
                <div class="agent-banner" id="agentBanner">
