@{
    ViewData["Title"] = "Customer Support";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .support-page { padding: 0; background: var(--gray-50); min-height: 100vh; }
    
    .page-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--teal-700) 100%);
        color: white;
        padding: 50px 32px;
        text-align: center;
    }
    
    .page-header h1 { font-weight: 800; margin-bottom: 10px; font-size: 2.5rem; }
    .page-header p { opacity: 0.9; margin: 0; font-size: 1.1rem; }
    
    .support-content {
        max-width: 1200px;
        margin: -40px auto 0;
        padding: 0 24px 40px;
        position: relative;
        z-index: 1;
    }
    
    .support-grid {
        display: grid;
        grid-template-columns: 1fr 360px;
        gap: 24px;
    }
    
    @@media (max-width: 992px) {
        .support-grid { grid-template-columns: 1fr; }
    }
    
    .support-card {
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        overflow: hidden;
    }
    
    .card-header {
        padding: 20px 24px;
        border-bottom: 1px solid var(--gray-100);
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: white;
    }
    
    .card-header h3 {
        font-weight: 700;
        color: var(--gray-800);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.1rem;
    }
    
    .status-indicator {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .status-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: var(--success);
        animation: pulse 2s infinite;
    }
    
    .status-dot.waiting { background: var(--warning); }
    .status-dot.connected { background: var(--success); }
    .status-dot.offline { background: var(--gray-400); }
    
    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    /* Agent Connection Banner */
    .agent-banner {
        display: none;
        padding: 16px 24px;
        background: linear-gradient(135deg, var(--teal-50), var(--teal-100));
        border-bottom: 1px solid var(--teal-200);
    }
    
    .agent-banner.show { display: block; }
    
    .agent-banner.waiting {
        background: linear-gradient(135deg, var(--warning-light), #fef3c7);
        border-color: var(--warning);
    }
    
    .agent-banner.connected {
        background: linear-gradient(135deg, var(--success-light), #d1fae5);
        border-color: var(--success);
    }
    
    .agent-banner-content {
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .agent-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--teal-600));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: white;
    }
    
    .agent-banner.waiting .agent-avatar { background: linear-gradient(135deg, var(--primary), var(--teal-600)); }
    
    .agent-info h4 { margin: 0 0 4px; font-size: 0.95rem; font-weight: 600; color: var(--gray-800); }
    .agent-info p { margin: 0; font-size: 0.85rem; color: var(--gray-600); }
    
    .agent-banner .end-chat-btn {
        margin-left: auto;
        padding: 8px 16px;
        background: white;
        border: 1px solid var(--gray-300);
        border-radius: var(--radius-sm);
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .agent-banner .end-chat-btn:hover { border-color: var(--error); color: var(--error); }
    
    /* Chat Area */
    .chat-container {
        height: 480px;
        display: flex;
        flex-direction: column;
    }
    
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: var(--gray-50);
    }
    
    .message {
        display: flex;
        gap: 12px;
        margin-bottom: 16px;
        animation: fadeIn 0.3s ease;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .message.user { flex-direction: row-reverse; }
    
    .message-avatar {
        width: 38px;
        height: 38px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 1rem;
        color: white;
    }
    
    .message.bot .message-avatar { background: linear-gradient(135deg, var(--primary), var(--teal-600)); }
    .message.user .message-avatar { background: linear-gradient(135deg, #6366f1, #8b5cf6); }
    .message.agent .message-avatar { background: linear-gradient(135deg, #f59e0b, #fbbf24); }
    .message.system .message-avatar { background: var(--gray-400); }
    
    .message-content {
        max-width: 75%;
        padding: 14px 18px;
        border-radius: 18px;
        line-height: 1.5;
        font-size: 0.95rem;
    }
    
    .message.bot .message-content { 
        background: white; 
        color: var(--gray-800); 
        border-bottom-left-radius: 5px;
        box-shadow: var(--shadow-sm);
    }
    .message.user .message-content { 
        background: linear-gradient(135deg, var(--primary), var(--teal-700)); 
        color: white; 
        border-bottom-right-radius: 5px; 
    }
    .message.agent .message-content { 
        background: white; 
        color: var(--gray-800); 
        border: 2px solid var(--warning);
        border-bottom-left-radius: 5px; 
    }
    .message.system .message-content {
        background: var(--gray-200);
        color: var(--gray-600);
        font-size: 0.85rem;
        padding: 10px 16px;
        border-radius: var(--radius-full);
        max-width: 100%;
        text-align: center;
    }
    
    .message.system { justify-content: center; }
    .message.system .message-avatar { display: none; }
    
    .message-time {
        font-size: 0.7rem;
        color: var(--gray-400);
        margin-top: 5px;
    }
    
    .message.user .message-time { text-align: right; }
    
    .typing-indicator {
        display: none;
        padding: 14px 18px;
        background: white;
        border-radius: 18px;
        border-bottom-left-radius: 5px;
        width: fit-content;
        box-shadow: var(--shadow-sm);
        margin-left: 50px;
    }
    
    .typing-indicator.show { display: block; }
    
    .typing-dots {
        display: flex;
        gap: 5px;
    }
    
    .typing-dots span {
        width: 8px;
        height: 8px;
        background: var(--gray-400);
        border-radius: 50%;
        animation: bounce 1.4s infinite;
    }
    
    .typing-dots span:nth-child(2) { animation-delay: 0.2s; }
    .typing-dots span:nth-child(3) { animation-delay: 0.4s; }
    
    @@keyframes bounce {
        0%, 60%, 100% { transform: translateY(0); }
        30% { transform: translateY(-5px); }
    }
    
    /* Quick Replies */
    .quick-replies {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        padding: 12px 20px;
        background: white;
        border-top: 1px solid var(--gray-100);
    }
    
    .quick-reply {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 8px 14px;
        background: var(--gray-100);
        border: none;
        border-radius: var(--radius-full);
        cursor: pointer;
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--gray-700);
        transition: all 0.2s;
    }
    
    .quick-reply:hover {
        background: var(--primary);
        color: white;
    }
    
    /* Chat Input */
    .chat-input-area {
        padding: 16px 20px;
        border-top: 1px solid var(--gray-200);
        display: flex;
        gap: 12px;
        background: white;
    }
    
    .chat-input {
        flex: 1;
        padding: 14px 20px;
        border: 2px solid var(--gray-200);
        border-radius: var(--radius-full);
        font-size: 0.95rem;
        font-family: inherit;
        transition: all 0.2s;
    }
    
    .chat-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px var(--primary-soft);
    }
    
    .send-btn {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary), var(--teal-600));
        color: white;
        border: none;
        border-radius: 50%;
        cursor: pointer;
        font-size: 1.2rem;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-teal);
    }
    
    .send-btn:hover { transform: scale(1.05); }
    .send-btn:disabled { background: var(--gray-300); cursor: not-allowed; box-shadow: none; }
    
    /* Support Options */
    .support-options { display: flex; flex-direction: column; gap: 12px; padding: 20px; }
    
    .support-option {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 16px;
        background: var(--gray-50);
        border-radius: var(--radius-md);
        cursor: pointer;
        transition: all 0.2s;
        border: 2px solid transparent;
        text-decoration: none;
        color: inherit;
    }
    
    .support-option:hover { border-color: var(--primary); background: var(--teal-50); }
    .support-option.active { border-color: var(--primary); background: var(--teal-50); }
    
    .option-icon {
        width: 48px;
        height: 48px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
    }
    
    .option-icon.ai { background: linear-gradient(135deg, var(--primary), var(--teal-600)); }
    .option-icon.agent { background: linear-gradient(135deg, #f59e0b, #fbbf24); }
    .option-icon.ticket { background: linear-gradient(135deg, #8b5cf6, #a78bfa); }
    .option-icon.tickets { background: linear-gradient(135deg, var(--success), #059669); }
    
    .option-info h4 { font-weight: 600; color: var(--gray-800); margin: 0 0 4px 0; font-size: 0.95rem; }
    .option-info p { color: var(--gray-500); font-size: 0.8rem; margin: 0; }
    
    /* FAQ Section */
    .faq-section { padding: 20px; }
    
    .faq-item {
        border-bottom: 1px solid var(--gray-100);
        padding: 14px 0;
    }
    
    .faq-item:last-child { border-bottom: none; }
    
    .faq-question {
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        font-weight: 600;
        color: var(--gray-800);
        font-size: 0.95rem;
    }
    
    .faq-toggle { 
        font-size: 1.2rem; 
        transition: transform 0.3s;
        color: var(--gray-400);
    }
    .faq-item.open .faq-toggle { transform: rotate(45deg); color: var(--primary); }
    
    .faq-answer {
        max-height: 0;
        overflow: hidden;
        transition: all 0.3s;
        color: var(--gray-600);
        line-height: 1.6;
        font-size: 0.9rem;
    }
    
    .faq-item.open .faq-answer {
        max-height: 200px;
        padding-top: 12px;
    }
</style>

