@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .checkout-page {
        min-height: 100vh;
        background: var(--background, #FFFFFF);
        padding: 40px 20px;
    }

    .checkout-container {
        margin: 0 auto;
    }

    .checkout-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .checkout-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--foreground, #111827);
        margin-bottom: 10px;
    }

    .checkout-header p { color: var(--muted-foreground, #6B7280); }

    .checkout-steps {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 40px;
    }

    .step {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 25px;
        background: white;
        border-radius: var(--radius-sm, 8px);
        border: 1px solid var(--border, #E5E7EB);
        box-shadow: var(--shadow-sm, 0 1px 3px rgba(0,0,0,0.04));
    }

    .step.active { background: var(--primary, #008080); color: white; border-color: var(--primary, #008080); }
    .step.completed { background: #10b981; color: white; border-color: #10b981; }

    .step-number {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: rgba(255,255,255,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
    }

    .checkout-content {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 30px;
    }

    @@media (max-width: 992px) {
        .checkout-content { grid-template-columns: 1fr; }
    }

    .checkout-card {
        background: white;
        border-radius: var(--radius, 12px);
        border: 1px solid var(--border, #E5E7EB);
        box-shadow: var(--shadow-sm, 0 1px 3px rgba(0,0,0,0.04));
        overflow: hidden;
        transition: all 0.3s;
    }

    .checkout-card:hover {
        border-color: rgba(0,128,128,0.2);
        box-shadow: var(--shadow-md, 0 4px 12px rgba(0,0,0,0.06));
        transform: translateY(-2px);
    }

    .card-header {
        padding: 25px 30px;
        border-bottom: 1px solid var(--border, #E5E7EB);
    }

    .card-header h3 {
        font-weight: 700;
        color: var(--foreground, #111827);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .card-body { padding: 30px; }

    .form-group { margin-bottom: 25px; }
    .form-label { display: block; font-weight: 600; color: var(--foreground, #111827); margin-bottom: 10px; }
    .form-required { color: #ef4444; }

    .form-input {
        width: 100%;
        padding: 14px 18px;
        border: 1.5px solid var(--border, #E5E7EB);
        border-radius: var(--radius-sm, 8px);
        font-size: 1rem;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        transition: all 0.3s;
    }

    .form-input::placeholder {
        color: var(--muted-foreground, #6B7280);
    }

    .form-input:focus {
        outline: none;
        border-color: var(--primary, #008080);
        box-shadow: 0 0 0 3px rgba(0,128,128,0.08);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .form-textarea {
        min-height: 100px;
        resize: vertical;
    }

    .payment-methods { display: flex; flex-direction: column; gap: 15px; }

    .payment-option {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px;
        border: 1.5px solid var(--border, #E5E7EB);
        border-radius: var(--radius-sm, 8px);
        cursor: pointer;
        transition: all 0.3s;
    }

    .payment-option:hover { border-color: var(--primary, #008080); }
    .payment-option.selected { border-color: var(--primary, #008080); background: var(--muted, #F9FAFB); }

    .payment-option input { display: none; }

    .payment-radio {
        width: 24px;
        height: 24px;
        border: 2px solid var(--border, #E5E7EB);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .payment-option.selected .payment-radio {
        border-color: var(--primary, #008080);
    }

    .payment-option.selected .payment-radio::after {
        content: '';
        width: 12px;
        height: 12px;
        background: var(--primary, #008080);
        border-radius: 50%;
    }

    .payment-icon { font-size: 2rem; flex-shrink: 0; }

    .payment-info h4 { font-weight: 600; color: var(--foreground, #111827); margin: 0 0 5px 0; }
    .payment-info p { color: var(--muted-foreground, #6B7280); font-size: 0.85rem; margin: 0; }

    .summary-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px 0;
        border-bottom: 1px solid var(--muted, #F9FAFB);
    }

    .summary-item:last-child { border-bottom: none; }

    .summary-thumb {
        width: 60px;
        height: 60px;
        background: var(--muted, #F9FAFB);
        border-radius: var(--radius-sm, 8px);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .summary-details { flex: 1; }
    .summary-name { font-weight: 600; color: var(--foreground, #111827); font-size: 0.95rem; }
    .summary-qty { color: var(--muted-foreground, #6B7280); font-size: 0.85rem; }
    .summary-price { font-weight: 700; color: var(--primary, #008080); }

    .summary-totals { margin-top: 20px; padding-top: 20px; border-top: 2px solid var(--muted, #F9FAFB); }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
    }

    .summary-row-label { color: var(--muted-foreground, #6B7280); }
    .summary-row-value { font-weight: 600; color: var(--foreground, #111827); }
    .summary-row-value.discount { color: #10b981; }

    .summary-total {
        display: flex;
        justify-content: space-between;
        padding-top: 15px;
        margin-top: 15px;
        border-top: 2px solid var(--primary, #008080);
    }

    .total-label { font-size: 1.1rem; font-weight: 700; color: var(--foreground, #111827); }
    .total-value { font-size: 1.5rem; font-weight: 800; color: var(--primary, #008080); }

    .checkout-btn {
        width: 100%;
        padding: 18px;
        background: var(--primary, #008080);
        color: white;
        border: none;
        border-radius: var(--radius-sm, 8px);
        font-size: 1.1rem;
        font-weight: 700;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        cursor: pointer;
        margin-top: 25px;
        transition: all 0.3s;
    }

    .checkout-btn:hover {
        background: var(--primary-hover, #006666);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md, 0 4px 12px rgba(0,128,128,0.15));
    }

    .checkout-btn:disabled {
        background: #9ca3af;
        cursor: not-allowed;
        transform: none;
    }

    .secure-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-top: 20px;
        color: var(--muted-foreground, #6B7280);
        font-size: 0.85rem;
    }

    .paymongo-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-top: 15px;
        padding: 15px;
        background: var(--muted, #F9FAFB);
        border-radius: var(--radius-sm, 8px);
    }

    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255,255,255,0.95);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .loading-overlay.active { display: flex; }

    .loading-content { text-align: center; }
    .loading-spinner { font-size: 4rem; animation: spin 1s linear infinite; }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: var(--primary, #008080);
        text-decoration: none;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .back-link:hover { color: var(--primary-hover, #006666); }
</style>

