@section Scripts {
<script>
    let checkoutData = null;
    let selectedPayment = 'gcash';
    const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå'];
    const VAT_RATE = 0.12;

    document.addEventListener('DOMContentLoaded', function() {
        loadCheckoutData();
        loadCustomerInfo();

        // Select GCash by default
        selectPayment('gcash');
    });

    function loadCheckoutData() {
        checkoutData = JSON.parse(localStorage.getItem('checkoutData') || 'null');

        if (!checkoutData || !checkoutData.items || checkoutData.items.length === 0) {
            // Try loading from cart directly
            const cart = JSON.parse(localStorage.getItem('cart') || '[]');
            if (cart.length === 0) {
                window.location.href = '/CustomerPortal/Cart';
                return;
            }

            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const shipping = subtotal >= 2000 ? 0 : 150;
            const afterDiscount = subtotal;
            const vatableSales = afterDiscount / (1 + VAT_RATE);
            const vatAmount = afterDiscount - vatableSales;

            checkoutData = {
                items: cart,
                subtotal: subtotal,
                discount: 0,
                vatableSales: vatableSales,
                vatAmount: vatAmount,
                shipping: shipping,
                total: subtotal + shipping,
                promoCode: null
            };
        }

        renderSummary();
    }

    async function loadCustomerInfo() {
        try {
            const response = await fetch('/CustomerPortal/GetProfile');
            const result = await response.json();

            if (result.success && result.data) {
                const data = result.data;
                document.getElementById('firstName').value = data.firstName || '';
                document.getElementById('lastName').value = data.lastName || '';
                document.getElementById('email').value = data.email || '';
                document.getElementById('phone').value = data.phone || '';
                document.getElementById('address').value = data.shippingAddress || data.billingAddress || '';
                document.getElementById('city').value = data.shippingCity || data.billingCity || '';
                document.getElementById('province').value = data.shippingState || data.billingState || '';
                document.getElementById('zipCode').value = data.shippingZipCode || data.billingZipCode || '';
            }
        } catch (error) {
            console.error('Error loading customer info:', error);
        }
    }

    function renderSummary() {
        const container = document.getElementById('summaryItems');

        container.innerHTML = checkoutData.items.map((item, index) => `
            <div class="summary-item">
                <div class="summary-thumb">${productIcons[index % productIcons.length]}</div>
                <div class="summary-details">
                    <div class="summary-name">${item.name}</div>
                    <div class="summary-qty">Qty: ${item.quantity}</div>
                </div>
                <div class="summary-price">‚Ç±${(item.price * item.quantity).toLocaleString('en-PH', {minimumFractionDigits: 2})}</div>
            </div>
        `).join('');

        // VAT breakdown
        const vatableSales = checkoutData.vatableSales || (checkoutData.subtotal - checkoutData.discount) / (1 + VAT_RATE);
        const vatAmount = checkoutData.vatAmount || (checkoutData.subtotal - checkoutData.discount) - vatableSales;

        document.getElementById('summarySubtotal').textContent = `‚Ç±${checkoutData.subtotal.toLocaleString('en-PH', {minimumFractionDigits: 2})}`;
        document.getElementById('summaryShipping').textContent = checkoutData.shipping === 0 ? 'FREE' : `‚Ç±${checkoutData.shipping.toLocaleString('en-PH', {minimumFractionDigits: 2})}`;

        // Show VAT row
        document.getElementById('vatRow').style.display = 'flex';
        document.getElementById('summaryVat').textContent = `‚Ç±${vatAmount.toLocaleString('en-PH', {minimumFractionDigits: 2})}`;
        document.getElementById('vatableSalesRow').style.display = 'flex';
        document.getElementById('summaryVatable').textContent = `‚Ç±${vatableSales.toLocaleString('en-PH', {minimumFractionDigits: 2})}`;

        if (checkoutData.discount > 0) {
            document.getElementById('discountRow').style.display = 'flex';
            document.getElementById('summaryDiscount').textContent = `-‚Ç±${checkoutData.discount.toLocaleString('en-PH', {minimumFractionDigits: 2})}`;
        }

        document.getElementById('summaryTotal').textContent = `‚Ç±${checkoutData.total.toLocaleString('en-PH', {minimumFractionDigits: 2})}`;
    }

    function selectPayment(method) {
        selectedPayment = method;
        document.querySelectorAll('.payment-option').forEach(opt => opt.classList.remove('selected'));
        const radio = document.querySelector(`input[value="${method}"]`);
        if (radio) {
            radio.closest('.payment-option').classList.add('selected');
            radio.checked = true;
        }
    }

    function placeOrder() {
        // Validate form
        const firstName = document.getElementById('firstName').value.trim();
        const lastName = document.getElementById('lastName').value.trim();
        const email = document.getElementById('email').value.trim();
        const phone = document.getElementById('phone').value.trim();
        const address = document.getElementById('address').value.trim();
        const city = document.getElementById('city').value.trim();
        const province = document.getElementById('province').value.trim();
        const zipCode = document.getElementById('zipCode').value.trim();

        if (!firstName || !lastName || !email || !address || !city || !province || !zipCode) {
            showToast('Please fill in all required fields', '#ef4444');
            return;
        }

        // Show confirmation dialog
        showConfirmationDialog(firstName, lastName, email, phone, address, city, province, zipCode);
    }

    function showConfirmationDialog(firstName, lastName, email, phone, address, city, province, zipCode) {
        const paymentLabels = {
            'gcash': 'GCash',
            'card': 'Credit/Debit Card',
            'grab_pay': 'GrabPay',
            'paymaya': 'Maya'
        };

        // Store form data for later use
        window.pendingOrderData = { firstName, lastName, email, phone, address, city, province, zipCode };

        // Create confirmation overlay
        const overlay = document.createElement('div');
        overlay.id = 'confirmOverlay';
        overlay.style.cssText = 'position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.6); display: flex; align-items: center; justify-content: center; z-index: 10000; backdrop-filter: blur(4px);';

        overlay.innerHTML = `
            <div style="background: white; border-radius: 20px; padding: 40px; max-width: 500px; width: 90%; text-align: center; box-shadow: 0 20px 60px rgba(0,0,0,0.3); animation: scaleIn 0.3s ease;">
                <div style="font-size: 4rem; margin-bottom: 16px;">üõí</div>
                <h2 style="font-size: 1.5rem; font-weight: 800; color: #1f2937; margin-bottom: 8px;">Confirm Your Order?</h2>
                <p style="color: #6b7280; margin-bottom: 24px;">You are about to place an order for <strong>‚Ç±${checkoutData.total.toLocaleString('en-PH', {minimumFractionDigits: 2})}</strong></p>

                <div style="background: #f9fafb; border-radius: 12px; padding: 16px; margin-bottom: 24px; text-align: left;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: #6b7280;">Items:</span>
                        <span style="font-weight: 600;">${checkoutData.items.reduce((s, i) => s + i.quantity, 0)} product(s)</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: #6b7280;">Payment:</span>
                        <span style="font-weight: 600;">${paymentLabels[selectedPayment] || selectedPayment}</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: #6b7280;">VAT (12%):</span>
                        <span style="font-weight: 600;">‚Ç±${(checkoutData.vatAmount || 0).toLocaleString('en-PH', {minimumFractionDigits: 2})}</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; border-top: 1px solid #e5e7eb; padding-top: 8px;">
                        <span style="font-weight: 700; color: #1f2937;">Total:</span>
                        <span style="font-weight: 800; color: #008080; font-size: 1.2rem;">‚Ç±${checkoutData.total.toLocaleString('en-PH', {minimumFractionDigits: 2})}</span>
                    </div>
                </div>

                <div style="display: flex; gap: 12px;">
                    <button onclick="document.getElementById('confirmOverlay').remove()"
                        style="flex: 1; padding: 14px; border: 2px solid #e5e7eb; background: white; border-radius: 12px; font-weight: 600; cursor: pointer; font-size: 1rem; color: #6b7280; transition: all 0.2s;">
                        ‚ùå Cancel
                    </button>
                    <button id="confirmOrderBtn"
                        style="flex: 1; padding: 14px; border: none; background: linear-gradient(135deg, #008080, #006666); color: white; border-radius: 12px; font-weight: 700; cursor: pointer; font-size: 1rem; transition: all 0.2s; box-shadow: 0 4px 15px rgba(0,128,128,0.3);">
                        ‚úÖ Yes, Place Order
                    </button>
                </div>
            </div>
        `;

        document.body.appendChild(overlay);

        // Add click handler to confirm button
        document.getElementById('confirmOrderBtn').addEventListener('click', function() {
            document.getElementById('confirmOverlay').remove();
            const d = window.pendingOrderData;
            executeOrder(d.firstName, d.lastName, d.email, d.phone, d.address, d.city, d.province, d.zipCode);
        });
    }

    async function executeOrder(firstName, lastName, email, phone, address, city, province, zipCode) {
        // Show loading
        document.getElementById('loadingOverlay').classList.add('active');
        document.getElementById('placeOrderBtn').disabled = true;

        try {
            // Step 1: Create the order in the database
            const orderData = {
                items: checkoutData.items.map(item => ({
                    productId: item.productId,
                    quantity: item.quantity
                })),
                promoCode: checkoutData.promoCode || null,
                paymentMethod: selectedPayment,
                shippingAddress: address,
                shippingCity: city,
                shippingState: province,
                shippingZipCode: zipCode,
                shippingCountry: 'Philippines',
                notes: ''
            };

            const orderResponse = await fetch('/CustomerPortal/CreateOrder', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(orderData)
            });

            const orderResult = await orderResponse.json();

            if (!orderResult.success) {
                throw new Error(orderResult.message || 'Failed to create order');
            }

            // Step 2: Process payment with PayMongo
            const paymentData = {
                orderId: orderResult.data.orderId,
                paymentMethod: selectedPayment,
                customerName: `${firstName} ${lastName}`,
                customerEmail: email,
                customerPhone: phone
            };

            const paymentResponse = await fetch('/CustomerPortal/ProcessPayment', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(paymentData)
            });

            const paymentResult = await paymentResponse.json();

            if (paymentResult.success) {
                // Clear cart and checkout data
                localStorage.removeItem('cart');
                localStorage.removeItem('checkoutData');

                if (paymentResult.checkoutUrl) {
                    // Redirect to PayMongo payment page (GCash, GrabPay, etc.)
                    showToast('‚úÖ Order created! Redirecting to payment...', '#10b981');
                    setTimeout(() => {
                        window.location.href = paymentResult.checkoutUrl;
                    }, 1500);
                } else if (paymentResult.status === 'succeeded') {
                    // Payment already succeeded (card)
                    showSuccessAndRedirect(orderResult.data.orderNumber);
                } else {
                    // Fallback - redirect to orders
                    showSuccessAndRedirect(orderResult.data.orderNumber);
                }
            } else {
                // Payment failed but order was created - still redirect to orders
                localStorage.removeItem('cart');
                localStorage.removeItem('checkoutData');
                showToast('‚ö†Ô∏è Order created but payment pending. You can pay later from your orders.', '#f59e0b');
                setTimeout(() => {
                    window.location.href = `/CustomerPortal/Orders?orderId=${orderResult.data.orderId}`;
                }, 3000);
            }
        } catch (error) {
            console.error('Error:', error);
            showToast(error.message || 'An error occurred', '#ef4444');
            document.getElementById('loadingOverlay').classList.remove('active');
            document.getElementById('placeOrderBtn').disabled = false;
        }
    }

    function showSuccessAndRedirect(orderNumber) {
        document.getElementById('loadingOverlay').classList.remove('active');

        // Show success overlay
        const overlay = document.createElement('div');
        overlay.style.cssText = 'position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.6); display: flex; align-items: center; justify-content: center; z-index: 10000; backdrop-filter: blur(4px);';
        overlay.innerHTML = `
            <div style="background: white; border-radius: 20px; padding: 50px; max-width: 450px; width: 90%; text-align: center; box-shadow: 0 20px 60px rgba(0,0,0,0.3); animation: scaleIn 0.3s ease;">
                <div style="font-size: 5rem; margin-bottom: 16px;">üéâ</div>
                <h2 style="font-size: 1.8rem; font-weight: 800; color: #1f2937; margin-bottom: 8px;">Order Placed!</h2>
                <p style="color: #6b7280; margin-bottom: 8px;">Your order <strong>#${orderNumber}</strong> has been placed successfully!</p>
                <p style="color: #10b981; font-weight: 600; margin-bottom: 24px;">Payment received ‚úì</p>
                <button onclick="window.location.href='/CustomerPortal/Orders'"
                    style="padding: 14px 32px; background: linear-gradient(135deg, #008080, #006666); color: white; border: none; border-radius: 12px; font-weight: 700; cursor: pointer; font-size: 1.1rem; box-shadow: 0 4px 15px rgba(0,128,128,0.3);">
                    üì¶ View My Orders
                </button>
            </div>`;
        document.body.appendChild(overlay);
    }

    function showToast(message, color) {
        const toast = document.createElement('div');
        toast.innerHTML = `<div style="position: fixed; bottom: 20px; right: 20px; background: ${color}; color: white; padding: 15px 25px; border-radius: 10px; box-shadow: 0 5px 20px rgba(0,0,0,0.2); z-index: 9999; font-weight: 500; max-width: 400px;">${message}</div>`;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 4000);
    }
</script>
