@{
    ViewData["Title"] = "Promotions & Deals";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .deals-page {
        min-height: 100vh;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* ===== Hero Banner ===== */
    .hero-banner {
        background: linear-gradient(135deg, #FF6B35 0%, #E8453C 50%, #EF4444 100%);
        border-radius: var(--radius-lg);
        padding: 52px 48px;
        color: #fff;
        margin-bottom: 36px;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

    .hero-banner::before {
        content: '';
        position: absolute;
        top: -100px;
        right: -60px;
        width: 320px;
        height: 320px;
        background: rgba(255, 255, 255, 0.06);
        border-radius: 50%;
        pointer-events: none;
    }

    .hero-banner::after {
        content: '';
        position: absolute;
        bottom: -80px;
        left: -40px;
        width: 220px;
        height: 220px;
        background: rgba(255, 255, 255, 0.04);
        border-radius: 50%;
        pointer-events: none;
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-title {
        font-family: 'Inter', sans-serif;
        font-size: 2.25rem;
        font-weight: 700;
        margin-bottom: 6px;
        letter-spacing: -0.5px;
    }

    .hero-subtitle {
        font-family: 'Inter', sans-serif;
        font-size: 1.05rem;
        font-weight: 400;
        opacity: 0.92;
        margin-bottom: 28px;
    }

    /* ===== Countdown ===== */
    .countdown-container {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: rgba(0, 0, 0, 0.18);
        padding: 16px 28px;
        border-radius: var(--radius);
        backdrop-filter: blur(4px);
    }

    .countdown-item {
        text-align: center;
        min-width: 60px;
    }

    .countdown-value {
        font-family: 'Inter', sans-serif;
        font-size: 2.2rem;
        font-weight: 700;
        line-height: 1;
        letter-spacing: -1px;
    }

    .countdown-label {
        font-family: 'Inter', sans-serif;
        font-size: 0.7rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
        margin-top: 6px;
    }

    .countdown-separator {
        font-size: 1.6rem;
        font-weight: 600;
        opacity: 0.5;
        line-height: 1;
        margin-top: -8px;
    }

    /* ===== Sections ===== */
    .section {
        margin-bottom: 40px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .section-title {
        font-family: 'Inter', sans-serif;
        font-size: 1.35rem;
        font-weight: 700;
        color: var(--foreground);
        display: flex;
        align-items: center;
        gap: 10px;
        letter-spacing: -0.3px;
    }

    .view-all-link {
        font-family: 'Inter', sans-serif;
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 4px;
        transition: color 0.2s ease;
    }

    .view-all-link:hover {
        color: var(--primary-hover);
        text-decoration: underline;
    }

    /* ===== Promo Code Cards ===== */
    .promo-codes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 16px;
    }

    .promo-code-card {
        background: var(--card);
        border-radius: var(--radius);
        border: 1.5px dashed var(--border);
        padding: 22px;
        position: relative;
        transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
        cursor: pointer;
        box-shadow: var(--shadow-sm);
    }

    .promo-code-card:hover {
        border-color: var(--primary);
        box-shadow: var(--shadow-md);
        transform: translateY(-2px);
    }

    .promo-code-card.copied {
        border-color: var(--success);
        background: var(--success-light);
    }

    .promo-discount {
        font-family: 'Inter', sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--accent);
        margin-bottom: 6px;
        letter-spacing: -0.5px;
    }

    .promo-name {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.95rem;
        color: var(--foreground);
        margin-bottom: 4px;
    }

    .promo-desc {
        font-size: 0.83rem;
        color: var(--muted-foreground);
        margin-bottom: 16px;
        line-height: 1.5;
    }

    .promo-code-display {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: var(--muted);
        padding: 10px 14px;
        border-radius: var(--radius-sm);
        border: 1px solid var(--border);
    }

    .promo-code-text {
        font-family: 'SF Mono', 'Fira Code', 'Consolas', monospace;
        font-size: 1rem;
        font-weight: 600;
        color: var(--primary);
        letter-spacing: 1.5px;
    }

    .copy-indicator {
        font-size: 0.8rem;
        color: var(--muted-foreground);
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .promo-code-card.copied .copy-indicator {
        color: var(--success-fg);
    }

    .promo-validity {
        font-size: 0.73rem;
        color: var(--muted-foreground);
        margin-top: 12px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .promo-min-order {
        position: absolute;
        top: 12px;
        right: 12px;
        background: var(--info-light);
        color: var(--info-fg);
        padding: 3px 10px;
        border-radius: 20px;
        font-size: 0.68rem;
        font-weight: 600;
        letter-spacing: 0.2px;
    }

    /* ===== Campaign Banner ===== */
    .campaign-banner {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        border-radius: var(--radius-lg);
        padding: 44px;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 36px;
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
    }

    .campaign-banner::before {
        content: '';
        position: absolute;
        top: -60%;
        right: -5%;
        width: 280px;
        height: 280px;
        background: rgba(255, 107, 53, 0.08);
        border-radius: 50%;
        pointer-events: none;
    }

    .campaign-content {
        position: relative;
        z-index: 1;
        flex: 1;
    }

    .campaign-label {
        font-family: 'Inter', sans-serif;
        font-size: 0.72rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        opacity: 0.7;
        margin-bottom: 10px;
    }

    .campaign-title {
        font-family: 'Inter', sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 10px;
        letter-spacing: -0.5px;
        line-height: 1.3;
    }

    .campaign-desc {
        font-size: 0.95rem;
        opacity: 0.85;
        margin-bottom: 22px;
        max-width: 480px;
        line-height: 1.6;
    }

    .campaign-cta {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: var(--primary);
        color: #fff;
        border-radius: var(--radius-sm);
        text-decoration: none;
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.9rem;
        transition: background 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
    }

    .campaign-cta:hover {
        background: var(--primary-hover);
        transform: translateY(-1px);
        box-shadow: 0 4px 14px rgba(0, 128, 128, 0.3);
        color: #fff;
    }

    .campaign-image {
        font-size: 5rem;
        position: relative;
        z-index: 1;
        opacity: 0.9;
    }

    /* ===== Deal Cards ===== */
    .deals-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 20px;
    }

    .deal-card {
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        overflow: hidden;
        transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
        box-shadow: var(--shadow-sm);
    }

    .deal-card:hover {
        border-color: rgba(0, 128, 128, 0.3);
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .deal-image {
        height: 170px;
        background: var(--muted);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        position: relative;
        border-bottom: 1px solid var(--border);
    }

    .deal-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: var(--accent);
        color: #fff;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.78rem;
        font-weight: 700;
        letter-spacing: 0.2px;
    }

    .deal-savings {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: var(--success);
        color: #fff;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.72rem;
        font-weight: 600;
    }

    .deal-body {
        padding: 18px;
    }

    .deal-category {
        font-family: 'Inter', sans-serif;
        color: var(--primary);
        font-size: 0.68rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
    }

    .deal-name {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        color: var(--foreground);
        margin-bottom: 8px;
        font-size: 0.95rem;
        line-height: 1.4;
    }

    .deal-pricing {
        display: flex;
        align-items: baseline;
        gap: 10px;
        margin-bottom: 12px;
    }

    .deal-current-price {
        font-family: 'Inter', sans-serif;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--accent);
        letter-spacing: -0.3px;
    }

    .deal-original-price {
        font-size: 0.85rem;
        color: var(--muted-foreground);
        text-decoration: line-through;
    }

    .deal-rating {
        display: flex;
        align-items: center;
        gap: 6px;
        margin-bottom: 14px;
    }

    .stars {
        color: #FBBF24;
        font-size: 0.85rem;
        letter-spacing: 1px;
    }

    .rating-count {
        color: var(--muted-foreground);
        font-size: 0.78rem;
    }

    .btn-shop {
        width: 100%;
        padding: 10px 16px;
        background: var(--primary);
        color: #fff;
        border: none;
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.88rem;
        cursor: pointer;
        transition: background 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

    .btn-shop:hover {
        background: var(--primary-hover);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(0, 128, 128, 0.2);
    }

    /* ===== Empty State ===== */
    .empty-state {
        text-align: center;
        padding: 56px 20px;
        color: var(--muted-foreground);
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 12px;
        opacity: 0.4;
    }

    .empty-state-text {
        font-size: 0.95rem;
        font-weight: 500;
    }

    /* ===== Responsive ===== */
    @@media (max-width: 992px) {
        .hero-banner {
            padding: 36px 28px;
        }

        .hero-title {
            font-size: 1.85rem;
        }

        .campaign-banner {
            flex-direction: column;
            text-align: center;
            padding: 32px;
        }

        .campaign-image {
            font-size: 4rem;
        }

        .campaign-desc {
            max-width: none;
        }
    }

    @@media (max-width: 768px) {
        .hero-banner {
            padding: 28px 20px;
        }

        .hero-title {
            font-size: 1.5rem;
        }

        .hero-subtitle {
            font-size: 0.92rem;
        }

        .countdown-container {
            padding: 12px 18px;
            gap: 8px;
        }

        .countdown-item {
            min-width: 48px;
        }

        .countdown-value {
            font-size: 1.6rem;
        }

        .promo-codes-grid {
            grid-template-columns: 1fr;
        }

        .deals-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
        }

        .deal-image {
            height: 130px;
            font-size: 2.5rem;
        }

        .deal-body {
            padding: 14px;
        }
    }

    @@media (max-width: 576px) {
        .countdown-container {
            flex-wrap: wrap;
            justify-content: center;
        }

        .countdown-separator {
            display: none;
        }

        .campaign-title {
            font-size: 1.35rem;
        }

        .section-title {
            font-size: 1.15rem;
        }

        .deals-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="deals-page">
    <!-- Hero Banner with Countdown -->
    <section class="hero-banner animate-fade-in">
        <div class="hero-content">
            <h1 class="hero-title">Flash Sale</h1>
            <p class="hero-subtitle">Massive discounts on computer accessories -- Up to 70% OFF</p>
            <div class="countdown-container">
                <div class="countdown-item">
                    <div class="countdown-value" id="countdownDays">00</div>
                    <div class="countdown-label">Days</div>
                </div>
                <span class="countdown-separator">:</span>
                <div class="countdown-item">
                    <div class="countdown-value" id="countdownHours">00</div>
                    <div class="countdown-label">Hours</div>
                </div>
                <span class="countdown-separator">:</span>
                <div class="countdown-item">
                    <div class="countdown-value" id="countdownMinutes">00</div>
                    <div class="countdown-label">Minutes</div>
                </div>
                <span class="countdown-separator">:</span>
                <div class="countdown-item">
                    <div class="countdown-value" id="countdownSeconds">00</div>
                    <div class="countdown-label">Seconds</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Promo Codes Section -->
    <section class="section animate-fade-in" style="animation-delay: 0.1s">
        <div class="section-header">
            <h2 class="section-title">Promo Codes</h2>
            <span style="color: var(--muted-foreground); font-size: 0.85rem; font-weight: 500;">Click to copy</span>
        </div>
        <div class="promo-codes-grid" id="promoCodesGrid">
            <div class="empty-state" style="grid-column: 1 / -1;">
                <div class="empty-state-icon">...</div>
                <p class="empty-state-text">Loading promo codes...</p>
            </div>
        </div>
    </section>

    <!-- Campaign Banner -->
    <section class="campaign-banner animate-fade-in" style="animation-delay: 0.2s" id="campaignBanner">
        <div class="campaign-content">
            <div class="campaign-label" id="campaignLabel">Limited Time Offer</div>
            <h2 class="campaign-title" id="campaignTitle">Loading...</h2>
            <p class="campaign-desc" id="campaignDesc">Check back soon for exciting deals!</p>
            <a href="/CustomerPortal/Products" class="campaign-cta" id="campaignCta">
                Shop Now
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </a>
        </div>
        <div class="campaign-image" id="campaignEmoji">&#127918;</div>
    </section>

    <!-- Hot Deals Section -->
    <section class="section animate-fade-in" style="animation-delay: 0.3s">
        <div class="section-header">
            <h2 class="section-title">Hot Deals</h2>
            <a href="/CustomerPortal/Products?onSale=true" class="view-all-link">
                View All
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </a>
        </div>
        <div class="deals-grid" id="dealsGrid">
            <div class="empty-state" style="grid-column: 1 / -1;">
                <div class="empty-state-icon">...</div>
                <p class="empty-state-text">Loading deals...</p>
            </div>
        </div>
    </section>
</div>

@section Scripts {
<script>
    const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå', 'üíª', 'üñ®Ô∏è'];

    document.addEventListener('DOMContentLoaded', function() {
        loadCampaignAndCountdown();
        loadPromotions();
        loadDeals();
    });

    let countdownEndDate = null;

    async function loadCampaignAndCountdown() {
        try {
            const res = await fetch('/CustomerPortal/GetActiveCampaigns');
            const result = await res.json();
            if (result.success && result.data && result.data.length > 0) {
                const campaign = result.data[0]; // Use the first active campaign
                document.getElementById('campaignTitle').textContent = campaign.campaignName || 'Special Offer';
                document.getElementById('campaignDesc').textContent = campaign.description || 'Great deals await!';
                document.getElementById('campaignLabel').textContent = campaign.campaignType || 'Limited Time Offer';
                if (campaign.endDate) {
                    countdownEndDate = new Date(campaign.endDate);
                }
            }
        } catch(e) { console.error('Error loading campaigns:', e); }

        // If no campaign endDate, fall back to 3 days from now
        if (!countdownEndDate) {
            countdownEndDate = new Date();
            countdownEndDate.setDate(countdownEndDate.getDate() + 3);
            countdownEndDate.setHours(23, 59, 59, 999);
        }
        initCountdown();
    }

    function initCountdown() {
        function updateCountdown() {
            const now = new Date().getTime();
            const distance = countdownEndDate.getTime() - now;

            if (distance < 0) {
                document.getElementById('countdownDays').textContent = '00';
                document.getElementById('countdownHours').textContent = '00';
                document.getElementById('countdownMinutes').textContent = '00';
                document.getElementById('countdownSeconds').textContent = '00';
                return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById('countdownDays').textContent = String(days).padStart(2, '0');
            document.getElementById('countdownHours').textContent = String(hours).padStart(2, '0');
            document.getElementById('countdownMinutes').textContent = String(minutes).padStart(2, '0');
            document.getElementById('countdownSeconds').textContent = String(seconds).padStart(2, '0');
        }

        updateCountdown();
        setInterval(updateCountdown, 1000);
    }

    async function loadPromotions() {
        try {
            const response = await fetch('/CustomerPortal/GetPromotions');
            const result = await response.json();

            if (result.success && result.data.promotions && result.data.promotions.length > 0) {
                renderPromoCodes(result.data.promotions);
            } else {
                document.getElementById('promoCodesGrid').innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <div class="empty-state-icon">üè∑Ô∏è</div>
                        <p class="empty-state-text">No active promo codes</p>
                    </div>`;
            }
        } catch (error) {
            console.error('Error loading promotions:', error);
        }
    }

    function renderPromoCodes(promotions) {
        const grid = document.getElementById('promoCodesGrid');

        grid.innerHTML = promotions.slice(0, 4).map((promo, i) => {
            const discountText = promo.discountType === 'Percentage'
                ? `${promo.discountValue}% OFF`
                : `‚Ç±${promo.discountValue} OFF`;

            const endDate = promo.endDate ? new Date(promo.endDate).toLocaleDateString('en-PH', { month: 'short', day: 'numeric' }) : 'Limited time';

            return `
                <div class="promo-code-card animate-fade-in" style="animation-delay: ${i * 0.1}s" onclick="copyPromoCode('${promo.promotionCode}', this)">
                    ${promo.minOrderAmount > 0 ? `<span class="promo-min-order">Min. ‚Ç±${promo.minOrderAmount.toLocaleString()}</span>` : ''}
                    <div class="promo-discount">${discountText}</div>
                    <div class="promo-name">${promo.promotionName}</div>
                    <div class="promo-desc">${promo.description || 'Apply this code at checkout'}</div>
                    <div class="promo-code-display">
                        <span class="promo-code-text">${promo.promotionCode}</span>
                        <span class="copy-indicator">
                            <span class="copy-icon">üìã</span>
                            <span class="copy-text">Click to copy</span>
                        </span>
                    </div>
                    <div class="promo-validity">
                        <span>‚è∞</span>
                        Valid until ${endDate}
                    </div>
                </div>`;
        }).join('');
    }

    function copyPromoCode(code, card) {
        navigator.clipboard.writeText(code).then(() => {
            card.classList.add('copied');
            const indicator = card.querySelector('.copy-indicator');
            indicator.innerHTML = '<span style="color: var(--success-fg);">‚úì Copied!</span>';

            setTimeout(() => {
                card.classList.remove('copied');
                indicator.innerHTML = '<span class="copy-icon">üìã</span><span class="copy-text">Click to copy</span>';
            }, 2000);

            showToast('‚úì Promo code copied!', 'success');
        });
    }

    async function loadDeals() {
        try {
            const response = await fetch('/CustomerPortal/GetProducts?onSale=true&pageSize=8');
            const result = await response.json();

            if (result.success && result.data.length > 0) {
                renderDeals(result.data);
            } else {
                document.getElementById('dealsGrid').innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <div class="empty-state-icon">üí•</div>
                        <p class="empty-state-text">No deals available right now</p>
                    </div>`;
            }
        } catch (error) {
            console.error('Error loading deals:', error);
        }
    }

    function renderDeals(products) {
        const grid = document.getElementById('dealsGrid');

        grid.innerHTML = products.map((product, index) => {
            const savings = product.compareAtPrice ? (product.compareAtPrice - product.sellingPrice) : 0;
            const rating = Math.floor(3.5 + Math.random() * 1.5);
            const reviewCount = Math.floor(20 + Math.random() * 150);

            return `
                <div class="deal-card animate-fade-in" style="animation-delay: ${index * 0.05}s">
                    <div class="deal-image">
                        ${productIcons[index % productIcons.length]}
                        ${product.discountPercent > 0 ? `<span class="deal-badge">-${product.discountPercent}%</span>` : '<span class="deal-badge">SALE</span>'}
                        ${savings > 0 ? `<span class="deal-savings">Save ‚Ç±${savings.toLocaleString()}</span>` : ''}
                    </div>
                    <div class="deal-body">
                        <div class="deal-category">${product.categoryName || 'Accessories'}</div>
                        <div class="deal-name">${product.productName}</div>
                        <div class="deal-rating">
                            <span class="stars">${'‚òÖ'.repeat(rating)}${'‚òÜ'.repeat(5 - rating)}</span>
                            <span class="rating-count">(${reviewCount} reviews)</span>
                        </div>
                        <div class="deal-pricing">
                            <span class="deal-current-price">‚Ç±${product.sellingPrice.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                            ${product.compareAtPrice ? `<span class="deal-original-price">‚Ç±${product.compareAtPrice.toLocaleString()}</span>` : ''}
                        </div>
                        <button class="btn-shop" onclick="addToCart(${product.productId}, '${product.productName.replace(/'/g, "\\'")}', ${product.sellingPrice}, '${product.sku || ''}')">
                            üõí Add to Cart
                        </button>
                    </div>
                </div>`;
        }).join('');
    }

    function addToCart(productId, productName, price, sku) {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const existingIndex = cart.findIndex(item => item.productId === productId);

        if (existingIndex > -1) { cart[existingIndex].quantity += 1; }
        else { cart.push({ productId, name: productName, price, sku, quantity: 1 }); }

        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartBadge();
        showToast('‚úì Added to cart!', 'success');
    }
</script>
}
