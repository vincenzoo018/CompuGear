@{
    ViewData["Title"] = "My Support Tickets";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .tickets-page { padding: 30px 0; background: #f8f9fa; min-height: 100vh; }
    
    .page-header {
        background: linear-gradient(135deg, #008080 0%, #20b2aa 100%);
        color: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .page-header h1 { font-weight: 800; margin: 0 0 5px 0; font-size: 2rem; }
    .page-header p { opacity: 0.9; margin: 0; }
    
    .btn-new-ticket {
        padding: 14px 30px;
        background: white;
        color: #008080;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }
    
    .btn-new-ticket:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        color: #006666;
    }
    
    .stats-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }
    
    @@media (max-width: 768px) {
        .stats-row { grid-template-columns: repeat(2, 1fr); }
    }
    
    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        text-align: center;
    }
    
    .stat-icon { font-size: 2rem; margin-bottom: 10px; }
    .stat-value { font-size: 2rem; font-weight: 800; color: #1f2937; }
    .stat-label { color: #6b7280; font-size: 0.9rem; }
    
    .tickets-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        overflow: hidden;
    }
    
    .tickets-header {
        padding: 20px 25px;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }
    
    .filter-tab {
        padding: 10px 20px;
        border: none;
        background: #f3f4f6;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 500;
        color: #6b7280;
        transition: all 0.3s;
    }
    
    .filter-tab:hover, .filter-tab.active {
        background: #008080;
        color: white;
    }
    
    .ticket-card {
        display: block;
        padding: 25px;
        border-bottom: 1px solid #f3f4f6;
        text-decoration: none;
        color: inherit;
        border-left: 4px solid transparent;
        transition: all 0.3s;
    }
    
    .ticket-card:hover {
        background: #fafafa;
        transform: translateX(5px);
    }
    
    .ticket-card:last-child { border-bottom: none; }
    
    .ticket-card.status-Open { border-left-color: #3b82f6; }
    .ticket-card.status-InProgress { border-left-color: #f59e0b; }
    .ticket-card.status-Resolved { border-left-color: #10b981; }
    .ticket-card.status-Closed { border-left-color: #6b7280; }
    
    .ticket-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 10px;
    }
    
    .status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }
    
    .status-badge.Open { background: #dbeafe; color: #1d4ed8; }
    .status-badge.InProgress { background: #fef3cd; color: #856404; }
    .status-badge.Resolved { background: #d4edda; color: #155724; }
    .status-badge.Closed { background: #e5e7eb; color: #6b7280; }
    
    .priority-badge {
        font-size: 0.8rem;
        margin-left: 10px;
    }
    
    .priority-badge.High { color: #ef4444; }
    .priority-badge.Medium { color: #f59e0b; }
    .priority-badge.Low { color: #10b981; }
    
    .ticket-number { color: #9ca3af; font-size: 0.85rem; }
    
    .ticket-title {
        font-weight: 600;
        color: #1f2937;
        font-size: 1.1rem;
        margin-bottom: 8px;
    }
    
    .ticket-description {
        color: #6b7280;
        font-size: 0.9rem;
        line-height: 1.5;
        margin-bottom: 15px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .ticket-meta {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        font-size: 0.85rem;
        color: #6b7280;
    }
    
    .ticket-meta span {
        display: flex;
        align-items: center;
        gap: 5px;
    }
    
    .empty-state {
        text-align: center;
        padding: 60px;
    }
    
    .empty-state-icon { font-size: 4rem; margin-bottom: 20px; }
    .empty-state h3 { color: #1f2937; margin-bottom: 10px; }
    .empty-state p { color: #6b7280; margin-bottom: 20px; }
    
    .pagination {
        display: flex;
        justify-content: center;
        gap: 10px;
        padding: 20px;
    }
    
    .page-btn {
        padding: 10px 15px;
        border: 2px solid #e5e7eb;
        background: white;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
    }
    
    .page-btn:hover, .page-btn.active {
        background: #008080;
        color: white;
        border-color: #008080;
    }
</style>

<div class="tickets-page">
    <div class="container">
        <div class="page-header">
            <div>
                <h1>üìã My Support Tickets</h1>
                <p>Track and manage your support requests</p>
            </div>
            <a href="/CustomerPortal/SubmitTicket" class="btn-new-ticket">‚ûï New Ticket</a>
        </div>
        
        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-icon">üìã</div>
                <div class="stat-value" id="totalTickets">0</div>
                <div class="stat-label">Total Tickets</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üîµ</div>
                <div class="stat-value" id="openTickets">0</div>
                <div class="stat-label">Open</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üü°</div>
                <div class="stat-value" id="progressTickets">0</div>
                <div class="stat-label">In Progress</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-value" id="resolvedTickets">0</div>
                <div class="stat-label">Resolved</div>
            </div>
        </div>
        
        <div class="tickets-container">
            <div class="tickets-header">
                <button class="filter-tab active" data-status="">All</button>
                <button class="filter-tab" data-status="Open">Open</button>
                <button class="filter-tab" data-status="In Progress">In Progress</button>
                <button class="filter-tab" data-status="Resolved">Resolved</button>
                <button class="filter-tab" data-status="Closed">Closed</button>
            </div>
            
            <div id="ticketsContent">
                <div class="empty-state">
                    <div class="empty-state-icon">‚è≥</div>
                    <h3>Loading tickets...</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let allTickets = [];
    let currentFilter = '';

    document.addEventListener('DOMContentLoaded', function() {
        loadTickets();
        setupFilterTabs();
    });

    function setupFilterTabs() {
        document.querySelectorAll('.filter-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                currentFilter = this.dataset.status;
                filterTickets();
            });
        });
    }

    async function loadTickets() {
        try {
            const response = await fetch('/CustomerPortal/GetTickets');
            const result = await response.json();
            
            if (result.success) {
                allTickets = result.data;
                updateStats();
                renderTickets();
            } else {
                renderEmpty();
            }
        } catch (error) {
            console.error('Error loading tickets:', error);
            renderEmpty();
        }
    }

    function updateStats() {
        const total = allTickets.length;
        const open = allTickets.filter(t => t.status === 'Open').length;
        const progress = allTickets.filter(t => t.status === 'In Progress').length;
        const resolved = allTickets.filter(t => t.status === 'Resolved' || t.status === 'Closed').length;
        
        document.getElementById('totalTickets').textContent = total;
        document.getElementById('openTickets').textContent = open;
        document.getElementById('progressTickets').textContent = progress;
        document.getElementById('resolvedTickets').textContent = resolved;
    }

    function filterTickets() {
        renderTickets();
    }

    function renderTickets() {
        const container = document.getElementById('ticketsContent');
        let tickets = allTickets;
        
        if (currentFilter) {
            tickets = allTickets.filter(t => t.status === currentFilter);
        }
        
        if (!tickets || tickets.length === 0) {
            renderEmpty();
            return;
        }

        const priorityIcons = { 'High': 'üî¥', 'Medium': 'üü°', 'Low': 'üü¢' };

        container.innerHTML = tickets.map(ticket => `
            <a href="/CustomerPortal/TicketDetails/${ticket.ticketId}" class="ticket-card status-${ticket.status.replace(' ', '')}">
                <div class="ticket-header">
                    <div>
                        <span class="status-badge ${ticket.status.replace(' ', '')}">${ticket.status}</span>
                        <span class="priority-badge ${ticket.priority}">${priorityIcons[ticket.priority] || 'üü°'} ${ticket.priority}</span>
                    </div>
                    <span class="ticket-number">${ticket.ticketNumber}</span>
                </div>
                <h3 class="ticket-title">${ticket.subject}</h3>
                <p class="ticket-description">${ticket.description || ''}</p>
                <div class="ticket-meta">
                    <span>üìÖ ${new Date(ticket.createdAt).toLocaleDateString()}</span>
                    ${ticket.categoryName ? `<span>üìÅ ${ticket.categoryName}</span>` : ''}
                    ${ticket.agentName ? `<span>üë§ ${ticket.agentName}</span>` : '<span>‚è≥ Awaiting assignment</span>'}
                </div>
            </a>
        `).join('');
    }

    function renderEmpty() {
        document.getElementById('ticketsContent').innerHTML = `
            <div class="empty-state">
                <div class="empty-state-icon">üì≠</div>
                <h3>No tickets found</h3>
                <p>You haven't submitted any support tickets yet</p>
                <a href="/CustomerPortal/SubmitTicket" class="btn-new-ticket" style="display: inline-block;">‚ûï Create New Ticket</a>
            </div>
        `;
    }
</script>
}
