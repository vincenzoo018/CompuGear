@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    /* ===== Cart Page Base ===== */
    .cart-page {
        min-height: 100vh;
        padding-bottom: 60px;
    }

    /* ===== Page Header ===== */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px;
        padding-bottom: 20px;
        border-bottom: 1px solid var(--border);
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--foreground);
        display: flex;
        align-items: center;
        gap: 10px;
        letter-spacing: -0.02em;
    }

    .page-title-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 38px;
        height: 38px;
        background: var(--muted);
        border-radius: var(--radius-sm);
        font-size: 1.15rem;
    }

    .item-count {
        background: var(--primary);
        color: white;
        padding: 2px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .btn-continue {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--muted-foreground);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        padding: 8px 14px;
        border-radius: var(--radius-sm);
        transition: all 0.2s ease;
    }

    .btn-continue:hover {
        color: var(--primary);
        background: var(--muted);
        text-decoration: none;
    }

    .btn-continue-icon {
        font-size: 1rem;
        transition: transform 0.2s ease;
    }

    .btn-continue:hover .btn-continue-icon {
        transform: translateX(-2px);
    }

    /* ===== Cart Layout ===== */
    .cart-layout {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 28px;
        align-items: start;
    }

    /* ===== Cart Items Section ===== */
    .cart-items {
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        overflow: hidden;
    }

    .cart-header {
        padding: 14px 24px;
        border-bottom: 1px solid var(--border);
        display: grid;
        grid-template-columns: 3fr 1fr 1fr 1fr auto;
        gap: 20px;
        font-weight: 500;
        color: var(--muted-foreground);
        font-size: 0.78rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        background: var(--muted);
    }

    .cart-list {
        padding: 0;
    }

    /* ===== Cart Item Row ===== */
    .cart-item {
        display: grid;
        grid-template-columns: 3fr 1fr 1fr 1fr auto;
        gap: 20px;
        padding: 20px 24px;
        align-items: center;
        border-bottom: 1px solid var(--border);
        transition: background 0.15s ease;
    }

    .cart-item:last-child {
        border-bottom: none;
    }

    .cart-item:hover {
        background: var(--muted);
    }

    .cart-item.removing {
        animation: slideOut 0.3s ease forwards;
    }

    @@keyframes slideOut {
        0% { opacity: 1; transform: translateX(0); }
        100% { opacity: 0; transform: translateX(-50px); height: 0; padding: 0; }
    }

    /* ===== Item Info ===== */
    .item-info {
        display: flex;
        gap: 14px;
        align-items: center;
    }

    .item-image {
        width: 64px;
        height: 64px;
        background: var(--muted);
        border: 1px solid var(--border);
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        flex-shrink: 0;
    }

    .item-details {
        min-width: 0;
    }

    .item-name {
        font-weight: 600;
        color: var(--foreground);
        margin-bottom: 2px;
        font-size: 0.92rem;
        line-height: 1.4;
    }

    .item-sku {
        font-size: 0.78rem;
        color: var(--muted-foreground);
    }

    .item-stock {
        font-size: 0.78rem;
        color: var(--success);
        display: flex;
        align-items: center;
        gap: 4px;
        margin-top: 3px;
    }

    .item-price {
        font-weight: 600;
        color: var(--foreground);
        font-size: 0.92rem;
    }

    /* ===== Quantity Controls ===== */
    .qty-control {
        display: inline-flex;
        align-items: center;
        gap: 0;
        border: 1px solid var(--border);
        border-radius: var(--radius-sm);
        overflow: hidden;
        background: var(--card);
    }

    .qty-btn {
        width: 34px;
        height: 34px;
        background: var(--muted);
        border: none;
        cursor: pointer;
        font-family: 'Inter', sans-serif;
        font-size: 1rem;
        color: var(--foreground);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: background 0.15s ease;
        line-height: 1;
    }

    .qty-btn:hover:not(:disabled) {
        background: var(--border);
    }

    .qty-btn:disabled {
        opacity: 0.4;
        cursor: not-allowed;
    }

    .qty-value {
        width: 40px;
        text-align: center;
        font-weight: 600;
        font-size: 0.9rem;
        padding: 6px 0;
        background: var(--card);
        border-left: 1px solid var(--border);
        border-right: 1px solid var(--border);
    }

    .item-total {
        font-weight: 700;
        color: var(--primary);
        font-size: 0.95rem;
    }

    .btn-remove {
        width: 32px;
        height: 32px;
        background: none;
        border: 1px solid transparent;
        color: var(--muted-foreground);
        cursor: pointer;
        font-size: 1rem;
        border-radius: var(--radius-sm);
        transition: all 0.15s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-remove:hover {
        background: var(--error-light);
        border-color: #FECACA;
        color: var(--error);
    }

    /* ===== Sidebar ===== */
    .cart-sidebar {
        display: flex;
        flex-direction: column;
        gap: 16px;
        position: sticky;
        top: 100px;
    }

    /* ===== Coupon Section ===== */
    .coupon-section {
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        padding: 20px;
    }

    .coupon-title {
        font-weight: 600;
        color: var(--foreground);
        margin-bottom: 14px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.92rem;
    }

    .coupon-input-group {
        display: flex;
        gap: 8px;
    }

    .coupon-input {
        flex: 1;
        padding: 10px 14px;
        border: 1px solid var(--border);
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-size: 0.88rem;
        text-transform: uppercase;
        background: var(--muted);
        color: var(--foreground);
        transition: all 0.15s ease;
        letter-spacing: 0.03em;
    }

    .coupon-input::placeholder {
        color: #9CA3AF;
        text-transform: none;
        letter-spacing: normal;
    }

    .coupon-input:focus {
        outline: none;
        border-color: var(--primary);
        background: var(--card);
        box-shadow: 0 0 0 3px rgba(0, 128, 128, 0.08);
    }

    .btn-apply {
        padding: 10px 18px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.88rem;
        cursor: pointer;
        transition: background 0.15s ease;
        white-space: nowrap;
    }

    .btn-apply:hover {
        background: var(--primary-hover);
    }

    .coupon-applied {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: var(--success-light);
        border: 1px solid #A7F3D0;
        padding: 10px 14px;
        border-radius: var(--radius-sm);
        margin-top: 10px;
    }

    .coupon-code {
        font-weight: 600;
        color: var(--success-fg);
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.85rem;
    }

    .coupon-remove {
        background: none;
        border: none;
        color: var(--success-fg);
        cursor: pointer;
        font-size: 1.2rem;
        padding: 0 2px;
        line-height: 1;
        opacity: 0.7;
        transition: opacity 0.15s ease;
    }

    .coupon-remove:hover {
        opacity: 1;
    }

    /* ===== Order Summary ===== */
    .order-summary {
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        padding: 20px;
    }

    .summary-title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 16px;
        padding-bottom: 14px;
        border-bottom: 1px solid var(--border);
        letter-spacing: -0.01em;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 7px 0;
        font-size: 0.88rem;
    }

    .summary-label {
        color: var(--muted-foreground);
    }

    .summary-value {
        font-weight: 500;
        color: var(--foreground);
    }

    .summary-row.discount .summary-value {
        color: var(--success);
    }

    /* ===== Shipping Indicator ===== */
    .shipping-indicator {
        background: var(--info-light);
        color: var(--info-fg);
        padding: 12px 14px;
        border-radius: var(--radius-sm);
        font-size: 0.82rem;
        margin: 14px 0;
        display: flex;
        align-items: center;
        gap: 10px;
        border: 1px solid #BFDBFE;
    }

    .shipping-progress {
        flex: 1;
        height: 5px;
        background: #DBEAFE;
        border-radius: 10px;
        overflow: hidden;
    }

    .shipping-progress-fill {
        height: 100%;
        background: var(--primary);
        border-radius: 10px;
        transition: width 0.3s ease;
    }

    /* ===== Summary Total ===== */
    .summary-total {
        display: flex;
        justify-content: space-between;
        padding: 14px 0;
        margin-top: 14px;
        border-top: 2px solid var(--foreground);
        font-size: 1.05rem;
    }

    .total-label {
        font-weight: 700;
        color: var(--foreground);
    }

    .total-value {
        font-weight: 800;
        color: var(--primary);
        letter-spacing: -0.01em;
    }

    /* ===== Checkout Button ===== */
    .btn-checkout {
        width: 100%;
        padding: 14px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.15s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-top: 16px;
        letter-spacing: -0.01em;
    }

    .btn-checkout:hover {
        background: var(--primary-hover);
    }

    .btn-checkout:active {
        transform: scale(0.99);
    }

    /* ===== Trust Badges ===== */
    .trust-badges {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding-top: 16px;
        border-top: 1px solid var(--border);
        margin-top: 16px;
    }

    .trust-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        font-size: 0.72rem;
        color: var(--muted-foreground);
        font-weight: 500;
    }

    .trust-icon {
        font-size: 1.25rem;
    }

    /* ===== Empty State ===== */
    .empty-state {
        text-align: center;
        padding: 80px 24px;
        background: var(--card);
        border-radius: var(--radius);
        border: 1px solid var(--border);
    }

    .empty-icon {
        font-size: 3.5rem;
        margin-bottom: 20px;
        opacity: 0.4;
    }

    .empty-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 8px;
        letter-spacing: -0.02em;
    }

    .empty-text {
        color: var(--muted-foreground);
        margin-bottom: 24px;
        font-size: 0.92rem;
    }

    .btn-shop {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: var(--primary);
        color: white;
        text-decoration: none;
        border-radius: var(--radius-sm);
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.92rem;
        transition: background 0.15s ease;
    }

    .btn-shop:hover {
        color: white;
        background: var(--primary-hover);
        text-decoration: none;
    }

    /* ===== Responsive ===== */
    @@media (max-width: 1024px) {
        .cart-layout {
            grid-template-columns: 1fr;
        }

        .cart-sidebar {
            order: -1;
            position: static;
        }
    }

    @@media (max-width: 768px) {
        .cart-header {
            display: none;
        }

        .cart-item {
            grid-template-columns: 1fr;
            gap: 14px;
            padding: 18px;
            position: relative;
        }

        .item-info {
            flex-direction: column;
            text-align: center;
        }

        .item-image {
            width: 80px;
            height: 80px;
            margin: 0 auto;
        }

        .item-price {
            text-align: center;
        }

        .qty-control {
            justify-content: center;
            margin: 0 auto;
        }

        .item-total {
            text-align: center;
            font-size: 1.1rem;
        }

        .btn-remove {
            position: absolute;
            top: 14px;
            right: 14px;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }
    }

    @@media (max-width: 576px) {
        .page-title {
            font-size: 1.25rem;
        }

        .trust-badges {
            gap: 14px;
        }

        .trust-badge {
            font-size: 0.65rem;
        }
    }
</style>

<div class="cart-page">
    <!-- Page Header -->
    <div class="page-header animate-fade-in">
        <h1 class="page-title">
            <span class="page-title-icon">üõí</span>
            Shopping Cart
            <span class="item-count" id="headerItemCount">0</span>
        </h1>
        <a href="/CustomerPortal/Products" class="btn-continue">
            <span class="btn-continue-icon">&larr;</span> Continue Shopping
        </a>
    </div>

    <div id="cartContent">
        <!-- Content loaded dynamically -->
    </div>
</div>

@section Scripts {
<script>
    const productIcons = ['üñ•Ô∏è', '‚å®Ô∏è', 'üñ±Ô∏è', 'üéß', 'üíæ', 'üéÆ', 'üì±', 'üîå', 'üíª', 'üñ®Ô∏è'];
    let cartItems = [];
    let productDetails = {};
    let appliedCoupon = null;
    const freeShippingThreshold = 2000;
    const VAT_RATE = 0.12; // 12% VAT

    document.addEventListener('DOMContentLoaded', loadCart);

    async function loadCart() {
        cartItems = JSON.parse(localStorage.getItem('cart') || '[]');

        if (cartItems.length === 0) {
            showEmptyState();
            return;
        }

        // Fetch real product data from database
        try {
            const productIds = cartItems.map(item => item.productId);
            const response = await fetch('/CustomerPortal/GetCartProducts', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(productIds)
            });
            const result = await response.json();

            if (result.success && result.data) {
                // Update cart items with real product data
                result.data.forEach(product => {
                    productDetails[product.productId] = product;
                    const cartItem = cartItems.find(c => c.productId === product.productId);
                    if (cartItem) {
                        cartItem.name = product.productName;
                        cartItem.price = product.sellingPrice;
                        cartItem.sku = product.sku || cartItem.sku;
                        cartItem.stock = product.stockQuantity;
                        cartItem.categoryName = product.categoryName;
                        cartItem.brandName = product.brandName;
                        cartItem.imageUrl = product.mainImageUrl;
                        cartItem.compareAtPrice = product.compareAtPrice;
                        cartItem.isOnSale = product.isOnSale;
                    }
                });

                // Remove cart items that no longer exist in the database
                cartItems = cartItems.filter(item => productDetails[item.productId]);
                localStorage.setItem('cart', JSON.stringify(cartItems));
            }
        } catch (error) {
            console.error('Error fetching product details:', error);
        }

        if (cartItems.length === 0) {
            showEmptyState();
        } else {
            renderCart();
        }
    }

    function renderCart() {
        const container = document.getElementById('cartContent');
        document.getElementById('headerItemCount').textContent = cartItems.reduce((sum, item) => sum + item.quantity, 0);

        const subtotal = cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0);

        // Calculate discount
        let discount = 0;
        if (appliedCoupon) {
            discount = appliedCoupon.discountType === 'Percentage'
                ? subtotal * (appliedCoupon.discountValue / 100)
                : appliedCoupon.discountValue;
            if (appliedCoupon.maxDiscountAmount && discount > appliedCoupon.maxDiscountAmount) {
                discount = appliedCoupon.maxDiscountAmount;
            }
        }

        const afterDiscount = subtotal - discount;

        // VAT Calculation (12% VAT inclusive in Philippines)
        // Price already includes VAT, so: VATable Sales = Amount / 1.12, VAT = VATable Sales * 0.12
        const vatableSales = afterDiscount / (1 + VAT_RATE);
        const vatAmount = afterDiscount - vatableSales;

        const shipping = subtotal >= freeShippingThreshold ? 0 : 150;
        const total = afterDiscount + shipping;
        const shippingProgress = Math.min((subtotal / freeShippingThreshold) * 100, 100);
        const amountToFreeShipping = Math.max(freeShippingThreshold - subtotal, 0);

        container.innerHTML = `
            <div class="cart-layout">
                <!-- Cart Items -->
                <div class="cart-items animate-fade-in">
                    <div class="cart-header">
                        <span>Product</span>
                        <span>Price</span>
                        <span>Quantity</span>
                        <span>Total</span>
                        <span></span>
                    </div>
                    <div class="cart-list" id="cartList">
                        ${cartItems.map((item, index) => {
                            const stockStatus = item.stock > 10 ? 'in-stock' : item.stock > 0 ? 'low-stock' : 'out-of-stock';
                            const stockText = item.stock > 10 ? '‚úì In Stock' : item.stock > 0 ? `‚ö† Only ${item.stock} left` : '‚úï Out of Stock';
                            const stockColor = item.stock > 10 ? 'var(--success)' : item.stock > 0 ? 'var(--warning)' : 'var(--error)';
                            return `
                            <div class="cart-item" id="item-${item.productId}">
                                <div class="item-info">
                                    <div class="item-image">${productIcons[index % productIcons.length]}</div>
                                    <div class="item-details">
                                        <div class="item-name">${item.name}</div>
                                        ${item.sku ? `<div class="item-sku">SKU: ${item.sku}</div>` : ''}
                                        ${item.brandName ? `<div class="item-sku">${item.brandName}</div>` : ''}
                                        <div class="item-stock" style="color: ${stockColor}">${stockText}</div>
                                    </div>
                                </div>
                                <div class="item-price">
                                    ‚Ç±${item.price.toLocaleString('en-PH', { minimumFractionDigits: 2 })}
                                    ${item.compareAtPrice ? `<br><small style="text-decoration: line-through; color: var(--muted-foreground); font-size: 0.75rem;">‚Ç±${item.compareAtPrice.toLocaleString()}</small>` : ''}
                                </div>
                                <div class="qty-control">
                                    <button class="qty-btn" onclick="updateQuantity(${item.productId}, -1)" ${item.quantity <= 1 ? 'disabled' : ''}>‚àí</button>
                                    <div class="qty-value">${item.quantity}</div>
                                    <button class="qty-btn" onclick="updateQuantity(${item.productId}, 1)" ${item.stock && item.quantity >= item.stock ? 'disabled' : ''}>+</button>
                                </div>
                                <div class="item-total">‚Ç±${(item.price * item.quantity).toLocaleString('en-PH', { minimumFractionDigits: 2 })}</div>
                                <button class="btn-remove" onclick="removeItem(${item.productId})" title="Remove item">üóëÔ∏è</button>
                            </div>`;
                        }).join('')}
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="cart-sidebar">
                    <!-- Coupon Section -->
                    <div class="coupon-section animate-fade-in" style="animation-delay: 0.1s">
                        <div class="coupon-title">üè∑Ô∏è Promo Code</div>
                        <div class="coupon-input-group">
                            <input type="text" class="coupon-input" id="couponInput" placeholder="Enter code" maxlength="20">
                            <button class="btn-apply" onclick="applyCoupon()">Apply</button>
                        </div>
                        ${appliedCoupon ? `
                            <div class="coupon-applied">
                                <span class="coupon-code">‚úì ${appliedCoupon.promotionCode} applied (-${appliedCoupon.discountType === 'Percentage' ? appliedCoupon.discountValue + '%' : '‚Ç±' + appliedCoupon.discountValue.toLocaleString()})</span>
                                <button class="coupon-remove" onclick="removeCoupon()">√ó</button>
                            </div>
                        ` : ''}
                    </div>

                    <!-- Order Summary -->
                    <div class="order-summary animate-fade-in" style="animation-delay: 0.15s">
                        <h3 class="summary-title">Order Summary</h3>
                        <div class="summary-row">
                            <span class="summary-label">Subtotal (${cartItems.reduce((s, i) => s + i.quantity, 0)} items)</span>
                            <span class="summary-value">‚Ç±${subtotal.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                        </div>
                        ${appliedCoupon ? `
                            <div class="summary-row discount">
                                <span class="summary-label">Discount (${appliedCoupon.promotionCode})</span>
                                <span class="summary-value">-‚Ç±${discount.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                            </div>
                        ` : ''}
                        <div class="summary-row">
                            <span class="summary-label">VATable Sales</span>
                            <span class="summary-value">‚Ç±${vatableSales.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                        </div>
                        <div class="summary-row">
                            <span class="summary-label">VAT (12%)</span>
                            <span class="summary-value">‚Ç±${vatAmount.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                        </div>
                        <div class="summary-row">
                            <span class="summary-label">Shipping</span>
                            <span class="summary-value">${shipping === 0 ? '<span style="color: var(--success)">FREE</span>' : '‚Ç±' + shipping.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                        </div>

                        ${amountToFreeShipping > 0 ? `
                            <div class="shipping-indicator">
                                <span>üöö</span>
                                <div style="flex: 1">
                                    <div style="margin-bottom: 4px">Add ‚Ç±${amountToFreeShipping.toLocaleString()} for FREE shipping!</div>
                                    <div class="shipping-progress">
                                        <div class="shipping-progress-fill" style="width: ${shippingProgress}%"></div>
                                    </div>
                                </div>
                            </div>
                        ` : `
                            <div class="shipping-indicator" style="background: var(--success-light); color: var(--success-fg)">
                                <span>üéâ</span>
                                <span>You've unlocked FREE shipping!</span>
                            </div>
                        `}

                        <div class="summary-total">
                            <span class="total-label">Total</span>
                            <span class="total-value">‚Ç±${total.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</span>
                        </div>

                        <div style="background: #f0fdf4; border: 1px solid #bbf7d0; border-radius: 8px; padding: 10px 14px; margin-bottom: 16px; font-size: 0.82rem; color: #166534;">
                            <strong>VAT Breakdown:</strong><br>
                            VATable Sales: ‚Ç±${vatableSales.toLocaleString('en-PH', { minimumFractionDigits: 2 })}<br>
                            12% VAT: ‚Ç±${vatAmount.toLocaleString('en-PH', { minimumFractionDigits: 2 })}<br>
                            VAT-Inclusive Total: ‚Ç±${afterDiscount.toLocaleString('en-PH', { minimumFractionDigits: 2 })}
                        </div>

                        <button class="btn-checkout" onclick="proceedToCheckout()">
                            üîí Proceed to Checkout
                        </button>

                        <div class="trust-badges">
                            <div class="trust-badge">
                                <span class="trust-icon">üîí</span>
                                <span>Secure Checkout</span>
                            </div>
                            <div class="trust-badge">
                                <span class="trust-icon">‚Ü©Ô∏è</span>
                                <span>7-Day Returns</span>
                            </div>
                            <div class="trust-badge">
                                <span class="trust-icon">üõ°Ô∏è</span>
                                <span>Buyer Protection</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }

    function showEmptyState() {
        document.getElementById('headerItemCount').textContent = '0';
        document.getElementById('cartContent').innerHTML = `
            <div class="empty-state animate-fade-in">
                <div class="empty-icon">üõí</div>
                <h2 class="empty-title">Your cart is empty</h2>
                <p class="empty-text">Looks like you haven't added anything yet!</p>
                <a href="/CustomerPortal/Products" class="btn-shop">
                    üõçÔ∏è Start Shopping
                </a>
            </div>
        `;
    }

    function updateQuantity(productId, change) {
        const item = cartItems.find(i => i.productId === productId);
        if (!item) return;

        const newQty = item.quantity + change;
        if (newQty < 1) return;

        // Check stock limit
        if (item.stock && newQty > item.stock) {
            showToast(`Only ${item.stock} available in stock`, 'warning');
            return;
        }

        item.quantity = newQty;
        localStorage.setItem('cart', JSON.stringify(cartItems));
        updateCartBadge();
        renderCart();
    }

    function removeItem(productId) {
        const itemElement = document.getElementById('item-' + productId);
        itemElement.classList.add('removing');

        setTimeout(() => {
            cartItems = cartItems.filter(i => i.productId !== productId);
            localStorage.setItem('cart', JSON.stringify(cartItems));
            updateCartBadge();

            if (cartItems.length === 0) {
                showEmptyState();
            } else {
                renderCart();
            }

            showToast('Item removed from cart', 'info');
        }, 300);
    }

    async function applyCoupon() {
        const code = document.getElementById('couponInput').value.trim();
        if (!code) {
            showToast('Please enter a promo code', 'warning');
            return;
        }

        const subtotal = cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0);

        try {
            const response = await fetch('/CustomerPortal/ValidatePromo', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ promoCode: code, subtotal: subtotal })
            });
            const result = await response.json();

            if (result.success) {
                appliedCoupon = result.data;
                showToast(`‚úì Promo "${result.data.promotionCode}" applied! You save ‚Ç±${result.data.discountAmount.toLocaleString()}`, 'success');
                renderCart();
            } else {
                showToast(result.message || 'Invalid promo code', 'error');
            }
        } catch (error) {
            showToast('Failed to validate promo code', 'error');
        }
    }

    function removeCoupon() {
        appliedCoupon = null;
        showToast('Coupon removed', 'info');
        renderCart();
    }

    function proceedToCheckout() {
        if (cartItems.length === 0) {
            showToast('Your cart is empty', 'warning');
            return;
        }

        // Check stock availability
        const outOfStock = cartItems.filter(item => item.stock !== undefined && item.stock <= 0);
        if (outOfStock.length > 0) {
            showToast(`Please remove out-of-stock items: ${outOfStock.map(i => i.name).join(', ')}`, 'error');
            return;
        }

        const subtotal = cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0);
        let discount = 0;
        if (appliedCoupon) {
            discount = appliedCoupon.discountType === 'Percentage'
                ? subtotal * (appliedCoupon.discountValue / 100)
                : appliedCoupon.discountValue;
            if (appliedCoupon.maxDiscountAmount && discount > appliedCoupon.maxDiscountAmount) {
                discount = appliedCoupon.maxDiscountAmount;
            }
        }

        const afterDiscount = subtotal - discount;
        const vatableSales = afterDiscount / (1 + VAT_RATE);
        const vatAmount = afterDiscount - vatableSales;
        const shipping = subtotal >= freeShippingThreshold ? 0 : 150;
        const total = afterDiscount + shipping;

        // Store checkout data
        const checkoutData = {
            items: cartItems,
            subtotal,
            discount,
            vatableSales,
            vatAmount,
            shipping,
            total,
            promoCode: appliedCoupon?.promotionCode || null,
            promoDetails: appliedCoupon || null
        };

        localStorage.setItem('checkoutData', JSON.stringify(checkoutData));
        window.location.href = '/CustomerPortal/Checkout';
    }
</script>
