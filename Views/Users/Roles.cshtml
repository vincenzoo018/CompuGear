@{
    ViewData["Title"] = "Roles & Permissions";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Roles & Permissions</h1>
        <p class="page-subtitle">Configure user roles and their permissions</p>
    </div>
</div>

<div class="row" id="rolesContainer">
    <!-- Dynamic content loaded from roles API -->
</div>

@section Scripts {
<script src="~/js/admin.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', async function() {
        await loadRoles();
    });

    async function loadRoles() {
        const container = document.getElementById('rolesContainer');
        
        try {
            const roles = await API.get('/roles');
            
            // Role badge colors and descriptions
            const roleStyles = {
                'Super Admin': { color: 'danger', icon: 'shield-lock', permissions: 'Full system access, All modules, User management, System settings' },
                'Company Admin': { color: 'warning', icon: 'building', permissions: 'Company management, Reports, User management' },
                'Sales Staff': { color: 'info', icon: 'cart', permissions: 'Sales orders, Customers, Leads, Sales reports' },
                'Customer Support Staff': { color: 'success', icon: 'headset', permissions: 'Support tickets, Customer queries, Knowledge base' },
                'Marketing Staff': { color: 'primary', icon: 'megaphone', permissions: 'Campaigns, Promotions, Marketing analytics' },
                'Accounting & Billing Staff': { color: 'secondary', icon: 'calculator', permissions: 'Invoices, Payments, Billing reports' },
                'Customer': { color: 'dark', icon: 'person', permissions: 'Customer portal access only' }
            };

            if (!roles || roles.length === 0) {
                container.innerHTML = '<div class="col-12"><div class="alert alert-info">No roles found in database.</div></div>';
                return;
            }

            container.innerHTML = roles.map(role => {
                const style = roleStyles[role.roleName] || { color: 'secondary', icon: 'person', permissions: 'Basic access' };
                return `
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm fade-in">
                            <div class="card-header bg-${style.color} text-white d-flex align-items-center">
                                <i class="bi bi-${style.icon} fs-4 me-2"></i>
                                <h5 class="mb-0">${role.roleName}</h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted mb-3">${role.description || 'No description'}</p>
                                <div class="mb-2">
                                    <strong>Access Level:</strong> 
                                    <span class="badge bg-${style.color}">${role.accessLevel || 1}</span>
                                </div>
                                <div class="mb-2">
                                    <strong>Status:</strong>
                                    <span class="badge ${role.isActive ? 'bg-success' : 'bg-secondary'}">${role.isActive ? 'Active' : 'Inactive'}</span>
                                </div>
                                <hr>
                                <p class="small mb-1"><strong>Permissions:</strong></p>
                                <p class="small text-muted mb-0">${style.permissions}</p>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

        } catch (error) {
            console.error('Failed to load roles:', error);
            container.innerHTML = '<div class="col-12"><div class="alert alert-danger">Failed to load roles. Please try again.</div></div>';
        }
    }
</script>
}
