    async function deletePromotion(id) {
        if (!confirm('Are you sure you want to delete this promotion?')) return;
        
        try {
            const response = await fetch(`/api/promotions/${id}`, { method: 'DELETE' });
            const result = await response.json();
            
            if (result.success) {
                Toast.success('Promotion deleted successfully');
                loadPromotions();
            } else {
                Toast.error(result.message || 'Failed to delete');
            }
        } catch (error) {
            Toast.error('An error occurred');
        }
    }

    function toggleDiscountFields() {
        const type = document.getElementById('discountType').value;
        const prefix = document.getElementById('discountPrefix');
        const valueGroup = document.getElementById('discountValueGroup');
        
        if (type === 'Percentage') {
            prefix.textContent = '%';
            valueGroup.style.display = 'block';
        } else if (type === 'Fixed') {
            prefix.textContent = '‚Ç±';
            valueGroup.style.display = 'block';
        } else if (type === 'FreeShipping') {
            valueGroup.style.display = 'none';
            document.getElementById('discountValue').value = '0';
        } else {
            valueGroup.style.display = 'block';
        }
    }

    function filterPromotions() {
        const search = document.getElementById('searchPromotions').value.toLowerCase();
        const typeFilter = document.getElementById('filterDiscountType').value.toLowerCase();
        const statusFilter = document.getElementById('filterPromotionStatus').value.toLowerCase();

        const rows = document.querySelectorAll('#promotionsTableBody tr');
        let visibleCount = 0;

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const isDeployed = row.dataset.deployed === 'true';
            let show = true;

            if (search && !text.includes(search)) show = false;
            if (typeFilter && !text.includes(typeFilter)) show = false;
            if (statusFilter === 'deployed' && !isDeployed) show = false;
            if (statusFilter === 'notdeployed' && isDeployed) show = false;

            row.style.display = show ? '' : 'none';
            if (show && !row.querySelector('.spinner-border')) visibleCount++;
        });

        document.getElementById('promotionCount').textContent = visibleCount + ' promotions';
    }

    function resetFilters() {
        document.getElementById('searchPromotions').value = '';
        document.getElementById('filterDiscountType').value = '';
        document.getElementById('filterPromotionStatus').value = '';
        filterPromotions();
    }

    function formatDate(dateStr) {
        if (!dateStr) return '-';
        return new Date(dateStr).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
    }
</script>
