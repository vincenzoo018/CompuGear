@section Scripts {
<script src="~/js/admin.js"></script>
<script>
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        Marketing.campaigns.load();
        
        // Search filter
        document.getElementById('searchCampaigns').addEventListener('input', filterCampaigns);
        document.getElementById('filterType').addEventListener('change', filterCampaigns);
        document.getElementById('filterStatus').addEventListener('change', filterCampaigns);
    });

    // Open create campaign modal
    function openCreateCampaignModal() {
        Marketing.campaigns.showModal();
    }

    // Save campaign (called from form submit)
    function saveCampaign(event) {
        event.preventDefault();
        Marketing.campaigns.save();
    }

    // View campaign details
    function viewCampaign(id) {
        Marketing.campaigns.view(id);
    }

    // Edit campaign
    function editCampaign(id) {
        Marketing.campaigns.edit(id);
    }

    // Edit from view modal
    function editCampaignFromView() {
        const id = document.getElementById('campaignId').value;
        Modal.hide('viewCampaignModal');
        setTimeout(() => Marketing.campaigns.edit(id), 300);
    }

    // Delete campaign
    function deleteCampaign(id) {
        if (confirm('Are you sure you want to delete this campaign?')) {
            Marketing.campaigns.delete(id);
        }
    }

    // Pause/Resume campaign
    function pauseCampaign(id) {
        Marketing.campaigns.toggleStatus(id);
    }

    // Duplicate campaign
    async function duplicateCampaign(id) {
        try {
            const campaign = await API.get(`/campaigns/${id}`);
            campaign.campaignName = campaign.campaignName + ' (Copy)';
            campaign.status = 'Draft';
            delete campaign.campaignId;
            delete campaign.campaignCode;
            await API.post('/campaigns', campaign);
            Toast.success('Campaign duplicated successfully');
            Marketing.campaigns.load();
        } catch (error) {
            Toast.error('Failed to duplicate campaign');
        }
    }

    // Filter campaigns
    function filterCampaigns() {
        const search = document.getElementById('searchCampaigns').value.toLowerCase();
        const typeFilter = document.getElementById('filterType').value;
        const statusFilter = document.getElementById('filterStatus').value;

        const rows = document.querySelectorAll('#campaignsTableBody tr');
        let visibleCount = 0;

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            let show = true;

            if (search && !text.includes(search)) show = false;
            if (typeFilter && !text.toLowerCase().includes(typeFilter.toLowerCase())) show = false;
            if (statusFilter && !text.toLowerCase().includes(statusFilter.toLowerCase())) show = false;

            row.style.display = show ? '' : 'none';
            if (show) visibleCount++;
        });

        document.getElementById('campaignCount').textContent = visibleCount + ' campaigns';
    }

    function resetFilters() {
        document.getElementById('searchCampaigns').value = '';
        document.getElementById('filterType').value = '';
        document.getElementById('filterStatus').value = '';
        document.getElementById('filterDateRange').value = '';
        filterCampaigns();
    }

    function applyFilters() {
        filterCampaigns();
        Toast.success('Filters applied!');
    }

    function viewAnalytics() {
        window.location.href = '/Marketing/Analytics';
    }

    function downloadReport() {
        Toast.success('Generating report...');
    }
</script>
