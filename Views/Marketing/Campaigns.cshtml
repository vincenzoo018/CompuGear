@section Scripts {
<script>
    let currentCampaignId = null;
    const campaignsData = [
        { id: 1, name: 'Winter Sale 2026', type: 'Email', status: 'Active', startDate: 'Jan 15, 2026', endDate: 'Feb 28, 2026', remaining: '44 days', budget: 250000, spent: 125000, revenue: 612500, roi: 245, reach: 12500, impressions: 45000, clicks: 3200, conversions: 256, description: 'Seasonal winter promotion for all products' },
        { id: 2, name: 'New Product Launch', type: 'Social', status: 'Scheduled', startDate: 'Feb 1, 2026', endDate: 'Feb 15, 2026', remaining: '2 days until start', budget: 425000, spent: 0, revenue: 0, roi: 0, reach: 0, impressions: 0, clicks: 0, conversions: 0, description: 'ProBook 15 launch announcement on social media' },
        { id: 3, name: 'Holiday Promo 2025', type: 'Email', status: 'Completed', startDate: 'Dec 1, 2025', endDate: 'Dec 31, 2025', remaining: 'Ended', budget: 600000, spent: 600000, revenue: 1872000, roi: 312, reach: 25000, impressions: 92000, clicks: 8500, conversions: 624, description: 'Year-end holiday sale campaign' },
        { id: 4, name: 'B2B Outreach', type: 'Direct', status: 'Active', startDate: 'Jan 1, 2026', endDate: 'Mar 31, 2026', remaining: '60 days', budget: 750000, spent: 250000, revenue: 445000, roi: 178, reach: 500, impressions: 2000, clicks: 450, conversions: 45, description: 'Direct outreach to enterprise customers' }
    ];

    const typeBadgeClasses = { 'Email': 'bg-info-subtle text-info', 'Social': 'bg-warning-subtle text-warning', 'Direct': 'bg-secondary-subtle text-secondary', 'PPC': 'bg-danger-subtle text-danger', 'SMS': 'bg-success-subtle text-success' };
    const statusBadgeClasses = { 'Draft': 'badge-neutral', 'Scheduled': 'badge-info', 'Active': 'badge-success', 'Paused': 'badge-warning', 'Completed': 'badge-neutral' };

    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('searchCampaigns').addEventListener('input', filterTable);
        document.getElementById('filterType').addEventListener('change', filterTable);
        document.getElementById('filterStatus').addEventListener('change', filterTable);
    });

    function openCreateCampaignModal() {
        currentCampaignId = null;
        document.getElementById('modalTitle').textContent = 'Create New Campaign';
        document.getElementById('campaignForm').reset();
        document.getElementById('campaignId').value = '0';
    }

    function viewCampaign(id) {
        const campaign = campaignsData.find(c => c.id === id);
        if (!campaign) return;
        currentCampaignId = id;
        document.getElementById('viewCampaignName').textContent = campaign.name;
        document.getElementById('viewCampaignType').textContent = campaign.type;
        document.getElementById('viewCampaignType').className = 'badge ' + typeBadgeClasses[campaign.type];
        document.getElementById('viewCampaignStatus').textContent = campaign.status;
        document.getElementById('viewCampaignStatus').className = 'badge ' + statusBadgeClasses[campaign.status];
        document.getElementById('viewCampaignROI').textContent = campaign.roi + '%';
        document.getElementById('viewCampaignBudget').textContent = '₱' + campaign.budget.toLocaleString();
        document.getElementById('viewCampaignSpent').textContent = '₱' + campaign.spent.toLocaleString();
        document.getElementById('viewCampaignRevenue').textContent = '₱' + campaign.revenue.toLocaleString();
        document.getElementById('viewCampaignStart').textContent = campaign.startDate;
        document.getElementById('viewCampaignEnd').textContent = campaign.endDate;
        document.getElementById('viewCampaignRemaining').textContent = campaign.remaining;
        document.getElementById('viewMetricReach').textContent = campaign.reach.toLocaleString();
        document.getElementById('viewMetricImpressions').textContent = campaign.impressions.toLocaleString();
        document.getElementById('viewMetricClicks').textContent = campaign.clicks.toLocaleString();
        document.getElementById('viewMetricConversions').textContent = campaign.conversions.toLocaleString();
        new bootstrap.Modal(document.getElementById('viewCampaignModal')).show();
    }

    function editCampaign(id) {
        const campaign = campaignsData.find(c => c.id === id);
        if (!campaign) return;
        currentCampaignId = id;
        document.getElementById('modalTitle').textContent = 'Edit Campaign';
        document.getElementById('campaignId').value = id;
        document.getElementById('campaignName').value = campaign.name;
        document.getElementById('campaignType').value = campaign.type;
        document.getElementById('campaignDescription').value = campaign.description;
        document.getElementById('campaignBudget').value = campaign.budget;
        document.getElementById('campaignStatus').value = campaign.status;
        new bootstrap.Modal(document.getElementById('campaignModal')).show();
    }

    function editCampaignFromView() {
        bootstrap.Modal.getInstance(document.getElementById('viewCampaignModal')).hide();
        setTimeout(() => editCampaign(currentCampaignId), 300);
    }

    function deleteCampaign(id) {
        const campaign = campaignsData.find(c => c.id === id);
        if (!campaign) return;
        currentCampaignId = id;
        document.getElementById('deleteCampaignName').textContent = campaign.name;
        new bootstrap.Modal(document.getElementById('deleteCampaignModal')).show();
    }

    function confirmDeleteCampaign() {
        showToast('success', 'Campaign deleted successfully!');
        bootstrap.Modal.getInstance(document.getElementById('deleteCampaignModal')).hide();
    }

    function saveCampaign(event) {
        event.preventDefault();
        const campaignId = document.getElementById('campaignId').value;
        const isNew = campaignId === '0';
        showToast('success', isNew ? 'Campaign created successfully!' : 'Campaign updated successfully!');
        bootstrap.Modal.getInstance(document.getElementById('campaignModal')).hide();
    }

    function pauseCampaign(id) { showToast('success', 'Campaign paused!'); }
    function duplicateCampaign(id) { showToast('success', 'Campaign duplicated!'); }
    function downloadReport() { showToast('success', 'Downloading report...'); }
    function viewAnalytics() { showToast('success', 'Opening analytics dashboard...'); }

    function filterTable() {
        const search = document.getElementById('searchCampaigns').value.toLowerCase();
        const typeFilter = document.getElementById('filterType').value;
        const statusFilter = document.getElementById('filterStatus').value;
        const rows = document.querySelectorAll('#campaignsTable tbody tr');
        let visibleCount = 0;
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const campaign = campaignsData.find(c => c.id === parseInt(row.dataset.id));
            let show = true;
            if (search && !text.includes(search)) show = false;
            if (typeFilter && campaign && campaign.type !== typeFilter) show = false;
            if (statusFilter && campaign && campaign.status !== statusFilter) show = false;
            row.style.display = show ? '' : 'none';
            if (show) visibleCount++;
        });
        document.getElementById('campaignCount').textContent = visibleCount + ' campaigns';
    }

    function resetFilters() {
        document.getElementById('searchCampaigns').value = '';
        document.getElementById('filterType').value = '';
        document.getElementById('filterStatus').value = '';
        document.getElementById('filterDateRange').value = '';
        filterTable();
    }

    function applyFilters() { filterTable(); showToast('success', 'Filters applied!'); }

    function showToast(type, message) {
        const toastId = type === 'success' ? 'successToast' : 'errorToast';
        const messageId = type === 'success' ? 'successMessage' : 'errorMessage';
        document.getElementById(messageId).textContent = message;
        new bootstrap.Toast(document.getElementById(toastId)).show();
    }
</script>
}
