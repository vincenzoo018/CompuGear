@{
    ViewData["Title"] = "Refund Requests";
    Layout = "~/Views/Shared/_BillingLayout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3">
    <div>
        <h1 class="page-title">Payment Refunds</h1>
        <p class="page-subtitle">Request payment refunds - Requires admin approval</p>
    </div>
    <button class="btn btn-warning" onclick="openRefundModal()">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="23 4 23 10 17 10"/><path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9"/>
        </svg>
        Request Refund
    </button>
</div>

<!-- Info Alert -->
<div class="alert alert-info d-flex align-items-center mb-4">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
        <circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/>
    </svg>
    <strong>Limited Access:</strong>&nbsp;Refund processing requires admin approval due to financial implications.
</div>

<!-- Stats -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center p-3">
            <div class="h3 text-warning mb-1" id="pendingRequests">0</div>
            <div class="text-muted small">Pending</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center p-3">
            <div class="h3 text-success mb-1" id="approvedRequests">0</div>
            <div class="text-muted small">Approved</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center p-3">
            <div class="h3 text-danger mb-1" id="rejectedRequests">0</div>
            <div class="text-muted small">Rejected</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center p-3">
            <div class="h3 text-primary mb-1" id="totalRefunds">₱0</div>
            <div class="text-muted small">Approved Amount</div>
        </div>
    </div>
</div>

<!-- Requests Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">My Refund Requests</h5>
        <span class="badge bg-primary" id="requestCount">0</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Request Code</th>
                        <th>Invoice #</th>
                        <th>Customer</th>
                        <th>Amount</th>
                        <th>Reason</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody id="requestsTableBody">
                    <tr><td colspan="8" class="text-center py-4">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Refund Modal -->
<div class="modal fade" id="refundModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Request Payment Refund</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="refundForm" onsubmit="submitRequest(event)">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <strong>Approval Required:</strong> This request will be reviewed by an administrator.
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Select Payment <span class="text-danger">*</span></label>
                        <select class="form-select" id="paymentId" required onchange="loadPaymentDetails()">
                            <option value="">-- Select a Payment --</option>
                        </select>
                    </div>
                    
                    <div id="paymentDetails" style="display: none;">
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Invoice:</strong> <span id="invoiceNumber">-</span><br>
                                        <strong>Customer:</strong> <span id="customerName">-</span>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <strong>Payment Amount:</strong> <span id="paymentAmount" class="text-success fs-5">₱0</span><br>
                                        <strong>Method:</strong> <span id="paymentMethod">-</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Refund Type <span class="text-danger">*</span></label>
                                <select class="form-select" id="refundType" required onchange="updateRefundAmount()">
                                    <option value="Full">Full Refund</option>
                                    <option value="Partial">Partial Refund</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Refund Amount <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">₱</span>
                                    <input type="number" class="form-control" id="refundAmount" step="0.01" min="0.01" required>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Priority <span class="text-danger">*</span></label>
                            <select class="form-select" id="priority" required>
                                <option value="Normal">Normal</option>
                                <option value="High">High</option>
                                <option value="Urgent">Urgent</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Reason for Refund <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="reason" rows="3" required placeholder="Provide detailed justification for this refund..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning" id="submitBtn" disabled>Submit Request</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let allRequests = [];
    let payments = [];
    let selectedPayment = null;

    document.addEventListener('DOMContentLoaded', function() {
        loadPayments();
        loadMyRequests();
    });

    async function loadPayments() {
        try {
            const response = await fetch('/api/payments?status=Completed');
            payments = await response.json();
            
            const select = document.getElementById('paymentId');
            select.innerHTML = '<option value="">-- Select a Payment --</option>' + 
                payments.map(p => `<option value="${p.paymentId}">${p.invoiceNumber || 'Payment #' + p.paymentId} - ₱${p.amount.toLocaleString()}</option>`).join('');
        } catch (error) {
            console.error('Error:', error);
        }
    }

    async function loadMyRequests() {
        try {
            const response = await fetch('/api/approval-requests/my-requests?module=Billing&requestType=PaymentRefund');
            allRequests = await response.json();
            renderRequests();
            updateStats();
        } catch (error) {
            console.error('Error:', error);
        }
    }

    function renderRequests() {
        const tbody = document.getElementById('requestsTableBody');
        document.getElementById('requestCount').textContent = allRequests.length;
        
        if (allRequests.length === 0) {
            tbody.innerHTML = '<tr><td colspan="8" class="text-center py-4">No requests found</td></tr>';
            return;
        }
        
        tbody.innerHTML = allRequests.map(r => {
            const data = r.requestData ? JSON.parse(r.requestData) : {};
            return `
                <tr>
                    <td><code>${r.requestCode}</code></td>
                    <td>${data.invoiceNumber || '-'}</td>
                    <td>${data.customerName || '-'}</td>
                    <td class="text-danger fw-bold">₱${(data.refundAmount || 0).toLocaleString()}</td>
                    <td>${r.reason}</td>
                    <td><span class="badge bg-${r.status === 'Pending' ? 'warning' : r.status === 'Approved' ? 'success' : 'danger'}">${r.status}</span></td>
                    <td>${new Date(r.requestedAt).toLocaleDateString()}</td>
                    <td>${r.approvalNotes || '-'}</td>
                </tr>
            `;
        }).join('');
    }

    function updateStats() {
        const pending = allRequests.filter(r => r.status === 'Pending').length;
        const approved = allRequests.filter(r => r.status === 'Approved').length;
        const rejected = allRequests.filter(r => r.status === 'Rejected').length;
        const total = allRequests.filter(r => r.status === 'Approved').reduce((sum, r) => {
            const data = r.requestData ? JSON.parse(r.requestData) : {};
            return sum + (data.refundAmount || 0);
        }, 0);
        
        document.getElementById('pendingRequests').textContent = pending;
        document.getElementById('approvedRequests').textContent = approved;
        document.getElementById('rejectedRequests').textContent = rejected;
        document.getElementById('totalRefunds').textContent = '₱' + total.toLocaleString();
    }

    function openRefundModal() {
        document.getElementById('refundForm').reset();
        document.getElementById('paymentDetails').style.display = 'none';
        document.getElementById('submitBtn').disabled = true;
        selectedPayment = null;
        new bootstrap.Modal(document.getElementById('refundModal')).show();
    }

    function loadPaymentDetails() {
        const paymentId = document.getElementById('paymentId').value;
        if (!paymentId) {
            document.getElementById('paymentDetails').style.display = 'none';
            document.getElementById('submitBtn').disabled = true;
            return;
        }
        
        selectedPayment = payments.find(p => p.paymentId == paymentId);
        if (!selectedPayment) return;
        
        document.getElementById('invoiceNumber').textContent = selectedPayment.invoiceNumber || '-';
        document.getElementById('customerName').textContent = selectedPayment.customerName || '-';
        document.getElementById('paymentAmount').textContent = '₱' + selectedPayment.amount.toLocaleString();
        document.getElementById('paymentMethod').textContent = selectedPayment.paymentMethod || '-';
        document.getElementById('refundAmount').value = selectedPayment.amount;
        document.getElementById('refundAmount').max = selectedPayment.amount;
        
        document.getElementById('paymentDetails').style.display = 'block';
        document.getElementById('submitBtn').disabled = false;
    }

    function updateRefundAmount() {
        if (!selectedPayment) return;
        const type = document.getElementById('refundType').value;
        const amountInput = document.getElementById('refundAmount');
        amountInput.value = type === 'Full' ? selectedPayment.amount : '';
        amountInput.readOnly = type === 'Full';
    }

    async function submitRequest(event) {
        event.preventDefault();
        
        if (!selectedPayment) return;
        
        const data = {
            requestType: 'PaymentRefund',
            module: 'Billing',
            title: `Refund Request - ${selectedPayment.invoiceNumber || 'Payment #' + selectedPayment.paymentId}`,
            reason: document.getElementById('reason').value,
            entityType: 'Payment',
            entityId: selectedPayment.paymentId,
            entityName: selectedPayment.invoiceNumber,
            priority: document.getElementById('priority').value,
            requestData: JSON.stringify({
                paymentId: selectedPayment.paymentId,
                invoiceNumber: selectedPayment.invoiceNumber,
                customerName: selectedPayment.customerName,
                originalAmount: selectedPayment.amount,
                refundAmount: parseFloat(document.getElementById('refundAmount').value),
                refundType: document.getElementById('refundType').value
            })
        };
        
        try {
            const response = await fetch('/api/approval-requests', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            const result = await response.json();
            
            if (result.success) {
                alert('Request submitted successfully!');
                bootstrap.Modal.getInstance(document.getElementById('refundModal')).hide();
                loadMyRequests();
            } else {
                alert(result.message || 'Failed to submit request');
            }
        } catch (error) {
            alert('Error submitting request');
        }
    }
</script>
}
