@{
    ViewData["Title"] = "Billing Dashboard";
    Layout = "~/Views/Shared/_BillingLayout.cshtml";
}

<div class="page-header">
    <p class="text-muted mb-0">Dashboard</p>
    <h1 class="page-title">Billing Dashboard</h1>
    <p class="page-subtitle">Welcome back! Here's your billing overview.</p>
</div>

<!-- Stats Cards -->
<div class="stat-cards">
    <div class="stat-card fade-in stagger-1">
        <div class="stat-info">
            <span class="stat-label">Total Revenue</span>
            <span class="stat-value" id="totalRevenue">₱0</span>
            <div class="stat-trend up" id="revenueTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon teal">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="1" x2="12" y2="23"/>
                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-2">
        <div class="stat-info">
            <span class="stat-label">Pending Amount</span>
            <span class="stat-value" id="pendingAmount">₱0</span>
            <div class="stat-trend" id="pendingTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon orange">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-3">
        <div class="stat-info">
            <span class="stat-label">Paid Amount</span>
            <span class="stat-value" id="paidAmount">₱0</span>
            <div class="stat-trend up" id="paidTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon green">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-4">
        <div class="stat-info">
            <span class="stat-label">Total Invoices</span>
            <span class="stat-value" id="invoiceCount">0</span>
            <div class="stat-trend" id="invoiceTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon blue">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                <polyline points="14 2 14 8 20 8"/>
                <line x1="16" y1="13" x2="8" y2="13"/>
                <line x1="16" y1="17" x2="8" y2="17"/>
            </svg>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="grid grid-3" style="grid-template-columns: 2fr 1fr;">
    <!-- Revenue Chart -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Revenue Overview</h3>
                <p class="card-subtitle">Monthly revenue trend</p>
            </div>
            <a href="/BillingStaff/Invoices" class="btn btn-outline btn-sm">View Details</a>
        </div>
        <div class="card-body">
            <div class="chart-container">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Payment Methods -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Payment Methods</h3>
                <p class="card-subtitle">Distribution by type</p>
            </div>
        </div>
        <div class="card-body">
            <div class="chart-container" style="height: 220px;">
                <canvas id="paymentMethodsChart"></canvas>
            </div>
            <div class="chart-legend" id="paymentLegend"></div>
        </div>
    </div>
</div>

<!-- Invoices & Payments -->
<div class="grid grid-2 mt-3">
    <!-- Recent Invoices -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Recent Invoices</h3>
                <p class="card-subtitle">Latest invoices</p>
            </div>
            <a href="/BillingStaff/Invoices" class="btn btn-primary btn-sm">View All</a>
        </div>
        <div class="card-body" style="padding: 0;">
            <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Invoice #</th>
                            <th>Customer</th>
                            <th class="text-end">Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="recentInvoicesTable">
                        <tr><td colspan="4" class="text-center py-4">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Recent Payments -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Recent Payments</h3>
                <p class="card-subtitle">Latest payments</p>
            </div>
            <a href="/BillingStaff/Payments" class="btn btn-primary btn-sm">View All</a>
        </div>
        <div class="card-body" style="padding: 0;">
            <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Reference</th>
                            <th>Customer</th>
                            <th class="text-end">Amount</th>
                            <th>Method</th>
                        </tr>
                    </thead>
                    <tbody id="recentPaymentsTable">
                        <tr><td colspan="4" class="text-center py-4">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/billing.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async function() {
            await loadBillingDashboard();
        });

        async function loadBillingDashboard() {
            try {
                const [invoicesRes, paymentsRes] = await Promise.all([
                    fetch('/api/invoices').then(r => r.json()).catch(() => ({data: []})),
                    fetch('/api/payments').then(r => r.json()).catch(() => ({data: []}))
                ]);
                
                // Extract data from wrapped response
                const invoices = invoicesRes.data || invoicesRes || [];
                const payments = paymentsRes.data || paymentsRes || [];

                // Calculate totals
                const totalRevenue = payments.reduce((sum, p) => sum + (p.amount || 0), 0);
                const pending = invoices.filter(i => i.status === 'Pending' || i.status === 'Sent');
                const pendingAmount = pending.reduce((sum, i) => sum + ((i.totalAmount || 0) - (i.paidAmount || 0)), 0);
                const paidAmount = invoices.filter(i => i.status === 'Paid').reduce((sum, i) => sum + (i.totalAmount || 0), 0);

                // Update Stats
                document.getElementById('totalRevenue').textContent = '₱' + totalRevenue.toLocaleString('en-PH', {minimumFractionDigits: 2});
                document.getElementById('pendingAmount').textContent = '₱' + pendingAmount.toLocaleString('en-PH', {minimumFractionDigits: 2});
                document.getElementById('paidAmount').textContent = '₱' + paidAmount.toLocaleString('en-PH', {minimumFractionDigits: 2});
                document.getElementById('invoiceCount').textContent = invoices.length.toLocaleString();

                // Update trends
                document.getElementById('revenueTrend').querySelector('span:last-child').textContent = 'Total collected';
                document.getElementById('pendingTrend').querySelector('span:last-child').textContent = `${pending.length} invoices`;
                document.getElementById('paidTrend').querySelector('span:last-child').textContent = 'Completed';
                document.getElementById('invoiceTrend').querySelector('span:last-child').textContent = 'All invoices';

                // Render tables
                renderRecentInvoices(invoices.slice(0, 5));
                renderRecentPayments(payments.slice(0, 5));

                // Render Charts
                renderRevenueChart(payments);
                renderPaymentMethodsChart(payments);

            } catch (error) {
                console.error('Failed to load billing dashboard:', error);
            }
        }

        function renderRecentInvoices(invoices) {
            const tbody = document.getElementById('recentInvoicesTable');
            if (invoices.length === 0) {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4">No invoices</td></tr>';
                return;
            }
            tbody.innerHTML = invoices.map(i => `
                <tr>
                    <td><strong>${i.invoiceNumber || '#' + i.invoiceId}</strong></td>
                    <td>${i.customerName || 'N/A'}</td>
                    <td class="text-end">₱${(i.totalAmount || 0).toLocaleString()}</td>
                    <td><span class="badge ${i.status === 'Paid' ? 'badge-success' : i.status === 'Overdue' ? 'badge-danger' : 'badge-warning'}">${i.status}</span></td>
                </tr>
            `).join('');
        }

        function renderRecentPayments(payments) {
            const tbody = document.getElementById('recentPaymentsTable');
            if (payments.length === 0) {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4">No payments</td></tr>';
                return;
            }
            tbody.innerHTML = payments.map(p => `
                <tr>
                    <td><strong>${p.referenceNumber || '#' + p.paymentId}</strong></td>
                    <td>${p.customerName || 'N/A'}</td>
                    <td class="text-end">₱${(p.amount || 0).toLocaleString()}</td>
                    <td><span class="badge badge-info">${p.paymentMethod}</span></td>
                </tr>
            `).join('');
        }

        function renderRevenueChart(payments) {
            const ctx = document.getElementById('revenueChart')?.getContext('2d');
            if (!ctx) return;

            const monthlyData = Array(12).fill(0);
            const currentYear = new Date().getFullYear();

            payments.forEach(p => {
                const date = new Date(p.paymentDate);
                if (date.getFullYear() === currentYear) {
                    monthlyData[date.getMonth()] += p.amount || 0;
                }
            });

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Revenue',
                        data: monthlyData,
                        borderColor: '#008080',
                        backgroundColor: 'rgba(0, 128, 128, 0.1)',
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#008080',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { color: '#E5E7EB' }, ticks: { callback: v => '₱' + (v / 1000).toFixed(0) + 'k' } },
                        x: { grid: { display: false } }
                    }
                }
            });
        }

        function renderPaymentMethodsChart(payments) {
            const ctx = document.getElementById('paymentMethodsChart')?.getContext('2d');
            if (!ctx) return;

            const methods = {};
            payments.forEach(p => {
                const method = p.paymentMethod || 'Other';
                methods[method] = (methods[method] || 0) + (p.amount || 0);
            });

            const labels = Object.keys(methods);
            const data = Object.values(methods);
            const colors = ['#008080', '#10B981', '#3B82F6', '#F59E0B', '#F97316'];

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: colors.slice(0, labels.length),
                        borderWidth: 0,
                        cutout: '70%'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } }
                }
            });

            const legend = document.getElementById('paymentLegend');
            if (legend) {
                legend.innerHTML = labels.map((label, i) => `
                    <div class="chart-legend-item"><span class="chart-legend-dot" style="background: ${colors[i]};"></span>${label}</div>
                `).join('');
            }
        }
    </script>
}
