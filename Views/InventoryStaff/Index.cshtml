@{
    ViewData["Title"] = "Inventory Dashboard";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}

<div class="page-header">
    <p class="text-muted mb-0">Dashboard</p>
    <h1 class="page-title">Inventory Dashboard</h1>
    <p class="page-subtitle">Welcome back! Here's your inventory overview.</p>
</div>

<!-- Stats Cards -->
<div class="stat-cards">
    <div class="stat-card fade-in stagger-1">
        <div class="stat-info">
            <span class="stat-label">Total Products</span>
            <span class="stat-value" id="totalProducts">0</span>
            <div class="stat-trend" id="productsTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon teal">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
                <line x1="12" y1="22.08" x2="12" y2="12"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-2">
        <div class="stat-info">
            <span class="stat-label">Inventory Value</span>
            <span class="stat-value" id="inventoryValue">₱0</span>
            <div class="stat-trend up" id="valueTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon green">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="1" x2="12" y2="23"/>
                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-3">
        <div class="stat-info">
            <span class="stat-label">Low Stock</span>
            <span class="stat-value" id="lowStockCount">0</span>
            <div class="stat-trend down" id="lowStockTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"/>
                    <polyline points="17 18 23 18 23 12"/>
                </svg>
                <span>Warning</span>
            </div>
        </div>
        <div class="stat-icon orange">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                <line x1="12" y1="9" x2="12" y2="13"/>
                <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-4">
        <div class="stat-info">
            <span class="stat-label">Out of Stock</span>
            <span class="stat-value" id="outOfStockCount">0</span>
            <div class="stat-trend down" id="outOfStockTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"/>
                    <polyline points="17 18 23 18 23 12"/>
                </svg>
                <span>Critical</span>
            </div>
        </div>
        <div class="stat-icon blue">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="15" y1="9" x2="9" y2="15"/>
                <line x1="9" y1="9" x2="15" y2="15"/>
            </svg>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="grid grid-3" style="grid-template-columns: 1fr 2fr;">
    <!-- Stock Distribution Chart -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Stock Status</h3>
                <p class="card-subtitle">Current distribution</p>
            </div>
        </div>
        <div class="card-body">
            <div class="chart-container" style="height: 220px;">
                <canvas id="stockChart"></canvas>
            </div>
            <div class="chart-legend" id="stockLegend"></div>
        </div>
    </div>

    <!-- Stock Alerts -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Stock Alerts</h3>
                <p class="card-subtitle">Products needing attention</p>
            </div>
            <a href="/InventoryStaff/Alerts" class="btn btn-outline btn-sm">View All</a>
        </div>
        <div class="card-body" style="padding: 0;">
            <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Product</th>
                            <th class="text-center">Stock</th>
                            <th class="text-center">Reorder</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="alertsTable">
                        <tr><td colspan="5" class="text-center py-4">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Category & Quick Actions -->
<div class="grid grid-2 mt-3">
    <!-- Category Distribution -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Products by Category</h3>
                <p class="card-subtitle">Category distribution</p>
            </div>
        </div>
        <div class="card-body">
            <div class="chart-container">
                <canvas id="categoryChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Quick Actions</h3>
                <p class="card-subtitle">Navigate to modules</p>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-6">
                    <a href="/InventoryStaff/Products" class="btn btn-outline-primary w-100 py-3">
                        <svg width="24" height="24" class="d-block mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                        </svg>
                        Products
                    </a>
                </div>
                <div class="col-6">
                    <a href="/InventoryStaff/Stock" class="btn btn-outline-info w-100 py-3">
                        <svg width="24" height="24" class="d-block mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="20" x2="12" y2="10"/>
                            <line x1="18" y1="20" x2="18" y2="4"/>
                            <line x1="6" y1="20" x2="6" y2="16"/>
                        </svg>
                        Stock Levels
                    </a>
                </div>
                <div class="col-6">
                    <a href="/InventoryStaff/Alerts" class="btn btn-outline-warning w-100 py-3">
                        <svg width="24" height="24" class="d-block mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                            <line x1="12" y1="9" x2="12" y2="13"/>
                            <line x1="12" y1="17" x2="12.01" y2="17"/>
                        </svg>
                        Alerts
                    </a>
                </div>
                <div class="col-6">
                    <a href="/InventoryStaff/Suppliers" class="btn btn-outline-success w-100 py-3">
                        <svg width="24" height="24" class="d-block mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="1" y="3" width="15" height="13"/>
                            <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                            <circle cx="5.5" cy="18.5" r="2.5"/>
                            <circle cx="18.5" cy="18.5" r="2.5"/>
                        </svg>
                        Suppliers
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/inventory.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async function() {
            await loadInventoryDashboard();
        });

        async function loadInventoryDashboard() {
            try {
                const products = await fetch('/api/products').then(r => r.json()).catch(() => []);
                
                // Update Stats Cards
                document.getElementById('totalProducts').textContent = products.length.toLocaleString();
                
                const inventoryValue = products.reduce((sum, p) => sum + ((p.price || 0) * (p.stockQuantity || 0)), 0);
                document.getElementById('inventoryValue').textContent = '₱' + inventoryValue.toLocaleString('en-PH', {minimumFractionDigits: 2});
                
                const lowStock = products.filter(p => p.stockQuantity > 0 && p.stockQuantity <= (p.reorderLevel || 10));
                const outOfStock = products.filter(p => (p.stockQuantity || 0) <= 0);
                
                document.getElementById('lowStockCount').textContent = lowStock.length;
                document.getElementById('outOfStockCount').textContent = outOfStock.length;
                
                // Update trends
                document.getElementById('productsTrend').querySelector('span:last-child').textContent = `${products.filter(p => p.isActive).length} active`;
                document.getElementById('valueTrend').querySelector('span:last-child').textContent = 'Total value';
                
                // Render Alerts Table
                renderAlerts([...outOfStock, ...lowStock].slice(0, 5));
                
                // Render Charts
                renderStockChart(products);
                renderCategoryChart(products);
                
            } catch (error) {
                console.error('Failed to load dashboard:', error);
            }
        }

        function renderAlerts(products) {
            const tbody = document.getElementById('alertsTable');
            if (products.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center py-4">No alerts</td></tr>';
                return;
            }
            tbody.innerHTML = products.map(p => `
                <tr>
                    <td><strong>${p.sku || 'N/A'}</strong></td>
                    <td>${p.productName}</td>
                    <td class="text-center">${p.stockQuantity || 0}</td>
                    <td class="text-center">${p.reorderLevel || 10}</td>
                    <td><span class="badge ${(p.stockQuantity || 0) <= 0 ? 'badge-danger' : 'badge-warning'}">${(p.stockQuantity || 0) <= 0 ? 'Out of Stock' : 'Low Stock'}</span></td>
                </tr>
            `).join('');
        }

        function renderStockChart(products) {
            const ctx = document.getElementById('stockChart')?.getContext('2d');
            if (!ctx) return;

            const inStock = products.filter(p => p.stockQuantity > (p.reorderLevel || 10)).length;
            const lowStock = products.filter(p => p.stockQuantity > 0 && p.stockQuantity <= (p.reorderLevel || 10)).length;
            const outStock = products.filter(p => (p.stockQuantity || 0) <= 0).length;

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['In Stock', 'Low Stock', 'Out of Stock'],
                    datasets: [{
                        data: [inStock, lowStock, outStock],
                        backgroundColor: ['#10B981', '#F59E0B', '#EF4444'],
                        borderWidth: 0,
                        cutout: '70%'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } }
                }
            });

            const legend = document.getElementById('stockLegend');
            if (legend) {
                legend.innerHTML = `
                    <div class="chart-legend-item"><span class="chart-legend-dot" style="background: #10B981;"></span>In Stock (${inStock})</div>
                    <div class="chart-legend-item"><span class="chart-legend-dot" style="background: #F59E0B;"></span>Low Stock (${lowStock})</div>
                    <div class="chart-legend-item"><span class="chart-legend-dot" style="background: #EF4444;"></span>Out of Stock (${outStock})</div>
                `;
            }
        }

        function renderCategoryChart(products) {
            const ctx = document.getElementById('categoryChart')?.getContext('2d');
            if (!ctx) return;

            const categories = {};
            products.forEach(p => {
                const cat = p.categoryName || 'Other';
                categories[cat] = (categories[cat] || 0) + 1;
            });

            const labels = Object.keys(categories);
            const data = Object.values(categories);
            const colors = ['#008080', '#10B981', '#3B82F6', '#F59E0B', '#F97316', '#EF4444', '#8B5CF6'];

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: colors.slice(0, labels.length),
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { color: '#E5E7EB' } },
                        x: { grid: { display: false } }
                    }
                }
            });
        }
    </script>
}
