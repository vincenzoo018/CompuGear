@{
    Layout = "~/Views/ERPWebsite/_ERPWebsiteLayout.cshtml";
    ViewData["Title"] = "Features";
    ViewData["ActivePage"] = "Features";
}

@section Styles {
    .features-hero {
        background: linear-gradient(180deg, #f0f9f9 0%, #f8f9fc 100%);
        padding: 80px 24px 60px; text-align: center;
    }
    .features-hero h1 { font-size: 2.8rem; font-weight: 800; color: #1a1a2e; margin-bottom: 16px; }
    .features-hero p { font-size: 1.1rem; color: #666; max-width: 600px; margin: 0 auto; }

    .features-section { padding: 60px 24px; }
    .feature-block {
        max-width: 1000px; margin: 0 auto 60px;
        display: grid; grid-template-columns: 1fr 1fr; gap: 48px;
        align-items: center;
    }
    .feature-block:nth-child(even) { direction: rtl; }
    .feature-block:nth-child(even) > * { direction: ltr; }

    .feature-visual {
        background: #f8f9fc; border-radius: 20px; padding: 40px;
        display: flex; align-items: center; justify-content: center;
        min-height: 260px; border: 1px solid #eee;
    }
    .feature-visual .feat-icon {
        width: 80px; height: 80px; border-radius: 20px;
        display: flex; align-items: center; justify-content: center;
    }
    .feature-visual .feat-icon svg { width: 40px; height: 40px; }

    .feature-content h2 { font-size: 1.6rem; font-weight: 700; color: #1a1a2e; margin-bottom: 12px; }
    .feature-content p { font-size: 0.95rem; color: #777; line-height: 1.7; margin-bottom: 20px; }
    .feature-content .feat-list { list-style: none; }
    .feature-content .feat-list li {
        display: flex; align-items: center; gap: 10px;
        font-size: 0.9rem; color: #555; padding: 6px 0;
    }
    .feature-content .feat-list li svg { color: #008080; flex-shrink: 0; }

    .integration-section {
        background: #fff; padding: 60px 24px; text-align: center;
        border-top: 1px solid #f0f0f0;
    }
    .integration-section h2 { font-size: 2rem; font-weight: 700; color: #1a1a2e; margin-bottom: 12px; }
    .integration-section p { font-size: 1rem; color: #666; margin-bottom: 40px; }
    .integration-grid {
        max-width: 800px; margin: 0 auto;
        display: grid; grid-template-columns: repeat(4, 1fr); gap: 24px;
    }
    .integration-item {
        background: #f8f9fc; border-radius: 12px; padding: 24px;
        border: 1px solid #eee; transition: all 0.3s;
    }
    .integration-item:hover { border-color: rgba(0,128,128,0.2); transform: translateY(-2px); }
    .integration-item .int-icon {
        width: 48px; height: 48px; border-radius: 12px;
        background: #008080; color: #ffffff;
        display: flex; align-items: center; justify-content: center;
        margin: 0 auto 12px;
    }
    .integration-item p { font-size: 0.85rem; font-weight: 600; color: #555; }

    @@media (max-width: 768px) {
        .features-hero h1 { font-size: 2rem; }
        .feature-block { grid-template-columns: 1fr; gap: 24px; }
        .feature-block:nth-child(even) { direction: ltr; }
        .integration-grid { grid-template-columns: repeat(2, 1fr); }
    }
}

