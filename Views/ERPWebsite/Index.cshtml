@{
    Layout = "~/Views/ERPWebsite/_ERPWebsiteLayout.cshtml";
    ViewData["Title"] = "Enterprise Resource Planning";
    ViewData["ActivePage"] = "Home";
}

@section Styles {
    /* ========== HERO ========== */
    .hero {
        background: linear-gradient(180deg, #f0f9f9 0%, #f8f9fc 100%);
        padding: 100px 24px 80px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    .hero::before {
        content: '';
        position: absolute;
        top: -200px; right: -200px;
        width: 600px; height: 600px;
        background: radial-gradient(circle, rgba(0,128,128,0.06) 0%, transparent 70%);
        border-radius: 50%;
    }
    .hero::after {
        content: '';
        position: absolute;
        bottom: -150px; left: -150px;
        width: 400px; height: 400px;
        background: radial-gradient(circle, rgba(0,128,128,0.04) 0%, transparent 70%);
        border-radius: 50%;
    }
    .hero .badge-tag {
        display: inline-flex; align-items: center; gap: 6px;
        background: rgba(0,128,128,0.08); border: 1px solid rgba(0,128,128,0.15);
        padding: 8px 20px; border-radius: 50px;
        font-size: 0.9rem; font-weight: 500; color: #008080;
        margin-bottom: 28px;
    }
    .hero h1 {
        font-size: 3.5rem; font-weight: 800; line-height: 1.15;
        color: #1a1a2e; margin-bottom: 24px;
        max-width: 800px; margin-left: auto; margin-right: auto;
    }
    .hero h1 span { color: #008080; }
    .hero p {
        font-size: 1.15rem; color: #666; max-width: 650px;
        margin: 0 auto 40px; line-height: 1.7;
    }
    .hero .btn-hero {
        display: inline-flex; align-items: center; gap: 8px;
        background: #008080; color: #fff; padding: 16px 40px;
        border-radius: 12px; font-weight: 600; font-size: 1.05rem;
        transition: all 0.3s; border: none; cursor: pointer;
        box-shadow: 0 4px 15px rgba(0,128,128,0.25);
    }
    .hero .btn-hero:hover { background: #006666; transform: translateY(-2px); box-shadow: 0 8px 25px rgba(0,128,128,0.35); }
    .hero .trust-line {
        margin-top: 40px; font-size: 0.85rem; color: #999;
    }
    .hero .trust-line span { margin: 0 6px; color: #ccc; }

    /* ========== STATS ========== */
    .stats-section {
        padding: 60px 24px;
        background: #fff;
        border-top: 1px solid #f0f0f0;
        border-bottom: 1px solid #f0f0f0;
    }
    .stats-grid {
        max-width: 1000px; margin: 0 auto;
        display: grid; grid-template-columns: repeat(4, 1fr); gap: 40px;
        text-align: center;
    }
    .stats-grid .stat-num { font-size: 2.5rem; font-weight: 800; color: #008080; }
    .stats-grid .stat-label { font-size: 0.8rem; font-weight: 500; text-transform: uppercase; letter-spacing: 0.04em; color: #888; margin-top: 4px; }

    /* ========== MODULES PREVIEW ========== */
    .modules-section { padding: 80px 24px; background: #f8f9fc; }
    .modules-section .section-header { text-align: center; margin-bottom: 50px; }
    .modules-section .section-header h2 { font-size: 2.2rem; font-weight: 700; color: #1a1a2e; margin-bottom: 12px; }
    .modules-section .section-header p { font-size: 1.05rem; color: #666; max-width: 600px; margin: 0 auto; }
    .modules-grid {
        max-width: 1100px; margin: 0 auto;
        display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px;
    }
    .module-card {
        background: #fff; border-radius: 16px; padding: 32px;
        border: 1px solid #eee; transition: all 0.3s;
    }
    .module-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0,0,0,0.08);
        border-color: rgba(0,128,128,0.2);
    }
    .module-card .card-icon {
        width: 56px; height: 56px; border-radius: 14px;
        display: flex; align-items: center; justify-content: center;
        margin-bottom: 20px;
    }
    .module-card .card-icon svg { width: 28px; height: 28px; }
    .module-card h3 { font-size: 1.15rem; font-weight: 600; margin-bottom: 10px; color: #1a1a2e; }
    .module-card p { font-size: 0.9rem; color: #777; line-height: 1.6; }

    /* Icon backgrounds */
    .icon-sales { background: #3B82F6; color: #ffffff; }
    .icon-inventory { background: #10B981; color: #ffffff; }
    .icon-billing { background: #F59E0B; color: #ffffff; }
    .icon-support { background: #8B5CF6; color: #ffffff; }
    .icon-marketing { background: #EC4899; color: #ffffff; }
    .icon-admin { background: #008080; color: #ffffff; }

    /* ========== CTA ========== */
    .cta-section {
        padding: 80px 24px; text-align: center;
        background: linear-gradient(135deg, #008080 0%, #006666 100%);
        color: #fff;
    }
    .cta-section h2 { font-size: 2.2rem; font-weight: 700; margin-bottom: 16px; }
    .cta-section p { font-size: 1.1rem; opacity: 0.9; margin-bottom: 32px; max-width: 550px; margin-left: auto; margin-right: auto; }
    .cta-section .btn-cta {
        display: inline-flex; align-items: center; gap: 8px;
        background: #fff; color: #008080; padding: 14px 36px;
        border-radius: 10px; font-weight: 600; font-size: 1rem;
        transition: all 0.3s; border: none; cursor: pointer;
    }
    .cta-section .btn-cta:hover { transform: translateY(-2px); box-shadow: 0 8px 20px rgba(0,0,0,0.15); }

    /* ========== WHY CHOOSE ========== */
    .why-section { padding: 80px 24px; background: #fff; }
    .why-section .section-header { text-align: center; margin-bottom: 50px; }
    .why-section .section-header h2 { font-size: 2.2rem; font-weight: 700; color: #1a1a2e; margin-bottom: 12px; }
    .why-section .section-header p { font-size: 1.05rem; color: #666; }
    .why-grid {
        max-width: 1000px; margin: 0 auto;
        display: grid; grid-template-columns: repeat(2, 1fr); gap: 32px;
    }
    .why-item { display: flex; gap: 16px; align-items: flex-start; }
    .why-item .why-icon {
        flex-shrink: 0; width: 48px; height: 48px; border-radius: 12px;
        background: #008080; color: #ffffff;
        display: flex; align-items: center; justify-content: center;
    }
    .why-item h4 { font-size: 1rem; font-weight: 600; margin-bottom: 4px; color: #1a1a2e; }
    .why-item p { font-size: 0.88rem; color: #777; }

    @@media (max-width: 768px) {
        .hero h1 { font-size: 2.2rem; }
        .stats-grid { grid-template-columns: repeat(2, 1fr); gap: 24px; }
        .modules-grid { grid-template-columns: 1fr; }
        .why-grid { grid-template-columns: 1fr; }
    }
}

