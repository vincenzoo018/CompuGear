@{
    ViewData["Title"] = "Customer History";
}

<div class="page-header">
    <h1 class="page-title">Customer History</h1>
    <p class="page-subtitle">View customer activity and transaction history</p>
</div>

<div class="card fade-in">
    <div class="card-header">
        <div class="search-input">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"/>
                <line x1="21" y1="21" x2="16.65" y2="16.65"/>
            </svg>
            <input type="text" placeholder="Search history...">
        </div>
    </div>
    <div class="card-body" style="padding: 0;">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Activity</th>
                    <th>Details</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Jan 30, 2026</td>
                    <td><strong>Acme Corporation</strong></td>
                    <td><span class="badge badge-info">Order Placed</span></td>
