@section Scripts {
<script>
    let currentCustomerId = null;
    const customersData = [
        { id: 1, firstName: 'Acme', lastName: 'Corporation', companyName: 'Acme Corporation', email: 'contact@acme.com', phone: '+63-917-555-0101', categoryId: 2, category: 'Business', isActive: true, orders: 45, totalSpent: 6271500, creditLimit: 500000, address: 'Manila, Metro Manila' },
        { id: 2, firstName: 'John', lastName: 'Doe', companyName: '', email: 'john.doe@email.com', phone: '+63-917-555-0102', categoryId: 1, category: 'Individual', isActive: true, orders: 12, totalSpent: 162500, creditLimit: 50000, address: 'Quezon City' },
        { id: 3, firstName: 'Tech', lastName: 'Solutions', companyName: 'Tech Solutions Inc', email: 'info@techsol.com', phone: '+63-917-555-0103', categoryId: 2, category: 'Business', isActive: true, orders: 89, totalSpent: 14382500, creditLimit: 1000000, address: 'Makati City' },
        { id: 4, firstName: 'Jane', lastName: 'Smith', companyName: '', email: 'jane.smith@email.com', phone: '+63-917-555-0104', categoryId: 1, category: 'Individual', isActive: false, orders: 3, totalSpent: 44500, creditLimit: 20000, address: 'Cebu City' },
        { id: 5, firstName: 'Global', lastName: 'Enterprises', companyName: 'Global Enterprises', email: 'sales@globalent.com', phone: '+63-917-555-0105', categoryId: 3, category: 'VIP', isActive: true, orders: 156, totalSpent: 27105000, creditLimit: 2000000, address: 'Taguig City' },
        { id: 6, firstName: 'StartUp', lastName: 'Hub', companyName: 'StartUp Hub', email: 'hello@startuphub.com', phone: '+63-917-555-0106', categoryId: 2, category: 'Business', isActive: true, orders: 28, totalSpent: 3390000, creditLimit: 300000, address: 'BGC, Taguig' }
    ];

    const categoryBadgeClasses = { 1: 'badge-pending', 2: 'badge-info', 3: 'badge-error', 4: 'badge-warning', 5: 'badge-success' };

    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('searchCustomers').addEventListener('input', filterTable);
        document.getElementById('filterType').addEventListener('change', filterTable);
        document.getElementById('filterStatus').addEventListener('change', filterTable);
    });

    function openCreateCustomerModal() {
        currentCustomerId = null;
        document.getElementById('modalTitle').textContent = 'Add New Customer';
        document.getElementById('customerForm').reset();
        document.getElementById('customerId').value = '0';
    }

    function viewCustomer(id) {
        const customer = customersData.find(c => c.id === id);
        if (!customer) return;
        currentCustomerId = id;
        const displayName = customer.companyName || (customer.firstName + ' ' + customer.lastName);
        const initials = displayName.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
        document.getElementById('viewAvatar').textContent = initials;
        document.getElementById('viewCustomerName').textContent = displayName;
        document.getElementById('viewCategory').textContent = customer.category;
        document.getElementById('viewCategory').className = 'badge ' + categoryBadgeClasses[customer.categoryId];
        document.getElementById('viewEmail').textContent = customer.email;
        document.getElementById('viewPhone').textContent = customer.phone || 'Not provided';
        document.getElementById('viewAddress').textContent = customer.address || 'Not provided';
        document.getElementById('viewStatus').innerHTML = customer.isActive ? '<span class="badge badge-success">Active</span>' : '<span class="badge badge-neutral">Inactive</span>';
        document.getElementById('viewOrders').textContent = customer.orders;
        document.getElementById('viewSpent').textContent = '₱' + customer.totalSpent.toLocaleString('en-PH');
        document.getElementById('viewCredit').textContent = '₱' + customer.creditLimit.toLocaleString('en-PH');
        new bootstrap.Modal(document.getElementById('viewCustomerModal')).show();
    }

    function editCustomer(id) {
        const customer = customersData.find(c => c.id === id);
        if (!customer) return;
        currentCustomerId = id;
        document.getElementById('modalTitle').textContent = 'Edit Customer';
        document.getElementById('customerId').value = id;
        document.getElementById('firstName').value = customer.firstName;
        document.getElementById('lastName').value = customer.lastName;
        document.getElementById('companyName').value = customer.companyName || '';
        document.getElementById('email').value = customer.email;
        document.getElementById('phone').value = customer.phone || '';
        document.getElementById('categoryId').value = customer.categoryId;
        document.getElementById('creditLimit').value = customer.creditLimit;
        document.getElementById('isActive').value = customer.isActive.toString();
        new bootstrap.Modal(document.getElementById('customerModal')).show();
    }

    function editCustomerFromView() {
        bootstrap.Modal.getInstance(document.getElementById('viewCustomerModal')).hide();
        setTimeout(() => editCustomer(currentCustomerId), 300);
    }

    function deleteCustomer(id, name) {
        currentCustomerId = id;
        document.getElementById('deleteItemName').textContent = name;
        new bootstrap.Modal(document.getElementById('deleteConfirmModal')).show();
        document.getElementById('confirmDeleteBtn').onclick = function() {
            showToast('success', name + ' has been removed from customers!');
            bootstrap.Modal.getInstance(document.getElementById('deleteConfirmModal')).hide();
            const row = document.querySelector('tr[data-id="' + id + '"]');
            if (row) { row.style.transition = 'opacity 0.3s'; row.style.opacity = '0'; setTimeout(() => row.remove(), 300); }
        };
    }

    function saveCustomer(event) {
        event.preventDefault();
        const customerId = document.getElementById('customerId').value;
        const isNew = customerId === '0';
        showToast('success', isNew ? 'Customer added successfully!' : 'Customer updated successfully!');
        bootstrap.Modal.getInstance(document.getElementById('customerModal')).hide();
    }

    function filterTable() {
        const search = document.getElementById('searchCustomers').value.toLowerCase();
        const typeFilter = document.getElementById('filterType').value;
        const statusFilter = document.getElementById('filterStatus').value;
        const rows = document.querySelectorAll('#customersTable tbody tr');
        let visibleCount = 0;
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const customer = customersData.find(c => c.id === parseInt(row.dataset.id));
            let show = true;
            if (search && !text.includes(search)) show = false;
            if (typeFilter && customer && customer.category !== typeFilter) show = false;
            if (statusFilter === 'active' && customer && !customer.isActive) show = false;
            if (statusFilter === 'inactive' && customer && customer.isActive) show = false;
            row.style.display = show ? '' : 'none';
            if (show) visibleCount++;
        });
        document.getElementById('customerCount').textContent = visibleCount + ' customers';
    }

    function resetFilters() {
        document.getElementById('searchCustomers').value = '';
        document.getElementById('filterType').value = '';
        document.getElementById('filterStatus').value = '';
        filterTable();
    }

    function exportCustomers() { showToast('success', 'Exporting customer data...'); }

    function showToast(type, message) {
        const toastId = type === 'success' ? 'successToast' : 'errorToast';
        const messageId = type === 'success' ? 'successMessage' : 'errorMessage';
        document.getElementById(messageId).textContent = message;
        new bootstrap.Toast(document.getElementById(toastId)).show();
    }
</script>
}
