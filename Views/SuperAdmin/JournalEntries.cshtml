@{
    ViewData["Title"] = "Journal Entries";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
        <div>
            <p class="text-muted mb-0">Accounting</p>
            <h1 class="page-title">Journal Entries</h1>
            <p class="page-subtitle">Platform-level journal entries including system-derived subscription and tax entries.</p>
        </div>
        <button class="btn btn-primary" onclick="JEModule.openCreate()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            Create Entry
        </button>
    </div>
</div>

<!-- Stats -->
<div class="stat-cards">
    <div class="stat-card fade-in stagger-1">
        <div class="stat-info"><span class="stat-label">Total Entries</span><span class="stat-value" id="totalEntries">0</span></div>
        <div class="stat-icon teal"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg></div>
    </div>
    <div class="stat-card fade-in stagger-2">
        <div class="stat-info"><span class="stat-label">Posted</span><span class="stat-value" id="postedEntries">0</span></div>
        <div class="stat-icon green"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg></div>
    </div>
    <div class="stat-card fade-in stagger-3">
        <div class="stat-info"><span class="stat-label">Drafts</span><span class="stat-value" id="draftEntries">0</span></div>
        <div class="stat-icon blue"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg></div>
    </div>
    <div class="stat-card fade-in stagger-4">
        <div class="stat-info"><span class="stat-label">System Entries</span><span class="stat-value" id="systemEntries">0</span></div>
        <div class="stat-icon orange"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg></div>
    </div>
</div>

<!-- Filters -->
<div class="card fade-in mb-3 mt-3">
    <div class="card-body">
        <div class="d-flex gap-3 align-items-end flex-wrap">
            <div class="form-group mb-0 flex-grow-1">
                <label class="form-label">Search</label>
                <input type="text" class="form-control" id="jeSearch" placeholder="Search by entry number or description..." oninput="JEModule.currentPage=1;JEModule.render()">
            </div>
            <div class="form-group mb-0">
                <label class="form-label">Status</label>
                <select class="form-control" id="jeStatusFilter" onchange="JEModule.currentPage=1;JEModule.render()">
                    <option value="">All</option>
                    <option value="Posted">Posted</option>
                    <option value="Draft">Draft</option>
                    <option value="Void">Void</option>
                </select>
            </div>
            <div class="form-group mb-0">
                <label class="form-label">Source</label>
                <select class="form-control" id="jeSourceFilter" onchange="JEModule.currentPage=1;JEModule.render()">
                    <option value="">All Sources</option>
                    <option value="Manual">Manual</option>
                    <option value="System">System</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="card fade-in">
    <div class="card-body" style="padding:0;">
        <div class="data-table-wrapper">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Entry #</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Reference</th>
                        <th>Source</th>
                        <th class="text-end">Debit</th>
                        <th class="text-end">Credit</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="jeTableBody">
                    <tr><td colspan="9" class="text-center py-4">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center" id="jePagination"></div>
</div>

<!-- View Journal Entry Modal -->
<div class="modal fade" id="viewJeModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h5 class="modal-title">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                    Journal Entry Details
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3 mb-3">
                    <div class="col-md-4"><strong>Entry #:</strong> <span id="viewJeNumber"></span></div>
                    <div class="col-md-4"><strong>Date:</strong> <span id="viewJeDate"></span></div>
                    <div class="col-md-4"><strong>Status:</strong> <span id="viewJeStatus"></span></div>
                    <div class="col-md-8"><strong>Description:</strong> <span id="viewJeDesc"></span></div>
                    <div class="col-md-4"><strong>Source:</strong> <span id="viewJeSource"></span></div>
                    <div class="col-md-4"><strong>Reference:</strong> <span id="viewJeRef"></span></div>
                    <div class="col-md-4"><strong>Posted:</strong> <span id="viewJePosted"></span></div>
                    <div class="col-md-4"><strong>Notes:</strong> <span id="viewJeNotes"></span></div>
                </div>
                <table class="table table-sm table-bordered">
                    <thead><tr><th>Code</th><th>Account</th><th>Description</th><th class="text-end">Debit</th><th class="text-end">Credit</th></tr></thead>
                    <tbody id="viewJeLines"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Journal Entry Modal -->
<div class="modal fade" id="jeModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h5 class="modal-title" id="jeModalTitle">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>
                    Create Journal Entry
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="jeId">
                <div class="row g-3 mb-3">
                    <div class="col-md-3">
                        <div class="form-group mb-0"><label class="form-label">Date *</label>
                        <input type="date" class="form-control" id="jeDate"></div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group mb-0"><label class="form-label">Description *</label>
                        <input type="text" class="form-control" id="jeDesc" placeholder="Entry description"></div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-0"><label class="form-label">Reference</label>
                        <input type="text" class="form-control" id="jeRef" placeholder="Optional reference"></div>
                    </div>
                    <div class="col-12">
                        <div class="form-group mb-0"><label class="form-label">Notes</label>
                        <textarea class="form-control" id="jeNotes" rows="2" placeholder="Additional notes..."></textarea></div>
                    </div>
                </div>

                <!-- Line Items -->
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h6 class="mb-0">Line Items</h6>
                    <button class="btn btn-sm btn-outline-primary" onclick="JEModule.addLine()">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
                        Add Line
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead><tr><th style="min-width:200px">Account</th><th>Description</th><th class="text-end" style="width:140px">Debit</th><th class="text-end" style="width:140px">Credit</th><th style="width:50px"></th></tr></thead>
                        <tbody id="jeLinesBody"></tbody>
                        <tfoot>
                            <tr style="font-weight:700">
                                <td colspan="2" class="text-end">Totals</td>
                                <td class="text-end" id="jeTotalDebit">₱0.00</td>
                                <td class="text-end" id="jeTotalCredit">₱0.00</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td colspan="2" class="text-end"><strong>Difference</strong></td>
                                <td colspan="2" class="text-center" id="jeDifference" style="font-weight:700;">₱0.00</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="JEModule.save()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/><polyline points="17 21 17 13 7 13 7 21"/><polyline points="7 3 7 8 15 8"/></svg>
                    Save Entry
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/superadmin-accounting.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => JEModule.load());
    </script>
}
