@{
    ViewData["Title"] = "User Archive";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
        <div>
            <p class="text-muted mb-0">Users</p>
            <h1 class="page-title">User Archive</h1>
            <p class="page-subtitle">Deactivated user accounts that can be restored.</p>
        </div>
        <a href="/SuperAdmin/Users" class="btn btn-primary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                <line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/>
            </svg>
            Back to Users
        </a>
    </div>
</div>

<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center" style="padding: 1rem 1.25rem;">
        <h5 class="mb-0">Archived Users</h5>
        <span class="badge bg-secondary" id="archiveCount">0 archived</span>
    </div>
    <div class="card-body" style="padding:0;">
        <div class="data-table-wrapper">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Company</th>
                        <th>Role</th>
                        <th>Last Login</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="archiveTableBody">
                    <tr><td colspan="6" class="text-center py-4">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center" id="superAdminUserArchivePagination"></div>
</div>
    <script>
        let archivedUsers = [];

        document.addEventListener('DOMContentLoaded', loadArchivedUsers);

        async function loadArchivedUsers() {
            try {
                showLoading();
                const res = await fetch('/api/superadmin/users');
                const users = await res.json();
                archivedUsers = (users || []).filter(u => !u.isActive);
                renderArchivedUsers();
                hideLoading();
            } catch (error) {
                hideLoading();
                showError('Failed to load archived users');
            }
        }

        function renderArchivedUsers() {
            const tbody = document.getElementById('archiveTableBody');
            document.getElementById('archiveCount').textContent = `${archivedUsers.length} archived`;

            if (!archivedUsers.length) {
                tbody.innerHTML = '<tr><td colspan="6" class="text-center py-4 text-muted">No archived users</td></tr>';
                return;
            }

            tbody.innerHTML = archivedUsers.map(u => `
                <tr>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <div style="width:32px;height:32px;border-radius:50%;background:#008080;color:#fff;display:flex;align-items:center;justify-content:center;font-size:12px;font-weight:600;">
                                ${(u.firstName||'?')[0]}${(u.lastName||'?')[0]}
                            </div>
                            <strong>${u.firstName} ${u.lastName}</strong>
                        </div>
                    </td>
                    <td>${u.email || '-'}</td>
                    <td>${u.companyName || '-'}</td>
                    <td><span class="badge ${u.roleId===1?'badge-error':u.roleId===2?'badge-warning':'badge-info'}">${u.roleName || 'Unknown'}</span></td>
                    <td><small>${u.lastLoginAt ? new Date(u.lastLoginAt).toLocaleDateString() : 'Never'}</small></td>
                    <td>
                        <button class="btn btn-sm btn-success" onclick="restoreUser(${u.userId})">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                <polyline points="23 4 23 10 17 10"/><path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
                            </svg>
                            Restore
                        </button>
                    </td>
                </tr>
            `).join('');
            if (typeof initPagination === 'function') initPagination('archiveTableBody', 'superAdminUserArchivePagination', 10);
        }

        async function restoreUser(id) {
            if (!confirm('Are you sure you want to reactivate this user?')) return;
            try {
                showLoading();
                const res = await fetch(`/api/superadmin/users/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ isActive: true })
                });
                const result = await res.json();
                hideLoading();

                if (result.success || res.ok) {
                    showSuccess(result.message || 'User restored successfully');
                    archivedUsers = archivedUsers.filter(u => u.userId !== id);
                    renderArchivedUsers();

                    if (archivedUsers.length === 0) {
                        setTimeout(() => { window.location.href = '/SuperAdmin/Users'; }, 500);
                    }
                } else {
                    showError(result.message || 'Failed to restore user');
                }
            } catch (error) {
                hideLoading();
                showError('Failed to restore user');
            }
        }
    </script>
}
