<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompuGear Support</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/SupportStaff" class="sidebar-brand">
                    <div class="sidebar-brand-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:24px;height:24px;color:#008080">
                            <path d="M3 18v-6a9 9 0 0 1 18 0v6"/>
                            <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"/>
                        </svg>
                    </div>
                    <div class="sidebar-brand-text">
                        <span class="sidebar-brand-name">CompuGear</span>
                        <span class="sidebar-brand-subtitle">Support Portal</span>
                    </div>
                </a>
                <button class="sidebar-toggle" id="sidebarToggle" title="Toggle Sidebar">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M15 18l-6-6 6-6"/>
                    </svg>
                </button>
            </div>

            <nav class="sidebar-nav">
                <!-- Dashboard -->
                <div class="nav-item">
                    <a href="/SupportStaff" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="7" height="7" rx="1"/>
                                <rect x="14" y="3" width="7" height="7" rx="1"/>
                                <rect x="3" y="14" width="7" height="7" rx="1"/>
                                <rect x="14" y="14" width="7" height="7" rx="1"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Dashboard</span>
                    </a>
                </div>

                <!-- Support Tickets -->
                <div class="nav-item">
                    <a href="/SupportStaff/Tickets" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tickets" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Support Tickets</span>
                    </a>
                </div>

                <!-- Live Chat -->
                <div class="nav-item">
                    <a href="/SupportStaff/LiveChat" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "LiveChat" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Live Chat</span>
                    </a>
                </div>

                <!-- Customer Profiles -->
                <div class="nav-item">
                    <a href="/SupportStaff/Customers" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Customers" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                <circle cx="12" cy="7" r="4"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Customer Profiles</span>
                    </a>
                </div>

                <!-- Knowledge Base -->
                <div class="nav-item">
                    <a href="/SupportStaff/KnowledgeBase" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "KnowledgeBase" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Knowledge Base</span>
                    </a>
                </div>

                <!-- Support Reports -->
                <div class="nav-item">
                    <a href="/SupportStaff/Reports" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="18" y1="20" x2="18" y2="10"/>
                                <line x1="12" y1="20" x2="12" y2="4"/>
                                <line x1="6" y1="20" x2="6" y2="14"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Support Reports</span>
                    </a>
                </div>

                <div class="nav-section-title">Approval Required</div>

                <!-- Escalations -->
                <div class="nav-item">
                    <a href="/SupportStaff/Escalations" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Escalations" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="17 11 12 6 7 11"/>
                                <polyline points="17 18 12 13 7 18"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Ticket Escalations</span>
                    </a>
                </div>
            </nav>

            <!-- Sidebar Footer -->
            <div class="sidebar-footer">
                <div class="nav-item">
                    <a href="/Auth/Logout" class="nav-link text-danger">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                                <polyline points="16 17 21 12 16 7"/>
                                <line x1="21" y1="12" x2="9" y2="12"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Logout</span>
                    </a>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Bar -->
            <header class="topbar">
                <div class="topbar-search">
                    <svg class="topbar-search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                    </svg>
                    <input type="text" placeholder="Search tickets, customers...">
                </div>

                <div class="topbar-actions">
                    <button class="topbar-btn" id="darkModeToggle" title="Dark Mode">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
                        </svg>
                    </button>

                    <div class="dropdown">
                        <button class="topbar-btn position-relative" title="Notifications" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                                <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                            </svg>
                            <span class="topbar-badge notification-badge" id="notificationBadge"></span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end shadow notification-dropdown" style="width: 360px; max-height: 400px; overflow-y: auto;">
                            <div class="dropdown-header d-flex justify-content-between align-items-center py-2">
                                <strong>Notifications</strong>
                                <a href="#" class="text-primary text-decoration-none small">Mark all read</a>
                            </div>
                            <div class="dropdown-divider m-0"></div>
                            <div id="notificationList">
                                <div class="text-center py-4 text-muted">
                                    <p class="mb-0">No new notifications</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="topbar-divider"></div>

                    <div class="topbar-user dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="topbar-user-info">
                                <div class="topbar-user-name">@(Context.Session.GetString("UserName") ?? "Support Staff")</div>
                                <div class="topbar-user-role">Customer Support Staff</div>
                            </div>
                            <div class="topbar-avatar">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                    <circle cx="12" cy="7" r="4"/>
                                </svg>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                            <li class="dropdown-header">
                                <strong>@(Context.Session.GetString("UserName") ?? "Support Staff")</strong><br>
                                <small class="text-muted">@(Context.Session.GetString("UserEmail") ?? "support@compugear.com")</small>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                        <circle cx="12" cy="7" r="4"/>
                                    </svg>
                                    Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                        <circle cx="12" cy="12" r="3"/>
                                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09a1.65 1.65 0 0 0-1-1.51 1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 1 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09a1.65 1.65 0 0 0 1.51-1 1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 1 1 2.83-2.83l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 1 1 2.83 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/>
                                    </svg>
                                    Settings
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="/Auth/Logout">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                                        <polyline points="16 17 21 12 16 7"/>
                                        <line x1="21" y1="12" x2="9" y2="12"/>
                                    </svg>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Toast Notifications -->
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>
                    </svg>
                    <span id="successMessage">Operation completed successfully!</span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999; margin-top: 60px;">
        <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                        <circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/>
                    </svg>
                    <span id="errorMessage">An error occurred!</span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="loading-overlay" style="display: none;">
        <div class="loading-spinner">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 mb-0">Processing...</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/support.js" asp-append-version="true"></script>
    <script>
        function showSuccess(message) {
            document.getElementById('successMessage').textContent = message;
            new bootstrap.Toast(document.getElementById('successToast'), { delay: 3000 }).show();
        }
        function showError(message) {
            document.getElementById('errorMessage').textContent = message;
            new bootstrap.Toast(document.getElementById('errorToast'), { delay: 4000 }).show();
        }
        function showLoading() { document.getElementById('loadingOverlay').style.display = 'flex'; }
        function hideLoading() { document.getElementById('loadingOverlay').style.display = 'none'; }
    </script>

    <!-- Global Notification Loader for Low Stock Alerts -->
    <script>
        (function() {
            async function loadGlobalNotifications() {
                try {
                    const response = await fetch('/api/products');
                    if (!response.ok) return;
                    const products = await response.json();
                    const productsList = Array.isArray(products) ? products : (products.data || []);
                    
                    const LOW_STOCK_THRESHOLD = 15;
                    const lowStockProducts = productsList.filter(function(p) { 
                        return p.stockQuantity <= LOW_STOCK_THRESHOLD; 
                    });
                    
                    const badge = document.getElementById('notificationBadge');
                    const notificationList = document.getElementById('notificationList');
                    
                    if (lowStockProducts.length > 0 && badge) {
                        badge.textContent = lowStockProducts.length;
                        badge.style.display = 'flex';
                        
                        lowStockProducts.sort(function(a, b) { return a.stockQuantity - b.stockQuantity; });
                        
                        if (notificationList) {
                            var html = '';
                            var maxShow = Math.min(lowStockProducts.length, 8);
                            for (var i = 0; i < maxShow; i++) {
                                var p = lowStockProducts[i];
                                var alertType = p.stockQuantity === 0 ? 'Out of Stock' : 
                                               p.stockQuantity <= 5 ? 'Critical Stock' : 'Low Stock';
                                var iconColor = p.stockQuantity === 0 ? '#dc3545' : 
                                               p.stockQuantity <= 5 ? '#fd7e14' : '#ffc107';
                                
                                html += '<a href="/Inventory/Alerts" class="dropdown-item py-2 border-bottom">' +
                                    '<div class="d-flex align-items-start gap-2">' +
                                        '<div class="rounded-circle d-flex align-items-center justify-content-center" style="min-width:32px;height:32px;background:' + iconColor + '20;color:' + iconColor + '">' +
                                            '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>' +
                                        '</div>' +
                                        '<div>' +
                                            '<div class="fw-semibold small">' + alertType + '</div>' +
                                            '<div class="text-muted small text-truncate" style="max-width:240px">' + p.productName + '</div>' +
                                            '<div class="text-muted" style="font-size:11px">Stock: ' + p.stockQuantity + ' units</div>' +
                                        '</div>' +
                                    '</div>' +
                                '</a>';
                            }
                            
                            if (lowStockProducts.length > maxShow) {
                                html += '<div class="text-center py-2 text-muted small">+' + (lowStockProducts.length - maxShow) + ' more alerts</div>';
                            }
                            
                            notificationList.innerHTML = html;
                        }
                    } else if (badge) {
                        badge.style.display = 'none';
                    }
                } catch (e) {
                    // Silently fail
                }
            }
            
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', loadGlobalNotifications);
            } else {
                loadGlobalNotifications();
            }
            
            setInterval(loadGlobalNotifications, 60000);
            
            window.markAllRead = function() {
                var badge = document.getElementById('notificationBadge');
                if (badge) badge.style.display = 'none';
                var notificationList = document.getElementById('notificationList');
                if (notificationList) {
                    notificationList.innerHTML = '<div class="text-center py-4 text-muted">' +
                        '<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="mb-2">' +
                            '<path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>' +
                            '<path d="M13.73 21a2 2 0 0 1-3.46 0"/>' +
                        '</svg>' +
                        '<p class="mb-0">No new notifications</p>' +
                    '</div>';
                }
            };
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
