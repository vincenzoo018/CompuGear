<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompuGear</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #008080;
            --primary-dark: #006666;
            --primary-light: #20b2aa;
            --accent-color: #ff6b35;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --dark-bg: #1a1a2e;
            --card-bg: #ffffff;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --border-color: #e5e7eb;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
            min-height: 100vh;
        }

        /* Customer Portal Header - Clean Design */
        .customer-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 20px rgba(0, 128, 128, 0.3);
        }

        /* Main Header with horizontal alignment */
        .header-main {
            padding: 15px 0;
        }

        .header-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 30px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
            flex-shrink: 0;
        }

        .logo-icon {
            width: 48px;
            height: 48px;
            background: white;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
        }

        .logo-text {
            color: white;
            font-size: 1.6rem;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .logo-text span {
            color: var(--accent-color);
        }

        /* Search Bar */
        .search-container {
            flex: 1;
            max-width: 550px;
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 12px 20px 12px 50px;
            border: none;
            border-radius: 50px;
            font-size: 0.95rem;
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .search-box input:focus {
            outline: none;
            box-shadow: 0 4px 20px rgba(255, 107, 53, 0.3);
        }

        .search-box .search-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
        }

        /* Header Actions */
        .header-actions {
            display: flex;
            align-items: center;
            gap: 20px;
            flex-shrink: 0;
        }

        .header-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: white;
            text-decoration: none;
            font-size: 0.8rem;
            opacity: 0.9;
            transition: all 0.3s;
        }

        .header-btn:hover {
            opacity: 1;
            transform: translateY(-2px);
            color: white;
        }

        .header-btn svg {
            width: 24px;
            height: 24px;
            margin-bottom: 4px;
        }

        .header-btn .badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--accent-color);
            color: white;
            font-size: 0.7rem;
            padding: 2px 6px;
            border-radius: 10px;
        }

        .cart-btn {
            position: relative;
        }

        /* Navigation - Horizontal alignment */
        .nav-bar {
            background: rgba(0, 0, 0, 0.15);
        }

        .nav-container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-menu {
            display: flex;
            align-items: center;
            justify-content: center;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 0;
        }

        .nav-menu li {
            display: flex;
            align-items: center;
        }

        .nav-menu li a {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 15px 28px;
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            border-bottom: 3px solid transparent;
            white-space: nowrap;
        }

        .nav-menu li a:hover,
        .nav-menu li a.active {
            background: rgba(255, 255, 255, 0.1);
            border-bottom-color: var(--accent-color);
        }

        .nav-menu li a svg {
            flex-shrink: 0;
        }

        /* Main Content - Full Width */
        .main-content {
            padding: 30px 0;
            min-height: calc(100vh - 140px);
        }

        .main-content .container {
            max-width: 1400px;
        }

        /* Portal Cards - Full Width */
        .portal-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s;
            height: 100%;
        }

        .portal-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 40px rgba(0, 128, 128, 0.15);
        }

        .portal-card .card-icon {
            width: 60px;
            height: 60px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            font-size: 1.5rem;
        }

        .portal-card .card-icon.primary {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            color: white;
        }

        .portal-card .card-icon.accent {
            background: linear-gradient(135deg, var(--accent-color), #ff8c42);
            color: white;
        }

        .portal-card .card-icon.success {
            background: linear-gradient(135deg, var(--success-color), #34d399);
            color: white;
        }

        .portal-card .card-icon.warning {
            background: linear-gradient(135deg, var(--warning-color), #fbbf24);
            color: white;
        }

        .portal-card h4 {
            color: var(--text-primary);
            font-weight: 600;
            margin-bottom: 10px;
        }

        .portal-card p {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        /* Product Cards */
        .product-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 128, 128, 0.2);
        }

        .product-card .product-image {
            height: 200px;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .product-card .product-image img {
            max-height: 180px;
            max-width: 100%;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

        .product-card .product-image-placeholder {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            color: #9ca3af;
            background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
        }

        .product-card .sale-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: var(--accent-color);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .product-card .product-info {
            padding: 20px;
        }

        .product-card .product-category {
            color: var(--primary-color);
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .product-card .product-name {
            color: var(--text-primary);
            font-weight: 600;
            margin: 8px 0;
            font-size: 1rem;
        }

        .product-card .product-price {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .product-card .current-price {
            color: var(--accent-color);
            font-size: 1.3rem;
            font-weight: 700;
        }

        .product-card .original-price {
            color: var(--text-secondary);
            text-decoration: line-through;
            font-size: 0.9rem;
        }

        .product-card .btn-add-cart {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 15px;
        }

        .product-card .btn-add-cart:hover {
            transform: scale(1.02);
            box-shadow: 0 5px 20px rgba(0, 128, 128, 0.4);
        }

        /* Stat Cards for Dashboard */
        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            height: 100%;
        }

        .stat-card .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
        }

        .stat-card .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
        }

        .stat-card .stat-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        /* Chat Widget */
        .chat-widget {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 9999;
        }

        .chat-toggle {
            width: 65px;
            height: 65px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 5px 30px rgba(0, 128, 128, 0.5);
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .chat-toggle:hover {
            transform: scale(1.1);
        }

        .chat-toggle .notification-dot {
            position: absolute;
            top: 5px;
            right: 5px;
            width: 15px;
            height: 15px;
            background: var(--accent-color);
            border-radius: 50%;
            border: 2px solid white;
        }

        /* Hero Banner */
        .hero-banner {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            border-radius: 20px;
            padding: 40px;
            color: white;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

        .hero-banner::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .hero-banner::after {
            content: '';
            position: absolute;
            bottom: -30%;
            right: 5%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .search-container {
                max-width: 300px;
            }
            
            .nav-menu li a {
                padding: 12px 18px;
                font-size: 0.9rem;
            }
        }

        @@media (max-width: 768px) {
            .header-container {
                flex-wrap: wrap;
                gap: 15px;
            }

            .search-container {
                order: 3;
                max-width: 100%;
                width: 100%;
            }
            
            .nav-menu {
                overflow-x: auto;
                justify-content: flex-start;
            }
            
            .nav-menu li a {
                padding: 12px 15px;
                font-size: 0.85rem;
            }

            .main-content {
                padding: 20px 0;
            }
        }

        @@media (max-width: 576px) {
            .header-actions {
                gap: 12px;
            }

            .header-btn span:not(.badge) {
                display: none;
            }

            .logo-text {
                font-size: 1.3rem;
            }
        }
    </style>
</head>
<body>
    <!-- Customer Portal Header - Clean Design -->
    <header class="customer-header">
        <!-- Main Header -->
        <div class="header-main">
            <div class="container">
                <div class="header-container">
                    <a href="/CustomerPortal" class="logo">
                        <div class="logo-icon">üñ•Ô∏è</div>
                        <div class="logo-text">Compu<span>Gear</span></div>
                    </a>

                    <div class="search-container">
                        <div class="search-box">
                            <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/>
                            </svg>
                            <input type="text" placeholder="Search for computer accessories, peripherals, components...">
                        </div>
                    </div>

                    <div class="header-actions">
                        <div class="dropdown">
                            <a href="#" class="header-btn" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>
                                </svg>
                                <span>@(Context.Session.GetString("CustomerName")?.Split(' ')[0] ?? "Account")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="accountDropdown" style="min-width: 220px;">
                                <li class="dropdown-header" style="color: var(--text-primary);">
                                    <strong>@(Context.Session.GetString("CustomerName") ?? "Guest")</strong><br>
                                    <small class="text-muted">@(Context.Session.GetString("CustomerEmail") ?? "")</small>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/CustomerPortal/Profile" style="color: var(--text-primary);">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                            <circle cx="12" cy="7" r="4"/>
                                        </svg>
                                        My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/CustomerPortal/Orders" style="color: var(--text-primary);">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                                            <line x1="3" y1="6" x2="21" y2="6"/>
                                            <path d="M16 10a4 4 0 0 1-8 0"/>
                                        </svg>
                                        My Orders
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/CustomerPortal/MyTickets" style="color: var(--text-primary);">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                                        </svg>
                                        Support Tickets
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="/Auth/Logout">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                                            <polyline points="16 17 21 12 16 7"/>
                                            <line x1="21" y1="12" x2="9" y2="12"/>
                                        </svg>
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <a href="/CustomerPortal/Wishlist" class="header-btn">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                            </svg>
                            <span>Wishlist</span>
                        </a>
                        <a href="/CustomerPortal/Cart" class="header-btn cart-btn">
                            <span class="badge" id="cartBadge">0</span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                            </svg>
                            <span>Cart</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation - Centered Horizontal -->
        <nav class="nav-bar">
            <div class="container">
                <div class="nav-container">
                    <ul class="nav-menu">
                        <li><a href="/CustomerPortal" class="@(ViewData["Title"]?.ToString() == "My Dashboard" ? "active" : "")">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/>
                            </svg>
                            Home
                        </a></li>
                        <li><a href="/CustomerPortal/Products" class="@(ViewData["Title"]?.ToString() == "Browse Products" ? "active" : "")">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/>
                            </svg>
                            Products
                        </a></li>
                        <li><a href="/CustomerPortal/Promotions" class="@(ViewData["Title"]?.ToString() == "Promotions & Deals" ? "active" : "")">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                            </svg>
                            Deals & Promos
                        </a></li>
                        <li><a href="/CustomerPortal/Orders" class="@(ViewData["Title"]?.ToString() == "My Orders" ? "active" : "")">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/>
                            </svg>
                            My Orders
                        </a></li>
                        <li><a href="/CustomerPortal/Support" class="@(ViewData["Title"]?.ToString() == "Support Center" ? "active" : "")">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                            </svg>
                            Support
                        </a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content - Full Width -->
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Chat Widget -->
    <div class="chat-widget">
        <button class="chat-toggle" onclick="toggleChat()" title="Chat with us">
            <span class="notification-dot"></span>
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
            </svg>
        </button>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleChat() {
            window.location.href = '/CustomerPortal/Support';
        }

        // Update cart badge
        document.addEventListener('DOMContentLoaded', function() {
            updateCartBadge();
        });

        function updateCartBadge() {
            const cart = JSON.parse(localStorage.getItem('cart') || '[]');
            const totalItems = cart.reduce((sum, item) => sum + (item.quantity || 1), 0);
            const badge = document.getElementById('cartBadge');
            if (badge) {
                badge.textContent = totalItems;
                badge.style.display = totalItems > 0 ? 'block' : 'none';
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
