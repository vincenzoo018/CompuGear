<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompuGear CRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-brand">
                    <div class="sidebar-brand-icon">CG</div>
                    <div class="sidebar-brand-text">
                        <span class="sidebar-brand-name">CompuGear</span>
                        <span class="sidebar-brand-subtitle">System CRM</span>
                    </div>
                </a>
                <button class="sidebar-toggle" id="sidebarToggle" title="Toggle Sidebar">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M15 18l-6-6 6-6"/>
                    </svg>
                </button>
            </div>

            <nav class="sidebar-nav">
                <!-- Dashboard -->
                <div class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="7" height="7" rx="1"/>
                                <rect x="14" y="3" width="7" height="7" rx="1"/>
                                <rect x="3" y="14" width="7" height="7" rx="1"/>
                                <rect x="14" y="14" width="7" height="7" rx="1"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Dashboard</span>
                    </a>
                </div>

                <!-- User Management -->
                <div class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "expanded" : "")">
                    <a href="#" class="nav-link nav-link-toggle">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">User Management</span>
                        <span class="nav-item-arrow">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                        </span>
                    </a>
                    <div class="nav-submenu">
                        <a asp-controller="Users" asp-action="Accounts" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Accounts" ? "active" : "")">User Accounts</a>
                        <a asp-controller="Users" asp-action="Roles" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Roles" ? "active" : "")">Roles & Permissions</a>
                        <a asp-controller="Users" asp-action="Activity" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Activity" ? "active" : "")">Login Activity</a>
                    </div>
                </div>

                <!-- Customer Management -->
                <div class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customers" ? "expanded" : "")">
                    <a href="#" class="nav-link nav-link-toggle">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                <circle cx="12" cy="7" r="4"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Customer Management</span>
                        <span class="nav-item-arrow">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                        </span>
                    </a>
                    <div class="nav-submenu">
                        <a asp-controller="Customers" asp-action="List" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "List" ? "active" : "")">Customer List</a>
                        <a asp-controller="Customers" asp-action="Profile" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")">Customer Profile</a>
                        <a asp-controller="Customers" asp-action="History" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "History" ? "active" : "")">Customer History</a>
                    </div>
                </div>

                <!-- Sales Management -->
                <div class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Sales" ? "expanded" : "")">
                    <a href="#" class="nav-link nav-link-toggle">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="9" cy="21" r="1"/>
                                <circle cx="20" cy="21" r="1"/>
                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Sales Management</span>
                        <span class="nav-item-arrow">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                        </span>
                    </a>
                    <div class="nav-submenu">
                        <a asp-controller="Sales" asp-action="Orders" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Orders" ? "active" : "")">Orders</a>
                        <a asp-controller="Sales" asp-action="Leads" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Leads" ? "active" : "")">Leads</a>
                        <a asp-controller="Sales" asp-action="Reports" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")">Sales Reports</a>
                    </div>
                </div>

                <!-- Inventory Management -->
                <div class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inventory" ? "expanded" : "")">
                    <a href="#" class="nav-link nav-link-toggle">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                                <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
                                <line x1="12" y1="22.08" x2="12" y2="12"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Inventory Management</span>
                        <span class="nav-item-arrow">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                        </span>
                    </a>
                    <div class="nav-submenu">
                        <a asp-controller="Inventory" asp-action="Products" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Products" ? "active" : "")">Product Management</a>
                        <a asp-controller="Inventory" asp-action="Stock" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Stock" ? "active" : "")">Stock Levels</a>
                        <a asp-controller="Inventory" asp-action="Alerts" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Alerts" ? "active" : "")">Low Stock Alerts</a>
                        <a asp-controller="Inventory" asp-action="Reports" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")">Inventory Reports</a>
                    </div>
                </div>

                <!-- Support Management -->
                <div class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Support" ? "expanded" : "")">
                    <a href="#" class="nav-link nav-link-toggle">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 18v-6a9 9 0 0 1 18 0v6"/>
                                <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Support Management</span>
                        <span class="nav-item-arrow">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                        </span>
                    </a>
                    <div class="nav-submenu">
                        <a asp-controller="Support" asp-action="Tickets" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tickets" ? "active" : "")">Support Tickets</a>
                        <a asp-controller="Support" asp-action="Status" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Status" ? "active" : "")">Ticket Status</a>
                        <a asp-controller="Support" asp-action="Knowledge" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Knowledge" ? "active" : "")">Knowledge Base</a>
                        <a asp-controller="Support" asp-action="Reports" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")">Support Reports</a>
                    </div>
                </div>

                <!-- Marketing Management -->
                <div class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Marketing" ? "expanded" : "")">
                    <a href="#" class="nav-link nav-link-toggle">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                                <polyline points="17 8 12 3 7 8"/>
                                <line x1="12" y1="3" x2="12" y2="15"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Marketing Management</span>
                        <span class="nav-item-arrow">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                        </span>
                    </a>
                    <div class="nav-submenu">
                        <a asp-controller="Marketing" asp-action="Campaigns" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Campaigns" ? "active" : "")">Campaigns</a>
                        <a asp-controller="Marketing" asp-action="Promotions" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Promotions" ? "active" : "")">Promotions</a>
                        <a asp-controller="Marketing" asp-action="Segments" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Segments" ? "active" : "")">Customer Segments</a>
                        <a asp-controller="Marketing" asp-action="Analytics" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Analytics" ? "active" : "")">Marketing Analytics</a>
                    </div>
                </div>

                <!-- Billing Management -->
                <div class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Billing" ? "expanded" : "")">
                    <a href="#" class="nav-link nav-link-toggle">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                                <line x1="1" y1="10" x2="23" y2="10"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Billing Management</span>
                        <span class="nav-item-arrow">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                        </span>
                    </a>
                    <div class="nav-submenu">
                        <a asp-controller="Billing" asp-action="Invoices" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Invoices" ? "active" : "")">Invoices</a>
                        <a asp-controller="Billing" asp-action="Payments" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Payments" ? "active" : "")">Payments</a>
                        <a asp-controller="Billing" asp-action="Summary" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Summary" ? "active" : "")">Financial Summary</a>
                        <a asp-controller="Billing" asp-action="Records" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Records" ? "active" : "")">Account Records</a>
                    </div>
                </div>
            </nav>

            <!-- Sidebar Footer (Settings) -->
            <div class="sidebar-footer">
                <div class="nav-item">
                    <a asp-controller="Settings" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
                        <span class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="3"/>
                                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
                            </svg>
                        </span>
                        <span class="nav-item-text">Settings</span>
                    </a>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Bar -->
            <header class="topbar">
                <div class="topbar-search">
                    <svg class="topbar-search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                    </svg>
                    <input type="text" placeholder="Search anything...">
                </div>

                <div class="topbar-actions">
                    <button class="topbar-btn" title="Dark Mode">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
                        </svg>
                    </button>
                    <button class="topbar-btn" title="Notifications">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                            <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                        </svg>
                        <span class="topbar-badge"></span>
                    </button>

                    <div class="topbar-divider"></div>

                    <div class="topbar-user">
                        <div class="topbar-user-info">
                            <div class="topbar-user-name">Admin User</div>
                            <div class="topbar-user-role">Administrator</div>
                        </div>
                        <div class="topbar-avatar">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                <circle cx="12" cy="7" r="4"/>
                            </svg>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
