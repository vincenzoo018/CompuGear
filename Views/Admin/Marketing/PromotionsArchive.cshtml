@{
    ViewData["Title"] = "Promotions Archive";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3">
    <div>
        <h1 class="page-title">Promotions Archive</h1>
        <p class="page-subtitle">Temporarily deactivated promotions</p>
    </div>
    <a href="/Marketing/Promotions" class="btn btn-primary">Back to Promotions</a>
</div>

<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Archived Promotions</h5>
        <span class="badge bg-secondary" id="archiveCount">0 archived</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Promotion</th>
                        <th>Code</th>
                        <th>Discount</th>
                        <th>Period</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="archiveTableBody"></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/admin.js"></script>
<script>
    let archivedPromotions = [];

    document.addEventListener('DOMContentLoaded', loadArchivedPromotions);

    async function loadArchivedPromotions() {
        try {
            const promotions = await API.get('/promotions');
            archivedPromotions = (promotions || []).filter(p => p.isActive === false);
            renderArchivedPromotions();
        } catch (error) {
            Toast.error('Failed to load archived promotions');
        }
    }

    function formatDiscount(promo) {
        if ((promo.discountType || '').toLowerCase() === 'percentage') return `${promo.discountValue || 0}%`;
        return `â‚±${Number(promo.discountValue || 0).toLocaleString('en-PH')}`;
    }

    function renderArchivedPromotions() {
        const tbody = document.getElementById('archiveTableBody');
        document.getElementById('archiveCount').textContent = `${archivedPromotions.length} archived`;

        if (!archivedPromotions.length) {
            tbody.innerHTML = '<tr><td colspan="5" class="text-center py-4 text-muted">No archived promotions</td></tr>';
            return;
        }

        tbody.innerHTML = archivedPromotions.map(p => `
            <tr>
                <td><strong>${p.promotionName || '-'}</strong></td>
                <td>${p.promotionCode || '-'}</td>
                <td>${formatDiscount(p)}</td>
                <td>${p.startDate ? new Date(p.startDate).toLocaleDateString() : '-'} - ${p.endDate ? new Date(p.endDate).toLocaleDateString() : '-'}</td>
                <td><button class="btn btn-sm btn-success" onclick="restorePromotion(${p.promotionId})">Activate</button></td>
            </tr>
        `).join('');
    }

    async function restorePromotion(id) {
        try {
            const response = await fetch(`/api/promotions/${id}/status`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ isActive: true })
            });
            const result = await response.json();
            if (!response.ok || result.success === false) {
                Toast.error(result.message || 'Failed to activate promotion');
                return;
            }
            Toast.success('Promotion activated');
            window.location.href = '/Marketing/Promotions';
        } catch (error) {
            Toast.error('Failed to activate promotion');
        }
    }
</script>
}
