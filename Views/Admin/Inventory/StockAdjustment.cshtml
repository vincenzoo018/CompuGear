@{
    ViewData["Title"] = "Stock Adjustment";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3">
    <div>
        <h1 class="page-title">Stock Adjustment</h1>
        <p class="page-subtitle">Manage stock levels - Add or deduct inventory quantities</p>
    </div>
    <button class="btn btn-primary" onclick="openAdjustmentModal()">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
        </svg>
        Add Stock
    </button>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card stat-card-primary">
            <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-value" id="totalAdjustments">0</div>
                <div class="stat-label">Total Adjustments</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card stat-card-success">
            <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/><polyline points="17 6 23 6 23 12"/>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-value" id="stockInCount">0</div>
                <div class="stat-label">Stock In</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card stat-card-danger">
            <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"/><polyline points="17 18 23 18 23 12"/>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-value" id="stockOutCount">0</div>
                <div class="stat-label">Stock Out</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card stat-card-info">
            <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                    <circle cx="9" cy="7" r="4"/>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-value" id="totalSuppliers">0</div>
                <div class="stat-label">Suppliers</div>
            </div>
        </div>
    </div>
</div>

<!-- Filter & Search -->
<div class="card mb-4 fade-in">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Search Adjustments</label>
                <div class="search-input">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>
                    </svg>
                    <input type="text" class="form-control" id="searchAdjustments" placeholder="Search by product name..." oninput="filterAdjustments()">
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label">Adjustment Type</label>
                <select class="form-select" id="filterType" onchange="filterAdjustments()">
                    <option value="">All Types</option>
                    <option value="Stock In">Stock In</option>
                    <option value="Stock Out">Stock Out</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Date Range</label>
                <input type="date" class="form-control" id="filterDate" onchange="filterAdjustments()">
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" onclick="resetFilters()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="1 4 1 10 7 10"/><path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"/>
                    </svg>
                    Reset
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Adjustments Table -->
<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Adjustment History</h5>
        <span class="badge bg-primary" id="adjustmentCount">0 records</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="data-table" id="adjustmentsTable">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Type</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Previous Stock</th>
                        <th class="text-center">New Stock</th>
                        <th>Notes</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody id="adjustmentsTableBody">
                    <!-- Dynamic content loaded via JavaScript -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Stock Adjustment Modal -->
<div class="modal fade" id="adjustmentModal" tabindex="-1" aria-labelledby="adjustmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl-wide modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h5 class="modal-title" id="adjustmentModalLabel">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                        <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
                    </svg>
                    Add Stock Adjustment
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="adjustmentForm" onsubmit="saveAdjustment(event)">
                <div class="modal-body">
                    <!-- Supplier Selection -->
                    <div class="form-section">
                        <h6 class="form-section-title">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                            </svg>
                            Select Supplier
                        </h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label required">Supplier</label>
                                <select class="form-select" id="supplierId" name="supplierId" required onchange="loadSupplierProducts()">
                                    <option value="">-- Select a Supplier --</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Product Selection Section -->
                    <div class="form-section" id="productSelectionSection" style="display: none;">
                        <h6 class="form-section-title">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
                                <line x1="8" y1="21" x2="16" y2="21"/>
                                <line x1="12" y1="17" x2="12" y2="21"/>
                            </svg>
                            Supplier Products
                        </h6>
                        
                        <!-- Live Search for Products -->
                        <div class="mb-3">
                            <label class="form-label">Search Products</label>
                            <div class="search-input">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>
                                </svg>
                                <input type="text" class="form-control" id="searchSupplierProducts" placeholder="Search products..." oninput="filterSupplierProducts()">
                            </div>
                        </div>

                        <!-- Products List -->
                        <div id="supplierProductsList" class="product-selection-grid">
                            <!-- Products will be loaded here -->
                        </div>
                    </div>

                    <!-- Selected Product Details -->
                    <div class="form-section" id="selectedProductSection" style="display: none;">
                        <h6 class="form-section-title">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="12" y1="16" x2="12" y2="12"/>
                                <line x1="12" y1="8" x2="12.01" y2="8"/>
                            </svg>
                            Selected Product Details
                        </h6>
                        <div class="selected-product-card">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div id="selectedProductImage" class="selected-product-image">
                                        <!-- Product image -->
                                    </div>
                                </div>
                                <div class="col">
                                    <h5 id="selectedProductName" class="mb-1">-</h5>
                                    <p id="selectedProductCode" class="text-muted mb-1 small">-</p>
                                    <div class="d-flex gap-3">
                                        <span class="badge bg-secondary" id="selectedProductCategory">-</span>
                                        <span class="badge bg-info" id="selectedProductBrand">-</span>
                                    </div>
                                </div>
                                <div class="col-auto text-end">
                                    <div class="fw-bold text-primary fs-4" id="selectedProductPrice">₱0.00</div>
                                    <div class="text-muted small">Current Stock: <strong id="selectedProductStock">0</strong></div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="productId" name="productId">
                    </div>

                    <!-- Adjustment Details -->
                    <div class="form-section" id="adjustmentDetailsSection" style="display: none;">
                        <h6 class="form-section-title">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 20V10"/>
                                <path d="M18 20V4"/>
                                <path d="M6 20v-4"/>
                            </svg>
                            Adjustment Details
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label required">Adjustment Type</label>
                                <div class="btn-group w-100" role="group">
                                    <input type="radio" class="btn-check" name="adjustmentType" id="typeAdd" value="Add" checked>
                                    <label class="btn btn-outline-success" for="typeAdd">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                            <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
                                        </svg>
                                        Add Stock
                                    </label>
                                    <input type="radio" class="btn-check" name="adjustmentType" id="typeDeduct" value="Deduct">
                                    <label class="btn btn-outline-danger" for="typeDeduct">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                            <line x1="5" y1="12" x2="19" y2="12"/>
                                        </svg>
                                        Deduct Stock
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label required">Quantity</label>
                                <input type="number" class="form-control" id="adjustmentQuantity" name="quantity" min="1" value="1" required oninput="updatePreview()">
                            </div>
                            <div class="col-12">
                                <label class="form-label">Notes / Reason</label>
                                <textarea class="form-control" id="adjustmentNotes" name="notes" rows="2" placeholder="Enter reason for adjustment..."></textarea>
                            </div>
                        </div>

                        <!-- Preview -->
                        <div class="adjustment-preview mt-3">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="preview-label">Current Stock</div>
                                    <div class="preview-value" id="previewCurrentStock">0</div>
                                </div>
                                <div class="col-4">
                                    <div class="preview-label">Adjustment</div>
                                    <div class="preview-value" id="previewAdjustment">+0</div>
                                </div>
                                <div class="col-4">
                                    <div class="preview-label">New Stock</div>
                                    <div class="preview-value text-primary" id="previewNewStock">0</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Save Adjustment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

