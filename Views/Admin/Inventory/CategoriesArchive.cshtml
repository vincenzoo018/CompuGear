@{
    ViewData["Title"] = "Category Archive";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3">
    <div>
        <h1 class="page-title">Category Archive</h1>
        <p class="page-subtitle">Inactive product categories</p>
    </div>
    <a href="/Inventory/Categories" class="btn btn-primary">Back to Categories</a>
</div>

<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Archived Categories</h5>
        <span class="badge bg-secondary" id="archiveCount">0 archived</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Products</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="archiveTableBody"></tbody>
            </table>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center" id="categoriesArchivePagination"></div>
</div>
<script src="~/js/admin.js"></script>
<script>
    let archivedCategories = [];

    document.addEventListener('DOMContentLoaded', loadArchivedCategories);

    async function loadArchivedCategories() {
        try {
            const categories = await API.get(`/product-categories/all?ts=${Date.now()}`);
            archivedCategories = (categories || []).filter(c => c.isActive === false || c.isActive === 'false' || c.isActive === 0);
            renderArchivedCategories();
        } catch (error) {
            Toast.error('Failed to load archived categories');
        }
    }

    function renderArchivedCategories() {
        const tbody = document.getElementById('archiveTableBody');
        document.getElementById('archiveCount').textContent = `${archivedCategories.length} archived`;

        if (!archivedCategories.length) {
            tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4 text-muted">No archived categories</td></tr>';
            return;
        }

        tbody.innerHTML = archivedCategories.map(c => `
            <tr>
                <td><strong>${c.categoryName}</strong></td>
                <td>${c.description || '-'}</td>
                <td>${c.productCount || 0}</td>
                <td><button class="btn btn-sm btn-success" onclick="restoreCategory(${c.categoryId})">Activate</button></td>
            </tr>
        `).join('');
        if (typeof initPagination === 'function') initPagination('archiveTableBody', 'categoriesArchivePagination', 10);
    }

    async function restoreCategory(id) {
        try {
            const category = archivedCategories.find(c => c.categoryId === id);
            if (!category) return;

            const response = await fetch(`/api/product-categories/${id}/status`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ isActive: true })
            });

            const result = await response.json();
            if (!response.ok || result.success === false) {
                Toast.error(result.message || 'Failed to activate category');
                return;
            }

            Toast.success('Category activated');
            window.location.href = '/Inventory/Categories';
        } catch (error) {
            Toast.error('Failed to activate category');
        }
    }
</script>
}
