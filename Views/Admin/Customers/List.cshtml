                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Credit Limit:</span>
                                <span class="detail-value" id="viewCredit">₱500,000</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editCustomerFromView()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                    </svg>
                    Edit Customer
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header modal-header-danger">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="delete-warning">
                    <div class="delete-icon mb-3">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-danger">
                            <polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                        </svg>
                    </div>
                    <p class="delete-message">Are you sure you want to delete <strong id="deleteItemName"></strong>?</p>
                    <p class="text-muted mb-0">This will remove all customer data and order history.</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Customer</button>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notifications -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body" id="successMessage">Operation successful!</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body" id="errorMessage">An error occurred!</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/admin.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        Customers.load();
        
        document.getElementById('searchCustomers')?.addEventListener('input', filterCustomers);
        document.getElementById('filterType')?.addEventListener('change', filterCustomers);
        document.getElementById('filterStatus')?.addEventListener('change', filterCustomers);
    });

    function openCreateCustomerModal() {
        Customers.showModal();
    }

    function viewCustomer(id) {
        Customers.view(id);
    }

    function editCustomer(id) {
        Customers.edit(id);
    }

    function editCustomerFromView() {
        Modal.hide('viewCustomerModal');
        setTimeout(() => Customers.edit(Customers.currentId), 300);
    }

    function deleteCustomer(id, name) {
        if (confirm(`Are you sure you want to delete "${name}"?`)) {
            Customers.delete(id);
        }
    }

    function saveCustomer(event) {
        event.preventDefault();
        Customers.save();
    }

    function filterCustomers() {
        const search = (document.getElementById('searchCustomers')?.value || '').toLowerCase();
        const type = document.getElementById('filterType')?.value || '';
        const status = document.getElementById('filterStatus')?.value || '';
        
        Customers.filter(search, type, status);
    }

    function resetFilters() {
        document.getElementById('searchCustomers').value = '';
        document.getElementById('filterType').value = '';
        document.getElementById('filterStatus').value = '';
        Customers.load();
    }

    function exportCustomers() {
        window.location.href = '/api/export/customers?format=csv';
        Toast.success('Customers export started!');
    }
</script>
}
