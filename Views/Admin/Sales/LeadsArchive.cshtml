@{
    ViewData["Title"] = "Leads Archive";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3">
    <div>
        <h1 class="page-title">Leads Archive</h1>
        <p class="page-subtitle">Inactive leads</p>
    </div>
    <a href="/Sales/Leads" class="btn btn-primary">Back to Leads</a>
</div>

<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Archived Leads</h5>
        <span class="badge bg-secondary" id="archiveCount">0 archived</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Lead</th>
                        <th>Company</th>
                        <th>Contact</th>
                        <th>Source</th>
                        <th>Value</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="archiveTableBody"></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/admin.js"></script>
<script>
    let archivedLeads = [];

    document.addEventListener('DOMContentLoaded', loadArchivedLeads);

    async function loadArchivedLeads() {
        try {
            const leads = await API.get('/leads');
            archivedLeads = (leads || []).filter(l => (l.status || '').toLowerCase() === 'inactive');
            renderArchivedLeads();
        } catch (error) {
            Toast.error('Failed to load archived leads');
        }
    }

    function renderArchivedLeads() {
        const tbody = document.getElementById('archiveTableBody');
        document.getElementById('archiveCount').textContent = `${archivedLeads.length} archived`;

        if (!archivedLeads.length) {
            tbody.innerHTML = '<tr><td colspan="6" class="text-center py-4 text-muted">No archived leads</td></tr>';
            return;
        }

        tbody.innerHTML = archivedLeads.map(l => `
            <tr>
                <td>
                    <div class="fw-semibold">${l.firstName || ''} ${l.lastName || ''}</div>
                    <small class="text-muted">${l.leadCode || '-'}</small>
                </td>
                <td>${l.companyName || '-'}</td>
                <td>
                    <div>${l.email || '-'}</div>
                    <small class="text-muted">${l.phone || '-'}</small>
                </td>
                <td>${l.source || '-'}</td>
                <td>${Format.currency(l.estimatedValue || 0)}</td>
                <td>
                    <button class="btn btn-sm btn-success" onclick="restoreLead(${l.leadId})">Activate</button>
                </td>
            </tr>
        `).join('');
    }

    async function restoreLead(id) {
        try {
            const response = await fetch(`/api/leads/${id}/toggle-status`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({})
            });
            const result = await response.json();
            if (!response.ok || result.success === false) {
                Toast.error(result.message || 'Failed to activate lead');
                return;
            }
            Toast.success('Lead activated');
            window.location.href = '/Sales/Leads';
        } catch (error) {
            Toast.error('Failed to activate lead');
        }
    }
</script>
}
