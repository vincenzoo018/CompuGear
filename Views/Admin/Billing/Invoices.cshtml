@section Scripts {
<script src="~/js/admin.js"></script>
<script>
    let currentInvoiceId = null;
    let invoicesData = [];
    const statusBadgeClasses = { 'Draft': 'badge-neutral', 'Pending': 'badge-warning', 'Paid': 'badge-success', 'Overdue': 'badge-error', 'Cancelled': 'badge-neutral' };

    document.addEventListener('DOMContentLoaded', function() {
        Billing.invoices.load();
        document.getElementById('searchInvoices').addEventListener('input', filterInvoices);
        document.getElementById('filterStatus').addEventListener('change', filterInvoices);
        document.getElementById('invoiceDate').value = new Date().toISOString().split('T')[0];
        const dueDate = new Date();
        dueDate.setDate(dueDate.getDate() + 30);
        document.getElementById('dueDate').value = dueDate.toISOString().split('T')[0];
        document.getElementById('paymentDate').value = new Date().toISOString().split('T')[0];
    });

    function filterInvoices() {
        const search = (document.getElementById('searchInvoices')?.value || '').toLowerCase();
        const status = document.getElementById('filterStatus')?.value || '';
        Billing.invoices.filter(search, status);
    }

    function openCreateInvoiceModal() {
        currentInvoiceId = null;
        document.getElementById('modalTitle').textContent = 'Create New Invoice';
        document.getElementById('invoiceForm').reset();
        document.getElementById('invoiceId').value = '0';
        document.getElementById('invoiceDate').value = new Date().toISOString().split('T')[0];
        const dueDate = new Date();
        dueDate.setDate(dueDate.getDate() + 30);
        document.getElementById('dueDate').value = dueDate.toISOString().split('T')[0];
        resetInvoiceItems();
        loadCustomerOptions();
    }

    async function loadCustomerOptions() {
        try {
            const customers = await API.get('/customers');
            const select = document.getElementById('invoiceCustomer');
            select.innerHTML = '<option value="">Choose a customer</option>';
            customers.forEach(c => {
                select.innerHTML += `<option value="${c.customerId}">${c.companyName || (c.firstName + ' ' + c.lastName)}</option>`;
            });
        } catch (e) { console.error('Failed to load customers:', e); }
    }

    function viewInvoice(id) { Billing.invoices.view(id); }
    function editInvoice(id) { Billing.invoices.edit(id); }

    function editInvoiceFromView() {
        bootstrap.Modal.getInstance(document.getElementById('viewInvoiceModal')).hide();
        setTimeout(() => Billing.invoices.edit(currentInvoiceId), 300);
    }

    function recordPayment(id) { Billing.invoices.recordPayment(id); }
    async function confirmPayment() { await Billing.invoices.confirmPayment(); }
    async function saveInvoice(event) { event.preventDefault(); await Billing.invoices.save(); }
    function saveAsDraft() { Billing.invoices.saveAsDraft(); }

    function addInvoiceItem() {
        const tbody = document.getElementById('invoiceItemsBody');
        const row = document.createElement('tr');
        row.innerHTML = `
            <td><input type="text" class="form-control form-control-sm" placeholder="Item description"></td>
            <td><input type="number" class="form-control form-control-sm item-price" value="0" step="0.01" onchange="updateLineAmount(this)"></td>
            <td><input type="number" class="form-control form-control-sm item-qty" value="1" min="1" onchange="updateLineAmount(this)"></td>
            <td><input type="text" class="form-control form-control-sm item-amount" readonly value="₱0.00"></td>
            <td><button type="button" class="btn btn-sm btn-outline-danger" onclick="removeInvoiceItem(this)">×</button></td>
        `;
        tbody.appendChild(row);
    }

    function removeInvoiceItem(btn) {
        const tbody = document.getElementById('invoiceItemsBody');
        if (tbody.rows.length > 1) {
            btn.closest('tr').remove();
            calculateInvoiceTotal();
        }
    }

    function updateLineAmount(input) {
        const row = input.closest('tr');
        const price = parseFloat(row.querySelector('.item-price').value) || 0;
        const qty = parseInt(row.querySelector('.item-qty').value) || 1;
        const amount = price * qty;
        row.querySelector('.item-amount').value = '₱' + amount.toLocaleString('en-PH', { minimumFractionDigits: 2 });
        calculateInvoiceTotal();
    }

    function calculateInvoiceTotal() {
        let subtotal = 0;
        document.querySelectorAll('.item-amount').forEach(input => {
            subtotal += parseFloat(input.value.replace('₱', '').replace(/,/g, '')) || 0;
        });
        const vat = subtotal * 0.12;
        const total = subtotal + vat;
        document.getElementById('invoiceSubtotal').textContent = '₱' + subtotal.toLocaleString('en-PH', { minimumFractionDigits: 2 });
        document.getElementById('invoiceVAT').textContent = '₱' + vat.toLocaleString('en-PH', { minimumFractionDigits: 2 });
        document.getElementById('invoiceTotal').textContent = '₱' + total.toLocaleString('en-PH', { minimumFractionDigits: 2 });
    }

    function resetInvoiceItems() {
        const tbody = document.getElementById('invoiceItemsBody');
        tbody.innerHTML = `
            <tr>
                <td><input type="text" class="form-control form-control-sm" placeholder="Item description"></td>
                <td><input type="number" class="form-control form-control-sm item-price" value="0" step="0.01" onchange="updateLineAmount(this)"></td>
                <td><input type="number" class="form-control form-control-sm item-qty" value="1" min="1" onchange="updateLineAmount(this)"></td>
                <td><input type="text" class="form-control form-control-sm item-amount" readonly value="₱0.00"></td>
                <td><button type="button" class="btn btn-sm btn-outline-danger" onclick="removeInvoiceItem(this)">×</button></td>
            </tr>
        `;
        calculateInvoiceTotal();
    }

    function filterTable() { filterInvoices(); }
    function resetFilters() {
        document.getElementById('searchInvoices').value = '';
        document.getElementById('filterStatus').value = '';
        document.getElementById('filterDateFrom').value = '';
        document.getElementById('filterDateTo').value = '';
        Billing.invoices.load();
    }

    function applyFilters() { filterInvoices(); Toast.success('Filters applied!'); }
    function exportInvoices() {
        window.location.href = '/api/export/invoices?format=csv';
        Toast.success('Invoices export started!');
    }
    function printInvoice(id) { Billing.invoices.print(id); }
    function printInvoiceFromView() { if (typeof currentInvoiceId !== 'undefined' && currentInvoiceId) Billing.invoices.print(currentInvoiceId); }
    function sendReceipt(id) {
        const inv = Billing.invoices.data.find(i => i.invoiceId === id);
        if (inv && inv.customerEmail) {
            Toast.success(`Receipt for ${inv.invoiceNumber} sent to ${inv.customerEmail}`);
        } else {
            Toast.warning('No customer email found for this invoice');
        }
    }
    function sendReminder(id) {
        const inv = Billing.invoices.data.find(i => i.invoiceId === id);
        if (inv && inv.balance > 0) {
            Toast.success(`Payment reminder for ${inv.invoiceNumber} sent`);
        } else {
            Toast.warning('No outstanding balance on this invoice');
        }
    }
</script>
