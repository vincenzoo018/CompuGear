@{
    ViewData["Title"] = "General Ledger";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3">
    <div>
        <h1 class="page-title">General Ledger</h1>
        <p class="page-subtitle">View all posted transactions by account</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" onclick="exportGL()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            Export
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card stat-card-primary">
            <div class="stat-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M3 9h18"/><path d="M9 21V9"/></svg></div>
            <div class="stat-content"><div class="stat-value" id="glTransactions">0</div><div class="stat-label">Transactions</div></div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card stat-card-success">
            <div class="stat-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/></svg></div>
            <div class="stat-content"><div class="stat-value" id="glTotalDebit">₱0</div><div class="stat-label">Total Debits</div></div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card stat-card-warning">
            <div class="stat-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="23 18 13.5 8.5 8.5 13.5 1 6"/></svg></div>
            <div class="stat-content"><div class="stat-value" id="glTotalCredit">₱0</div><div class="stat-label">Total Credits</div></div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card stat-card-danger">
            <div class="stat-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg></div>
            <div class="stat-content"><div class="stat-value" id="glAccounts">0</div><div class="stat-label">Active Accounts</div></div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4 fade-in">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Account</label>
                <select class="form-select" id="glAccountFilter">
                    <option value="">All Accounts</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Source</label>
                <select class="form-select" id="glSourceFilter">
                    <option value="">All Sources</option>
                    <option value="Manual">Manual</option>
                    <option value="System">System</option>
                    <option value="Invoice">Invoice</option>
                    <option value="Payment">Payment</option>
                    <option value="Refund">Refund</option>
                    <option value="COGS">COGS</option>
                    <option value="Tax">Tax</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Date From</label>
                <input type="date" class="form-control" id="glDateFrom">
            </div>
            <div class="col-md-2">
                <label class="form-label">Date To</label>
                <input type="date" class="form-control" id="glDateTo">
            </div>
            <div class="col-md-3">
                <div class="d-flex gap-2 align-items-end h-100">
                    <div class="flex-fill">
                        <label class="form-label">Search</label>
                        <input type="text" class="form-control" id="glSearch" placeholder="Search...">
                    </div>
                    <button class="btn btn-outline-secondary" onclick="GL.load()" title="Reset">Reset</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Account Summary -->
<div class="card mb-4 fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Account Summary (Trial Balance)</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Account Name</th>
                        <th>Type</th>
                        <th class="text-end">Total Debit</th>
                        <th class="text-end">Total Credit</th>
                        <th class="text-end">Balance</th>
                    </tr>
                </thead>
                <tbody id="glSummaryBody">
                    <tr><td colspan="6" class="text-center py-4">Loading...</td></tr>
                </tbody>
                <tfoot id="glSummaryFooter"></tfoot>
            </table>
        </div>
    </div>
</div>

<!-- Ledger Transactions -->
<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Ledger Transactions</h5>
        <span class="badge bg-primary" id="glCount">0 entries</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Account</th>
                        <th>Description</th>
                        <th>Reference</th>
                        <th>Source</th>
                        <th class="text-end">Debit</th>
                        <th class="text-end">Credit</th>
                        <th class="text-end">Balance</th>
                        <th class="text-center" style="width:80px">Actions</th>
                    </tr>
                </thead>
                <tbody id="glTableBody">
                    <tr><td colspan="9" class="text-center py-4">Loading ledger...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/admin.js"></script>
<script src="~/js/accounting.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    GL.load();
    document.getElementById('glAccountFilter').addEventListener('change', () => GL.applyFilters());
    document.getElementById('glSourceFilter').addEventListener('change', () => GL.applyFilters());
    document.getElementById('glDateFrom').addEventListener('change', () => GL.applyFilters());
    document.getElementById('glDateTo').addEventListener('change', () => GL.applyFilters());
    document.getElementById('glSearch').addEventListener('input', () => GL.applyFilters());
});

function exportGL() {
    const data = GL.data;
    if (!data || data.length === 0) { Toast.error('No data to export'); return; }
    const csv = [['Date','Entry #','Account Code','Account Name','Description','Debit','Credit','Reference'].join(','),
        ...data.map(g => [new Date(g.transactionDate).toLocaleDateString(), g.entryNumber||'', g.accountCode, `"${g.accountName}"`, `"${g.description||''}"`, g.debitAmount?.toFixed(2), g.creditAmount?.toFixed(2), g.reference||''].join(','))
    ].join('\n');
    const blob = new Blob([csv], {type:'text/csv'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a'); a.href = url; a.download = `general_ledger_${new Date().toISOString().split('T')[0]}.csv`; a.click();
    Toast.success('Exported successfully');
}
</script>
}
