.category-card:hover { border-color: var(--primary); transform: translateY(-3px); }
</style>

@section Scripts {
<script src="~/js/admin.js"></script>
<script>
    let articlesData = [];
    let categoriesData = [];
    let currentArticleId = null;

    const statusClasses = { 'Published': 'bg-success', 'Draft': 'bg-warning', 'Archived': 'bg-secondary' };
    const categoryIcons = ['üìö', 'üõí', 'üí≥', 'üîß', 'üì¶', '‚ùì', 'üìñ', '‚öôÔ∏è'];

    document.addEventListener('DOMContentLoaded', function() {
        loadCategories();
        loadArticles();
        document.getElementById('searchArticles').addEventListener('input', debounce(renderArticles, 300));
        document.getElementById('filterCategory').addEventListener('change', renderArticles);
        document.getElementById('filterStatus').addEventListener('change', renderArticles);
    });

    function debounce(func, wait) {
        let timeout;
        return function(...args) {
            clearTimeout(timeout);
            timeout = setTimeout(() => func(...args), wait);
        };
    }

    async function loadCategories() {
        try {
            const response = await fetch('/Support/GetKnowledgeCategories');
            const result = await response.json();
            if (result.success) {
                categoriesData = result.data;
                renderCategories();
                populateCategoryDropdowns();
            }
        } catch (error) {
            console.error('Error loading categories:', error);
        }
    }

    async function loadArticles() {
        try {
            const response = await fetch('/Support/GetKnowledgeArticles');
            const result = await response.json();
            if (result.success) {
                articlesData = result.data;
                renderArticles();
                updateStats();
            }
        } catch (error) {
            console.error('Error loading articles:', error);
            document.getElementById('articlesTableBody').innerHTML = '<tr><td colspan="7" class="text-center text-muted py-4">Failed to load articles</td></tr>';
        }
    }

    function renderCategories() {
        const grid = document.getElementById('categoriesGrid');
        if (categoriesData.length === 0) {
            grid.innerHTML = '<div class="col-12 text-center py-3 text-muted">No categories yet. Click "Manage Categories" to add some.</div>';
            return;
        }

        grid.innerHTML = categoriesData.map((c, i) => {
            const articleCount = articlesData.filter(a => a.categoryId === c.categoryId).length;
            return `
                <div class="col-xl-2 col-md-3 col-sm-4 mb-3">
                    <div class="card category-card h-100" onclick="filterByCategory(${c.categoryId})">
                        <div class="card-body text-center py-4">
                            <div class="fs-1 mb-2">${categoryIcons[i % categoryIcons.length]}</div>
                            <h6 class="mb-1">${c.categoryName}</h6>
                            <small class="text-muted">${articleCount} articles</small>
                        </div>
                    </div>
                </div>
            `;
        }).join('');

        document.getElementById('totalCategories').textContent = categoriesData.length;
    }

    function populateCategoryDropdowns() {
        const options = categoriesData.map(c => `<option value="${c.categoryId}">${c.categoryName}</option>`).join('');
        document.getElementById('filterCategory').innerHTML = '<option value="">All Categories</option>' + options;
        document.getElementById('articleCategory').innerHTML = '<option value="">Select Category</option>' + options;
    }

    function renderArticles() {
        const tbody = document.getElementById('articlesTableBody');
        const filtered = filterArticles();

        if (filtered.length === 0) {
            tbody.innerHTML = '<tr><td colspan="7" class="text-center py-4 text-muted">No articles found. Click "New Article" to create one.</td></tr>';
            document.getElementById('articleCount').textContent = '0 articles';
            return;
        }

        tbody.innerHTML = filtered.map(a => `
            <tr>
                <td>
                    <div class="fw-bold">${a.title}</div>
                    <div class="text-muted small">${(a.tags || []).map(t => '<span class="badge bg-light text-dark me-1">' + t + '</span>').join('')}</div>
                </td>
                <td><span class="badge bg-secondary">${a.categoryName || 'Uncategorized'}</span></td>
                <td><span class="badge ${statusClasses[a.status] || 'bg-secondary'}">${a.status}</span></td>
                <td>${a.viewCount || 0}</td>
                <td>${a.helpfulCount || 0} üëç</td>
                <td class="small">${formatDate(a.updatedAt)}</td>
                <td class="text-center">
                    <div class="btn-group">
                        <button class="btn btn-sm btn-outline-primary" onclick="viewArticle(${a.articleId})" title="View">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                        </button>
                        <button class="btn btn-sm btn-outline-warning" onclick="editArticle(${a.articleId})" title="Edit">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteArticle(${a.articleId})" title="Delete">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                        </button>
                    </div>
                </td>
            </tr>
        `).join('');

        document.getElementById('articleCount').textContent = filtered.length + ' articles';
    }

    function filterArticles() {
        const search = document.getElementById('searchArticles').value.toLowerCase();
        const categoryId = document.getElementById('filterCategory').value;
        const status = document.getElementById('filterStatus').value;

        return articlesData.filter(a => {
            if (search && !a.title.toLowerCase().includes(search) && !(a.content || '').toLowerCase().includes(search)) return false;
            if (categoryId && a.categoryId != categoryId) return false;
            if (status && a.status !== status) return false;
            return true;
        });
    }

    function filterByCategory(categoryId) {
        document.getElementById('filterCategory').value = categoryId;
        renderArticles();
    }

    function updateStats() {
        document.getElementById('totalArticles').textContent = articlesData.length;
        document.getElementById('publishedArticles').textContent = articlesData.filter(a => a.status === 'Published').length;
        document.getElementById('totalViews').textContent = articlesData.reduce((sum, a) => sum + (a.viewCount || 0), 0);
    }

    function openArticleModal() {
        currentArticleId = null;
        document.getElementById('articleModalTitle').innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/></svg>New Article';
        document.getElementById('articleForm').reset();
        document.getElementById('articleId').value = '0';
        new bootstrap.Modal(document.getElementById('articleModal')).show();
    }

    function viewArticle(id) {
        const article = articlesData.find(a => a.articleId === id);
        if (!article) return;

        currentArticleId = id;
        document.getElementById('viewArticleTitle').textContent = article.title;
        document.getElementById('viewArticleCategory').textContent = article.categoryName || 'Uncategorized';
        document.getElementById('viewArticleStatus').textContent = article.status;
        document.getElementById('viewArticleStatus').className = 'badge ' + (statusClasses[article.status] || 'bg-secondary');
        document.getElementById('viewArticleViews').textContent = article.viewCount || 0;
        document.getElementById('viewArticleHelpful').textContent = article.helpfulCount || 0;
        document.getElementById('viewArticleUpdated').textContent = formatDate(article.updatedAt);
        document.getElementById('viewArticleContent').textContent = article.content;

        new bootstrap.Modal(document.getElementById('viewArticleModal')).show();
    }

    function editArticle(id) {
        const article = articlesData.find(a => a.articleId === id);
        if (!article) return;

        currentArticleId = id;
        document.getElementById('articleModalTitle').innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>Edit Article';
        document.getElementById('articleId').value = id;
        document.getElementById('articleTitle').value = article.title;
        document.getElementById('articleCategory').value = article.categoryId || '';
        document.getElementById('articleStatus').value = article.status;
        document.getElementById('articleTags').value = (article.tags || []).join(', ');
        document.getElementById('articleContent').value = article.content;

        new bootstrap.Modal(document.getElementById('articleModal')).show();
    }

    function editArticleFromView() {
        bootstrap.Modal.getInstance(document.getElementById('viewArticleModal')).hide();
        setTimeout(() => editArticle(currentArticleId), 300);
    }

    async function saveArticle(event) {
        event.preventDefault();
        const id = document.getElementById('articleId').value;
        const isNew = id === '0';

        const data = {
            title: document.getElementById('articleTitle').value,
            categoryId: parseInt(document.getElementById('articleCategory').value) || null,
            status: document.getElementById('articleStatus').value,
            tags: document.getElementById('articleTags').value.split(',').map(t => t.trim()).filter(t => t),
            content: document.getElementById('articleContent').value
        };

        try {
            const url = isNew ? '/Support/CreateKnowledgeArticle' : `/Support/UpdateKnowledgeArticle?id=${id}`;
            const method = isNew ? 'POST' : 'PUT';

            const response = await fetch(url, {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();
            if (result.success) {
                showSuccess(isNew ? 'Article created!' : 'Article updated!');
                bootstrap.Modal.getInstance(document.getElementById('articleModal')).hide();
                loadArticles();
            } else {
                showError(result.message || 'Failed to save article');
            }
        } catch (error) {
            showError('Error saving article');
        }
    }

    async function deleteArticle(id) {
        if (!confirm('Are you sure you want to delete this article?')) return;

        try {
            const response = await fetch(`/Support/DeleteKnowledgeArticle?id=${id}`, { method: 'DELETE' });
            const result = await response.json();
            if (result.success) {
                showSuccess('Article deleted!');
                loadArticles();
            }
        } catch (error) {
            showError('Failed to delete article');
        }
    }

    function openCategoryModal() {
        renderCategoriesList();
        new bootstrap.Modal(document.getElementById('categoryModal')).show();
    }

    function renderCategoriesList() {
        const list = document.getElementById('categoriesList');
        list.innerHTML = categoriesData.map(c => `
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <span>${c.categoryName}</span>
                <button class="btn btn-sm btn-outline-danger" onclick="deleteCategory(${c.categoryId})">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                </button>
            </div>
        `).join('') || '<div class="text-center text-muted py-3">No categories yet</div>';
    }

    async function addCategory() {
        const name = document.getElementById('newCategoryName').value.trim();
        if (!name) { showError('Please enter a category name'); return; }

        try {
            const response = await fetch('/Support/CreateKnowledgeCategory', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ categoryName: name })
            });

            const result = await response.json();
            if (result.success) {
                document.getElementById('newCategoryName').value = '';
                showSuccess('Category added!');
                await loadCategories();
                renderCategoriesList();
            } else {
                showError(result.message || 'Failed to add category');
            }
        } catch (error) {
            showError('Error adding category');
        }
    }

    async function deleteCategory(id) {
        if (!confirm('Delete this category? Articles in this category will become uncategorized.')) return;

        try {
            const response = await fetch(`/Support/DeleteKnowledgeCategory?id=${id}`, { method: 'DELETE' });
            const result = await response.json();
            if (result.success) {
                showSuccess('Category deleted!');
                await loadCategories();
                renderCategoriesList();
                loadArticles();
            }
        } catch (error) {
            showError('Failed to delete category');
        }
    }

    function resetFilters() {
        document.getElementById('searchArticles').value = '';
        document.getElementById('filterCategory').value = '';
        document.getElementById('filterStatus').value = '';
        renderArticles();
    }

    function formatDate(dateStr) {
        if (!dateStr) return '-';
        return new Date(dateStr).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
    }

    function showSuccess(msg) { document.getElementById('successMessage').textContent = msg; new bootstrap.Toast(document.getElementById('successToast')).show(); }
    function showError(msg) { document.getElementById('errorMessage').textContent = msg; new bootstrap.Toast(document.getElementById('errorToast')).show(); }
</script>
