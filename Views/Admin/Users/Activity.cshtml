@{
    ViewData["Title"] = "Activity Logs";
}

<div class="page-header">
    <h1 class="page-title">Activity Logs & Audit Trail</h1>
    <p class="page-subtitle">Monitor all user actions, system events, and security logs</p>
</div>

<!-- Filters Card -->
<div class="card fade-in mb-4">
    <div class="card-body">
        <form id="filterForm" class="d-flex gap-3 align-items-end flex-wrap">
            <div class="form-group mb-0" style="min-width: 150px;">
                <label class="form-label small mb-1">Module</label>
                <select id="filterModule" class="form-select form-select-sm">
                    <option value="">All Modules</option>
                </select>
            </div>
            <div class="form-group mb-0" style="min-width: 150px;">
                <label class="form-label small mb-1">Action</label>
                <select id="filterAction" class="form-select form-select-sm">
                    <option value="">All Actions</option>
                </select>
            </div>
            <div class="form-group mb-0">
                <label class="form-label small mb-1">Start Date</label>
                <input type="date" id="filterStartDate" class="form-control form-control-sm" />
            </div>
            <div class="form-group mb-0">
                <label class="form-label small mb-1">End Date</label>
                <input type="date" id="filterEndDate" class="form-control form-control-sm" />
            </div>
            <button type="submit" class="btn btn-primary btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
                Apply Filters
            </button>
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearFilters()">Clear</button>
            <button type="button" class="btn btn-success btn-sm ms-auto" onclick="exportLogs()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
                Export CSV
            </button>
        </form>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="stat-icon bg-primary-soft text-primary rounded-circle d-flex align-items-center justify-content-center" style="width:48px;height:48px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>
                </div>
                <div>
                    <h3 class="mb-0" id="totalLogs">0</h3>
                    <small class="text-muted">Total Logs</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="stat-icon bg-success-soft text-success rounded-circle d-flex align-items-center justify-content-center" style="width:48px;height:48px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/><path d="m9 14 2 2 4-4"/></svg>
                </div>
                <div>
                    <h3 class="mb-0" id="todayLogs">0</h3>
                    <small class="text-muted">Today's Activity</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="stat-icon bg-info-soft text-info rounded-circle d-flex align-items-center justify-content-center" style="width:48px;height:48px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                </div>
                <div>
                    <h3 class="mb-0" id="uniqueUsers">0</h3>
                    <small class="text-muted">Active Users</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="stat-icon bg-warning-soft text-warning rounded-circle d-flex align-items-center justify-content-center" style="width:48px;height:48px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
                </div>
                <div>
                    <h3 class="mb-0" id="criticalActions">0</h3>
                    <small class="text-muted">Critical Actions</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Activity Table -->
<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Recent Activity</h5>
        <span class="badge bg-primary" id="activityCount">0 entries</span>
    </div>
    <div class="card-body" style="padding: 0;">
        <table class="data-table" id="activityTable">
            <thead>
                <tr>
                    <th style="width: 180px;">Date & Time</th>
                    <th>User</th>
                    <th>Action</th>
                    <th>Module</th>
                    <th>Entity</th>
                    <th>Details</th>
                    <th>IP Address</th>
                </tr>
            </thead>
            <tbody id="activityTableBody">
            </tbody>
        </table>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <div class="text-muted small" id="paginationInfo">Showing 0 of 0 entries</div>
        <nav>
            <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
        </nav>
    </div>
</div>

<style>
    .bg-primary-soft { background: rgba(0, 128, 128, 0.1); }
    .bg-success-soft { background: rgba(16, 185, 129, 0.1); }
    .bg-info-soft { background: rgba(59, 130, 246, 0.1); }
    .bg-warning-soft { background: rgba(245, 158, 11, 0.1); }
    .action-badge { padding: 4px 10px; border-radius: 12px; font-size: 0.75rem; font-weight: 600; }
    .action-badge.create { background: #ecfdf5; color: #166534; }
    .action-badge.update { background: #eff6ff; color: #1e40af; }
    .action-badge.delete { background: #fef2f2; color: #b91c1c; }
    .action-badge.login { background: #f0fdf4; color: #15803d; }
    .action-badge.logout { background: #fef3c7; color: #b45309; }
    .action-badge.bulk { background: #fdf4ff; color: #a21caf; }
    .module-badge { background: #f1f5f9; color: #475569; padding: 4px 10px; border-radius: 12px; font-size: 0.75rem; font-weight: 500; }
</style>

@section Scripts {
<script src="~/js/admin.js"></script>
<script>
    let currentPage = 1;
    let pageSize = 50;
    let totalPages = 1;
    let filters = { module: '', action: '', startDate: '', endDate: '' };

    document.addEventListener('DOMContentLoaded', async function() {
        await loadFilterOptions();
        await loadActivity();
    });

    document.getElementById('filterForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        filters.module = document.getElementById('filterModule').value;
        filters.action = document.getElementById('filterAction').value;
        filters.startDate = document.getElementById('filterStartDate').value;
        filters.endDate = document.getElementById('filterEndDate').value;
        currentPage = 1;
        await loadActivity();
    });

    async function loadFilterOptions() {
        try {
            const [modules, actions] = await Promise.all([
                API.get('/audit-logs/modules'),
                API.get('/audit-logs/actions')
            ]);
            
            const moduleSelect = document.getElementById('filterModule');
            modules.forEach(m => {
                if (m) moduleSelect.innerHTML += `<option value="${m}">${m}</option>`;
            });

            const actionSelect = document.getElementById('filterAction');
            actions.forEach(a => {
                if (a) actionSelect.innerHTML += `<option value="${a}">${a}</option>`;
            });
        } catch (error) {
            console.error('Failed to load filter options:', error);
        }
    }

    async function loadActivity() {
        try {
            const params = new URLSearchParams({
                page: currentPage,
                pageSize: pageSize
            });
            if (filters.module) params.append('module', filters.module);
            if (filters.action) params.append('action', filters.action);
            if (filters.startDate) params.append('startDate', filters.startDate);
            if (filters.endDate) params.append('endDate', filters.endDate);

            const response = await API.get(`/audit-logs?${params.toString()}`);
            
            if (!response.success) {
                throw new Error(response.message || 'Failed to load logs');
            }

            const logs = response.data || [];
            totalPages = response.totalPages || 1;

            // Update stats
            document.getElementById('totalLogs').textContent = response.totalCount || 0;
            document.getElementById('activityCount').textContent = `${response.totalCount || 0} entries`;
            
            // Count today's logs
            const today = new Date().toDateString();
            const todayCount = logs.filter(l => new Date(l.createdAt).toDateString() === today).length;
            document.getElementById('todayLogs').textContent = todayCount;
            
            // Count unique users
            const uniqueUsers = new Set(logs.map(l => l.userId)).size;
            document.getElementById('uniqueUsers').textContent = uniqueUsers;
            
            // Count critical actions
            const criticalCount = logs.filter(l => ['Delete', 'Bulk Delete', 'Logout'].includes(l.action)).length;
            document.getElementById('criticalActions').textContent = criticalCount;

            // Update pagination info
            const start = (currentPage - 1) * pageSize + 1;
            const end = Math.min(currentPage * pageSize, response.totalCount);
            document.getElementById('paginationInfo').textContent = 
                response.totalCount > 0 ? `Showing ${start}-${end} of ${response.totalCount} entries` : 'No entries found';

            renderTable(logs);
            renderPagination();
        } catch (error) {
            console.error('Failed to load activity:', error);
            Toast.error('Failed to load activity logs');
        }
    }

    function renderTable(logs) {
        const tbody = document.getElementById('activityTableBody');
        
        if (logs.length === 0) {
            tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted py-4">No activity logs found</td></tr>';
            return;
        }

        tbody.innerHTML = logs.map(log => {
            const date = new Date(log.createdAt);
            const actionClass = getActionClass(log.action);
            
            return `
                <tr>
                    <td>
                        <div class="fw-medium">${date.toLocaleDateString()}</div>
                        <small class="text-muted">${date.toLocaleTimeString()}</small>
                    </td>
                    <td>
                        <div class="fw-medium">${log.userName || 'System'}</div>
                        <small class="text-muted">ID: ${log.userId || 'N/A'}</small>
                    </td>
                    <td><span class="action-badge ${actionClass}">${log.action}</span></td>
                    <td><span class="module-badge">${log.module || '-'}</span></td>
                    <td>
                        ${log.entityType ? `<span class="text-muted">${log.entityType}</span>` : '-'}
                        ${log.entityId ? `<span class="badge bg-light text-dark ms-1">#${log.entityId}</span>` : ''}
                    </td>
                    <td style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="${escapeHtml(log.description || '')}">
                        ${log.description || '-'}
                    </td>
                    <td><code class="small">${log.ipAddress || '-'}</code></td>
                </tr>
            `;
        }).join('');
    }

    function getActionClass(action) {
        if (!action) return '';
        const lowerAction = action.toLowerCase();
        if (lowerAction.includes('create') || lowerAction.includes('add')) return 'create';
        if (lowerAction.includes('update') || lowerAction.includes('edit')) return 'update';
        if (lowerAction.includes('delete') || lowerAction.includes('remove')) return 'delete';
        if (lowerAction.includes('login')) return 'login';
        if (lowerAction.includes('logout')) return 'logout';
        if (lowerAction.includes('bulk')) return 'bulk';
        return '';
    }

    function renderPagination() {
        const pagination = document.getElementById('pagination');
        if (totalPages <= 1) {
            pagination.innerHTML = '';
            return;
        }

        let html = '';
        html += `<li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="goToPage(${currentPage - 1})">&laquo;</a>
                 </li>`;

        for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) {
            html += `<li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="#" onclick="goToPage(${i})">${i}</a>
                     </li>`;
        }

        html += `<li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="goToPage(${currentPage + 1})">&raquo;</a>
                 </li>`;

        pagination.innerHTML = html;
    }

    function goToPage(page) {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        loadActivity();
    }

    function clearFilters() {
        document.getElementById('filterModule').value = '';
        document.getElementById('filterAction').value = '';
        document.getElementById('filterStartDate').value = '';
        document.getElementById('filterEndDate').value = '';
        filters = { module: '', action: '', startDate: '', endDate: '' };
        currentPage = 1;
        loadActivity();
    }

    async function exportLogs() {
        try {
            const params = new URLSearchParams();
            if (filters.startDate) params.append('startDate', filters.startDate);
            if (filters.endDate) params.append('endDate', filters.endDate);
            params.append('format', 'csv');
            
            window.location.href = `/api/export/audit-logs?${params.toString()}`;
            Toast.success('Export started');
        } catch (error) {
            Toast.error('Failed to export logs');
        }
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
</script>
}
