@{
    ViewData["Title"] = "Marketing Dashboard";
    Layout = "~/Views/Shared/_MarketingLayout.cshtml";
}

<div class="page-header">
    <p class="text-muted mb-0">Dashboard</p>
    <h1 class="page-title">Marketing Dashboard</h1>
    <p class="page-subtitle">Welcome back! Here's your marketing overview.</p>
</div>

<!-- Stats Cards -->
<div class="stat-cards">
    <div class="stat-card fade-in stagger-1">
        <div class="stat-info">
            <span class="stat-label">Active Campaigns</span>
            <span class="stat-value" id="activeCampaigns">0</span>
            <div class="stat-trend up" id="campaignsTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon teal">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-2">
        <div class="stat-info">
            <span class="stat-label">Active Promotions</span>
            <span class="stat-value" id="activePromotions">0</span>
            <div class="stat-trend up" id="promotionsTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon green">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="19" y1="5" x2="5" y2="19"/>
                <circle cx="6.5" cy="6.5" r="2.5"/>
                <circle cx="17.5" cy="17.5" r="2.5"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-3">
        <div class="stat-info">
            <span class="stat-label">Total Reach</span>
            <span class="stat-value" id="totalReach">0</span>
            <div class="stat-trend up" id="reachTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon orange">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-4">
        <div class="stat-info">
            <span class="stat-label">Conversion Rate</span>
            <span class="stat-value" id="conversionRate">0%</span>
            <div class="stat-trend up" id="conversionTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon blue">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="20" x2="18" y2="10"/>
                <line x1="12" y1="20" x2="12" y2="4"/>
                <line x1="6" y1="20" x2="6" y2="14"/>
            </svg>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="grid grid-3" style="grid-template-columns: 2fr 1fr;">
    <!-- Campaign Performance Chart -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Campaign Performance</h3>
                <p class="card-subtitle">Monthly campaign metrics</p>
            </div>
            <a href="/MarketingStaff/Campaigns" class="btn btn-outline btn-sm">View Details</a>
        </div>
        <div class="card-body">
            <div class="chart-container">
                <canvas id="performanceChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Active Campaigns List -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Active Campaigns</h3>
                <p class="card-subtitle">Currently running</p>
            </div>
        </div>
        <div class="card-body" style="padding: 0;">
            <div class="list-group list-group-flush" id="activeCampaignsList">
                <div class="list-group-item text-center py-4">
                    <span class="text-muted">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Promotions & Segments -->
<div class="grid grid-2 mt-3">
    <!-- Current Promotions -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Current Promotions</h3>
                <p class="card-subtitle">Active discounts</p>
            </div>
            <a href="/MarketingStaff/Promotions" class="btn btn-primary btn-sm">View All</a>
        </div>
        <div class="card-body" style="padding: 0;">
            <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Promotion</th>
                            <th>Discount</th>
                            <th>End Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="promotionsTable">
                        <tr><td colspan="4" class="text-center py-4">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Customer Segments -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Customer Segments</h3>
                <p class="card-subtitle">Audience breakdown</p>
            </div>
        </div>
        <div class="card-body">
            <div class="chart-container" style="height: 220px;">
                <canvas id="segmentsChart"></canvas>
            </div>
            <div class="chart-legend" id="segmentsLegend"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/marketing.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async function() {
            await loadMarketingDashboard();
        });

        async function loadMarketingDashboard() {
            try {
                const [campaigns, promotions] = await Promise.all([
                    fetch('/api/campaigns').then(r => r.json()).catch(() => []),
                    fetch('/api/promotions').then(r => r.json()).catch(() => [])
                ]);

                // Update Stats
                const activeCampaigns = campaigns.filter(c => c.status === 'Active');
                const activePromotions = promotions.filter(p => p.isActive);
                const totalReach = campaigns.reduce((sum, c) => sum + (c.reach || 0), 0);
                const avgConversion = campaigns.length > 0 ? campaigns.reduce((sum, c) => sum + (c.conversionRate || 0), 0) / campaigns.length : 0;

                document.getElementById('activeCampaigns').textContent = activeCampaigns.length.toLocaleString();
                document.getElementById('activePromotions').textContent = activePromotions.length.toLocaleString();
                document.getElementById('totalReach').textContent = totalReach.toLocaleString();
                document.getElementById('conversionRate').textContent = avgConversion.toFixed(1) + '%';

                // Update trends
                document.getElementById('campaignsTrend').querySelector('span:last-child').textContent = 'Running';
                document.getElementById('promotionsTrend').querySelector('span:last-child').textContent = 'Active';
                document.getElementById('reachTrend').querySelector('span:last-child').textContent = 'Audience';
                document.getElementById('conversionTrend').querySelector('span:last-child').textContent = 'Average';

                // Render tables
                renderActiveCampaigns(activeCampaigns.slice(0, 5));
                renderPromotions(promotions.slice(0, 5));

                // Render Charts
                renderPerformanceChart(campaigns);
                renderSegmentsChart();

            } catch (error) {
                console.error('Failed to load marketing dashboard:', error);
            }
        }

        function renderActiveCampaigns(campaigns) {
            const list = document.getElementById('activeCampaignsList');
            if (campaigns.length === 0) {
                list.innerHTML = '<div class="list-group-item text-center py-4"><span class="text-muted">No active campaigns</span></div>';
                return;
            }
            list.innerHTML = campaigns.map(c => `
                <a href="/MarketingStaff/Campaigns" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between">
                        <strong>${c.campaignName}</strong>
                        <span class="badge badge-success">Active</span>
                    </div>
                    <small class="text-muted">Reach: ${(c.reach || 0).toLocaleString()}</small>
                </a>
            `).join('');
        }

        function renderPromotions(promotions) {
            const tbody = document.getElementById('promotionsTable');
            if (promotions.length === 0) {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4">No promotions</td></tr>';
                return;
            }
            tbody.innerHTML = promotions.map(p => `
                <tr>
                    <td><strong>${p.promotionName}</strong></td>
                    <td>${p.discountPercentage || p.discountAmount ? (p.discountPercentage ? p.discountPercentage + '%' : 'â‚±' + p.discountAmount) : 'N/A'}</td>
                    <td>${p.endDate ? new Date(p.endDate).toLocaleDateString() : 'N/A'}</td>
                    <td><span class="badge ${p.isActive ? 'badge-success' : 'badge-secondary'}">${p.isActive ? 'Active' : 'Inactive'}</span></td>
                </tr>
            `).join('');
        }

        function renderPerformanceChart(campaigns) {
            const ctx = document.getElementById('performanceChart')?.getContext('2d');
            if (!ctx) return;

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: campaigns.slice(0, 6).map(c => c.campaignName?.substring(0, 15) || 'Campaign'),
                    datasets: [{
                        label: 'Reach',
                        data: campaigns.slice(0, 6).map(c => c.reach || 0),
                        backgroundColor: '#008080',
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { color: '#E5E7EB' } },
                        x: { grid: { display: false } }
                    }
                }
            });
        }

        function renderSegmentsChart() {
            const ctx = document.getElementById('segmentsChart')?.getContext('2d');
            if (!ctx) return;

            const labels = ['New', 'Returning', 'VIP', 'Inactive'];
            const data = [30, 45, 15, 10];
            const colors = ['#008080', '#10B981', '#3B82F6', '#F59E0B'];

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: colors,
                        borderWidth: 0,
                        cutout: '70%'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } }
                }
            });

            const legend = document.getElementById('segmentsLegend');
            if (legend) {
                legend.innerHTML = labels.map((label, i) => `
                    <div class="chart-legend-item"><span class="chart-legend-dot" style="background: ${colors[i]};"></span>${label}</div>
                `).join('');
            }
        }
    </script>
}
