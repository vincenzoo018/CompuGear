@{
    ViewData["Title"] = "Promotions";
    Layout = "~/Views/Shared/_MarketingLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Promotions</h1>
            <p class="text-muted mb-0">Manage discounts and promotional offers</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#promotionModal">
            <i class="bi bi-plus-lg me-2"></i>Request New Promotion
        </button>
    </div>

    <!-- Limited Access Alert -->
    <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2 flex-shrink-0">
            <circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/>
        </svg>
        <div>
            <strong>Limited Access:</strong> Creating new promotions requires admin approval. Submit a request with promotion details for review.
        </div>
    </div>

    <!-- My Requests Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h4 class="text-warning mb-0" id="pendingRequests">0</h4>
                    <small class="text-muted">Pending Requests</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h4 class="text-success mb-0" id="approvedRequests">0</h4>
                    <small class="text-muted">Approved</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h4 class="text-danger mb-0" id="rejectedRequests">0</h4>
                    <small class="text-muted">Rejected</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h4 class="text-primary mb-0" id="activePromotions">0</h4>
                    <small class="text-muted">Active Promotions</small>
                </div>
            </div>
        </div>
    </div>

    <!-- My Promotion Requests Table -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">My Promotion Requests</h5>
            <button class="btn btn-sm btn-outline-secondary" onclick="loadMyRequests()">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 4 23 10 17 10"/><path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9"/>
                </svg>
                Refresh
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Request Code</th>
                            <th>Promotion Name</th>
                            <th>Promo Code</th>
                            <th>Discount</th>
                            <th>Valid Period</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Admin Notes</th>
                        </tr>
                    </thead>
                    <tbody id="requestsTableBody">
                        <tr><td colspan="8" class="text-center py-4">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Existing Promotions Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0">
            <h5 class="mb-0">All Promotions</h5>
            <div class="row align-items-center mt-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Search promotions..." id="promotionSearch">
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="promotionStatusFilter">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Scheduled">Scheduled</option>
                        <option value="Expired">Expired</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="discountTypeFilter">
                        <option value="">All Types</option>
                        <option value="Percentage">Percentage</option>
                        <option value="Fixed">Fixed Amount</option>
                        <option value="BOGO">Buy One Get One</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Promotion</th>
                            <th>Discount</th>
                            <th>Valid Period</th>
                            <th class="text-center">Uses</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="promotionsTableBody">
                        <tr>
                            <td colspan="7" class="text-center py-4">Loading promotions...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Promotion Request Modal -->
<div class="modal fade" id="promotionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Request New Promotion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="promotionForm">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <strong>Note:</strong> Promotion requests require admin approval. Please provide complete details.
                    </div>
                    <input type="hidden" id="promotionId">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Promotion Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="promotionName" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Promo Code <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="promotionCode" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Discount Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="discountType" required>
                                <option value="Percentage">Percentage</option>
                                <option value="Fixed">Fixed Amount</option>
                                <option value="BOGO">Buy One Get One</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Discount Value <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="discountValue" step="0.01" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Start Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="startDate" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">End Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="endDate" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Usage Limit</label>
                            <input type="number" class="form-control" id="usageLimit" placeholder="Leave empty for unlimited">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Priority <span class="text-danger">*</span></label>
                            <select class="form-select" id="priority" required>
                                <option value="Normal" selected>Normal</option>
                                <option value="Low">Low</option>
                                <option value="High">High</option>
                                <option value="Urgent">Urgent</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Reason / Business Justification <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="reason" rows="3" required placeholder="Explain why this promotion is needed..."></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" id="promotionDescription" rows="2" placeholder="Optional promotion description"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit Request</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/marketing.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadMyRequests();
            if (typeof Promotions !== 'undefined') {
                Promotions.load();
            }
            
            // Filter functionality
            const searchInput = document.getElementById('promotionSearch');
            const statusFilter = document.getElementById('promotionStatusFilter');
            
            function filterPromotions() {
                if (typeof Promotions !== 'undefined') {
                    Promotions.filter(
                        searchInput?.value || '',
                        statusFilter?.value || ''
                    );
                }
            }
            
            if (searchInput) searchInput.addEventListener('input', filterPromotions);
            if (statusFilter) statusFilter.addEventListener('change', filterPromotions);
        });

        async function loadMyRequests() {
            try {
                const response = await fetch('/api/approval-requests/my-requests?module=Marketing&requestType=CreatePromotion');
                const requests = await response.json();
                
                updateStats(requests);
                renderRequests(requests);
            } catch (error) {
                console.error('Error loading requests:', error);
            }
        }

        function updateStats(requests) {
            document.getElementById('pendingRequests').textContent = requests.filter(r => r.status === 'Pending').length;
            document.getElementById('approvedRequests').textContent = requests.filter(r => r.status === 'Approved').length;
            document.getElementById('rejectedRequests').textContent = requests.filter(r => r.status === 'Rejected').length;
        }

        function renderRequests(requests) {
            const tbody = document.getElementById('requestsTableBody');
            
            if (requests.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center py-4">No promotion requests found</td></tr>';
                return;
            }
            
            tbody.innerHTML = requests.map(r => {
                let promoData = {};
                try { promoData = JSON.parse(r.requestData || '{}'); } catch (e) {}
                
                const statusClass = r.status === 'Approved' ? 'bg-success' : 
                                   r.status === 'Rejected' ? 'bg-danger' : 'bg-warning text-dark';
                const priorityClass = r.priority === 'Urgent' ? 'bg-danger' : 
                                     r.priority === 'High' ? 'bg-warning text-dark' : 
                                     r.priority === 'Low' ? 'bg-secondary' : 'bg-info';
                
                const discountDisplay = promoData.discountType === 'Percentage' ? 
                    `${promoData.discountValue}%` : 
                    promoData.discountType === 'BOGO' ? 'BOGO' : `$${promoData.discountValue}`;
                
                return `
                    <tr>
                        <td><code>${r.requestCode}</code></td>
                        <td>${promoData.promotionName || r.title}</td>
                        <td><span class="badge bg-secondary">${promoData.promotionCode || '-'}</span></td>
                        <td>${discountDisplay}</td>
                        <td>${promoData.startDate || '-'} to ${promoData.endDate || '-'}</td>
                        <td><span class="badge ${priorityClass}">${r.priority}</span></td>
                        <td><span class="badge ${statusClass}">${r.status}</span></td>
                        <td>${r.approvalNotes || '-'}</td>
                    </tr>
                `;
            }).join('');
        }

        document.getElementById('promotionForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const promotionName = document.getElementById('promotionName').value;
            const promotionCode = document.getElementById('promotionCode').value;
            const discountType = document.getElementById('discountType').value;
            const discountValue = document.getElementById('discountValue').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const usageLimit = document.getElementById('usageLimit').value;
            const priority = document.getElementById('priority').value;
            const reason = document.getElementById('reason').value;
            const description = document.getElementById('promotionDescription').value;
            
            const requestData = {
                requestType: 'CreatePromotion',
                module: 'Marketing',
                title: `New Promotion: ${promotionName}`,
                description: description,
                reason: reason,
                entityType: 'Promotion',
                entityId: null,
                entityName: promotionCode,
                priority: priority,
                requestData: JSON.stringify({
                    promotionName,
                    promotionCode,
                    discountType,
                    discountValue: parseFloat(discountValue),
                    startDate,
                    endDate,
                    usageLimit: usageLimit ? parseInt(usageLimit) : null,
                    description
                })
            };
            
            try {
                const response = await fetch('/api/approval-requests', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Promotion request submitted successfully! An admin will review your request.');
                    bootstrap.Modal.getInstance(document.getElementById('promotionModal')).hide();
                    document.getElementById('promotionForm').reset();
                    loadMyRequests();
                } else {
                    alert('Error: ' + (result.message || 'Failed to submit request'));
                }
            } catch (error) {
                console.error('Error submitting request:', error);
                alert('Failed to submit promotion request');
            }
        });
    </script>
}

<!-- View Promotion Modal -->
<div class="modal fade view-modal" id="viewPromotionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title">Promotion Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="viewPromotionContent">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
