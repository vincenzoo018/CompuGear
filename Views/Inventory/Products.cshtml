@section Scripts {
<script>
    let currentProductId = null;
    const productsData = [
        { id: 1, name: 'ProBook 15 Laptop', sku: 'LAP-001', description: 'Intel Core i7, 16GB RAM, 512GB SSD', categoryId: 1, category: 'Laptops', brandId: 4, brand: 'Dell', costPrice: 55000, sellingPrice: 64950, stock: 45, reorderLevel: 10, status: 'instock' },
        { id: 2, name: 'WorkStation Pro Desktop', sku: 'DES-002', description: 'AMD Ryzen 9, 32GB RAM, RTX 4070', categoryId: 2, category: 'Desktops', brandId: 1, brand: 'ASUS', costPrice: 100000, sellingPrice: 124950, stock: 12, reorderLevel: 15, status: 'low' },
        { id: 3, name: 'Wireless Mouse Elite', sku: 'ACC-003', description: '2.4GHz, Ergonomic Design, RGB', categoryId: 5, category: 'Accessories', brandId: 13, brand: 'Logitech', costPrice: 1500, sellingPrice: 2499, stock: 150, reorderLevel: 20, status: 'instock' },
        { id: 4, name: 'Office Suite Pro 2026', sku: 'SOF-004', description: 'Digital License, Lifetime', categoryId: 6, category: 'Software', brandId: 16, brand: 'Microsoft', costPrice: 10000, sellingPrice: 14950, stock: 9999, reorderLevel: 0, status: 'instock' },
        { id: 5, name: 'UltraWide Monitor 34"', sku: 'MON-005', description: '3440x1440, 144Hz, IPS Panel', categoryId: 5, category: 'Accessories', brandId: 9, brand: 'LG', costPrice: 22000, sellingPrice: 29950, stock: 0, reorderLevel: 5, status: 'outofstock' }
    ];

    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('searchProducts').addEventListener('input', filterTable);
        document.getElementById('filterCategory').addEventListener('change', filterTable);
        document.getElementById('filterBrand').addEventListener('change', filterTable);
        document.getElementById('filterStock').addEventListener('change', filterTable);
    });

    function openCreateProductModal() {
        currentProductId = null;
        document.getElementById('modalTitle').textContent = 'Add New Product';
        document.getElementById('productForm').reset();
        document.getElementById('productId').value = '0';
    }

    function viewProduct(id) {
        const product = productsData.find(p => p.id === id);
        if (!product) return;
        currentProductId = id;
        document.getElementById('viewProductName').textContent = product.name;
        document.getElementById('viewProductDesc').textContent = product.description;
        document.getElementById('viewProductSku').textContent = product.sku;
        document.getElementById('viewProductCategory').textContent = product.category;
        document.getElementById('viewProductBrand').textContent = product.brand;
        document.getElementById('viewProductPrice').textContent = '₱' + product.sellingPrice.toLocaleString('en-PH', { minimumFractionDigits: 2 });
        document.getElementById('viewProductStock').textContent = product.stock === 9999 ? '∞ (Digital)' : product.stock + ' units';
        document.getElementById('viewProductReorder').textContent = product.reorderLevel + ' units';
        const statusBadge = product.status === 'instock' ? 'badge-success' : (product.status === 'low' ? 'badge-warning' : 'badge-error');
        const statusText = product.status === 'instock' ? 'In Stock' : (product.status === 'low' ? 'Low Stock' : 'Out of Stock');
        document.getElementById('viewProductStatus').className = 'badge ' + statusBadge;
        document.getElementById('viewProductStatus').textContent = statusText;
        new bootstrap.Modal(document.getElementById('viewProductModal')).show();
    }

    function editProduct(id) {
        const product = productsData.find(p => p.id === id);
        if (!product) return;
        currentProductId = id;
        document.getElementById('modalTitle').textContent = 'Edit Product';
        document.getElementById('productId').value = id;
        document.getElementById('productName').value = product.name;
        document.getElementById('productCode').value = product.sku;
        document.getElementById('description').value = product.description;
        document.getElementById('categoryId').value = product.categoryId;
        document.getElementById('brandId').value = product.brandId;
        document.getElementById('costPrice').value = product.costPrice;
        document.getElementById('sellingPrice').value = product.sellingPrice;
        document.getElementById('stockQuantity').value = product.stock;
        document.getElementById('reorderLevel').value = product.reorderLevel;
        new bootstrap.Modal(document.getElementById('productModal')).show();
    }

    function editProductFromView() {
        bootstrap.Modal.getInstance(document.getElementById('viewProductModal')).hide();
        setTimeout(() => editProduct(currentProductId), 300);
    }

    function deleteProduct(id, name) {
        currentProductId = id;
        document.getElementById('deleteItemName').textContent = name;
        new bootstrap.Modal(document.getElementById('deleteConfirmModal')).show();
        document.getElementById('confirmDeleteBtn').onclick = function() {
            showToast('success', name + ' has been deleted from inventory!');
            bootstrap.Modal.getInstance(document.getElementById('deleteConfirmModal')).hide();
            const row = document.querySelector('tr[data-id="' + id + '"]');
            if (row) { row.style.transition = 'opacity 0.3s'; row.style.opacity = '0'; setTimeout(() => row.remove(), 300); }
        };
    }

    function saveProduct(event) {
        event.preventDefault();
        const productId = document.getElementById('productId').value;
        const isNew = productId === '0';
        showToast('success', isNew ? 'Product added to inventory!' : 'Product updated successfully!');
        bootstrap.Modal.getInstance(document.getElementById('productModal')).hide();
    }

    function filterTable() {
        const search = document.getElementById('searchProducts').value.toLowerCase();
        const categoryFilter = document.getElementById('filterCategory').value;
        const brandFilter = document.getElementById('filterBrand').value;
        const stockFilter = document.getElementById('filterStock').value;
        const rows = document.querySelectorAll('#productsTable tbody tr');
        let visibleCount = 0;
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const product = productsData.find(p => p.id === parseInt(row.dataset.id));
            let show = true;
            if (search && !text.includes(search)) show = false;
            if (categoryFilter && product && product.category !== categoryFilter) show = false;
            if (brandFilter && product && product.brand !== brandFilter) show = false;
            if (stockFilter && product && product.status !== stockFilter) show = false;
            row.style.display = show ? '' : 'none';
            if (show) visibleCount++;
        });
        document.getElementById('productCount').textContent = visibleCount + ' products';
    }

    function resetFilters() {
        document.getElementById('searchProducts').value = '';
        document.getElementById('filterCategory').value = '';
        document.getElementById('filterBrand').value = '';
        document.getElementById('filterStock').value = '';
        filterTable();
    }

    function applyFilters() { filterTable(); showToast('success', 'Filters applied!'); }
    function exportProducts() { showToast('success', 'Exporting products to Excel...'); }

    function showToast(type, message) {
        const toastId = type === 'success' ? 'successToast' : 'errorToast';
        const messageId = type === 'success' ? 'successMessage' : 'errorMessage';
        document.getElementById(messageId).textContent = message;
        new bootstrap.Toast(document.getElementById(toastId)).show();
    }
</script>
}
