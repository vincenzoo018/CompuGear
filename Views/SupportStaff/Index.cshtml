@{
    ViewData["Title"] = "Support Dashboard";
    Layout = "~/Views/Shared/_SupportLayout.cshtml";
}

<div class="page-header">
    <p class="text-muted mb-0">Dashboard</p>
    <h1 class="page-title">Support Dashboard</h1>
    <p class="page-subtitle">Welcome back! Here's your support overview.</p>
</div>

<!-- Stats Cards -->
<div class="stat-cards">
    <div class="stat-card fade-in stagger-1">
        <div class="stat-info">
            <span class="stat-label">Open Tickets</span>
            <span class="stat-value" id="openTickets">0</span>
            <div class="stat-trend" id="openTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon orange">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                <polyline points="14 2 14 8 20 8"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-2">
        <div class="stat-info">
            <span class="stat-label">Resolved Today</span>
            <span class="stat-value" id="resolvedToday">0</span>
            <div class="stat-trend up" id="resolvedTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon green">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-3">
        <div class="stat-info">
            <span class="stat-label">Avg Response Time</span>
            <span class="stat-value" id="avgResponseTime">0h</span>
            <div class="stat-trend up" id="responseTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon teal">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
            </svg>
        </div>
    </div>

    <div class="stat-card fade-in stagger-4">
        <div class="stat-info">
            <span class="stat-label">Satisfaction Rate</span>
            <span class="stat-value" id="satisfactionRate">0%</span>
            <div class="stat-trend up" id="satisfactionTrend">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                    <polyline points="17 6 23 6 23 12"/>
                </svg>
                <span>Loading...</span>
            </div>
        </div>
        <div class="stat-icon blue">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                <line x1="9" y1="9" x2="9.01" y2="9"/>
                <line x1="15" y1="9" x2="15.01" y2="9"/>
            </svg>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="grid grid-3" style="grid-template-columns: 1fr 2fr;">
    <!-- Ticket Status Chart -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Tickets by Status</h3>
                <p class="card-subtitle">Current distribution</p>
            </div>
        </div>
        <div class="card-body">
            <div class="chart-container" style="height: 220px;">
                <canvas id="ticketStatusChart"></canvas>
            </div>
            <div class="chart-legend" id="statusLegend"></div>
        </div>
    </div>

    <!-- Recent Tickets -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Recent Tickets</h3>
                <p class="card-subtitle">Latest support requests</p>
            </div>
            <a href="/SupportStaff/Tickets" class="btn btn-primary btn-sm">View All</a>
        </div>
        <div class="card-body" style="padding: 0;">
            <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Ticket #</th>
                            <th>Subject</th>
                            <th>Customer</th>
                            <th>Priority</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="recentTicketsTable">
                        <tr><td colspan="5" class="text-center py-4">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Priority & Quick Actions -->
<div class="grid grid-2 mt-3">
    <!-- Tickets by Priority -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Tickets by Priority</h3>
                <p class="card-subtitle">Priority breakdown</p>
            </div>
        </div>
        <div class="card-body">
            <div class="chart-container">
                <canvas id="priorityChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card fade-in">
        <div class="card-header">
            <div>
                <h3 class="card-title">Quick Actions</h3>
                <p class="card-subtitle">Navigate to modules</p>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-6">
                    <a href="/SupportStaff/Tickets" class="btn btn-outline-primary w-100 py-3">
                        <svg width="24" height="24" class="d-block mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                            <polyline points="14 2 14 8 20 8"/>
                        </svg>
                        View Tickets
                    </a>
                </div>
                <div class="col-6">
                    <a href="/SupportStaff/KnowledgeBase" class="btn btn-outline-info w-100 py-3">
                        <svg width="24" height="24" class="d-block mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                        </svg>
                        Knowledge Base
                    </a>
                </div>
                <div class="col-6">
                    <a href="/SupportStaff/Customers" class="btn btn-outline-success w-100 py-3">
                        <svg width="24" height="24" class="d-block mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                            <circle cx="9" cy="7" r="4"/>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                        </svg>
                        Customers
                    </a>
                </div>
                <div class="col-6">
                    <a href="/SupportStaff/Reports" class="btn btn-outline-warning w-100 py-3">
                        <svg width="24" height="24" class="d-block mx-auto mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="20" x2="18" y2="10"/>
                            <line x1="12" y1="20" x2="12" y2="4"/>
                            <line x1="6" y1="20" x2="6" y2="14"/>
                        </svg>
                        Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/support.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async function() {
            await loadSupportDashboard();
        });

        async function loadSupportDashboard() {
            try {
                const tickets = await fetch('/api/support/tickets').then(r => r.json()).catch(() => []);

                // Calculate stats
                const openTickets = tickets.filter(t => t.status === 'Open' || t.status === 'In Progress');
                const today = new Date().toDateString();
                const resolvedToday = tickets.filter(t => t.status === 'Resolved' && new Date(t.resolvedDate || t.updatedAt).toDateString() === today);

                // Update Stats
                document.getElementById('openTickets').textContent = openTickets.length.toLocaleString();
                document.getElementById('resolvedToday').textContent = resolvedToday.length.toLocaleString();
                document.getElementById('avgResponseTime').textContent = '2.4h';
                document.getElementById('satisfactionRate').textContent = '94%';

                // Update trends
                document.getElementById('openTrend').querySelector('span:last-child').textContent = 'Pending';
                document.getElementById('resolvedTrend').querySelector('span:last-child').textContent = 'Completed';
                document.getElementById('responseTrend').querySelector('span:last-child').textContent = 'Fast';
                document.getElementById('satisfactionTrend').querySelector('span:last-child').textContent = 'Excellent';

                // Render tables
                renderRecentTickets(tickets.slice(0, 5));

                // Render Charts
                renderStatusChart(tickets);
                renderPriorityChart(tickets);

            } catch (error) {
                console.error('Failed to load support dashboard:', error);
            }
        }

        function renderRecentTickets(tickets) {
            const tbody = document.getElementById('recentTicketsTable');
            if (tickets.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center py-4">No tickets</td></tr>';
                return;
            }
            tbody.innerHTML = tickets.map(t => `
                <tr>
                    <td><strong>#${t.ticketId}</strong></td>
                    <td>${t.subject?.substring(0, 30) || 'No subject'}...</td>
                    <td>${t.customerName || 'N/A'}</td>
                    <td><span class="badge ${t.priority === 'High' || t.priority === 'Critical' ? 'badge-danger' : t.priority === 'Medium' ? 'badge-warning' : 'badge-info'}">${t.priority}</span></td>
                    <td><span class="badge ${t.status === 'Resolved' ? 'badge-success' : t.status === 'Open' ? 'badge-warning' : 'badge-info'}">${t.status}</span></td>
                </tr>
            `).join('');
        }

        function renderStatusChart(tickets) {
            const ctx = document.getElementById('ticketStatusChart')?.getContext('2d');
            if (!ctx) return;

            const open = tickets.filter(t => t.status === 'Open').length;
            const inProgress = tickets.filter(t => t.status === 'In Progress').length;
            const resolved = tickets.filter(t => t.status === 'Resolved').length;
            const closed = tickets.filter(t => t.status === 'Closed').length;

            const labels = ['Open', 'In Progress', 'Resolved', 'Closed'];
            const data = [open, inProgress, resolved, closed];
            const colors = ['#F59E0B', '#3B82F6', '#10B981', '#6B7280'];

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: colors,
                        borderWidth: 0,
                        cutout: '70%'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } }
                }
            });

            const legend = document.getElementById('statusLegend');
            if (legend) {
                legend.innerHTML = labels.map((label, i) => `
                    <div class="chart-legend-item"><span class="chart-legend-dot" style="background: ${colors[i]};"></span>${label} (${data[i]})</div>
                `).join('');
            }
        }

        function renderPriorityChart(tickets) {
            const ctx = document.getElementById('priorityChart')?.getContext('2d');
            if (!ctx) return;

            const priorities = {};
            tickets.forEach(t => {
                const priority = t.priority || 'Medium';
                priorities[priority] = (priorities[priority] || 0) + 1;
            });

            const labels = Object.keys(priorities);
            const data = Object.values(priorities);
            const colorMap = { 'Low': '#10B981', 'Medium': '#F59E0B', 'High': '#EF4444', 'Critical': '#DC2626' };
            const colors = labels.map(l => colorMap[l] || '#6B7280');

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: colors,
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { color: '#E5E7EB' } },
                        x: { grid: { display: false } }
                    }
                }
            });
        }
    </script>
}
