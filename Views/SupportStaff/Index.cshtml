@{
    ViewData["Title"] = "Support Dashboard";
    Layout = "~/Views/Shared/_SupportLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Support Dashboard</h1>
            <p class="text-muted mb-0">Welcome back! Here's your support overview.</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Open Tickets</p>
                            <h3 class="mb-0" id="openTickets">0</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-2 rounded">
                            <i class="bi bi-ticket text-warning fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Resolved Today</p>
                            <h3 class="mb-0" id="resolvedToday">0</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-2 rounded">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Avg. Response Time</p>
                            <h3 class="mb-0" id="avgResponseTime">0h</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 p-2 rounded">
                            <i class="bi bi-clock text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Satisfaction Rate</p>
                            <h3 class="mb-0" id="satisfactionRate">0%</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-2 rounded">
                            <i class="bi bi-emoji-smile text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Ticket Status Chart -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Tickets by Status</h5>
                </div>
                <div class="card-body">
                    <canvas id="ticketStatusChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <!-- Recent Tickets -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Tickets</h5>
                    <a href="/SupportStaff/Tickets" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ticket #</th>
                                    <th>Subject</th>
                                    <th>Customer</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody id="recentTicketsTable">
                                <tr>
                                    <td colspan="6" class="text-center py-4">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <!-- Tickets by Priority -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Tickets by Priority</h5>
                </div>
                <div class="card-body">
                    <canvas id="priorityChart" height="200"></canvas>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <a href="/SupportStaff/Tickets" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-ticket-detailed d-block fs-4 mb-1"></i>
                                View Tickets
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/SupportStaff/KnowledgeBase" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-book d-block fs-4 mb-1"></i>
                                Knowledge Base
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/SupportStaff/Customers" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-people d-block fs-4 mb-1"></i>
                                Customer Profiles
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/SupportStaff/Reports" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-graph-up d-block fs-4 mb-1"></i>
                                Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/support.js"></script>
}
